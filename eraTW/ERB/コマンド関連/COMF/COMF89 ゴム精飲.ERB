;-------------------------------------------------
;喝套内精液
;道具使用指令、レベル2
;-------------------------------------------------
@COM89
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
SELECTCASE TFLAG:套套内
	CASE IS > 300
		EXP:精液经验 += 8
	CASE IS > 150
		EXP:精液经验 += 5
	CASEELSE
		EXP:精液经验 += 3
ENDSELECT
STAIN:口 |= 4
IF FLAG:时间停止 == 1
	CFLAG:口内精液 = 2
ELSE
	CFLAG:口内精液 = 1
ENDIF
CFLAG:累计精饮 += TFLAG:套套内
TFLAG:193 = TFLAG:套套内

;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 50
ELSE

	DOWNBASE:气力 += 100

	SOURCE:情爱 = TFLAG:套套内 / 2
	SOURCE:性行动 = TFLAG:套套内 / 2
	SOURCE:达成 = TFLAG:套套内 / 2
	SOURCE:屈从 = TFLAG:套套内 * 2
	SOURCE:不洁 = TFLAG:套套内 * 2
	SOURCE:反感 = TFLAG:套套内

;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
	SIF TALENT:自己爱 < 0 || TALENT:抵抗
		SOURCE:郁闷 += 400
ENDIF
TFLAG:套套内 = 0
RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
;喝套内精液
@COM_ABLE89
;实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(89)
	RETURN RESULT
SIF !TFLAG:套套内
	RETURN 0
;口球使用中は不可
SIF TEQUIP:口球
	RETURN 0
SIF ABL:精液中毒 < 3 && !FLAG:70
	RETURN 0
RETURN 1

