;着脱の处理
IF TEQUIP:拘束
	TEQUIP:拘束 = 0
	TCVAR:强行 = 0
ELSE
	TEQUIP:拘束 = 1
ENDIF

;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:体力 += 10
DOWNBASE:气力 += 80

SOURCE:苦痛 = 60
SOURCE:恐怖 = 180
SOURCE:屈从 = 100
SOURCE:反感 = 350
;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;紧缚经验が高いと消费减少
IF EXP:紧缚经验 < EXPLV:3
	TIMES DOWNBASE:体力 , 1.00
	TIMES DOWNBASE:气力 , 1.00
ELSEIF EXP:紧缚经验 < EXPLV:4
	TIMES DOWNBASE:体力 , 0.90
	TIMES DOWNBASE:气力 , 0.90
ELSE
	TIMES DOWNBASE:体力 , 0.70
	TIMES DOWNBASE:气力 , 0.70
ENDIF
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
EXP:紧缚经验 += 1
;同性爱　レズなら返回值1ゲイなら返回值2
;IF HETEROSEX(TARGET,PLAYER)
;	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
;	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
;ENDIF
RETURN 1
