;-------------------------------------------------
;消费体力、气力
DOWNBASE:ARG:体力 += 10

SOURCE:ARG:苦痛 += 30
SOURCE:ARG:恐怖 += 180
SOURCE:ARG:屈从 += 50
SOURCE:ARG:反感 += 200
;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;紧缚经验が高いと消费减少
LOCAL = 60
IF EXP:ARG:紧缚经验 < EXPLV:3
	TIMES LOCAL , 1.00
ELSEIF EXP:ARG:紧缚经验 < EXPLV:4
	TIMES LOCAL , 0.90
ELSE
	TIMES LOCAL , 0.70
ENDIF
DOWNBASE:ARG:气力 += LOCAL

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
EXP:ARG:紧缚经验 ++
EXP:PLAYER:嗜虐快乐经验 += 1
RETURN 1

