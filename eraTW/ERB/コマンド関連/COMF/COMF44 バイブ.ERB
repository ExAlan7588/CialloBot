;-------------------------------------------------
;振动棒
;道具使用指令、レベル2
;-------------------------------------------------
@COM44
;着脱の处理
TEQUIP:振动棒 = !TEQUIP:振动棒
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;侍奉快乐フラグ
TCVAR:PLAYER:108 = 1

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:TARGET:2 = 13
;强度
TCVAR:TARGET:4 = 900

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 100
	SOURCE:快Ｖ = 250
	SOURCE:苦痛 = 25

	;处女だった场合は、苦痛のソースと反抗のソースを追加する
	IF TALENT:处女 == 1
		SOURCE:苦痛 += 1000
	ENDIF

	;再生处女だった场合は、苦痛のソースと反抗のソースを追加する
	IF TALENT:处女 == 2
		SOURCE:苦痛 += 250
	ENDIF

ELSE

	DOWNBASE:体力 += 30
	DOWNBASE:气力 += 100

	SOURCE:快Ｖ = 250
	SOURCE:苦痛 = 50
	SOURCE:露出 = 20
	SOURCE:偏离正轨 = 40
	SOURCE:反感 = 40


	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	SIF TALENT:自己爱 < 0 || TALENT:抵抗
		SOURCE:郁闷 += 40

	;处女だった场合は、苦痛のソースと反抗のソースを追加する
	IF TALENT:处女 == 1
		SOURCE:苦痛 += 2000
		SOURCE:反感 += 3000
	ENDIF

	;再生处女だった场合は、苦痛のソースと反抗のソースを追加する
	IF TALENT:处女 == 2
		SOURCE:苦痛 += 500
		SOURCE:反感 += 1000
	ENDIF
ENDIF
;Vへの苦痛は先に处理しておく
CALL PAIN_CHECK_V(TARGET)

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;插入时はＶ经验+
EXP:Ｖ经验 ++
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ELSE
	;异常经验
	IF TALENT:处女 == 1 && !GETBIT(CFLAG:3,3)
		EXP:异常经验 ++
		SETBIT CFLAG:3,3
	ENDIF

	;同性爱　レズなら返回值1ゲイなら返回值2
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ENDIF
EXP:PLAYER:道具使用经验 ++

RETURN 1

;-------------------------------------------------
;装着继续の处理
;-------------------------------------------------
@EQUIP_COM44(ARG)
;振动棒插入中
PRINTL ＜振动棒插入中＞

CSTR:TARGET:10 += @"{PLAYER}/"
TCVAR:TARGET:2 = 13
TCVAR:TARGET:4 = 450

IF FLAG:70 == 1
BASE:MASTER:TSP -= 50
SOURCE:ARG:快Ｖ += 125

ELSE


DOWNBASE:ARG:体力 += 10
DOWNBASE:ARG:气力 += 50

SOURCE:ARG:快Ｖ += 125
SOURCE:ARG:露出 += 10
SOURCE:ARG:偏离正轨 += 20

;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:ARG:自己爱 < 0 || TALENT:ARG:抵抗
	SOURCE:ARG:郁闷 += 20

;Vへの苦痛は先に处理しておく
;EXP:Ｖ经验をみる（处女はありえない）
LOCAL = 25
LOCAL:1 = 20
IF EXP:ARG:Ｖ经验 < EXPLV:2
	TIMES LOCAL , 0.80
	TIMES LOCAL:1 , 1.20
ELSEIF EXP:ARG:Ｖ经验 < EXPLV:3
	TIMES LOCAL , 0.40
ELSEIF EXP:ARG:Ｖ经验 < EXPLV:4
	TIMES LOCAL , 0.10
ELSEIF EXP:ARG:Ｖ经验 < EXPLV:5
	TIMES LOCAL , 0.00
ELSEIF EXP:ARG:Ｖ经验 >= EXPLV:5
	TIMES LOCAL , 0.00
ENDIF

;PALAM:润滑をみる
IF PALAM:ARG:润滑 < PALAMLV:1
	TIMES LOCAL , 1.20
	TIMES LOCAL:1 , 1.50
ELSEIF PALAM:ARG:润滑 < PALAMLV:2
	TIMES LOCAL , 0.70
	TIMES LOCAL:1 , 1.20
ELSEIF PALAM:ARG:润滑 < PALAMLV:3
	TIMES LOCAL , 0.40
ELSEIF PALAM:ARG:润滑 < PALAMLV:4
	TIMES LOCAL , 0.10
ELSEIF PALAM:ARG:润滑 >= PALAMLV:4
	TIMES LOCAL , 0.10
ENDIF
SOURCE:ARG:苦痛 += LOCAL
SOURCE:ARG:反感 += LOCAL:1

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;自慰实行时は経験＋１
SIF EXP_UP(22,TARGET)
	EXP:ARG:Ｖ经验 += 1
ENDIF
RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE44
;振动棒实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(44)
	RETURN RESULT
;解除是つでも可能
SIF TEQUIP:13
	RETURN 1
;男人だとダメ
SIF !(TALENT:2 & 1)
	RETURN 0
;毒人形だと性器がついてないのでダメ
SIF TALENT:196 == 99
	RETURN 0
;道具を持っているか、道具无设定でないとダメ
SIF ITEM:4 == 0 && NOITEM == 0
	RETURN 0

;下半身着衣
SIF TEQUIP:0 & 4
	RETURN 0
;处女で、顺从4以下・百合属性4以下のASSIの场合振动棒はできない（施虐狂ならＯＫ）
IF TALENT:处女 && ASSIPLAY
	SIF (ABL:ASSI:顺从 <= 4 || ABL:ASSI:百合属性 <= 4) && TALENT:ASSI:施虐狂 == 0
		RETURN 0
ENDIF
;润滑不足で、顺从3以下・百合属性3以下のASSIの场合振动棒はできない（施虐狂ならＯＫ）
IF PALAM:润滑 < PALAMLV:2 && ASSIPLAY
	SIF (ABL:ASSI:顺从 <= 3 || ABL:ASSI:百合属性 <= 3) && TALENT:ASSI:施虐狂 == 0
		RETURN 0
ENDIF
RETURN 1

