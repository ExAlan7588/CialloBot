@COM101
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 80
	SOURCE:苦痛 = 750

ELSE

	DOWNBASE:体力 += 80
	DOWNBASE:气力 += 50

	SOURCE:苦痛 = 1500
	SOURCE:恐怖 = 1200
	SOURCE:偏离正轨 = 100
	SOURCE:反感 = 600
ENDIF
;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;苦痛のパラメータによる苦痛のソース增加は先に处理しておく
SOURCE:苦痛 = SOURCE:苦痛 * (10 + 5 * MAX(GETPALAMLV(PALAM:苦痛,5) - 1, 0)) / 10
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;同性爱　レズなら返回值1ゲイなら返回值2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 2
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 2
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 2
	ENDIF
ENDIF

EXP:PLAYER:嗜虐快乐经验 += 1

RETURN 1

