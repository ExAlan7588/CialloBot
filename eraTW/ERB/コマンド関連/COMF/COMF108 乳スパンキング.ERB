@COM_ABLE108
;打胸部实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(108)
	RETURN RESULT
;睡眠奸中
SIF CFLAG:恶作剧 > 1
	RETURN 0
;顺从3未满のASSIの场合打屁股はできない（施虐狂ならＯＫ）
