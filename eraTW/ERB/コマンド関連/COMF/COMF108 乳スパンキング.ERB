;-------------------------------------------------
;打胸部
;SM系指令、レベル1
;-------------------------------------------------
@COM108
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 60
	SOURCE:苦痛 = 450

ELSE

	DOWNBASE:体力 += 60
	DOWNBASE:气力 += 20

	SOURCE:苦痛 = 450
	SOURCE:恐怖 = 400
	SOURCE:偏离正轨 = 50
	SOURCE:反感 = 300
	IF TALENT:幼稚
		SOURCE:苦痛 += 350
		SOURCE:恐怖 += 200
		SOURCE:偏离正轨 += 50
	ENDIF
ENDIF
;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;苦痛のパラメータによる苦痛のソース增加は先に处理しておく
SOURCE:苦痛 = SOURCE:苦痛 * (10 + 5 * MAX(GETPALAMLV(PALAM:苦痛,5) - 1, 0)) / 10
;受虐属性に応じて快Bのソースを追加する
SOURCE:快Ｂ += 30 * ABL:受虐属性
;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;奴隷のＢ⇔调教者の手的污垢が移动
STAIN:5 |= STAIN:PLAYER:1
STAIN:PLAYER:1 |= STAIN:5
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;同性爱　レズなら返回值1ゲイなら返回值2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 2
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 2
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 2
	ENDIF
ENDIF

EXP:PLAYER:嗜虐快乐经验 += 1

RETURN 1

