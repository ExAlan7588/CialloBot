;-------------------------------------------------
;疑似插入
;性交系指令、レベル1
;-------------------------------------------------
@COM95
;-------------------------------------------------
;特殊派生处理
;-------------------------------------------------

;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;侍奉快乐フラグ
TCVAR:PLAYER:108 = 1

CSTR:PLAYER:10 += @"{TARGET}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:PLAYER:2 = 8
;强度
TCVAR:PLAYER:4 = 500

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:TARGET:2 = 13
;强度
TCVAR:TARGET:4 = 300

DOWNBASE:PLAYER:体力 += 10
DOWNBASE:PLAYER:气力 += 20

;ベッドがないOR浴室ルームで气垫床がないと立位に
SIF !BEDROOM(CFLAG:PLAYER:当前位置) && !(BATHROOM() && ITEM:20)
	TFLAG:193 = 1

;破瓜抑制
TFLAG:2 = 1
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 100
	SOURCE:PLAYER:快Ｃ = 120
	SOURCE:快Ｖ = 100

ELSE

	DOWNBASE:体力 += 50
	DOWNBASE:气力 += 60

	SOURCE:PLAYER:快Ｃ = 120
	SOURCE:快Ｖ = 100
	SOURCE:情爱 = 150
	SOURCE:苦痛 = 500
	SOURCE:露出 = 50
	SOURCE:偏离正轨 = 20
	SOURCE:反感 = 20
	SIF TFLAG:193
		SOURCE:露出 = 200
	SOURCE:反感 = 100
	
	;处女だった场合は、恐怖ソースを追加する
	IF TALENT:处女 == 1 || TALENT:处女 == -1
		SOURCE:恐怖 += 500
		TFLAG:194 = 1
		SIF PALAM:情欲 > PALAMLV:7
			TFLAG:194 = 2
	ENDIF

	;上のほうで计算した污れデータ
	SOURCE:不洁 = Y*10 + 60
	CALL 特殊ソース处理
ENDIF

;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;射精に关系なく行われる处理はここから
CALL STAIN_膣内Ｐ插入

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
EXP:Ｖ经验 ++
;同性爱　レズなら返回值1ゲイなら返回值2
IF FLAG:70 == 1 || CFLAG:恶作剧
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 3
	ENDIF
	IF CFLAG:PLAYER:恶作剧 == 2
		EXP:PLAYER:睡眠奸经验 += 1
		EXP:TARGET:睡眠奸经验 += 1
	ENDIF
	SIF !CFLAG:恶作剧
	EXP:PLAYER:时奸经验 += 1
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 3
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 3
	ENDIF

ENDIF
RETURN 1

@CAN_COM95(ARG)
;-------------------------------------------------
;实行判定处理
;-------------------------------------------------
IF FLAG:70 == 1 || CFLAG:恶作剧
	SKIPDISP ARG

ELSE

ENDIF
SKIPDISP 0
RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE95
;疑似插入实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(95)
	RETURN RESULT
;调教者が男人、扶她の场合はある程度勃起てないとダメ
SIF (TALENT:PLAYER:2 & 2) && BASE:PLAYER:勃起 < 1000
	RETURN 0
;振动棒插入中はダメ
SIF TEQUIP:13
	RETURN 0
;男人だとダメ
SIF !(TALENT:2 & 1)
	RETURN 0

;すでに插入してると駄目
SIF TCVAR:100 == PLAYER && TARGET == TFLAG:103
	RETURN 0

;调教者が男人、半人半妖、扶她、もしくは穿戴式假阴茎がないとダメ
SIF !(TALENT:PLAYER:2 & 2) && ITEM:PBAND == 0
	RETURN 0

;时间停止中はスキップ
IF FLAG:70 != 1
	;处女かつ润滑不足はだめ
	SIF PALAM:润滑 < PALAMLV:2 && TALENT:处女 && TALENT:处女 != -1
		RETURN 0
ENDIF

;下半身着衣
SIF TEQUIP:0 & 4
	RETURN 0
;浴室PLAY中は气垫床が无いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
;背面座位からはダメ
SIF TEQUIP:体位 == 5
	RETURN 0
RETURN 1
