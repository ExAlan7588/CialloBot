;-------------------------------------------------
;肛门爱抚
;自慰系指令、レベル2
;-------------------------------------------------
@COM705
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:PLAYER:体力 += 40
DOWNBASE:PLAYER:气力 += 100

SOURCE:PLAYER:快Ａ = 100
SOURCE:PLAYER:苦痛 = 100
SOURCE:PLAYER:屈从 = 100
SOURCE:PLAYER:偏离正轨 = 80
SOURCE:PLAYER:反感 = 60

SIF TALENT:PLAYER:灵活手指
	SOURCE:PLAYER:快Ａ += 20
;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:PLAYER:自己爱 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:郁闷 += 100

;Aへの苦痛は先に处理しておく
CALL PAIN_CHECK_A(PLAYER)
;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;奴隷のＡ⇔调教者の指的污垢が移动
STAIN:PLAYER:手 |= STAIN:PLAYER:Ａ
STAIN:PLAYER:手 |= STAIN:PLAYER:肠内
STAIN:PLAYER:Ａ |= STAIN:PLAYER:手
STAIN:PLAYER:肠内 |= STAIN:PLAYER:手
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
SIF !FLAG:时间停止
	TIME += 5
;自慰经验
CFLAG:PLAYER:自慰过了 ++
EXP:PLAYER:手淫经验 ++
RETURN 1

;-------------------------------------------------
;实行可能判定
;-------------------------------------------------
@COM_ABLE705
;肛门爱抚实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(705)
	RETURN RESULT
;润滑不足で、顺从3以下・百合属性3以下のASSIの场合肛门爱抚はできない（施虐狂ならＯＫ）
IF PALAM:润滑 < PALAMLV:2 && ASSIPLAY
	SIF (ABL:ASSI:顺从 <= 3 || ABL:ASSI:百合属性 <= 3) && TALENT:ASSI:施虐狂 == 0
		RETURN 0
ENDIF

;下半身着衣
SIF TEQUIP:0 & 4
	RETURN 0
RETURN 1

