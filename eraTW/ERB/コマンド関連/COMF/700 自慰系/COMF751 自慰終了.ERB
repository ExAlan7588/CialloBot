VARSET TEQUIP:(PLAYER):0, 0, 10, 150

;射精关系リセット
IF TFLAG:102 < 2
	BASE:PLAYER:射精 = 0
	TCVAR:PLAYER:要去了 = 0
ENDIF
CFLAG:现在忙得抽不出手 = 0
TEQUIP:PLAYER:50 = -1
TEQUIP:PLAYER:51 = -1
TEQUIP:PLAYER:上半身裸露状态 = 0
TEQUIP:PLAYER:下半身挪开状态 = 0
TCVAR:PLAYER:强行 = 0
IF !FLAG:70
	TFLAG:运搬 = 0
	IF CFLAG:PLAYER:口内精液
		PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%把嘴里残留着的精液给\@ ABL:PLAYER:精液中毒 > 2 ? 喝掉了 # 吐出来了 \@
		CFLAG:PLAYER:口内精液 = 0
	ENDIF
	IF CFLAG:PLAYER:脸上精液 || CFLAG:PLAYER:手上精液
		PRINTFORM %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%
		IF CFLAG:PLAYER:脸上精液 && !CFLAG:PLAYER:手上精液
			PRINTFORM 把粘在脸上的
		ELSEIF !CFLAG:PLAYER:脸上精液 && CFLAG:PLAYER:手上精液
			PRINTFORM 把粘在手上的
		ELSE
			PRINTFORM 把粘在脸上和手上的
		ENDIF
		PRINTFORM 精液\@ ABL:PLAYER:精液中毒 > 2 ? 含进嘴里 # 擦掉了 \@
		CFLAG:PLAYER:脸上精液 = 0
		CFLAG:PLAYER:手上精液 = 0
	ENDIF
ENDIF
