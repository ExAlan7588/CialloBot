	;はだけ中は服装セットしない
ELSEIF LOCK:(CFLAG:PLAYER:311) && CFLAG:PLAYER:恶作剧 < 2
	;恶作剧Lv1以下なら睡衣セット
	CALL CTRL_CLOTHES_SET(PLAYER, "现在衣装の变更_睡衣")
