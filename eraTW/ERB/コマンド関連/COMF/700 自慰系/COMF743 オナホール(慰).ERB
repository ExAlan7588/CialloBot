;-------------------------------------------------
;飞机杯
;道具使用指令、レベル2
;-------------------------------------------------
@COM743
;着脱の处理
TEQUIP:PLAYER:飞机杯 = !TEQUIP:PLAYER:飞机杯

;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手）
LOCALS = 飞机杯/
CSTR:PLAYER:10 += LOCALS
;强度
TCVAR:PLAYER:4 = 1000

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:PLAYER:体力 += 10
DOWNBASE:PLAYER:气力 += 80

SOURCE:PLAYER:快Ｃ = 200
SOURCE:PLAYER:露出 = 20
SOURCE:PLAYER:偏离正轨 = 30
SOURCE:PLAYER:反感 = 30


;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:PLAYER:自己爱 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:郁闷 += 30

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
SIF !FLAG:时间停止
	TIME += 5
;自慰经验
CFLAG:PLAYER:自慰过了 ++

EXP:PLAYER:道具使用经验 ++

RETURN 1
;-------------------------------------------------
;装着继续の处理
;-------------------------------------------------
@EQUIP_COM743(PLAYER)
PRINTL ＜飞机杯装备中＞

;TCVAR:0 射精对象フラグ（ビット0=TARGET 1=PLAYER 2=MASTER 3=ASSI 4=触手 5=其他）
;TCVAR:1 予备射精对象フラグ（ビットを使いたくない人用、CFLAG:100に翻译されます）
;	（1=TARGET 2=PLAYER 3=MASTER 4=ASSI 5=TARGET+ASSI 6=MASTER+ASSI -1=触手 -2=其他）
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 ）
;TCVAR:4 射精快感强度

SETBIT TCVAR:PLAYER:0, 5
;强度
TCVAR:PLAYER:4 = 1000
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
DOWNBASE:PLAYER:体力 += 5
DOWNBASE:PLAYER:气力 += 20

SOURCE:PLAYER:快Ｃ += 100
SOURCE:PLAYER:露出 += 10
SOURCE:PLAYER:偏离正轨 += 15
SOURCE:PLAYER:反感 += 15
;-------------------------------------------------
;経験の处理
;-------------------------------------------------

RETURN 1

;-------------------------------------------------
;实行可能判定
;-------------------------------------------------
@COM_ABLE743
;飞机杯实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(743)
	RETURN RESULT
;解除是つでも可能
SIF TEQUIP:12
	RETURN 1
;道具を持っているか、道具无设定でないとダメ
SIF ITEM:3 == 0 && NOITEM == 0
	RETURN 0
;男人や扶她じゃないとダメ
SIF !(HAS_PENIS(TARGET))
	RETURN 0

;下半身着衣
SIF TEQUIP:0 > 1
	RETURN 0
;ASSIの场合、技巧3以上じゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:技巧 < 3
		RETURN 0
ENDIF
;新妻PLAY中はダメ
SIF TEQUIP:33
	RETURN 0
RETURN 1

