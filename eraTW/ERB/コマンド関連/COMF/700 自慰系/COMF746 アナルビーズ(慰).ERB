;-------------------------------------------------
;后庭拉珠
;道具使用指令、レベル3
;-------------------------------------------------
@COM746
;着脱の处理
TEQUIP:PLAYER:后庭拉珠 = !TEQUIP:PLAYER:后庭拉珠
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:PLAYER:体力 += 60
DOWNBASE:PLAYER:气力 += 150

SOURCE:PLAYER:快Ａ = 150
SOURCE:PLAYER:苦痛 = 200
SOURCE:PLAYER:露出 = 50
SOURCE:PLAYER:屈从 = 50
SOURCE:PLAYER:偏离正轨 = 60
SOURCE:PLAYER:反感 = 80

;装着时は快Aは下がる
SIF TEQUIP:PLAYER:后庭拉珠
	TIMES SOURCE:PLAYER:快Ａ , 0.80

;外す时は快Aは上がる
SIF !TEQUIP:PLAYER:后庭拉珠
	TIMES SOURCE:PLAYER:快Ａ , 3.00

;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:PLAYER:自己爱 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:郁闷 += 70

;Aへの苦痛は先に处理しておく
CALL PAIN_CHECK_A(PLAYER)
;-------------------------------------------------
;污れの处理
;-------------------------------------------------
STAIN:PLAYER:肠内 |= STAIN:PLAYER:Ａ
STAIN:PLAYER:Ａ |= STAIN:PLAYER:肠内
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
SIF !FLAG:时间停止
	TIME += 5
SIF !TEQUIP:PLAYER:后庭拉珠
	EXP:PLAYER:Ａ经验 += 2

;自慰经验
CFLAG:PLAYER:自慰过了 ++

EXP:PLAYER:道具使用经验 ++

RETURN 1
;-------------------------------------------------
;装着继续の处理
;-------------------------------------------------
@EQUIP_COM746(PLAYER)
;后庭拉珠插入中

PRINTL ＜后庭拉珠插入中＞

DOWNBASE:PLAYER:体力 += 60
DOWNBASE:PLAYER:气力 += 150

SOURCE:PLAYER:快Ａ += 75
SOURCE:PLAYER:露出 += 25
SOURCE:PLAYER:屈从 += 25
SOURCE:PLAYER:偏离正轨 += 25
;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:PLAYER:自己爱 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:郁闷 += 35

;Aへの苦痛は先に处理しておく
;EXP:Ａ经验をみる
LOCAL = 100
LOCAL:1 = 25
IF EXP:PLAYER:Ａ经验 < EXPLV:1
	TIMES LOCAL , 3.00
	TIMES LOCAL:1 , 3.00
ELSEIF EXP:PLAYER:Ａ经验 < EXPLV:2
	TIMES LOCAL , 1.20
	TIMES LOCAL:1 , 2.00
ELSEIF EXP:PLAYER:Ａ经验 < EXPLV:3
	TIMES LOCAL , 0.80
	TIMES LOCAL:1 , 1.50
ELSEIF EXP:PLAYER:Ａ经验 < EXPLV:4
	TIMES LOCAL , 0.60
	TIMES LOCAL:1 , 1.20
ELSEIF EXP:PLAYER:Ａ经验 < EXPLV:5
	TIMES LOCAL , 0.40
ELSEIF EXP:PLAYER:Ａ经验 >= EXPLV:5
	TIMES LOCAL , 0.20
ENDIF

;PALAM:润滑をみる
IF PALAM:PLAYER:润滑 < PALAMLV:1
	TIMES LOCAL , 1.20
	TIMES LOCAL:1 , 2.00
ELSEIF PALAM:PLAYER:润滑 < PALAMLV:2
	TIMES LOCAL , 1.00
	TIMES LOCAL:1 , 1.50
ELSEIF PALAM:PLAYER:润滑 < PALAMLV:3
	TIMES LOCAL , 0.60
ELSEIF PALAM:PLAYER:润滑 < PALAMLV:4
	TIMES LOCAL , 0.30
ELSEIF PALAM:PLAYER:润滑 >= PALAMLV:4
	TIMES LOCAL , 0.20
ENDIF
SOURCE:PLAYER:苦痛 += LOCAL
SOURCE:PLAYER:反感 += LOCAL:1

RETURN 1

;-------------------------------------------------
;实行可能判定
;-------------------------------------------------
@COM_ABLE746
;后庭拉珠实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(746)
	RETURN RESULT
;解除是つでも可能
SIF TEQUIP:15
	RETURN 1
;道具を持っているか、道具无设定でないとダメ
SIF ITEM:6 == 0 && NOITEM == 0
	RETURN 0

;下半身着衣
SIF TEQUIP:0 > 1
	RETURN 0
;肛用振动棒使用中は不可
SIF TEQUIP:14
	RETURN 0
;普通の浣肠使用中は不可
SIF TEQUIP:21
	RETURN 0
;バルーン使用中は不可
SIF TEQUIP:22
	RETURN 0
;电极使用中は不可
SIF TEQUIP:23
	RETURN 0
;新妻PLAY中はダメ
SIF TEQUIP:33
	RETURN 0
RETURN 1

