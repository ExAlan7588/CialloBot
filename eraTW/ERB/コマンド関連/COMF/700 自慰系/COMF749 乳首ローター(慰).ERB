;-------------------------------------------------
;乳头跳蛋
;道具使用指令、レベル2
;-------------------------------------------------
@COM749
;-------------------------------------------------
;特殊派生处理
;-------------------------------------------------
PRINTL 乳头跳蛋
STR:0 = 乳头跳蛋
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力

	DOWNBASE:PLAYER:体力 += 10
	DOWNBASE:PLAYER:气力 += 80

	SOURCE:PLAYER:快Ｂ = 250
	SOURCE:PLAYER:露出 = 20
	SOURCE:PLAYER:偏离正轨 = 30
	SOURCE:PLAYER:反感 = 30
	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	SIF TALENT:PLAYER:自己爱 < 0 || TALENT:PLAYER:抵抗
		SOURCE:PLAYER:郁闷 += 30
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
SIF !FLAG:时间停止
	TIME += 5
;自慰经验
CFLAG:PLAYER:自慰过了 ++
EXP:PLAYER:道具使用经验 ++
RETURN 1

;-------------------------------------------------
;实行可能判定
;-------------------------------------------------
@COM_ABLE749
;乳头跳蛋实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(749)
	RETURN RESULT
;道具を持っているか、道具无设定でないとダメ
SIF ITEM:0 == 0 && NOITEM == 0
	RETURN 0
;上半身着衣
SIF (TEQUIP:1 & 2) && TEQUIP:3 == 0
	RETURN 0
;搾乳器使用中は不可
SIF TEQUIP:17
	RETURN 0
;乳房电极装着中はダメ
SIF TEQUIP:24
	RETURN 0
RETURN 1

