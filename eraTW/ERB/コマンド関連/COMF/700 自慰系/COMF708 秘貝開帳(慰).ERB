;-------------------------------------------------
;张开阴唇
;自慰系指令、レベル2
;-------------------------------------------------
@COM708
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:PLAYER:体力 += 50
DOWNBASE:PLAYER:气力 += 90

SOURCE:PLAYER:快Ｃ = 43
SOURCE:PLAYER:达成 = 20
SOURCE:PLAYER:恐怖 = 120
SOURCE:PLAYER:液体 = 10
SOURCE:PLAYER:露出 = 300
SOURCE:PLAYER:屈从 = 450
SOURCE:PLAYER:偏离正轨 = 150
SOURCE:PLAYER:反感 = 150
;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:PLAYER:自己爱 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:郁闷 += 150

;处女、贞操重视
IF TALENT:PLAYER:处女 == 1 || TALENT:PLAYER:处女 == -1
	TIMES SOURCE:PLAYER:恐怖 , 1.20
	TIMES SOURCE:PLAYER:屈从 , 1.20
	TIMES SOURCE:PLAYER:反感 , 1.20
	SOURCE:PLAYER:露出 += 300
	IF TALENT:PLAYER:贞操 > 0
		TIMES SOURCE:PLAYER:露出 , 2.00
		TIMES SOURCE:PLAYER:偏离正轨 , 2.00
	ENDIF
ENDIF

;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;奴隷のＶ⇔指的污垢が移动
STAIN:PLAYER:Ｖ |= STAIN:PLAYER:手
STAIN:PLAYER:手 |= STAIN:PLAYER:Ｖ
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
SIF !FLAG:时间停止
	TIME += 5
;露出癖Lv3以上で自慰经验加算
SIF ABL:PLAYER:露出癖 >= 3
	CFLAG:PLAYER:自慰过了 ++
RETURN 1

@CAN_COM708(PLAYER)
SKIPDISP PLAYER
PRINTL 张开阴唇
;-------------------------------------------------
;实行できるかの判定
;-------------------------------------------------
A = 0
S = 0
;全部の命令に共通の要素を考虑
;(顺从が高いと命令に从いやすいなど)
CALL COM_ORDER

;ABL:PLAYER:欲望
IF ABL:PLAYER:欲望
	SIF S
		PRINT  + 
	A += ABL:PLAYER:欲望 * 3
	PRINT 欲望
	PRINTV 'LV,ABL:PLAYER:欲望,'(,ABL:PLAYER:欲望 * 3,')
	S = 1
ENDIF
;ABL:PLAYER:Ｖ感觉
IF ABL:PLAYER:Ｖ感觉
	SIF S
		PRINT  + 
	A += ABL:PLAYER:Ｖ感觉 * 2
	PRINT Ｖ感觉
	PRINTV 'LV,ABL:PLAYER:Ｖ感觉,'(,ABL:PLAYER:Ｖ感觉 * 2,')
	S = 1
ENDIF
;ABL:PLAYER:侍奉精神
IF ABL:PLAYER:侍奉精神
	SIF S
		PRINT  + 
	A += ABL:PLAYER:侍奉精神 * 4
	PRINT 侍奉精神
	PRINTV 'LV,ABL:PLAYER:侍奉精神,'(,ABL:PLAYER:侍奉精神 * 4,')
	S = 1
ENDIF
;ABL:PLAYER:露出癖
IF ABL:PLAYER:8
	SIF S
		PRINT  + 
	A += ABL:PLAYER:露出癖 * 3
	PRINT ABLNAME:PLAYER:露出癖
	PRINTV 'LV,ABL:PLAYER:露出癖,'(,ABL:PLAYER:露出癖 * 3,')
	S = 1
ENDIF
;ABL:PLAYER:自慰中毒
IF ABL:PLAYER:自慰中毒
	SIF S
		PRINT  + 
	A += ABL:PLAYER:自慰中毒 * 3
	PRINT 自慰中毒
	PRINTV 'LV,ABL:PLAYER:自慰中毒,'(,ABL:PLAYER:自慰中毒 * 3,')
	S = 1
ENDIF

IF MARK:PLAYER:快乐刻印
	SIF S
		PRINT  + 
	A += MARK:PLAYER:快乐刻印 * 3
	PRINT 快乐刻印
	PRINTV 'LV,MARK:PLAYER:快乐刻印,'(,MARK:PLAYER:快乐刻印 * 3,')
	S = 1
ENDIF

;PALAM:PLAYER:润滑（の不足）
IF PALAM:PLAYER:润滑 < PALAMLV:3
	PRINT  - 
	A -= 5
	PRINT 润滑不足
	PRINTV '(,5,')
	S = 1
ENDIF
;PALAM:PLAYER:情欲
IF GETPALAMLV(PALAM:PLAYER:情欲,5)
	SIF S
		PRINT  + 
	A += GETPALAMLV(PALAM:PLAYER:情欲,5) * 3
	PRINT 情欲
	PRINTV 'LV,GETPALAMLV(PALAM:PLAYER:情欲,5),'(,GETPALAMLV(PALAM:PLAYER:情欲,5) * 3,')
	S = 1
ENDIF

;害羞
IF TALENT:PLAYER:羞耻心 > 0
	PRINT  - 
	A -= 2
	PRINT 害羞
	PRINTV '(,2,')
	S = 1
ENDIF
;否定快感（淫乱、娼妇で无效）
IF TALENT:PLAYER:快感应答 < 0 && !TALENT:PLAYER:淫乱
	PRINT  - 
	A -= 5
	PRINT 否定快感
	PRINTV '(,5,')
	S = 1
ENDIF
;处女
IF TALENT:PLAYER:处女 == 1
	PRINT  - 
	A -= 20
	PRINT 处女
	PRINTV '(,20,')
	S = 1
ELSEIF EXP:PLAYER:Ｖ经验 < EXPLV:2
	PRINT  - 
	A -= 5
	PRINT Ｖ经验
	PRINT 不足
	PRINTV '(,5,')
	S = 1
ENDIF
;媚药
IF TEQUIP:PLAYER:媚药
	SIF S
		PRINT  + 
	A += 6
	PRINT 媚药
	PRINTV '(,6,')
	S = 1
ENDIF

;'合计を表示(18以上で实行)
PRINT  = 
PRINTV A

V = 18
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 实行值
PRINTV V

WAIT
SKIPDISP 0
;实行できない
SIF A < V
	RETURN 0
RETURN 1

