@COM_ABLE708
;张开阴唇实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(708)
	RETURN RESULT
;顺从が2未满だとダメ
SIF ABL:顺从< 2
	RETURN 0
;处女の场合、顺从3以上または露出癖3以上ないとダメ
SIF TALENT:处女 && ABL:顺从 < 3 && ABL:露出癖 < 3
	RETURN 0
;绳使用中は不可
SIF TEQUIP:绳
	RETURN 0

;下半身着衣
SIF TEQUIP:0 & 4 || TEQUIP:0 & 2
	RETURN 0
;振动棒插入中はダメ
SIF TEQUIP:13
	RETURN 0
;男人だとダメ
SIF !(TALENT:2 & 1)
	RETURN 0
;浴室PLAY中は气垫床が无いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
RETURN 1

