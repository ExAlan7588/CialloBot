;-------------------------------------------------
;手淫
;自慰系指令、レベル3
;-------------------------------------------------
@COM709
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手）

LOCALS = {PLAYER}/
CSTR:PLAYER:10 += LOCALS
TCVAR:PLAYER:2 = 3
;强度
TCVAR:PLAYER:4 = 500
;侍奉快乐
TFLAG:30 = 1
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:PLAYER:体力 += 10
DOWNBASE:PLAYER:气力 += 100

SOURCE:PLAYER:情爱 = 50
SOURCE:PLAYER:性行动 = 250
SOURCE:PLAYER:达成 = 50
SOURCE:PLAYER:屈从 = 350
SOURCE:PLAYER:偏离正轨 = 100
SOURCE:PLAYER:反感 = 100

;上のほうで计算した污れデータ
SOURCE:PLAYER:不洁 = Y*10 + 60


;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:PLAYER:自己爱 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:郁闷 += 200
;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;射精に关系なく行われる处理はここから
;奴隷の指⇔调教者のＰ的污垢が移动
STAIN:PLAYER:手 |= STAIN:PLAYER:Ｐ
STAIN:PLAYER:Ｐ |= STAIN:PLAYER:手

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
SIF !FLAG:时间停止
	TIME += 5
;手淫经验
EXP:PLAYER:手淫经验 ++
;自慰经验
CFLAG:PLAYER:自慰过了 ++

RETURN 1

