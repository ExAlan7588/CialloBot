;-------------------------------------------------
;玩弄乳头
;自慰系指令、レベル1
;-------------------------------------------------
@COM707
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:PLAYER:体力 += 5
DOWNBASE:PLAYER:气力 += 30

SOURCE:PLAYER:快Ｂ = 80
SOURCE:PLAYER:情爱 = 30
SOURCE:PLAYER:苦痛 = 10
SOURCE:PLAYER:露出 = 10
SOURCE:PLAYER:不洁 = 10
SOURCE:PLAYER:反感 = 10

SIF TALENT:PLAYER:灵活手指
	SOURCE:PLAYER:快Ｂ += 15
IF ABL:PLAYER:受虐属性 > 2
	SOURCE:PLAYER:快Ｂ += ABL:PLAYER:受虐属性 * 5
	SOURCE:PLAYER:情爱 += ABL:PLAYER:受虐属性 * 5
ENDIF
SOURCE:PLAYER:快Ｂ += ABL:PLAYER:指 * 12
;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:PLAYER:自己爱 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:郁闷 += 10
;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;奴隷のＢ⇔调教者の指的污垢が移动
STAIN:PLAYER:Ｂ |= STAIN:PLAYER:手
STAIN:PLAYER:手 |= STAIN:PLAYER:Ｂ
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
SIF !FLAG:时间停止
	TIME += 5
;自慰经验
CFLAG:PLAYER:自慰过了 ++
EXP:PLAYER:手淫经验 ++
RETURN 1

