;-------------------------------------------------
;搾乳器
;道具使用指令、レベル3
;-------------------------------------------------
@COM748
;着脱の处理
TEQUIP:PLAYER:搾乳机 = !TEQUIP:PLAYER:搾乳机

;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:PLAYER:体力 += 50
DOWNBASE:PLAYER:气力 += 100

SOURCE:PLAYER:快Ｂ = 200
SOURCE:PLAYER:苦痛 = 100
SOURCE:PLAYER:露出 = 30
SOURCE:PLAYER:屈从 = 100
SOURCE:PLAYER:偏离正轨 = 100
SOURCE:PLAYER:反感 = 100

;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:PLAYER:自己爱 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:郁闷 += 100

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
SIF !FLAG:时间停止
	TIME += 5
CFLAG:PLAYER:自慰过了 ++
EXP:PLAYER:道具使用经验 ++

RETURN 1
;-------------------------------------------------
;装着继续の处理
;-------------------------------------------------
@EQUIP_COM748(PLAYER)
;搾乳器装备中
PRINTL ＜搾乳器装备中＞
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
DOWNBASE:PLAYER:体力 += 25
DOWNBASE:PLAYER:气力 += 50

SOURCE:PLAYER:快Ｂ += 100
SOURCE:PLAYER:苦痛 += 50
SOURCE:PLAYER:露出 += 15
SOURCE:PLAYER:屈从 += 50
SOURCE:PLAYER:偏离正轨 += 50
SOURCE:PLAYER:反感 += 50

RETURN 1

;-------------------------------------------------
;实行可能判定
;-------------------------------------------------
@COM_ABLE748
;搾乳器实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(748)
	RETURN RESULT
;解除是つでも可能
SIF TEQUIP:17
	RETURN 1
;道具を持っているか、道具无设定でないとダメ
SIF ITEM:11 == 0 && NOITEM == 0
	RETURN 0
;母乳体质でないと使えない
SIF TALENT:母乳体质 == 0
	RETURN 0
;上半身着衣
SIF TEQUIP:1 > 1
	RETURN 0
;乳头夹使用中は不可
SIF TEQUIP:16
	RETURN 0
;乳房电极装着中はダメ
SIF TEQUIP:24
	RETURN 0
;Ｂ感度2以下はダメ
SIF ABL:TARGET:Ｂ感觉 <= 2
	RETURN 0
;男人だとダメ
SIF !(TALENT:2 & 1)
	RETURN 0
;ASSIの场合、技巧3以上じゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:技巧 < 3
		RETURN 0
ENDIF
;淋浴中はダメ
SIF TEQUIP:32
	RETURN 0
;新妻PLAY中はダメ
SIF TEQUIP:33
	RETURN 0
;ベッドルームでないとダメ
SIF !BEDROOM(CFLAG:PLAYER:当前位置)
	RETURN 0
RETURN 1

