;-------------------------------------------------
;胸爱抚
;自慰系指令、レベル2
;-------------------------------------------------
@COM706
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:PLAYER:体力 += 5
DOWNBASE:PLAYER:气力 += 50

SOURCE:PLAYER:快Ｂ = 100
SOURCE:PLAYER:情爱 = 50
SOURCE:PLAYER:性行动 = 60
SOURCE:PLAYER:露出 = 10
SOURCE:PLAYER:不洁 = 20
SOURCE:PLAYER:反感 = 20
;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
IF ABL:PLAYER:指 >= 4
	SOURCE:PLAYER:快Ｂ += 70
ELSE
	SOURCE:PLAYER:快Ｂ += ABL:PLAYER:指 * 15
ENDIF
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:PLAYER:自己爱 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:郁闷 += 20
;-------------------------------------------------
;污れの处理
;-------------------------------------------------

;奴隷のＢ⇔调教者の指的污垢が移动
STAIN:PLAYER:Ｂ |= STAIN:PLAYER:手
STAIN:PLAYER:手 |= STAIN:PLAYER:Ｂ

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
SIF !FLAG:时间停止
	TIME += 5
;自慰经验
CFLAG:PLAYER:自慰过了 ++
EXP:PLAYER:手淫经验 ++
RETURN 1

;-------------------------------------------------
;实行可能判定
;-------------------------------------------------
@COM_ABLE706
;胸爱抚实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(706)
	RETURN RESULT
RETURN 1

