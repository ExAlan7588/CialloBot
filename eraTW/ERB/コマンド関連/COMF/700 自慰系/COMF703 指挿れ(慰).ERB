;-------------------------------------------------
;指插入れ
;自慰系指令、レベル1
;-------------------------------------------------
@COM703
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER

;破瓜抑制
TFLAG:2 = 1

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:PLAYER:体力 += 30
DOWNBASE:PLAYER:气力 += 80

IF !TALENT:PLAYER:处女 || TALENT:PLAYER:处女 == -1
	SOURCE:PLAYER:快Ｖ = 120
	SOURCE:PLAYER:苦痛 = 15
	SOURCE:PLAYER:露出 = 10
	SOURCE:PLAYER:偏离正轨 = 20
	SOURCE:PLAYER:反感 = 20
;V経験が0の时はV経験を伴わない物に派生
;Vの珠は入らないが、快Vが高いと惯らしてあるため处女丧失时に影响
ELSE
	SOURCE:PLAYER:快Ｖ = 60
	SOURCE:PLAYER:苦痛 = 10
	SOURCE:PLAYER:露出 = 30
	SOURCE:PLAYER:偏离正轨 = 30
	SOURCE:PLAYER:反感 = 30
ENDIF

SIF TALENT:PLAYER:灵活手指
	SOURCE:PLAYER:快Ｖ += 20
SOURCE:PLAYER:快Ｖ += ABL:PLAYER:指 * 5
;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
IF TALENT:PLAYER:自己爱 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:郁闷 += 20
	;处女
	SIF TALENT:PLAYER:处女
		SOURCE:PLAYER:郁闷 += 10
ENDIF
;Vへの苦痛
CALL PAIN_CHECK_V(PLAYER)
;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;奴隷の膣内⇔调教者の指的污垢が移动
	STAIN:PLAYER:膣内 |= STAIN:PLAYER:手
	STAIN:PLAYER:手 |= STAIN:PLAYER:膣内
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
SIF !FLAG:时间停止
	TIME += 5
;自慰经验
CFLAG:PLAYER:自慰过了 ++
EXP:PLAYER:Ｖ经验 ++
EXP:PLAYER:手淫经验 ++
RETURN 1


;-------------------------------------------------
;实行可能判定
;-------------------------------------------------
@COM_ABLE703
;指插入れ实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(703)
	RETURN RESULT
;男人だとダメ
SIF !(TALENT:2 & 1)
	RETURN 0
;润滑不足で、顺从3以下・百合属性3以下のASSIの场合肛门爱抚はできない（施虐狂ならＯＫ）
IF PALAM:润滑 < PALAMLV:2 && ASSIPLAY
	SIF (ABL:ASSI:顺从 <= 3 || ABL:ASSI:百合属性 <= 3) && !TALENT:ASSI:施虐狂
		RETURN 0
ENDIF

;下半身着衣
SIF TEQUIP:0 & 4
	RETURN 0
RETURN 1

