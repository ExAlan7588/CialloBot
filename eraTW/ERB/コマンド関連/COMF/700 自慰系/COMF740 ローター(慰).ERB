;-------------------------------------------------
;跳蛋
;道具使用指令、レベル1
;-------------------------------------------------
@COM740
;-------------------------------------------------
;特殊派生处理
;-------------------------------------------------
PRINTL 跳蛋
STR:0 = 跳蛋
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:PLAYER:体力 += 10
DOWNBASE:PLAYER:气力 += 80

SOURCE:PLAYER:快Ｃ = 250
SOURCE:PLAYER:露出 = 20
SOURCE:PLAYER:偏离正轨 = 30
SOURCE:PLAYER:反感 = 30
;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:PLAYER:自己爱 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:郁闷 += 30
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
SIF !FLAG:时间停止
	TIME += 5
;自慰经验
CFLAG:PLAYER:自慰过了 ++

EXP:PLAYER:道具使用经验 ++
RETURN 1

;-------------------------------------------------
;实行可能判定
;-------------------------------------------------
@COM_ABLE740
;跳蛋实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(740)
	RETURN RESULT
;道具を持っているか、道具无设定でないとダメ
SIF ITEM:0 == 0 && NOITEM == 0
	RETURN 0

;下半身着衣
SIF TEQUIP:0 & 8
	RETURN 0
RETURN 1

