;-------------------------------------------------
;阴蒂夹
;道具使用指令、レベル2
;-------------------------------------------------
@COM742
;着脱の处理
TEQUIP:PLAYER:阴蒂夹 = !TEQUIP:PLAYER:阴蒂夹

;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:PLAYER:体力 += 10
DOWNBASE:PLAYER:气力 += 80

SOURCE:PLAYER:快Ｃ = 200
SOURCE:PLAYER:露出 = 20
SOURCE:PLAYER:偏离正轨 = 30
SOURCE:PLAYER:反感 = 30


;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:PLAYER:自己爱 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:郁闷 += 30

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
SIF !FLAG:时间停止
	TIME += 5
;自慰经验
CFLAG:PLAYER:自慰过了 ++

EXP:PLAYER:道具使用经验 ++

RETURN 1
;-------------------------------------------------
;装着继续の处理
;-------------------------------------------------
@EQUIP_COM742(PLAYER)
PRINTL ＜阴蒂夹装备中＞

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
DOWNBASE:PLAYER:体力 += 5
DOWNBASE:PLAYER:气力 += 20

SOURCE:PLAYER:快Ｃ += 100
SOURCE:PLAYER:露出 += 10
SOURCE:PLAYER:偏离正轨 += 15
SOURCE:PLAYER:反感 += 15
;-------------------------------------------------
;経験の处理
;-------------------------------------------------

RETURN 1

;-------------------------------------------------
;实行可能判定
;-------------------------------------------------
@COM_ABLE742
;电动阴蒂夹实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(742)
	RETURN RESULT
;解除是つでも可能
SIF TEQUIP:11
	RETURN 1
;道具を持っているか、道具无设定でないとダメ
SIF ITEM:2 == 0 && NOITEM == 0
	RETURN 0

;下半身着衣
SIF TEQUIP:0 > 1
	RETURN 0
;男人や扶她はダメ
SIF (HAS_PENIS(TARGET))
	RETURN 0
;ASSIの场合、技巧3以上じゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:技巧 < 3
		RETURN 0
ENDIF
;淋浴中はダメ
SIF TEQUIP:32
	RETURN 0
RETURN 1

