;-------------------------------------------------
;自我口交
;自慰系指令、レベル1
;-------------------------------------------------
@COM702
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手）

LOCALS = {PLAYER}/
CSTR:PLAYER:10 += LOCALS
TCVAR:PLAYER:2 = 4
;强度
TCVAR:PLAYER:4 = 1500

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:PLAYER:体力 += 5
DOWNBASE:PLAYER:气力 += 50

SOURCE:PLAYER:快Ｃ = 110
SOURCE:PLAYER:露出 = 20
SOURCE:PLAYER:偏离正轨 = 20
SOURCE:PLAYER:反感 = 20

;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:PLAYER:自己爱 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:郁闷 += 20

;调教者のTALENT:舌头灵活をみる
SIF TALENT:PLAYER:舌头灵活
	TIMES SOURCE:PLAYER:快Ｃ , 1.50

;调教者のTALENT:猫舌をみる
SIF TALENT:PLAYER:猫舌
	TIMES SOURCE:PLAYER:快Ｃ , 0.75
;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;奴隷のＰ⇔调教者の口的污垢が移动
STAIN:PLAYER:Ｐ |= STAIN:PLAYER:口
STAIN:PLAYER:口 |= STAIN:PLAYER:Ｐ

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
SIF !FLAG:时间停止
	TIME += 5
;自慰经验
CFLAG:PLAYER:自慰过了 ++
EXP:PLAYER:口淫经验 ++
RETURN 1

@CAN_COM702(PLAYER)
SKIPDISP PLAYER
PRINTL 自我口交
;-------------------------------------------------
;实行判定处理
;-------------------------------------------------
A = 0
S = 0

;全部の命令に共通の要素を考虑
;(顺从が高いと命令に从いやすいなど)
CALL COM_ORDER

;ABL:欲望
IF ABL:PLAYER:欲望
	SIF S
		PRINT  + 
	A += ABL:PLAYER:欲望 * 1
	PRINT 欲望
	PRINTV 'LV,ABL:PLAYER:欲望,'(,ABL:PLAYER:欲望 * 1,')
	S = 1
ENDIF
;ABL:侍奉精神
IF ABL:PLAYER:侍奉精神
	SIF S
		PRINT  + 
	A += ABL:PLAYER:侍奉精神 * 4
	PRINT 侍奉精神
	PRINTV 'LV,ABL:PLAYER:侍奉精神,'(,ABL:PLAYER:侍奉精神 * 4,')
	S = 1
ENDIF
;ABL:精液中毒
IF ABL:PLAYER:精液中毒
	SIF S
		PRINT  + 
	A += ABL:PLAYER:精液中毒 * 3
	PRINT 精液中毒
	PRINTV 'LV,ABL:PLAYER:精液中毒,'(,ABL:PLAYER:精液中毒 * 3,')
	S = 1
ENDIF

IF MARK:PLAYER:快乐刻印
	SIF S
		PRINT  + 
	A += MARK:PLAYER:快乐刻印 * 1
	PRINT 快乐刻印
	PRINTV 'LV,MARK:PLAYER:快乐刻印,'(,MARK:PLAYER:快乐刻印 * 1,')
	S = 1
ENDIF
;PALAM:情欲
IF GETPALAMLV(PALAM:PLAYER:情欲,5)
	SIF S
		PRINT  + 
	A += GETPALAMLV(PALAM:PLAYER:情欲,5) * 1
	PRINT 情欲
	PRINTV 'LV,GETPALAMLV(PALAM:PLAYER:情欲,5),'(,GETPALAMLV(PALAM:PLAYER:情欲,5) * 1,')
	S = 1
ENDIF
;害羞
IF TALENT:PLAYER:羞耻心 > 0
	PRINT  - 
	A -= 1
	PRINT 害羞
	PRINTV '(,1,')
	S = 1
ENDIF
;污臭钝感
IF TALENT:PLAYER:污臭耐性 > 0
	SIF S
		PRINT  + 
	A += 1
	PRINT 污臭钝感
	PRINTV '(,1,')
	S = 1
ENDIF
;污臭敏感
IF TALENT:PLAYER:污臭耐性 < 0
	PRINT  - 
	A -= 3
	PRINT 污臭敏感
	PRINTV '(,3,')
	S = 1
ENDIF
;献身的
IF TALENT:PLAYER:献身的
	SIF S
		PRINT  + 
	A += 6
	PRINT 献身的
	PRINTV '(,6,')
	S = 1
ENDIF
;否定快感（淫乱、娼妇で无效）
IF TALENT:PLAYER:快感应答 < 0 && !TALENT:PLAYER:淫乱
	PRINT  - 
	A -= 1
	PRINT 否定快感
	PRINTV '(,1,')
	S = 1
ENDIF

Y = 0
SIF STAIN:PLAYER:Ｐ & 1
	Y += 1
SIF STAIN:PLAYER:Ｐ & 4
	Y += 3
SIF STAIN:PLAYER:Ｐ & 8
	Y += 7
SIF STAIN:PLAYER:Ｐ & 16
	Y += 15

Y = Y * (2 - TALENT:PLAYER:污臭耐性) / 2

;有污垢
IF Y
	PRINT  - 
	A -= Y
	PRINT 有污垢
	;污臭钝感
	IF TALENT:PLAYER:污臭耐性 > 0
		PRINT 、污臭钝感
	ELSEIF TALENT:PLAYER:污臭耐性 < 0
		PRINT 、污臭敏感
	ENDIF
	PRINTV '(,Y,')
	S = 1
ENDIF

;合计を表示(24以上で实行)
PRINT  = 
PRINTV A

V = 24
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 实行值
PRINTV V

WAIT
SKIPDISP 0
;实行できない
SIF A < V
	RETURN 0
RETURN 1

