CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:TARGET:2 = 1
;强度
TCVAR:TARGET:4 = 1800

DOWNBASE:PLAYER:体力 += 20
DOWNBASE:PLAYER:气力 += 50
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 100
	SOURCE:PLAYER:快Ｖ = 350
	SOURCE:快Ｃ = 400
ELSE
	;消费体力、气力
	DOWNBASE:体力 += 40
	DOWNBASE:气力 += 120
	SOURCE:PLAYER:快Ｖ = 350
	SOURCE:PLAYER:快Ｃ = 250

	SOURCE:快Ｃ = 400
	SOURCE:性行动 = 500
	SOURCE:屈从 = 1000
	SOURCE:偏离正轨 = 500
	SOURCE:反感 = 500

	;上のほうで计算した污れデータ
	SOURCE:不洁 = Y*10 + 60

	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	SIF TALENT:自己爱 < 0 || TALENT:抵抗
		SOURCE:郁闷 += 700
	[SKIPSTART]
	;调教者が处女（一回のみ）
	IF TALENT:PLAYER:处女 && TALENT:处女 == -1 && !GETBIT(CFLAG:3,10)
		TIMES SOURCE:偏离正轨 , 20.00
		TIMES SOURCE:屈从 , 3.00
		PRINTFORML ＜%NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%失去了处女＞
		;异常经验追加
		IF TALENT:PLAYER:处女 == 1
			EXP:异常经验 += 1
			SETBIT CFLAG:3,10
		ENDIF
		TALENT:PLAYER:处女 = 0
	ENDIF
	[SKIPEND]
ENDIF
;-------------------------------------------------
;污れの处理
;-------------------------------------------------
IF HAS_PENIS(TARGET)
	;奴隷のＰ⇔调教者の膣内的污垢が移动
	STAIN:2 |= STAIN:PLAYER:3
	STAIN:2 |= STAIN:PLAYER:6
	STAIN:PLAYER:3 |= STAIN:2
	STAIN:PLAYER:6 |= STAIN:2

ENDIF

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
EXP:PLAYER:Ｖ性交经验 ++
EXP:插入经验 ++

;同性爱　レズなら返回值1ゲイなら返回值2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 4
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
ENDIF


RETURN 1

