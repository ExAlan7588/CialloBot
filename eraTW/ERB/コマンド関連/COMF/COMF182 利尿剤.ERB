;-------------------------------------------------
;利尿剂
;特殊指令
;-------------------------------------------------
@COM182
ITEM:42 -= 1

TCVAR:利尿剂 = 60
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
;调教者が调合知识を持っていれば消费を抑えられる
IF TALENT:PLAYER:调合知识
	DOWNBASE:体力 += 100
	DOWNBASE:气力 += 100
ELSE
	DOWNBASE:体力 += 200
	DOWNBASE:气力 += 200
ENDIF

SOURCE:偏离正轨 = 800
;利尿剂效果で轻轻地变动
SOURCE:反感 = 150


;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;同性爱　レズなら返回值1ゲイなら返回值2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ENDIF
RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE182
;利尿剂实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(182)
	RETURN RESULT
;道具を持っているか、道具无设定でないとダメ
SIF ITEM:42 == 0 && NOITEM == 0
	RETURN 0
IF DRUG == 0
	;药毒耐性の场合、直接注入以外ダメ
	SIF TALENT:药毒耐性
		RETURN 0
	;停止中は不可
	SIF FLAG:70 == 1
		RETURN 0
ENDIF
;新妻PLAY中はダメ
SIF TEQUIP:33
	RETURN 0
RETURN 1

