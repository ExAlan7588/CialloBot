;-------------------------------------------------
;对方主导后背位肛交
;性交系指令、レベル1
;-------------------------------------------------
@COM323
;-------------------------------------------------
;特殊派生处理
;-------------------------------------------------
;室内でないor浴室ルームで气垫床がないと立位に
SIF !INROOM(CFLAG:PLAYER:当前位置) && !(BATHROOM() && ITEM:20)
	TFLAG:193 = 1

;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;侍奉快乐フラグ
TCVAR:PLAYER:108 = 1

CSTR:PLAYER:10 += @"{TARGET}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:PLAYER:2 = 2
TCVAR:PLAYER:童贞丧失 = 1
TCVAR:Ａ丧失发生 = 1
;强度
TCVAR:PLAYER:4 = 2000

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:TARGET:2 = 12
;强度
TCVAR:TARGET:4 = 1500

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
DOWNBASE:体力 += 60
DOWNBASE:气力 += 60
DOWNBASE:PLAYER:体力 += 30
DOWNBASE:PLAYER:气力 += 50
SOURCE:PLAYER:快Ｃ = 400
SOURCE:快Ａ = 500
SOURCE:情爱 = 300
SOURCE:苦痛 = 900
SOURCE:露出 = 100
SOURCE:偏离正轨 = 200

;上のほうで计算した污れデータ
SOURCE:不洁 = Y*10 + 60

;Aへの苦痛は先に处理しておく
CALL PAIN_CHECK_A(TARGET)

;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;射精に关系なく行われる处理はここから
;奴隷のＡ⇔调教者のＰ的污垢が移动
CALL STAIN_肛门Ｐ插入

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
EXP:Ａ经验 ++
EXP:PLAYER:插入经验 ++
;同性爱　レズなら返回值1ゲイなら返回值2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
	ENDIF
		EXP:PLAYER:时奸经验 += 1
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 4
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
	ENDIF
	EXP:Ａ性交经验 ++
	;爱情经验
	SIF !ASSIPLAY
		EXP:爱情经验 += TALENT:恋慕
ENDIF
RETURN 1


;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE323
SIF !TFLAG:100
	RETURN 0
SIF TCVAR:20 != 44
	RETURN 0
;毒人形だと肛门がついてないのでダメ
SIF TALENT:196 == 99
	RETURN 0
;调教者が男人、扶她の场合はある程度勃起てないとダメ
SIF (TALENT:PLAYER:2 & 2) && BASE:PLAYER:勃起 < 1000
	RETURN 0
;肛用振动棒插入中はダメ
SIF TEQUIP:14
	RETURN 0
;后庭拉珠使用中は不可
SIF TEQUIP:15
	RETURN 0
;普通の浣肠使用中は不可
SIF TEQUIP:21
	RETURN 0
;バルーン使用中は不可
SIF TEQUIP:22
	RETURN 0
;电极使用中は不可
SIF TEQUIP:23
	RETURN 0

;体格差がある场合は経験がないとダメ
SIF 插入不可(TARGET) == 1 && EXP:Ａ经验 < 50 && !TALENT:PLAYER:禁断的知识
	RETURN 0
;さらに体格差があると禁断的知识が必要
SIF 插入不可(TARGET) == 2 && (!TALENT:PLAYER:禁断的知识 || EXP:Ａ经验 < 50)
	RETURN 0
SIF 插入不可(TARGET) == 3
	RETURN 0
;调教者が男人、半人半妖、扶她、もしくは穿戴式假阴茎がないとダメ
SIF !(TALENT:PLAYER:2 & 2) && ITEM:PBAND == 0
	RETURN 0


;对面座位からはダメ
SIF TEQUIP:体位 == 4
	RETURN 0
;下半身着衣
SIF TEQUIP:0 & 4
	RETURN 0
;浴室PLAY中は气垫床が无いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF

RETURN 1