;-------------------------------------------------
;眼罩
;SM系指令、レベル1
;-------------------------------------------------
@COM104
;着脱の处理
TEQUIP:眼罩 = !TEQUIP:眼罩

;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 80

ELSE

	DOWNBASE:体力 += 0
	DOWNBASE:气力 += 80

	SOURCE:恐怖 = 700
	SOURCE:露出 = 100
	SOURCE:偏离正轨 = 300
	SOURCE:反感 = 600

	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;紧缚经验が高いと消费减少
	IF EXP:紧缚经验 < EXPLV:3
		TIMES DOWNBASE:气力 , 1.00
	ELSEIF EXP:紧缚经验 < EXPLV:4
		TIMES DOWNBASE:气力 , 0.90
	ELSE
		TIMES DOWNBASE:气力 , 0.70
	ENDIF
ENDIF
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ELSE
	EXP:紧缚经验 += 2
	;同性爱　レズなら返回值1ゲイなら返回值2
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ENDIF
RETURN 1
;-------------------------------------------------
;装着继续の处理
;-------------------------------------------------
@EQUIP_COM104(ARG)
PRINTL ＜眼罩装着中＞

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
IF FLAG:70 == 1

ELSE

	DOWNBASE:ARG:体力 += 0
	DOWNBASE:气力 += 40

	SOURCE:ARG:恐怖 += 350
	SOURCE:ARG:露出 += 50
	SOURCE:ARG:偏离正轨 += 150
	SOURCE:ARG:反感 += 300

	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;紧缚经验が高いと消费减少
	LOCAL = 40
	IF EXP:ARG:紧缚经验 < EXPLV:3
		TIMES LOCAL , 1.00
	ELSEIF EXP:ARG:紧缚经验 < EXPLV:4
		TIMES LOCAL , 0.90
	ELSE
		TIMES LOCAL , 0.70
	ENDIF
	DOWNBASE:ARG:气力 += LOCAL

	;-------------------------------------------------
	;経験の处理
	;-------------------------------------------------
	EXP:ARG:紧缚经验 ++
ENDIF
RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE104
;眼罩实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(104)
	RETURN RESULT
;解除是つでも可能
SIF TEQUIP:18
	RETURN 1
;道具を持っているか、道具无设定でないとダメ
SIF ITEM:15 == 0 && NOITEM == 0
	RETURN 0
RETURN 1

