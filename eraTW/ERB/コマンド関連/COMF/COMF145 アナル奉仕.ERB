;-------------------------------------------------
;肛门侍奉
;ハードな调教指令、レベル3
;-------------------------------------------------
@COM145
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = TARGET
;侍奉快乐フラグ
TCVAR:108 = 1

CSTR:PLAYER:10 += @"{TARGET}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:PLAYER:2 = 12
;强度
TCVAR:PLAYER:4 = 250

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:体力 += 10
DOWNBASE:气力 += 100
SOURCE:PLAYER:快Ａ = 100

SOURCE:性行动 = 300
SOURCE:达成 = 300
SOURCE:屈从 = 2500
SOURCE:偏离正轨 = 1200
SOURCE:反感 = 1200

;上のほうで计算した污れデータ
SOURCE:不洁 = Y*80 + 50


;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:自己爱 < 0 || TALENT:抵抗
	SOURCE:郁闷 += 1200
;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;奴隷の口⇔调教者のＡ的污垢が移动
STAIN:0 |= STAIN:PLAYER:4
STAIN:PLAYER:4 |= STAIN:0

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;同性爱　レズなら返回值1ゲイなら返回值2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 6
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 6
ENDIF
;奴隷が猫舌持ちの场合は、调教者に嗜虐快乐经验を追加
SIF TALENT:TARGET:猫舌
	EXP:嗜虐快乐经验 += 1

RETURN 1

@CAN_COM145(ARG)
SKIPDISP ARG
PRINTL 肛门侍奉
;-------------------------------------------------
;实行判定处理
;-------------------------------------------------
A = 0
S = 0

;全部の命令に共通の要素を考虑
;(顺从が高いと命令に从いやすいなど)
CALL COM_ORDER

;ABL:欲望
IF ABL:欲望
	SIF S
		PRINT  + 
	A += ABL:欲望 * 1
	PRINT 欲望
	PRINTV 'LV,ABL:欲望,'(,ABL:欲望 * 1,')
	S = 1
ENDIF
;ABL:侍奉精神
IF ABL:侍奉精神
	SIF S
		PRINT  + 
	A += ABL:侍奉精神 * 3
	PRINT 侍奉精神
	PRINTV 'LV,ABL:侍奉精神,'(,ABL:侍奉精神 * 3,')
	S = 1
ENDIF

IF MARK:快乐刻印
	SIF S
		PRINT  + 
	A += MARK:快乐刻印 * 2
	PRINT 快乐刻印
	PRINTV 'LV,MARK:快乐刻印,'(,MARK:快乐刻印 * 2,')
	S = 1
ENDIF

;害羞
IF TALENT:羞耻心 > 0
	PRINT  - 
	A -= 1
	PRINT 害羞
	PRINTV '(,1,')
	S = 1
ENDIF
;污臭钝感
IF TALENT:污臭耐性 == 1
	SIF S
		PRINT  + 
	A += 2
	PRINT 污臭钝感
	PRINTV '(,2,')
	S = 1
ENDIF
;污臭敏感
IF TALENT:污臭耐性 < 0
	PRINT  - 
	A -= 5
	PRINT 污臭敏感
	PRINTV '(,5,')
	S = 1
ENDIF
;献身的
IF TALENT:献身的
	SIF S
		PRINT  + 
	A += 4
	PRINT 献身的
	PRINTV '(,4,')
	S = 1
ENDIF
;污臭无视
IF TALENT:污臭耐性 == 2
	SIF S
		PRINT  + 
	A += 3
	PRINT 污臭无视
	PRINTV '(,3,')
	S = 1
ENDIF
;否定快感（淫乱、娼妇で无效）
IF TALENT:快感应答 < 0 && !TALENT:淫乱
	PRINT  - 
	A -= 1
	PRINT 否定快感
	PRINTV '(,1,')
	S = 1
ENDIF
;倒错的
IF TALENT:倒错的
	SIF S
		PRINT  + 
	A += 3
	PRINT 倒错的
	PRINTV '(,3,')
	S = 1
ENDIF
;施虐狂
IF TALENT:PLAYER:施虐狂
	SIF S
		PRINT  + 
	A += 3
	PRINT 施虐狂
	PRINTV '(,3,')
	S = 1
ENDIF
;恋慕
IF TALENT:恋慕 && ASSIPLAY == 0
	SIF S
		PRINT  + 
	A += 5
	PRINT 恋慕
	PRINTV '(,5,')
	S = 5
ENDIF
;亲爱
IF TALENT:恋慕 > 1 && ASSIPLAY == 0
	SIF S
		PRINT  + 
	A += 5
	PRINT 亲爱
	PRINTV '(,5,')
	S = 5
ENDIF


Y = 0
;爱液的污垢
SIF STAIN:PLAYER:3 & 1
	Y += 1
;精液的污垢
SIF STAIN:PLAYER:3 & 4
	Y += 3
;肛门的污垢
SIF STAIN:PLAYER:3 & 8
	Y += 7
SIF STAIN:PLAYER:3 & 16
	Y += 15

Y = Y * (2 - TALENT:污臭耐性) / 2

;有污垢
IF Y
	PRINT  - 
	A -= Y
	PRINT 有污垢
	;污臭钝感
	IF TALENT:污臭耐性 > 0
		PRINT 、污臭钝感
	ELSEIF TALENT:污臭耐性 < 0
		PRINT 、污臭敏感
	ENDIF
	PRINTV '(,Y,')
	S = 1
ENDIF


;合计を表示(23以上で实行)
PRINT  = 
PRINTV A

V = 23
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 实行值
PRINTV V

WAIT
SKIPDISP 0
;实行できない
SIF A < V
	RETURN 0
RETURN 1


