@COM_ABLE145
;肛门侍奉强制实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(145)
	RETURN RESULT
;猫舌の奴隷の场合は技巧Lv2以上必要
SIF TALENT:猫舌 && ABL:技巧 < 2
	RETURN 0
;口球使用中は不可
SIF TEQUIP:口球
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

