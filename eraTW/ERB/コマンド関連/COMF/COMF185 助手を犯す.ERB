;-------------------------------------------------
;侵犯助手
;特殊指令
;-------------------------------------------------
@COM185
PRINTL 侵犯助手
;-------------------------------------------------
;实行判定处理
;-------------------------------------------------
A = 0
S = 0

;全部の命令に共通の要素を考虑
;(顺从が高いと命令に从いやすいなど)
CALL COM_ORDER

;ABL:欲望
IF ABL:欲望
	SIF S
		PRINT  + 
	A += ABL:欲望 * 2
	PRINT 欲望
	PRINTV 'LV,ABL:欲望,'(,ABL:欲望 * 2,')
	S = 1
ENDIF

IF MARK:快乐刻印
	SIF S
		PRINT  + 
	A += MARK:快乐刻印 * 2
	PRINT 快乐刻印
	PRINTV 'LV,MARK:快乐刻印,'(,MARK:快乐刻印 * 2,')
	S = 1
ENDIF
;PALAM:情欲
IF GETPALAMLV(PALAM:情欲,5)
	SIF S
		PRINT  + 
	A += GETPALAMLV(PALAM:情欲,5) * 2
	PRINT 情欲
	PRINTV 'LV,GETPALAMLV(PALAM:情欲,5),'(,GETPALAMLV(PALAM:情欲,5) * 2,')
	S = 1
ENDIF
;助手のABL:露出癖
IF ABL:ASSI:露出癖
	SIF S
		PRINT  + 
	A += ABL:ASSI:露出癖 * 2
	PRINT 助手的露出癖
	PRINTV 'LV,ABL:ASSI:露出癖,'(,ABL:ASSI:露出癖 * 2,')
	S = 1
ENDIF

;助手が恋慕
IF TALENT:ASSI:恋慕 && ASSIPLAY == 0
	SIF S
		PRINT  + 
	A += 10
	PRINT 助手是恋慕
	PRINTV '(,10,')
	S = 1
ENDIF

;助手が亲爱
IF TALENT:ASSI:恋慕 > 1 && ASSIPLAY == 0
	SIF S
		PRINT  + 
	A += 15
	PRINT 助手是亲爱
	PRINTV '(,15,')
	S = 1
ENDIF

;助手が处女
IF TALENT:ASSI:处女 == 1
	PRINT  - 
	A -= 50
	PRINT 助手是处女
	PRINTV '(,50,')
	S = 1
ENDIF

;合计を表示(40以上で实行)
PRINT  = 
PRINTV A

V = 40
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 实行值
PRINTV V

WAIT

;实行できない
SIF A < V
	RETURN 0


;-------------------------------------------------
;实行决定
;-------------------------------------------------
STR:0 = 让助手侵犯
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;TCVAR:0 射精对象フラグ（ビット0=TARGET 1=PLAYER 2=MASTER 3=ASSI）
;TCVAR:1 予备射精对象フラグ（ビットを使いたくない人用、CFLAG:100に翻译されます）	（1=TARGET 2=PLAYER 3=MASTER 4=ASSI 5=TARGET+ASSI 6=MASTER+ASSI）
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手）

SETBIT TCVAR:MASTER:0, 3
TCVAR:MASTER:2 = 1
;强度
TCVAR:MASTER:4 = 1500

TEQUIP:ASSI:50 = MASTER

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:体力 += 0
DOWNBASE:气力 += 250

SOURCE:情爱 = 200
SOURCE:液体 = 100
SOURCE:屈从 = 1500
SOURCE:偏离正轨 = 700
SOURCE:反感 = 700

;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:自己爱 < 0 || TALENT:抵抗
	SOURCE:郁闷 += 700

;助手が处女丧失をした场合、屈服と偏离正轨を增加
IF TALENT:ASSI:处女 == 1
	TIMES SOURCE:偏离正轨 , 20.00
	TIMES SOURCE:屈从 , 3.00
ENDIF

;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;射精に关系なく行われる处理はここから
IF TALENT:MASTER:2 & 2
	;主人のＰ⇔助手のＶ的污垢が移动
	STAIN:MASTER:2 |= STAIN:ASSI:3
	STAIN:ASSI:3 |= STAIN:MASTER:2
ENDIF

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;助手のＶ经验
EXP:ASSI:Ｖ经验 += 1

;助手の百合经验;同性爱　レズなら返回值1ゲイなら返回值2
SIF HETEROSEX(ASSI,MASTER) == 1
	EXP:ASSI:百合经验 += 10

RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE185
LOCAL = 0
;侵犯助手实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(185)
	RETURN RESULT
;助手がいないとダメ
SIF ASSI < 1
	RETURN 0
;主人じゃないとダメ
SIF ASSIPLAY
	RETURN 0
;助手が男人だとダメ
SIF !(TALENT:ASSI:2 & 1)
	RETURN 0
;体格差がある场合は主人が禁断的知识持ちじゃないとダメ
SIF ABS(TALENT:体型 - TALENT:ASSI:体型) > 2 && (TALENT:MASTER:禁断的知识 == 0)
	RETURN 0
;主人が男人、半人半妖、扶她、もしくは穿戴式假阴茎がないとダメ
SIF !(TALENT:MASTER:2 & 2) && ITEM:PBAND == 0
	RETURN 0
;绳使用中か顺从が3以上ないとダメ
SIF TEQUIP:绳 == 0 && ABL:顺从 < 3
	RETURN 0
;浴室PLAY中は气垫床が无いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
;新妻PLAY中はダメ
SIF TEQUIP:33
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

