@COM_ABLE62
;正常位肛交实行判定
SIF !TFLAG:100
	RETURN 0
SIF GLOBAL_COMABLE(62)
	RETURN RESULT
;毒人形だと肛门がついてないのでダメ
SIF TALENT:196 == 99
	RETURN 0
;调教者が男人、扶她の场合はある程度勃起てないとダメ
SIF (TALENT:PLAYER:2 & 2) && BASE:PLAYER:勃起 < 1000
	RETURN 0
;肛用振动棒插入中はダメ
SIF TEQUIP:14
	RETURN 0
;后庭拉珠使用中は不可
SIF TEQUIP:15
	RETURN 0
;普通の浣肠使用中は不可
SIF TEQUIP:21
	RETURN 0
;バルーン使用中は不可
SIF TEQUIP:22
	RETURN 0
;电极使用中は不可
SIF TEQUIP:23
	RETURN 0
;时间停止中はスキップ
IF FLAG:70 != 1
	;一定のＡ经验が必要
	SIF EXP:2 < EXPLV:3
		RETURN 0
ENDIF
;体格差がある场合は経験がないとダメ
SIF 插入不可(TARGET) == 1 && EXP:Ａ经验 < 50 && !TALENT:PLAYER:禁断的知识
	RETURN 0
;さらに体格差があると禁断的知识が必要
SIF 插入不可(TARGET) == 2 && (!TALENT:PLAYER:禁断的知识 || EXP:Ａ经验 < 50)
	RETURN 0
SIF 插入不可(TARGET) == 3
	RETURN 0
;调教者が男人、半人半妖、扶她、もしくは穿戴式假阴茎がないとダメ
SIF !(TALENT:PLAYER:2 & 2)  && ITEM:PBAND == 0
	RETURN 0
;润滑不足で、顺从3以下・百合属性3以下のASSIの场合はできない（施虐狂ならＯＫ）
IF PALAM:润滑 < PALAMLV:2 && ASSIPLAY
	SIF (ABL:ASSI:顺从 <= 3 || ABL:ASSI:技巧 <= 3) && TALENT:ASSI:施虐狂 == 0
		RETURN 0
ENDIF
;下半身着衣
SIF TEQUIP:0 & 4
	RETURN 0
;浴室PLAY中は气垫床が无いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
;背面座位からはダメ
SIF TEQUIP:体位 == 5
	RETURN 0
RETURN 1

