;-------------------------------------------------
;揉胸
;爱抚系指令、レベル1
;-------------------------------------------------
@COM12
;着脱の处理
TEQUIP:揉胸 = !TEQUIP:揉胸

;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;侍奉快乐
TCVAR:PLAYER:108 = 1

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 20
	SOURCE:快Ｂ += ABL:PLAYER:指 * 20 + 30

ELSE
	DOWNBASE:体力 += 10
	DOWNBASE:气力 += 50

	SOURCE:情爱 = 15
	SOURCE:露出 = 20
	SOURCE:偏离正轨 = 30
	SOURCE:反感 = 50

	SOURCE:快Ｂ += ABL:PLAYER:指 * 20 + 30

	SIF ABL:亲密 >= 7
		SOURCE:情爱 += (ABL:亲密 * 10)

	SIF TALENT:PLAYER:灵活手指
		TIMES SOURCE:快Ｂ , 1.50

	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	SIF TALENT:自己爱 < 0 || TALENT:抵抗
		SOURCE:郁闷 += 100
ENDIF

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;同性爱　レズなら返回值1ゲイなら返回值2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 5
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 5
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 5
	ENDIF
ENDIF
RETURN 1
;-------------------------------------------------
;装着继续の处理
;-------------------------------------------------
@EQUIP_COM12(ARG)

;これするいみないよね？
SELECTCASE SELECTCOM
;	CASE 0 TO 9,11,40 TO 49,65,66,70,71,83 TO 85,91 TO 94,100 TO 105,120 TO 189,410
;		PRINTL ＜揉胸解除＞
;		TEQUIP:揉胸 = !TEQUIP:揉胸
	CASEELSE
		;揉胸中
		PRINTL ＜揉胸中＞
		;-------------------------------------------------
		;ソース追加处理
		;-------------------------------------------------
		IF FLAG:70 == 1
			BASE:MASTER:TSP -= 20
			SOURCE:快Ｂ += (ABL:PLAYER:指 + 1) * 10
		ELSE
			DOWNBASE:ARG:体力 += 5
			DOWNBASE:ARG:气力 += 20
			DOWNBASE:PLAYER:体力 += 15
			DOWNBASE:PLAYER:气力 += 20
			SOURCE:快Ｂ += (ABL:PLAYER:指 + 1) * 10
			SOURCE:露出 = 20
			SOURCE:偏离正轨 = 30
			SOURCE:反感 = 30
			SOURCE:情爱 += ABL:PLAYER:指 * 5

			SIF ABL:亲密 >= 5
				SOURCE:情爱 += (ABL:亲密 * 2)
		ENDIF

		EXP:PLAYER:手淫经验 ++
ENDSELECT
RETURN 1

