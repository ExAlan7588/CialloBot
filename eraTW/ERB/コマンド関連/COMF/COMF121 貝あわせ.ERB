;-------------------------------------------------
;贝あわせ
;助手による指令、及びレズプレイ、レベル1
;-------------------------------------------------
@COM121
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER

;侍奉快乐フラグ
TCVAR:PLAYER:108 = 1
TCVAR:108 = 1

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
BASE:MASTER:TSP -= 90
SOURCE:PLAYER:快Ｃ = 200
SOURCE:快Ｃ = 200

ELSE

DOWNBASE:体力 += 30
DOWNBASE:气力 += 90

SOURCE:PLAYER:快Ｃ = 200
SOURCE:快Ｃ = 200
SOURCE:性行动 = 200
SOURCE:达成 = 100
SOURCE:露出 = 50
SOURCE:屈从 = 400
SOURCE:偏离正轨 = 400
SOURCE:反感 = 400


;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:自己爱 < 0 || TALENT:抵抗
	SOURCE:郁闷 += 400
ENDIF
;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;奴隷のＶ⇔调教者のＶ的污垢が移动
STAIN:3 |= STAIN:PLAYER:3
STAIN:PLAYER:3 |= STAIN:3

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;同性爱　レズなら返回值1ゲイなら返回值2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 8
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 8
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 8
	ENDIF

	;爱情经验
	SIF !ASSIPLAY
		EXP:爱情经验 += 2 * TALENT:恋慕
ENDIF
RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE121
;贝あわせ实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(121)
	RETURN RESULT
;男人か扶她だとダメ
SIF HAS_PENIS(PLAYER)|| HAS_PENIS(TARGET)
	RETURN 0
;欲望3以下の场合贝あわせはできない（小恶魔、相性良好ならＯＫ）
IF ASSIPLAY
	SIF ABL:ASSI:欲望 <= 3 && TALENT:ASSI:小恶魔 == 0
		RETURN 0
ENDIF
;绳使用中は不可
SIF TEQUIP:绳
	RETURN 0
;下半身内衣着衣
SIF TEQUIP:0 > 1
	RETURN 0
;振动棒插入中はダメ
SIF TEQUIP:13
	RETURN 0
;阴蒂夹使用中はダメ
SIF TEQUIP:11
	RETURN 0
;浴室PLAY中は气垫床が无いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
;室内でないとダメ
SIF !INROOM(CFLAG:PLAYER:当前位置)
	RETURN 0
;睡眠奸中
SIF CFLAG:恶作剧 > 1
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

