PRINTL 张开阴唇
;-------------------------------------------------
;实行できるかの判定
;-------------------------------------------------
IF FLAG:70 == 1 || CFLAG:恶作剧
ELSE
	A = 0
	S = 0
	;全部の命令に共通の要素を考虑
	;(顺从が高いと命令に从いやすいなど)
	CALL COM_ORDER

	;ABL:欲望
	IF ABL:欲望
		SIF S
			PRINT  + 
		A += ABL:欲望 * 3
		PRINT 欲望
		PRINTV 'LV,ABL:欲望,'(,ABL:欲望 * 3,')
		S = 1
	ENDIF
	;ABL:Ｖ感觉
	IF ABL:Ｖ感觉
		SIF S
			PRINT  + 
		A += ABL:Ｖ感觉 * 2
		PRINT Ｖ感觉
		PRINTV 'LV,ABL:Ｖ感觉,'(,ABL:Ｖ感觉 * 2,')
		S = 1
	ENDIF
	;ABL:侍奉精神
	IF ABL:侍奉精神
		SIF S
			PRINT  + 
		A += ABL:侍奉精神 * 4
		PRINT 侍奉精神
		PRINTV 'LV,ABL:侍奉精神,'(,ABL:侍奉精神 * 4,')
		S = 1
	ENDIF
	;ABL:露出癖
	IF ABL:8
		SIF S
			PRINT  + 
		A += ABL:露出癖 * 3
		PRINT ABLNAME:露出癖
		PRINTV 'LV,ABL:露出癖,'(,ABL:露出癖 * 3,')
		S = 1
	ENDIF
	;ABL:自慰中毒
	IF ABL:自慰中毒
		SIF S
			PRINT  + 
		A += ABL:自慰中毒 * 3
		PRINT 自慰中毒
		PRINTV 'LV,ABL:自慰中毒,'(,ABL:自慰中毒 * 3,')
		S = 1
	ENDIF

	IF MARK:快乐刻印
		SIF S
			PRINT  + 
		A += MARK:快乐刻印 * 3
		PRINT 快乐刻印
		PRINTV 'LV,MARK:快乐刻印,'(,MARK:快乐刻印 * 3,')
		S = 1
	ENDIF

	;PALAM:润滑（の不足）
	IF PALAM:润滑 < PALAMLV:3
		PRINT  - 
		A -= 5
		PRINT 润滑不足
		PRINTV '(,5,')
		S = 1
	ENDIF
	;PALAM:情欲
	IF GETPALAMLV(PALAM:情欲,5)
		SIF S
			PRINT  + 
		A += GETPALAMLV(PALAM:情欲,5) * 3
		PRINT 情欲
		PRINTV 'LV,GETPALAMLV(PALAM:情欲,5),'(,GETPALAMLV(PALAM:情欲,5) * 3,')
		S = 1
	ENDIF

	;害羞
	IF TALENT:羞耻心 > 0
		PRINT  - 
		A -= 2
		PRINT 害羞
		PRINTV '(,2,')
		S = 1
	ENDIF
	;否定快感（淫乱、娼妇で无效）
	IF TALENT:快感应答 < 0 && !TALENT:淫乱
		PRINT  - 
		A -= 5
		PRINT 否定快感
		PRINTV '(,5,')
		S = 1
	ENDIF
	;讨厌男人（恋慕、亲爱で无效）
	IF OTOKOGIRAI(TARGET) == 1
		PRINT  - 
		A -= 12
		PRINT 讨厌男人
		PRINTV '(,12,')
		S = 1
	ENDIF

	;处女
	IF TALENT:处女 == 1
		PRINT  - 
		A -= 20
		PRINT 处女
		PRINTV '(,20,')
		S = 1
	ELSEIF EXP:Ｖ经验 < EXPLV:2
		PRINT  - 
		A -= 5
		PRINT Ｖ经验
		PRINT 不足
		PRINTV '(,5,')
		S = 1
	ENDIF

	;调教者が扶她
	IF (TALENT:PLAYER:2 & 3) == 3
		PRINT  + 
		A += 4
		PRINT 扶她
		PRINTV '(,4,')
		S = 1
	ENDIF

	;媚药
	IF TCVAR:媚药
		SIF S
			PRINT  + 
		A += 6
		PRINT 媚药
		PRINTV '(,6,')
		S = 1
	ENDIF

	;'合计を表示(18以上で实行)
	PRINT  = 
	PRINTV A

	V = 18
	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 实行值
	PRINTV V

	WAIT
	SKIPDISP 0
	;实行できない
	SIF A < V
		RETURN 0
ENDIF
RETURN 1

