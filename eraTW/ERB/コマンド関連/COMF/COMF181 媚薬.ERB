;-------------------------------------------------
;媚药
;特殊指令
;-------------------------------------------------
@COM181
ITEM:41 -= 1
TCVAR:媚药 = 180
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
UP:情欲 = 2500

ELSE

;调教者が调合知识を持っていれば消费を抑えられる
IF TALENT:PLAYER:调合知识
	DOWNBASE:体力 += 150
	DOWNBASE:气力 += 150
ELSE
	DOWNBASE:体力 += 300
	DOWNBASE:气力 += 300
ENDIF

;媚药效果で情欲のUPが2倍になるので实际には+5000
UP:情欲 = 2500
SOURCE:偏离正轨 = 1000
ENDIF

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;同性爱　レズなら返回值1ゲイなら返回值2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ENDIF
RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE181
;媚药实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(181)
	RETURN RESULT
;道具を持っているか、道具无设定でないとダメ
SIF ITEM:41 == 0 && NOITEM == 0
	RETURN 0
IF DRUG == 0
	;药毒耐性だとダメ
	SIF TALENT:药毒耐性
		RETURN 0
	;停止中は不可
	SIF FLAG:70 == 1
		RETURN 0
ENDIF
RETURN 1

