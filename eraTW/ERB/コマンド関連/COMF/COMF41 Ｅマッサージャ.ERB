;-------------------------------------------------
;电动按摩棒
;道具使用指令、レベル2
;-------------------------------------------------
@COM41
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;侍奉快乐フラグ
TCVAR:PLAYER:108 = 1

;TARGETが扶她の场合には射精可能に
CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:TARGET:2 = 10
;强度
TCVAR:TARGET:4 = 1000

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 150
	SOURCE:快Ｃ = 500

ELSE

	DOWNBASE:体力 += 30
	DOWNBASE:气力 += 120

	SOURCE:快Ｃ = 500
	SOURCE:露出 = 40
	SOURCE:偏离正轨 = 60
	SOURCE:反感 = 60

	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	SIF TALENT:自己爱 < 0 || TALENT:抵抗
		SOURCE:郁闷 += 60
ENDIF
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;同性爱　レズなら返回值1ゲイなら返回值2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ENDIF
EXP:PLAYER:道具使用经验 ++

RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE41
;电动按摩棒实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(41)
	RETURN RESULT
;道具を持っているか、道具无设定でないとダメ
SIF ITEM:1 == 0 && NOITEM == 0
	RETURN 0
;ASSIの场合、技巧3以上か施虐狂じゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:技巧 < 3 && TALENT:ASSI:施虐狂 == 0
		RETURN 0
ENDIF
;淋浴中はダメ
SIF TEQUIP:32
	RETURN 0
;室内でないとダメ
SIF !INROOM(CFLAG:PLAYER:当前位置)
	RETURN 0
RETURN 1

