;-------------------------------------------------
;浣肠器＋肛塞
;ハードな调教指令、レベル4
;-------------------------------------------------
@COM146
;着脱の处理
TEQUIP:浣肠 = !TEQUIP:浣肠
IF !TEQUIP:浣肠
	IF !GETBIT(CFLAG:3,7)
		EXP:异常经验 += 1
		SETBIT CFLAG:3,7
	ENDIF
ENDIF
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 150
	SOURCE:快Ａ = 300
	SOURCE:苦痛 = 250

ELSE

	DOWNBASE:体力 += 60
	DOWNBASE:气力 += 150

	SOURCE:快Ａ = 300
	SOURCE:苦痛 = 500
	SOURCE:露出 = 300
	SOURCE:屈从 = 200
	SOURCE:不洁 = 500
	SOURCE:偏离正轨 = 500
	SOURCE:反感 = 500

	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	SIF TALENT:自己爱 < 0 || TALENT:抵抗
		SOURCE:郁闷 += 500
ENDIF
;Aへの苦痛は先に处理しておく
CALL PAIN_CHECK_A(TARGET)
;-------------------------------------------------
;污れの处理
;-------------------------------------------------
STAIN:7 |= STAIN:4
STAIN:4 |= STAIN:7
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;Ａ经验
EXP:Ａ经验 += 4
;同性爱　レズなら返回值1ゲイなら返回值2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ENDIF
RETURN 1
;-------------------------------------------------
;装着继续の处理
;-------------------------------------------------

@EQUIP_COM146(ARG)
PRINTL ＜浣肠＋肛塞插入中＞
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 150
	SOURCE:ARG:快Ａ += 150

	;Aへの苦痛は先に处理しておく
	;EXP:Ａ经验をみる
	LOCAL = 250
	LOCAL:1 = 250
	IF EXP:ARG:Ａ经验 < EXPLV:1
		TIMES LOCAL , 3.00
	ELSEIF EXP:ARG:Ａ经验 < EXPLV:2
		TIMES LOCAL , 1.20
	ELSEIF EXP:ARG:Ａ经验 < EXPLV:3
		TIMES LOCAL , 0.80
	ELSEIF EXP:ARG:Ａ经验 < EXPLV:4
		TIMES LOCAL , 0.60
	ELSEIF EXP:ARG:Ａ经验 < EXPLV:5
		TIMES LOCAL , 0.40
	ELSEIF EXP:ARG:Ａ经验 >= EXPLV:5
		TIMES LOCAL , 0.20
	ENDIF

	;PALAM:润滑をみる
	IF PALAM:ARG:润滑 < PALAMLV:1
		TIMES LOCAL , 1.20
	ELSEIF PALAM:ARG:润滑 < PALAMLV:2
		TIMES LOCAL , 1.00
	ELSEIF PALAM:ARG:润滑 < PALAMLV:3
		TIMES LOCAL , 0.60
	ELSEIF PALAM:ARG:润滑 < PALAMLV:4
		TIMES LOCAL , 0.30
	ELSEIF PALAM:ARG:润滑 >= PALAMLV:4
		TIMES LOCAL , 0.20
	ENDIF
	SOURCE:ARG:苦痛 += LOCAL

ELSE

	DOWNBASE:ARG:体力 += 60
	DOWNBASE:ARG:气力 += 150

	SOURCE:ARG:快Ａ += 150
	SOURCE:ARG:屈从 += 100
	SOURCE:ARG:不洁 += 250
	SOURCE:ARG:偏离正轨 += 250

	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	SIF TALENT:ARG:自己爱 < 0 || TALENT:ARG:抵抗
		SOURCE:ARG:郁闷 += 250

	;Aへの苦痛は先に处理しておく
	;EXP:Ａ经验をみる
	LOCAL = 250
	LOCAL:1 = 250
	IF EXP:ARG:Ａ经验 < EXPLV:1
		TIMES LOCAL , 3.00
		TIMES LOCAL:1 , 3.00
	ELSEIF EXP:ARG:Ａ经验 < EXPLV:2
		TIMES LOCAL , 1.20
		TIMES LOCAL:1 , 2.00
	ELSEIF EXP:ARG:Ａ经验 < EXPLV:3
		TIMES LOCAL , 0.80
		TIMES LOCAL:1 , 1.50
	ELSEIF EXP:ARG:Ａ经验 < EXPLV:4
		TIMES LOCAL , 0.60
		TIMES LOCAL:1 , 1.20
	ELSEIF EXP:ARG:Ａ经验 < EXPLV:5
		TIMES LOCAL , 0.40
	ELSEIF EXP:ARG:Ａ经验 >= EXPLV:5
		TIMES LOCAL , 0.20
	ENDIF

	;PALAM:润滑をみる
	IF PALAM:ARG:润滑 < PALAMLV:1
		TIMES LOCAL , 1.20
		TIMES LOCAL:1 , 2.00
	ELSEIF PALAM:ARG:润滑 < PALAMLV:2
		TIMES LOCAL , 1.00
		TIMES LOCAL:1 , 1.50
	ELSEIF PALAM:ARG:润滑 < PALAMLV:3
		TIMES LOCAL , 0.60
	ELSEIF PALAM:ARG:润滑 < PALAMLV:4
		TIMES LOCAL , 0.30
	ELSEIF PALAM:ARG:润滑 >= PALAMLV:4
		TIMES LOCAL , 0.20
	ENDIF
	SOURCE:ARG:苦痛 += LOCAL
	SOURCE:ARG:反感 += LOCAL:1
ENDIF

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;Ａ经验
EXP:ARG:Ａ经验 += 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE146
;浣肠实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(146)
	RETURN RESULT
;下半身着衣
SIF TEQUIP:0 > 1
	RETURN 0
;解除是つでも可能
SIF TEQUIP:21
	RETURN 1
;道具を持っているか、道具无设定でないとダメ
SIF ITEM:9 == 0 && NOITEM == 0
	RETURN 0
;肛用振动棒使用中は不可
SIF TEQUIP:14
	RETURN 0
;后庭拉珠使用中は不可
SIF TEQUIP:15
	RETURN 0
;バルーン使用中は不可
SIF TEQUIP:22
	RETURN 0
;电极使用中は不可
SIF TEQUIP:23
	RETURN 0
IF FLAG: 70 == 1
ELSE
;Ａ经验が100未满じゃできない
SIF EXP:1 < 100
	RETURN 0
;露出癖、欲望、顺从の合计が10ないとできない
SIF ABL:顺从 + ABL:欲望 + ABL:露出癖 < 10
	RETURN 0
ENDIF
;ベッドルームでないとダメ
SIF !BEDROOM(CFLAG:PLAYER:当前位置)
	RETURN 0
RETURN 1

