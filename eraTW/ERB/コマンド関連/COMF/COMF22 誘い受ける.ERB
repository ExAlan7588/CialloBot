;コミュニケーション系指令、レベル1
;-------------------------------------------------
@COM22
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = -1
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
DOWNBASE:气力 += 30

;SOURCE:PLAYER:快Ｃ = 50
SOURCE:PLAYER:露出 = 200
;TARGETに露出必要？
SOURCE:露出 = 100
;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;苦痛を伴わない受虐属性及び受虐狂の伴う处理は先にしておく
;受虐属性を见る
SELECTCASE ABL:PLAYER:受虐属性
	CASE 0
		TIMES SOURCE:PLAYER:露出 , 0.80
		SOURCE:PLAYER:液体 += 0
		SOURCE:PLAYER:情欲 += 0
	CASE 1
		TIMES SOURCE:PLAYER:露出 , 1.00
		SOURCE:PLAYER:液体 += 20
		SOURCE:PLAYER:情欲 += 30
	CASE 2
		TIMES SOURCE:PLAYER:露出 , 1.20
		SOURCE:PLAYER:液体 += 40
		SOURCE:PLAYER:情欲 += 70
	CASE 3
		TIMES SOURCE:PLAYER:露出 , 1.40
		SOURCE:PLAYER:液体 += 70
		SOURCE:PLAYER:情欲 += 120
	CASE 4
		TIMES SOURCE:PLAYER:露出 , 1.50
		SOURCE:PLAYER:液体 += 110
		SOURCE:PLAYER:情欲 += 180
	CASE 5
		TIMES SOURCE:PLAYER:露出 , 1.70
		SOURCE:PLAYER:液体 += 150
		SOURCE:PLAYER:情欲 += 250
	CASE 6
		TIMES SOURCE:PLAYER:露出 , 1.90
		SOURCE:PLAYER:液体 += 200
		SOURCE:PLAYER:情欲 += 300
	CASE 7
		TIMES SOURCE:PLAYER:露出 , 2.10
		SOURCE:PLAYER:液体 += 250
		SOURCE:PLAYER:情欲 += 350
	CASE 8
		TIMES SOURCE:PLAYER:露出 , 2.30
		SOURCE:PLAYER:液体 += 300
		SOURCE:PLAYER:情欲 += 400
	CASE 9
		TIMES SOURCE:PLAYER:露出 , 2.50
		SOURCE:PLAYER:液体 += 350
		SOURCE:PLAYER:情欲 += 450
	CASEELSE
		TIMES SOURCE:PLAYER:露出 , 3.00
		SOURCE:PLAYER:液体 += 500
		SOURCE:PLAYER:情欲 += 500
ENDSELECT

;受虐狂を见る
IF TALENT:PLAYER:受虐狂
	TIMES SOURCE:PLAYER:露出 , 2.50
	TIMES SOURCE:PLAYER:液体 , 1.20
	TIMES SOURCE:PLAYER:情欲 , 1.20
ENDIF
RETURN 1

@COM_ABLE22
