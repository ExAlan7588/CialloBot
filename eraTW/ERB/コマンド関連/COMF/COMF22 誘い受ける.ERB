SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(22)
	RETURN RESULT
SIF !TARGET
	RETURN 0
;睡眠奸中
SIF CFLAG:恶作剧 > 1
	RETURN 0
;时间停止中は不可
SIF FLAG:70
	RETURN 0
RETURN 1

