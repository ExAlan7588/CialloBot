;-------------------------------------------------
;飞机杯
;道具使用指令、レベル2
;-------------------------------------------------
@COM43
;着脱の处理
TEQUIP:飞机杯 = !TEQUIP:飞机杯

;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;侍奉快乐フラグ
TCVAR:PLAYER:108 = 1

;TARGETが扶她の场合には射精可能に
CSTR:TARGET:10 += "飞机杯/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:TARGET:2 = 10
;强度
TCVAR:TARGET:4 = 1000

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 80
	SOURCE:快Ｃ = 200

ELSE

	DOWNBASE:体力 += 10
	DOWNBASE:气力 += 80

	SOURCE:快Ｃ = 200
	SOURCE:露出 = 20
	SOURCE:偏离正轨 = 30
	SOURCE:反感 = 30


	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	SIF TALENT:自己爱 < 0 || TALENT:抵抗
		SOURCE:郁闷 += 30
ENDIF
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;同性爱　レズなら返回值1ゲイなら返回值2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ENDIF
EXP:PLAYER:道具使用经验 ++

RETURN 1
;-------------------------------------------------
;装着继续の处理
;-------------------------------------------------
@EQUIP_COM43(ARG)
PRINTL ＜飞机杯装备中＞

;TCVAR:0 射精对象フラグ（ビット0=TARGET 1=PLAYER 2=MASTER 3=ASSI 4=触手 5=其他）
;TCVAR:1 予备射精对象フラグ（ビットを使いたくない人用、CFLAG:100に翻译されます）
;	（1=TARGET 2=PLAYER 3=MASTER 4=ASSI 5=TARGET+ASSI 6=MASTER+ASSI -1=触手 -2=其他）
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 ）
;TCVAR:4 射精快感强度

SETBIT TCVAR:TARGET:0, 5
;强度
TCVAR:ARG:4 = 1000
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 20
	SOURCE:快Ｃ += 100

ELSE

	DOWNBASE:体力 += 5
	DOWNBASE:气力 += 20

	SOURCE:快Ｃ += 100
	SOURCE:露出 += 10
	SOURCE:偏离正轨 += 15
	SOURCE:反感 += 15
	;-------------------------------------------------
	;経験の处理
	;-------------------------------------------------
ENDIF
RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE43
;飞机杯实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(43)
	RETURN RESULT
;解除是つでも可能
SIF TEQUIP:12
	RETURN 1
;道具を持っているか、道具无设定でないとダメ
SIF ITEM:3 == 0 && NOITEM == 0
	RETURN 0
;男人や扶她じゃないとダメ
SIF !(HAS_PENIS(TARGET))
	RETURN 0

;下半身着衣
SIF TEQUIP:0 > 1
	RETURN 0
;ASSIの场合、技巧3以上じゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:技巧 < 3
		RETURN 0
ENDIF
;新妻PLAY中はダメ
SIF TEQUIP:33
	RETURN 0
RETURN 1

