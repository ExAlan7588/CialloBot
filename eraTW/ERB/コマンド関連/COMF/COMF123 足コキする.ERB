;-------------------------------------------------
;给对方足交
;助手による指令、及びレズプレイ、レベル1
;-------------------------------------------------
@COM123
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;侍奉快乐フラグ
TCVAR:PLAYER:108 = 1

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:TARGET:2 = 7
;强度
TCVAR:TARGET:4 = 1000

TCVAR:PLAYER:嗜虐フラグ = 1

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:体力 += 30
DOWNBASE:气力 += 150

SOURCE:快Ｃ = 250
SOURCE:达成 = 200
SOURCE:露出 = 300
SOURCE:屈从 = 300
SOURCE:偏离正轨 = 350
SOURCE:反感 = 350


;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:自己爱 < 0 || TALENT:抵抗
	SOURCE:郁闷 += 400

;苦痛を伴わない受虐属性及び受虐狂の处理は先にしておく
;受虐属性を见る
SELECTCASE ABL:受虐属性
	CASE 0
		TIMES SOURCE:达成 , 0.80
		TIMES SOURCE:屈从 , 0.80
		SOURCE:液体 += 0
		SOURCE:情欲 += 0
	CASE 1
		TIMES SOURCE:达成 , 1.00
		TIMES SOURCE:屈从 , 1.00
		SOURCE:液体 += 20
		SOURCE:情欲 += 30
	CASE 2
		TIMES SOURCE:达成 , 1.20
		TIMES SOURCE:屈从 , 1.20
		SOURCE:液体 += 40
		SOURCE:情欲 += 70
	CASE 3
		TIMES SOURCE:达成 , 1.40
		TIMES SOURCE:屈从 , 1.40
		SOURCE:液体 += 70
		SOURCE:情欲 += 120
	CASE 4
		TIMES SOURCE:达成 , 1.50
		TIMES SOURCE:屈从 , 1.50
		SOURCE:液体 += 110
		SOURCE:情欲 += 180
	CASE 5
		TIMES SOURCE:达成 , 1.70
		TIMES SOURCE:屈从 , 1.70
		SOURCE:液体 += 150
		SOURCE:情欲 += 250
	CASE 6
		TIMES SOURCE:达成 , 1.90
		TIMES SOURCE:屈从 , 1.90
		SOURCE:液体 += 200
		SOURCE:情欲 += 300
	CASE 7
		TIMES SOURCE:达成 , 2.10
		TIMES SOURCE:屈从 , 2.10
		SOURCE:液体 += 250
		SOURCE:情欲 += 350
	CASE 8
		TIMES SOURCE:达成 , 2.30
		TIMES SOURCE:屈从 , 2.30
		SOURCE:液体 += 300
		SOURCE:情欲 += 400
	CASE 9
		TIMES SOURCE:达成 , 2.50
		TIMES SOURCE:屈从 , 2.50
		SOURCE:液体 += 350
		SOURCE:情欲 += 450
	CASEELSE
		TIMES SOURCE:达成 , 3.00
		TIMES SOURCE:屈从 , 3.00
		SOURCE:液体 += 500
		SOURCE:情欲 += 500
ENDSELECT

;受虐狂を见る
IF TALENT:受虐狂
	TIMES SOURCE:达成 , 2.50
	TIMES SOURCE:屈从 , 2.50
	TIMES SOURCE:液体 , 1.20
	TIMES SOURCE:情欲 , 1.20
ENDIF

;倒错的
SIF TALENT:倒错的
	TIMES SOURCE:达成 , 1.80

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;同性爱　レズなら返回值1ゲイなら返回值2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 4
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
ENDIF

RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE123
;足交实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(123)
	RETURN RESULT
;男人か半人半妖か扶她じゃないとダメ
SIF !(HAS_PENIS(TARGET))
	RETURN 0
;下半身内衣着衣
SIF TEQUIP:0 > 1
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

