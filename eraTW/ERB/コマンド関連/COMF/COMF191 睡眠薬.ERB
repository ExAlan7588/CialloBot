;-------------------------------------------------
;睡眠药
;特殊指令
;-------------------------------------------------
@COM191
ITEM:252 -= 1
TCVAR:睡眠药强度 = 3
TCVAR:睡眠深度 += 10000
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;同性爱　レズなら返回值1ゲイなら返回值2
;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE191
;睡眠药实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(191)
	RETURN RESULT
;道具を持っているか、道具无设定でないとダメ
SIF ITEM:252 == 0 && NOITEM == 0
	RETURN 0
;睡眠药强度が3ならダメ
SIF TCVAR:睡眠药强度 > 2
	RETURN 0
;停止中もしくは睡眠恶作剧中じゃないとダメ
SIF FLAG:70 == 0 && !CFLAG:恶作剧
	RETURN 0
;禁断的知识がないとダメ
SIF TALENT:MASTER:禁断的知识 == 0
	RETURN 0
RETURN 1

