;-------------------------------------------------
;肛门爱抚
;爱抚系指令、レベル2
;-------------------------------------------------
@COM5
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;侍奉快乐
TCVAR:PLAYER:108 = 1

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:TARGET:2 = 12
;强度
TCVAR:TARGET:4 = 700

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 50
	SOURCE:快Ａ = 100
	SOURCE:苦痛 = 50

ELSE

	DOWNBASE:体力 += 40
	DOWNBASE:气力 += 100

	SOURCE:快Ａ = 100
	SOURCE:苦痛 = 100
	SOURCE:屈从 = 100
	SOURCE:偏离正轨 = 80
	SOURCE:反感 = 60

	SIF TALENT:PLAYER:灵活手指
		SOURCE:快Ａ += 20
	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	SIF TALENT:自己爱 < 0 || TALENT:抵抗
		SOURCE:郁闷 += 100
ENDIF
;Aへの苦痛は先に处理しておく
CALL PAIN_CHECK_A(TARGET)

;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;奴隷のＡ⇔调教者の指的污垢が移动
STAIN:PLAYER:1 |= STAIN:4
STAIN:PLAYER:1 |= STAIN:7
STAIN:4 |= STAIN:PLAYER:1
STAIN:7 |= STAIN:PLAYER:1
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;同性爱　レズなら返回值1ゲイなら返回值2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 2
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 2
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 2
	ENDIF
ENDIF
EXP:PLAYER:手淫经验 ++
RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE5
;肛门爱抚实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(5)
	RETURN RESULT
;毒人形だと肛门がついてないのでダメ
SIF TALENT:196 == 99
	RETURN 0
;时间停止中は许可
IF FLAG:70 != 1
	;润滑不足で、顺从3以下・百合属性3以下のASSIの场合肛门爱抚はできない（施虐狂ならＯＫ）
	IF PALAM:润滑 < PALAMLV:2 && ASSIPLAY
		SIF (ABL:ASSI:顺从 <= 3 || ABL:ASSI:百合属性 <= 3) && TALENT:ASSI:施虐狂 == 0
			RETURN 0
	ENDIF
ENDIF

;下半身着衣
SIF TEQUIP:0 & 4
	RETURN 0
RETURN 1

