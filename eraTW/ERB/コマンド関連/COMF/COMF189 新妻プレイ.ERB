;新妻PLAY
;特殊指令
;-------------------------------------------------
@COM189
;着脱の处理　装备时はソース、経験の加算は行わない
TEQUIP:新妻PLAY = !TEQUIP:新妻PLAY
RETURN 1
;-------------------------------------------------
;装着继续の处理
;-------------------------------------------------
@EQUIP_COM189(ARG)
;新妻PLAY

;助手调教时は、围裙を解除して函数结束
IF ASSIPLAY
	TEQUIP:ARG:新妻PLAY = 0
	RETURN 0
ENDIF

PRINTL ＜新妻PLAY中＞

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:ARG:体力 += 20
DOWNBASE:ARG:气力 += 20

SOURCE:ARG:情爱 += 1000
SOURCE:ARG:恭顺 += 5000
SOURCE:ARG:偏离正轨 += 500


;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;爱情经验
EXP:ARG:爱情经验 += RAND:2
RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE189
;新妻PLAY实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(189)
	RETURN RESULT
;奴隷が恋慕か亲爱でないとダメ
IF NEWWIFE == 0
	SIF !TALENT:恋慕
		RETURN 0
ENDIF
;解除是つでも可能
SIF TEQUIP:33
	RETURN 1
;道具｢围裙｣を持っているか、道具无设定でないとダメ
SIF ITEM:23 == 0 && NOITEM == 0
	RETURN 0
;助手じゃダメ
SIF ASSIPLAY
	RETURN 0
;顺从が3以上ないとダメ
SIF ABL:顺从 < 3
	RETURN 0
;野外PLAY中はダメ
SIF TEQUIP:29
	RETURN 0
;羞耻PLAY中はダメ
SIF TEQUIP:30
	RETURN 0
;浴室PLAY中はダメ
SIF TEQUIP:31
	RETURN 0
;睡眠奸中
SIF CFLAG:恶作剧 > 1
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

