;-------------------------------------------------
;羞耻PLAY
;特殊指令
;-------------------------------------------------
@COM186

;着脱の处理　结束时はソース、経験の加算は行わない
TEQUIP:羞耻PLAY = !TEQUIP:羞耻PLAY 
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:体力 += 0
DOWNBASE:气力 += 200

SOURCE:恐怖 += 500
SOURCE:屈从 += 300
SOURCE:偏离正轨 += 100
SOURCE:反感 += 500


;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:自己爱 < 0 || TALENT:抵抗
	SOURCE:郁闷 += 500

;苦痛を伴わない受虐属性及び受虐狂の处理は先にしておく
;受虐属性を见る
LOCAL = 700
SELECTCASE ABL:受虐属性
	CASE 0
		TIMES LOCAL , 0.80
		SOURCE:液体 += 0
		SOURCE:情欲 += 0
	CASE 1
		TIMES LOCAL , 1.00
		SOURCE:液体 += 20
		SOURCE:情欲 += 30
	CASE 2
		TIMES LOCAL , 1.20
		SOURCE:液体 += 40
		SOURCE:情欲 += 70
	CASE 3
		TIMES LOCAL , 1.40
		SOURCE:液体 += 70
		SOURCE:情欲 += 120
	CASE 4
		TIMES LOCAL , 1.50
		SOURCE:液体 += 110
		SOURCE:情欲 += 180
	CASE 5
		TIMES LOCAL , 1.70
		SOURCE:液体 += 150
		SOURCE:情欲 += 250
	CASE 6
		TIMES LOCAL , 1.90
		SOURCE:液体 += 200
		SOURCE:情欲 += 300
	CASE 7
		TIMES LOCAL , 2.10
		SOURCE:液体 += 250
		SOURCE:情欲 += 350
	CASE 8
		TIMES LOCAL , 2.30
		SOURCE:液体 += 300
		SOURCE:情欲 += 400
	CASE 9
		TIMES LOCAL , 2.50
		SOURCE:液体 += 350
		SOURCE:情欲 += 450
	CASEELSE
		TIMES LOCAL , 3.00
		SOURCE:液体 += 500
		SOURCE:情欲 += 500
ENDSELECT
SOURCE:露出 += LOCAL

RETURN 1

