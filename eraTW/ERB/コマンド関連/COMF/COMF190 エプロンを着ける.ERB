;-------------------------------------------------
;穿上围裙
;特殊指令
;-------------------------------------------------
@COM190
;着脱の处理　装备时はソース、経験の加算は行わない
TEQUIP:围裙 = !TEQUIP:围裙
RETURN 1
;-------------------------------------------------
;装着继续の处理
;-------------------------------------------------
@EQUIP_COM190(ARG)
;围裙をする

;助手调教时は、围裙を解除して函数结束
IF ASSIPLAY
	TEQUIP:MASTER:围裙 = 0
	RETURN 0
ENDIF

PRINTFORML ＜%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%穿着围裙＞
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:ARG:体力 += 10
DOWNBASE:ARG:气力 += 10

SOURCE:ARG:情爱 += 1000
SOURCE:ARG:恭顺 += 5000
SOURCE:ARG:偏离正轨 += 500


;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;爱情经验
EXP:ARG:爱情经验 += RAND:2
RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE190
;穿上围裙实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(190)
	RETURN RESULT
;奴隷が恋慕か亲爱でないとダメ
SIF !TALENT:恋慕
	RETURN 0
;解除是つでも可能
SIF TEQUIP:34
	RETURN 1
;道具｢围裙｣を持っているか、道具无设定でないとダメ
SIF ITEM:23 == 0 && NOITEM == 0
	RETURN 0
;助手じゃダメ
SIF ASSIPLAY
	RETURN 0
;顺从が3以上ないとダメ
SIF ABL:顺从 < 3
	RETURN 0
;野外PLAY中はダメ
SIF TEQUIP:29
	RETURN 0
;羞耻PLAY中はダメ
SIF TEQUIP:30
	RETURN 0
;浴室PLAY中はダメ
SIF TEQUIP:31
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1