;-------------------------------------------------
;进入房间
;-------------------------------------------------
@COM698
#DIM 房间的污垢
#DIM 浮气
#DIM 嫉妒

;别の子と约会中
IF FLAG:约会的对象 != TARGET && FLAG:约会的对象 != 0
	PRINTFORM 虽然想进入%OMANEKI_PLACE()%、却被%NAME_OUTPUT_TRANSLATION("CALLNAME", (FLAG:约会的对象))%死死地用眼神睨视着
	RETURN -1
ENDIF

;见られてないかチェック
浮气 = 0
嫉妒 = 0
FOR LOCAL,1,CHARANUM
	IF LOCAL != TARGET && CFLAG:LOCAL:当前位置 == CFLAG:MASTER:当前位置 && !TALENT:MASTER:左拥右抱
		SIF LOCAL == 60
			嫉妒 = 60
		SIF TALENT:LOCAL:恋慕 && CFLAG:LOCAL:信赖度 < 1000
			浮气 = LOCAL
	ENDIF
NEXT
;帕露西が出现し4人も住んでいる地灵殿はかなり难易度が高い
;连动角色も駆けつけてくるので二股してると大变
IF 嫉妒 || 浮气
	PRINTFORM 虽然想进入%OMANEKI_PLACE()%、
	IF 嫉妒
		PRINTFORMW 却被面露恶鬼般表情的%NAME_OUTPUT_TRANSLATION("CALLNAME", 嫉妒)%给干涉了
	ELSE
		PRINTFORMW 却被面露惊讶之色的%NAME_OUTPUT_TRANSLATION("CALLNAME", 浮气)%给叫住了
	ENDIF
	RETURN -1
ENDIF
TIME += 1
CALL OMANEKI_ENTER(TARGET)

RETURN 1

;-------------------------------------------------
;实行可能判定
;-------------------------------------------------
;进入房间
@COM_ABLE698

;批量管理
SIF GLOBAL_COMABLE(698)
	RETURN RESULT
;自宅にいない
SIF CFLAG:MASTER:当前位置 != CFLAG:自宅位置
	RETURN 0
	;外出してない
SIF !CHK_DATENOW(CFLAG:MASTER:约会中)
	RETURN 0
IF HOMEWEL == 0
	;仕事中
	SIF CFLAG:行动 == 5
		RETURN 0
	;とりあえず恋慕だけ条件　发情も追加
	SIF !TALENT:恋慕 && !TCVAR:TARGET:发情 && TALENT:炮友 != 2 && FLAG:催眠强度 <= 49
		RETURN 0
	;别の子と约会中,面白いので指令は实行できるように
	;SIF FLAG:约会的对象 != TARGET && FLAG:约会的对象 != 0
	;	RETURN 0
	;怒ってたらだめ（バグ回避用でもある）
	SIF BASE:愤怒 > 50
		RETURN 0
	;睡眠中
	SIF CFLAG:睡眠
		RETURN 0
	;时间停止中
	SIF FLAG:70
		RETURN 0
	;潜伏モード中は不可
	SIF GETBIT(FLAG:潜伏,0)
		RETURN 0
ENDIF
RETURN 1

;-------------------------------------------------
;外泊处理
;-------------------------------------------------
@OMANEKI_ENTER(ARG)
#DIM 房间的污垢

;招待フラグにARGを代入
CFLAG:ARG:招待 = ARG
CFLAG:MASTER:招待 = ARG

;初始位置をOMANEKIBEYA()=98にする
CFLAG:ARG:初始位置 = OMANEKIBEYA()
;移动させる
CFLAG:ARG:当前位置 = OMANEKIBEYA()
CFLAG:MASTER:当前位置 = OMANEKIBEYA()

;房间的污垢具合
;一度入っていたら参照する
IF TCVAR:ARG:待客室的污垢 > 0
	YOGORE:(OMANEKIBEYA()) = TCVAR:ARG:待客室的污垢
ELSE
	;最初に入る时は污臭耐性依存（敏感以下=最高,普通=中,钝感=低,无视=垃圾山）
	房间的污垢 = MAX(1999 + (TALENT:ARG:61 * 2000), 0) 
	YOGORE:(OMANEKIBEYA()) = 房间的污垢
	TCVAR:ARG:待客室的污垢 = 房间的污垢
ENDIF