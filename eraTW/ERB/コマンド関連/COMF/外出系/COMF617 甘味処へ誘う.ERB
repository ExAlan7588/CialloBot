@COM617
#DIM 恢复前体力１
#DIM 恢复前气力１
#DIM 恢复后体力１
#DIM 恢复后气力１
#DIM 恢复前体力２
#DIM 恢复前气力２
#DIM 恢复后体力２
#DIM 恢复后气力２

恢复前体力１ = BASE:MASTER:体力
恢复前气力１ = BASE:MASTER:气力
恢复前体力２ = BASE:TARGET:体力
恢复前气力２ = BASE:TARGET:气力
LOCAL = RAND:100
LOCAL:1 = 90 + GET_SUCCESS_RATE() / 5
SIF LOCAL:1 > 99
	LOCAL:1 = 99
IF LOCAL <= 9
	;10％で大成功
	EXP:MASTER:会话经验 ++
	EXP:MASTER:约会经验 ++
	EXP:TARGET:约会经验 ++
	TFLAG:193 = 1
ELSEIF LOCAL >= LOCAL:1
	;10～1％で失败
	TFLAG:193 = -1
ELSE
	;残りは成功
	TFLAG:193 = 0
ENDIF
	TFLAG:98 += 1


DOWNBASE:气力 += 10

;固定で获得するソース
SOURCE:欢乐 = 800
SOURCE:情爱 = 300

;ABL:欲望をみる
IF ABL:欲望 <= 1
	SOURCE:欢乐 += (ABL:欲望 * 60)
ELSEIF ABL:欲望 <= 3
	SOURCE:欢乐 += 300 + (ABL:欲望 * 60)
ELSEIF ABL:欲望 <= 5
	SOURCE:欢乐 += 600 + (ABL:欲望 * 60)
ELSEIF ABL:欲望 <= 8
	SOURCE:欢乐 += 900 + (ABL:欲望 * 75)
ELSEIF ABL:欲望 <= 11
	SOURCE:欢乐 += 1500 + (ABL:欲望 * 75)
ELSE
	SOURCE:欢乐 += 2500 + (ABL:欲望 * 30)
ENDIF

;ABL:侍奉精神をみる
IF ABL:侍奉精神 <= 1
	SOURCE:情爱 += (ABL:侍奉精神 * 30)
ELSEIF ABL:侍奉精神 <= 3
	SOURCE:情爱 += 200 + (ABL:侍奉精神 * 30)
ELSEIF ABL:侍奉精神 <= 5
	SOURCE:情爱 += 500 + (ABL:侍奉精神 * 30)
ELSEIF ABL:侍奉精神 <= 8
	SOURCE:情爱 += 700 + (ABL:侍奉精神 * 45)
ELSEIF ABL:侍奉精神 <= 11
	SOURCE:情爱 += 1200 + (ABL:侍奉精神 * 45)
ELSE
	SOURCE:情爱 += 1800 + (ABL:侍奉精神 * 20)
ENDIF

;好感度をみる
IF CFLAG:2 <= 500
	SOURCE:欢乐 += CFLAG:2
ELSEIF CFLAG:2 <= 5000
	SOURCE:欢乐 += 750 + (CFLAG:2 - 500) / 3
ELSE
	SOURCE:欢乐 += 2000 + (CFLAG:2 - 5000) / 4
ENDIF
SIF SOURCE:欢乐 < 0
	SOURCE:欢乐 = 0


SOURCE:被动 = 200 + 100 * ABL:顺从
SOURCE:征服 = 200 + 100 * ABL:施虐属性

IF TFLAG:193 == -1
	TIMES SOURCE:欢乐 , 0.10
	TIMES SOURCE:情爱 , 0.10
	TIMES SOURCE:征服 , 0.50
	TIMES SOURCE:被动 , 0.50
ELSEIF TFLAG:193 == 0
	TIMES SOURCE:欢乐 , 1.00
	TIMES SOURCE:情爱 , 1.00
	TIMES SOURCE:征服 , 1.00
	TIMES SOURCE:被动 , 1.00
	TFLAG:情绪BOUNS = 30
ELSE
	TIMES SOURCE:欢乐 , 2.00
	TIMES SOURCE:情爱 , 1.50
	TIMES SOURCE:征服 , 2.00
	TIMES SOURCE:被动 , 2.00
	SIF TALENT:15 < 1
		TALENT:15 = 1
	TFLAG:情绪BOUNS = 50
ENDIF


CALL RECOVER_PERMIL_BOTH(TARGET, 100, "体力", 0, "因为饮食而产生的恢复")
CALL RECOVER_PERMIL_BOTH(TARGET, 400, "气力", 0, "因为饮食而产生的恢复")
CALL RECOVER_PERMIL_BOTH(TARGET, 50, "精力", 0, "因为饮食而产生的恢复")

TIME += 60
EXP:MASTER:约会经验 ++
EXP:TARGET:约会经验 ++
CALL 满腹度上升(TARGET,"甜点")
CALL 满腹度上升(MASTER,"甜点")
MONEY -= 3000
恢复后体力１ = BASE:MASTER:体力
恢复后气力１ = BASE:MASTER:气力
恢复后体力２ = BASE:TARGET:体力
恢复后气力２ = BASE:TARGET:气力
;DRAWLINE
;PRINTFORML 体力+{ABS(恢复后体力１ - 恢复前体力１)}（%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%）
;PRINTFORML 气力+{ABS(恢复后气力１ - 恢复前气力１)}（%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%）
;PRINTFORML 体力+{ABS(恢复后体力２ - 恢复前体力２)}（%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%）
;PRINTFORML 气力+{ABS(恢复后气力２ - 恢复前气力２)}（%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%）
RETURN 1

