@COM_ABLE624
;批量管理
SIF GLOBAL_COMABLE(624)
	RETURN RESULT

IF !AT_HOME(MASTER)
	SIF CFLAG:MASTER:当前位置 != 玄武之泽
		RETURN 0
ELSE
	;山麓が据点の场合は、河童的宣传站
	SIF CFLAG:MASTER:当前位置 != 704
		RETURN 0
ENDIF
;睡眠中
SIF CFLAG:睡眠
	RETURN 0
;时间停止中
SIF FLAG:70
	RETURN 0
RETURN 1


;-------------------------------------------------
;制材コストを筹码に变换する函数
;ARG …FLAG:原木种类
;-------------------------------------------------
@LUMBERING_CMCOST(ARG)
#FUNCTION
#DIM 费用ベース

费用ベース = LUMBERING(ARG, "制材所")

;元值の幅がそんなに广くないので、一律で
RETURNF 费用ベース / 300

