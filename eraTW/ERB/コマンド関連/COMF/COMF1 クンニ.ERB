	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(1)
	RETURN RESULT
;性器が污れているとPLAYERの场合舐阴はできない（调教者が污臭无视か爱液、母乳、巧克力のよごれならＯＫ）
SIF STAIN:3 >= 2 && (STAIN:3 != 16 && STAIN:3 != 17 && STAIN:3 != 128 && STAIN:3 != 129 && STAIN:3 != 144 && STAIN:3 != 145) && ASSIPLAY == 0 && TALENT:PLAYER:污臭耐性 < 2
	RETURN 0
;性器が污れており、污臭敏感で顺从3以下のASSIの场合舐阴はできない（调教者が污臭无视か爱液、母乳、巧克力のよごれならＯＫ）
IF STAIN:3 >= 2 && (STAIN:3 != 16 && STAIN:3 != 17 && STAIN:3 != 128 && STAIN:3 != 129 && STAIN:3 != 144 && STAIN:3 != 145) && ASSIPLAY
	SIF ABL:ASSI:顺从 <= 3 && TALENT:ASSI:污臭耐性 < 0
		RETURN 0
ENDIF
