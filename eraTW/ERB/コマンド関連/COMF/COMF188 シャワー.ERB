;-------------------------------------------------
;淋浴
;特殊指令
;-------------------------------------------------
@COM188
;着脱の处理　装备时はソース、経験の加算は行わない
TEQUIP:淋浴 = !TEQUIP:淋浴
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER

RETURN 1
;-------------------------------------------------
;装着继续の处理
;-------------------------------------------------
@EQUIP_COM188(ARG)
;淋浴使用中

PRINTL ＜淋浴使用中＞

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:ARG:体力 += 0
DOWNBASE:ARG:气力 += 10

SOURCE:ARG:恭顺 += 100
SOURCE:ARG:郁闷 += 100
SOURCE:ARG:反感 += 50

;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;吸血鬼（流水の中では动けないため、いろいろ追加）
IF TALENT:ARG:吸血鬼
	SOURCE:ARG:恐怖 += 200
	SOURCE:ARG:屈从 += 200
	SOURCE:ARG:不洁 += 500
	SOURCE:ARG:偏离正轨 += 500
	SOURCE:ARG:反感 += 500
ENDIF

;动物耳の场合（まぁ基本洗われるのは嫌と解釈）
IF TALENT:ARG:动物耳
	SOURCE:ARG:恐怖 += 100
	SOURCE:ARG:屈从 += 100
	SOURCE:ARG:偏离正轨 += 500
	SOURCE:ARG:反感 += 500
ENDIF


;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;淋浴で污れは常にリセット
STAIN:ARG:0 = 0
STAIN:ARG:1 = 0
STAIN:ARG:2 = 2
STAIN:ARG:3 = 1
STAIN:ARG:4 = 8
STAIN:ARG:5 = 0
STAIN:ARG:6 = 0

;润滑を1000减らす
IF PALAM:ARG:润滑 > 1000
	PALAM:ARG:润滑 -= 1000
ELSE
	PALAM:ARG:润滑 = 0
ENDIF

RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE188
;淋浴实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(188)
	RETURN RESULT
;解除是つでも可能
SIF TEQUIP:32
	RETURN 1
;お澡堂中じゃないとダメ
SIF !BATHROOM()
	RETURN 0
;泳池で浴室PLAY中は淋浴机能がないとダメ
;SIF !GETBIT (FLAG:泳池, 2) && CFLAG:MASTER:当前位置 != 13 && CFLAG:MASTER:当前位置 != 24 && CFLAG:MASTER:当前位置 != 30 && CFLAG:MASTER:当前位置 != 39 && CFLAG:MASTER:当前位置 != 250 && CFLAG:MASTER:当前位置 != OMANEKIBEYA()
SIF !GETBIT (FLAG:泳池, 2) && !BATHROOM() && CFLAG:MASTER:当前位置 != OMANEKIBEYA()
	RETURN 0
;阴蒂夹使用中は不可
SIF TEQUIP:11
	RETURN 0
;乳头夹使用中は不可
SIF TEQUIP:16
	RETURN 0
;搾乳器使用中は不可
SIF TEQUIP:17
	RETURN 0
;乳房电极装着中はダメ
SIF TEQUIP:24
	RETURN 0
;吸血鬼や动物耳には顺从４がないと使用不可（プレイヤーが施虐狂ならＯＫ）
IF TALENT:吸血鬼 || TALENT:动物耳
SIF ABL:顺从 < 4 && TALENT:PLAYER:施虐狂 == 0
	RETURN 0
ENDIF
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

