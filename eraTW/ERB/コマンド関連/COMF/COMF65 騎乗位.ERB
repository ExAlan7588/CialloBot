SIF TEQUIP:0 & 4
	RETURN 0
;浴室PLAY中は气垫床が无いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
;处女で、顺从4以下・百合属性4以下のASSIの场合はできない（施虐狂ならＯＫ）
IF TALENT:处女 && ASSIPLAY
	SIF (ABL:ASSI:顺从 <= 4 || ABL:ASSI:技巧 <= 4) && TALENT:ASSI:施虐狂 == 0
		RETURN 0
ENDIF
