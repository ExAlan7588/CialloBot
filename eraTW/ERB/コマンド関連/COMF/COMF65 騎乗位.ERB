	;处女かつ润滑不足はだめ
	SIF PALAM:润滑 < PALAMLV:2 && TALENT:处女 && TALENT:处女 != -1
		RETURN 0
	;绳使用中は不可
	SIF TEQUIP:绳
		RETURN 0
ENDIF
;睡眠奸中
SIF CFLAG:恶作剧 > 1
	RETURN 0
;ベッドルームor浴室ルームで气垫床がないとダメ
SIF !BEDROOM(CFLAG:PLAYER:当前位置) && !(BATHROOM() && ITEM:20)
	RETURN 0
RETURN 1

