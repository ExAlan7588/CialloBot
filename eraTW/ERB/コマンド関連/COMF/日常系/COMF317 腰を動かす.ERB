;-------------------------------------------------
;动起腰身(V)
;日常系指令　レベル3
;-------------------------------------------------
@COM317

IF ABL:MASTER:腰 >= 3
	CALL ASK_M("激烈地",1,"磨磨唧唧",1,"扭动着腰",1)
	TFLAG:194 = RESULT + 1

	IF EFFECTIVE_PATTERN_V:(TEQUIP:Ｖコンボ) == TFLAG:194
		TEQUIP:Ｖコンボ ++
		TFLAG:193 = TEQUIP:Ｖコンボ
		SIF TEQUIP:Ｖコンボ == 3
			TEQUIP:Ｖコンボ = 0
	ENDIF
ENDIF
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER

CSTR:PLAYER:10 += @"{TARGET}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:PLAYER:2 = 1
;强度
TCVAR:PLAYER:4 = 500 + ABL:腰 * 50 + ABL:膣 * 50

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:TARGET:2 = 13
;强度
TCVAR:TARGET:4 = 1500

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 80
	SOURCE:MASTER:快Ｃ = 40 + ABL:膣 * 50
	SOURCE:快Ｖ = 40 + ABL:PLAYER:腰 * 30
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
	ENDIF
	EXP:Ｖ性交经验 ++
	EXP:PLAYER:插入经验 ++
ELSE
	DOWNBASE:PLAYER:体力 += 50
	DOWNBASE:PLAYER:气力 += 80

	SOURCE:MASTER:快Ｃ = 40 + ABL:腰 * 50 + ABL:膣 * 50
	SOURCE:快Ｖ = 50 + ABL:PLAYER:腰 * 20
	SOURCE:情爱 = 200
	SOURCE:苦痛 = 250
	SOURCE:情欲 = 250
	SOURCE:露出 = 150
	SOURCE:偏离正轨 = 150
	SOURCE:反感 = 100

	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	IF TALENT:自己爱 < 0 || TALENT:抵抗
		SOURCE:郁闷 += 20
	ENDIF
	;Vへの苦痛
	CALL PAIN_CHECK_V(TARGET)
	;-------------------------------------------------
	;経験の处理
	;-------------------------------------------------
	EXP:PLAYER:插入经验 ++
	;同性爱　レズなら返回值1ゲイなら返回值2
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 4
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
	ENDIF
	EXP:Ｖ性交经验 ++
	;-------------------------------------------------
	;コンボ
	;-------------------------------------------------
	IF TFLAG:193 == 2
		SOURCE:快Ｖ += 10 + ABL:PLAYER:腰 * 15
		SOURCE:情欲 += 100
		SOURCE:屈从 += 100
		SOURCE:情爱 += 50
		TCVAR:PLAYER:4 += ABL:膣 * 50
		EXP:Ｖ性交经验 ++
	ELSEIF TFLAG:193 == 3
		SOURCE:快Ｖ += 50 + ABL:PLAYER:腰 * 30
		SOURCE:情欲 += 200
		SOURCE:屈从 += 300
		SOURCE:情爱 += 200
		TCVAR:PLAYER:4 += ABL:膣 * 150
		SIF ABL:Ｖ感觉 >= 5
		SOURCE:快Ｃ += 30
		EXP:Ｖ性交经验 ++
		TFLAG:好感度BOUNS = 100
	ENDIF
	TIME += 5
ENDIF
;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;奴隷の膣内⇔调教者のＰ的污垢が移动
STAIN:PLAYER:2 |= STAIN:3
STAIN:PLAYER:2 |= STAIN:6
STAIN:3 |= STAIN:PLAYER:2
STAIN:6 |= STAIN:PLAYER:2
RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE317
;实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(317)
	RETURN RESULT
;停止中は不可
SIF FLAG:70
	RETURN 0
;亲热强度2
SIF (TCVAR:MASTER:亲热 < 2) && CFLAG:睡眠 == 0
	RETURN 0
;着衣
SIF TEQUIP:0 & 4
	RETURN 0
;睡眠中
SIF CFLAG:睡眠 && CFLAG:恶作剧 < 2
	RETURN 0
;仕事中
SIF CFLAG:行动 == 5
	RETURN 0
;约会中
SIF CHK_DATENOW(CFLAG:约会中) && CFLAG:当前位置 != OMANEKIBEYA()
	RETURN 0
;陪睡中
SIF CFLAG:陪睡中
	RETURN 0
SIF TCVAR:TARGET:100 != PLAYER
	RETURN 0
;气力0
SIF BASE:MASTER:气力 <= 0
	RETURN 0
SIF GETBIT (TCVAR:26,8)
	RETURN 0
SIF CFLAG:诶嘿嘿 != 2
	RETURN 0
;TARGETが插入されてない
SIF TEQUIP:Ｖ接触部位 != 1
	RETURN 0
RETURN 1

