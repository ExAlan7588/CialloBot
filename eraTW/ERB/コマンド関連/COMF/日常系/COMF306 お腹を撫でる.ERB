	RETURN 0
;亲热强度1
SIF TCVAR:MASTER:亲热 < 1
	RETURN 0
;仕事中
SIF CFLAG:行动 == 5
	RETURN 0
;腕使用中
SIF TFLAG:61
	RETURN 0
SIF GETBIT (TCVAR:26,1)
	RETURN 0
RETURN 1

