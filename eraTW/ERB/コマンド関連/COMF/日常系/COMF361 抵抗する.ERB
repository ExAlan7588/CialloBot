@COM361
TIME += 10
IF TALENT:TARGET:施虐狂
	LOCAL = 1
ELSE
	LOCAL = -1
ENDIF
IF COUNTER_SIKOU:TARGET:(TCVAR:TARGET:Counter行动) < 0 && (TALENT:TARGET:施虐狂 || ABL:TARGET:施虐属性 >= 10)
	LOCAL *= 3
ELSEIF COUNTER_SIKOU:TARGET:(TCVAR:TARGET:Counter行动) > 0
	LOCAL *= 3
ENDIF
SIF TALENT:TARGET:态度 < 0 || TALENT:TARGET:习得速度 > 0
	LOCAL *= 2
COUNTER_SIKOU:TARGET:(TCVAR:TARGET:Counter行动) = LIMIT(COUNTER_SIKOU:TARGET:(TCVAR:TARGET:Counter行动) + LOCAL, -10, 10)
RETURN 1

