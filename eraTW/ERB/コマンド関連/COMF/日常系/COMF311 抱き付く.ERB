@COM_ABLE311
;拥抱实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(311)
	RETURN RESULT
;时间停止中はスキップ
IF !FLAG:70
	;亲热强度1
	SIF TCVAR:MASTER:亲热 < 1 && !CFLAG:陪睡中
		RETURN 0
	;甲斐性なしはもう少し驯れ合い强度と既成事实が必要
	SIF FLAG:甲斐性无 && ((TCVAR:MASTER:亲热 < 2 && !CFLAG:陪睡中) || (!CFLAG:诶嘿嘿 && !GETBIT(CFLAG:既成事实, 1)))
		RETURN 0
	;睡眠中
	SIF CFLAG:睡眠 && !CFLAG:陪睡中
		RETURN 0
	;仕事中
	SIF CFLAG:行动 == 5
		RETURN 0
ENDIF
;气力0
SIF BASE:MASTER:气力 <= 0
	RETURN 0
;腕使用中
SIF TFLAG:61
	RETURN 0
SIF GETBIT (TCVAR:26,1)
	RETURN 0
;六九式体势
SIF TEQUIP:六九式
	RETURN 0
RETURN 1

