;捕虫
@COM449
#DIM CHARA
#DIM ラックM
#DIM ラックT
#DIM パワーM
#DIM パワーT
#DIM 相方が捕った
相方が捕った = 0

;参加者判定
IF FLAG:约会的对象
	CHARA = FLAG:约会的对象
;仕事中はダメ
ELSEIF TARGET && ABL:TARGET:亲密 >= 5 - TALENT:TARGET:采集Lv && SHIRAHU(TARGET) && CFLAG:行动 != 5
	CHARA = TARGET
ELSE
	CHARA = 0
ENDIF

;ラック=10～1000
ラックM = LIMIT((CFLAG:MASTER:今日的运势 + 1 + (TFLAG:幸运补正 * 100)), 10, 1000)
SIF CHARA
	ラックT = MAX(CFLAG:CHARA:今日的运势 + 1, 10)
;最低1,最大10
パワーM = LIMIT(ラックM / 200 + TALENT:MASTER:采集Lv, 1, 10)
SIF CHARA
	パワーT = LIMIT(ラックT / 200 + TALENT:CHARA:采集Lv, 1, 10)

FOR LOCAL, 0, 5
	REUSELASTLINE  \@ CHARA ? 和%NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%一起 #  \@捕虫中.%"." * LOCAL%
	TWAIT 150, 1
NEXT

;捕获判定
IF RAND:パワーM < 2
	MUSHI_CAGE = 0
	IF CHARA
		IF RAND:パワーT < 2
			MUSHI_CAGE = 0
		ELSE
			CALL MUSHITORI(パワーT, ラックT)
			MUSHI_CAGE = RESULT
			相方が捕った = 1
		ENDIF
	ENDIF
ELSE
	CALL MUSHITORI(パワーM, ラックM)
	MUSHI_CAGE = RESULT
ENDIF

;基本经验值
EXP:MASTER:采集经验 ++
SIF CHARA
	EXP:CHARA:采集经验 ++
;捕った人の追加经验值
IF MUSHI_CAGE
	IF 相方が捕った
		EXP:CHARA:采集经验 ++
	ELSE
		EXP:MASTER:采集经验 ++
	ENDIF
ENDIF
;约会经验
IF CHK_DATENOW(CFLAG:CHARA:约会中) && CHARA
	EXP:MASTER:约会经验 ++
	EXP:CHARA:约会经验 ++
ENDIF

;成果に关わらず气力体力减少
DOWNBASE:MASTER:体力 = 150
DOWNBASE:MASTER:气力 = 200
IF CHARA
	DOWNBASE:CHARA:体力 = 150
	DOWNBASE:CHARA:气力 = 200
ENDIF

IF MUSHI_CAGE
	;处理の关系でここで捕获メッセージを流す,
	IF 相方が捕った
		CALL SHOW_MUSHI_DATA(MUSHI_CAGE)
		DRAWLINE
		PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捕获了%MUSHI_NAME%！
		;＠口上を挟むかも
		PRINTL [ 1] 这相当不错嘛
		CALL COLORMESSAGE(@"[ 2] 即使杀了你　也要得到它", C_RED, 1)
		PRINTL [ 3] 把它给我　拜托了！！
		INPUT
		;结果はメッセージの方で
		IF RESULT == 3
			IF ABL:CHARA:顺从 < 6 || ABL:CHARA:亲密 < 6 || MARK:CHARA:反抗刻印 || TALENT:CHARA:心情 < 0
				TFLAG:193 = -1
			ELSEIF ABL:CHARA:顺从 < 8 || ABL:CHARA:亲密 < 8
				TFLAG:193 = 3
			ELSE
				TFLAG:193 = 4
			ENDIF
		ELSEIF RESULT == 2
			TFLAG:193 = -2
		ELSE
			TFLAG:193 = 2
		ENDIF
	ELSE
		CALL SHOW_MUSHI_DATA(MUSHI_CAGE)
		PRINTFORML 捕获了%MUSHI_NAME%！
		TFLAG:193 = 1
	ENDIF
ELSE
	TFLAG:193 = 0
ENDIF

;参加者のソース,同一指令制限を受けないので控えめに,ただし捕まえられないと每回半减
IF CHARA
	;固定で获得するソース
	SOURCE:CHARA:欢乐 = 400
	SOURCE:CHARA:情爱 = 50
	
	;ABL:顺从をみる
	IF ABL:顺从 <= 1
		SOURCE:CHARA:欢乐 += (ABL:顺从 * 40)
		SOURCE:CHARA:情爱 += (ABL:亲密 * 20)
	ELSEIF ABL:顺从 <= 3
		SOURCE:CHARA:欢乐 += 200 + (ABL:顺从 * 40)
		SOURCE:CHARA:情爱 += 50 + (ABL:亲密 * 30)
	ELSEIF ABL:顺从 <= 5
		SOURCE:CHARA:欢乐 += 500 + (ABL:顺从 * 40)
		SOURCE:CHARA:情爱 += 200 + (ABL:亲密 * 30)
	ELSEIF ABL:顺从 <= 8
		SOURCE:CHARA:欢乐 += 750 + (ABL:顺从 * 60)
		SOURCE:CHARA:情爱 += 300 + (ABL:亲密 * 40)
	ELSEIF ABL:顺从 <= 11
		SOURCE:CHARA:欢乐 += 1000 + (ABL:顺从 * 60)
		SOURCE:CHARA:情爱 += 600 + (ABL:亲密 * 40)
	ELSE
		SOURCE:CHARA:欢乐 += 1600 + (ABL:顺从 * 30)
		SOURCE:CHARA:情爱 += 1000 + (ABL:亲密 * 20)
	ENDIF
	SIF CHARA != FLAG:约会的对象 
		SOURCE:CHARA:情爱 = 0
	
	SOURCE:CHARA:被动 = 200 + 100 * ABL:顺从
	SOURCE:CHARA:征服 = 200 + 100 * ABL:施虐属性
	
	;面倒なので[钓鱼]をトレースして2倍（时间效率で等倍）
	TIMES SOURCE:CHARA:欢乐 , 2.00
	TIMES SOURCE:CHARA:被动 , 2.00
	TIMES SOURCE:CHARA:征服 , 2.00
	TIMES SOURCE:CHARA:情爱 , 2.00
	
	;结果による补正
	SELECTCASE TFLAG:193
	;杀してでもうばいとる
	CASE -2
		TIMES SOURCE:CHARA:欢乐 , 0.50
		TIMES SOURCE:CHARA:被动 , 0.50
		TIMES SOURCE:CHARA:征服 , 0.50
		SOURCE:CHARA:反感 = 500
		DOWNBASE:MASTER:体力 += 150
		DOWNBASE:MASTER:气力 += 200
		IF CHARA
			DOWNBASE:CHARA:体力 += 150
			DOWNBASE:CHARA:气力 += 200
		ENDIF
	;ゆずってくれ→拒否された
	CASE -1
		SOURCE:CHARA:反感 = 50
	;捕获失败
	CASE 0
		TIMES SOURCE:CHARA:欢乐 , 0.50
		TIMES SOURCE:CHARA:被动 , 0.50
		TIMES SOURCE:CHARA:征服 , 0.50
	;MASTERが捕まえた,补正无
	CASE 1
	;なかなかやるじゃん
	CASE 2
		TIMES SOURCE:CHARA:欢乐 , 1.50
		TIMES SOURCE:CHARA:被动 , 1.50
		TIMES SOURCE:CHARA:征服 , 1.50
	;ゆずってくれ→渋々オッケー
	CASE 3
		TIMES SOURCE:CHARA:被动 , 1.50
	;ゆずってくれ→オールオッケー
	CASE 4
		TIMES SOURCE:CHARA:欢乐 , 1.50
		TIMES SOURCE:CHARA:被动 , 1.50
		TIMES SOURCE:CHARA:情爱 , 1.50
	ENDSELECT

	;其他の补正
	;虫の妖怪は喜ぶ
	IF GET_TRIBENAME(CHARA, GETNUM(TALENT, "妖怪")) == "妖虫"
		TIMES SOURCE:CHARA:欢乐 , 2.00
		TIMES SOURCE:CHARA:被动 , 2.00
		TIMES SOURCE:CHARA:征服 , 2.00
		TIMES SOURCE:CHARA:情爱 , 2.00
	;チョウチョウはハッピー
	ELSEIF STRCOUNT(MUSHI_TRIBE, "蝶/")
		IF CHARA == [[拉尔瓦]]
			TIMES SOURCE:CHARA:欢乐 , 2.00
			TIMES SOURCE:CHARA:被动 , 2.00
			TIMES SOURCE:CHARA:征服 , 2.00
		ELSE
			TIMES SOURCE:CHARA:欢乐 , 1.50
			TIMES SOURCE:CHARA:被动 , 1.50
			TIMES SOURCE:CHARA:征服 , 1.50
		ENDIF
	;兜虫・锹形虫もハッピー
	ELSEIF STRCOUNT(MUSHI_TRIBE, "(兜虫|锹形虫)")
		TIMES SOURCE:CHARA:欢乐 , 1.50
		TIMES SOURCE:CHARA:被动 , 1.50
		TIMES SOURCE:CHARA:征服 , 1.50
	ELSEIF MUSHI_RARE <= 3
	;レア度4～7
	ELSEIF MUSHI_RARE <= 7
		TIMES SOURCE:CHARA:欢乐 , 1.50
		TIMES SOURCE:CHARA:被动 , 1.50
		TIMES SOURCE:CHARA:征服 , 1.50
	;レア度8～9
	ELSE
		TIMES SOURCE:CHARA:欢乐 , 2.00
		TIMES SOURCE:CHARA:被动 , 2.00
		TIMES SOURCE:CHARA:征服 , 2.00
	ENDIF
	;跳蛋
	SIF MUSHI_NAME == "跳蛋"
		SOURCE:CHARA:情欲 = 500
ENDIF

;时间经过
TIME += 40

;フラグ引き渡し
TFLAG:194 = CHARA

RETURN 1


