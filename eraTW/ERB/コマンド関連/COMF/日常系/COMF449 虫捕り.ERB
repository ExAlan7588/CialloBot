;-------------------------------------------------
;ムシを捕まえる函数
;-------------------------------------------------
@MUSHITORI(パワー, ラック)
#DIM パワー
#DIM ラック
#DIM レアリティ指定
#DIM ランク
#DIM Ｇ型
#DIM Ｘ型
#DIM MUSHI_ID
レアリティ指定 = RAND:パワー
Ｇ型 = 0
Ｘ型 = 0
MUSHI_ID = 0
;ムシを抽选,见つからない场合はレアリティ指定をひとつ下げる
RESULT = 0
WHILE レアリティ指定 >= 0
	CALL DRAW_MUSHI("捕虫", CFLAG:MASTER:当前位置, レアリティ指定)
	IF RESULT
		MUSHI_CAPTURE ++
		;ランク判定
		ランク = MIN(RAND:(ラック / 10), 99)
		SIF RAND:100 < (パワー / 2)
			Ｇ型 = 1
		SIF RAND:100 < (パワー / 2)
			Ｘ型 = 1
		;ID设定
		MUSHI_ID = MUSHI_CAPTURE * 1000000000000 + DAY * 1000000000000 + CFLAG:MASTER:当前位置 * 100000000 + ランク * 10000 + MUSHI_RARE * 1000 + RESULT
		SIF Ｇ型
			MUSHI_ID += 1000000
		SIF Ｘ型
			MUSHI_ID += 10000000
		BREAK
	ELSE
		レアリティ指定 --
	ENDIF
WEND
RETURN MUSHI_ID

;-------------------------------------------------
;ムシを抽选する函数
;SPOT = 0だと分布无视（出现地形・出现地域）
;-------------------------------------------------
@DRAW_MUSHI(ARGS, SPOT, レアリティ指定)
#DIM SPOT
#DIM レアリティ指定
#DIM MUSHI_RESULT
MUSHI_RESULT = 0
;シャッフルして顺番に判定していく
CALL FISHER_YATES_SHAFFLE(MAXMUSHI)
FOR LOCAL, 1, MAXMUSHI
	CALL MUSHI_DATA(SHAFFLE_ARRAY:LOCAL, SPOT)
	SIF !RESULT
		CONTINUE
	SIF INRANGE(レアリティ指定, 0, 9) && レアリティ指定 != MUSHI_RARE
		CONTINUE
	IF ARGS == "捕虫"
		;出现条件を满たしていない
		SIF !RESULT:1
			CONTINUE
	ELSEIF ARGS == "昆虫诱捕装置特定好物"
		;好物がない（昆虫诱捕装置で捕获不可）
		SIF RESULTS == "" || RESULTS == "无し"
			CONTINUE
		;ITEMNAMEと一致しているか判定
		SIF !STRCOUNT(RESULTS, ITEMNAME:GET_MUSHIDATA(MUSHI_TRAP, "エサ番号"))
			CONTINUE
	ELSEIF ARGS == "昆虫诱捕装置"
		SIF RESULTS == "" || RESULTS == "无し"
			CONTINUE
		;好物が全ての场合はスキップ
		IF RESULTS != "全部"
			;エサタイプと一致しているか判定（CALLFでRESULTS:10を引っ张ってくる,RESULTSは保持）
			CALLF MUSHI_ESA_DATA(GET_MUSHIDATA(MUSHI_TRAP, "エサ番号"))
			SIF !STR_MULTI_COUNT(RESULTS, RESULTS:10)
				CONTINUE
		ENDIF
	ENDIF
	;ムシ决定
	MUSHI_RESULT = SHAFFLE_ARRAY:LOCAL
	BREAK
NEXT
RETURN MUSHI_RESULT

;-------------------------------------------------
;指定条件のムシを抽选する、IDを生成する函数
;-------------------------------------------------
@DRAW_MUSHI_DESIGN(CHARA, RARE_MIN, RARE_MAX, RANK_MIN, RANK_MAX, D_MUTA, D_FIELD, D_AREA, D_TRIBE, D_TYPE)
#DIM CHARA
#DIM RARE_MIN
#DIM RARE_MAX
#DIM RANK_MIN
#DIM RANK_MAX
#DIM D_MUTA
#DIM D_FIELD
#DIM D_AREA
#DIMS D_TRIBE
#DIMS D_TYPE
#DIM MUSHI_RESULT
#DIM MUSHI_ID
MUSHI_RESULT = 0
VARSET RESULT
SIF RARE_MAX < RARE_MIN || !INRANGE(RARE_MAX, 0, 9)
	THROW
SIF RANK_MAX < RANK_MIN || !INRANGE(RANK_MAX, 0, 100)
	THROW
;シャッフルして顺番に判定していく
CALL FISHER_YATES_SHAFFLE(MAXMUSHI)
FOR LOCAL, 1, MAXMUSHI
	CALL MUSHI_DATA(SHAFFLE_ARRAY:LOCAL)
	SIF !RESULT
		CONTINUE
	;レアリティ指定
	SIF RARE_MAX && !INRANGE(MUSHI_RARE, RARE_MIN, RARE_MAX)
		CONTINUE
	;地形指定
	SIF D_FIELD && !(MUSHI_FIELD & D_FIELD)
		CONTINUE
	;地域指定
	SIF D_AREA && !(RESULT:2 & D_AREA)
		CONTINUE
	;种族指定
	SIF D_TRIBE != "" && !STRCOUNT(MUSHI_TRIBE, D_TRIBE)
		CONTINUE
	;属性指定
	SIF D_TYPE != "" && !STRCOUNT(MUSHI_TYPE, D_TYPE)
		CONTINUE

	;特殊な设定
	;捕虫で捕れないムシはダメ（那个とか）
	SIF GROUPMATCH(MUSHI_NAME, "那个", "蚰蜒", "蝇", "カ", "跳蚤")
		CONTINUE
	;NPCは制限なし
	IF CHARA == 999
	;月人は机械のみ（辉夜と永琳を除く）
	ELSEIF GET_TRIBENAME(CHARA, GETNUM(TALENT, "人类")) == "月人"
		IF !GROUPMATCH(CHARA, [[辉夜]], [[永琳]])
			SIF !STRCOUNT(MUSHI_TRIBE, "机械")
				CONTINUE
		ENDIF
	;月人か河童でなければ机械は使えない
	ELSEIF GET_TRIBENAME(CHARA, GETNUM(TALENT, "妖怪")) != "河童"
		SIF STRCOUNT(MUSHI_TRIBE, "机械")
			CONTINUE
	ENDIF

	;ムシ决定
	MUSHI_RESULT = SHAFFLE_ARRAY:LOCAL
	BREAK
NEXT
;条件が严しすぎると出力できないのでエラー
IF !MUSHI_RESULT
	PRINTL 没有符合条件的昆虫！
	THROW
ENDIF
;ランク指定,LIMITにすると数值が偏るのでループ处理
MUSHI_RANK = -1
IF RANK_MAX
	WHILE MUSHI_RANK < RANK_MIN
		MUSHI_RANK = RAND:RANK_MAX
	WEND
ELSE
	MUSHI_RANK = RAND:100
ENDIF
;变异指定
VARSET RESULT
IF D_MUTA
	SIF RAND:100 < D_MUTA
		RESULT:1 = 1
	SIF RAND:100 < D_MUTA
		RESULT:2 = 1
ELSE
	SIF RAND:100 < 3
		RESULT:1 = 1
	SIF RAND:100 < 3
		RESULT:2 = 1
ENDIF
;ID设定
MUSHI_ID = MUSHI_RANK * 10000 + MUSHI_RARE * 1000 + MUSHI_RESULT
SIF RESULT:1
	MUSHI_ID += 1000000
SIF RESULT:2
	MUSHI_ID += 10000000
;被らないように随意数字を入れる
MUSHI_ID += RAND:1000000  * 100000000
RETURN MUSHI_ID

;-------------------------------------------------
;ムシを捕まえた后处理の函数
;-------------------------------------------------
@MUSHI_CAPTURE(MUSHI_ID)
#DIM MUSHI_ID
#DIM 保管
#DIM 结果保存
保管 = 0
;捕まえた时点で图鉴登录,相方が捕まえただけではダメ
MUSHI_COLLECT:GET_MUSHIDATA(MUSHI_ID, "ムシ番号") = 1
;空きに登录する
FOR LOCAL, 1, MUSHI_MAXCAGE + 1
	IF !MUSHI_CAGE:LOCAL
		MUSHI_CAGE:LOCAL = MUSHI_ID
		保管 = LOCAL
		BREAK
	ENDIF
NEXT
IF 保管
	;WAITは外に任せる
	PRINTFORML %MUSHI_NAME%进入了虫笼【%TOFULL(TOSTR(保管))%】！
;空きがない场合
ELSE
	PRINTFORMW 虫笼已经满员了！
	FOR LOCAL, 1, MUSHI_MAXCAGE + 1
		PRINTFORM [{LOCAL + 10}]放离　[{LOCAL + 20}]做成素材　│【%TOFULL(TOSTR(LOCAL))%】
		CALL SHOW_MUSHI_DATA(MUSHI_CAGE:LOCAL, "一行")
		PRINTL 
		MUSHI_NAME:LOCAL = %MUSHI_NAME%
		MUSHI_RARE:LOCAL = MUSHI_RARE
		MUSHI_TRIBE:LOCAL = %MUSHI_TRIBE%
	NEXT
	DRAWLINE
	;今捕まえたムシ,LOCALはMAXCAGE+1になってる
	PRINTFORM [{LOCAL + 10}]放离　[{LOCAL + 20}]做成素材　│【　】
	CALL SHOW_MUSHI_DATA(MUSHI_ID, "一行")
	PRINTL 
	MUSHI_NAME:LOCAL = %MUSHI_NAME%
	MUSHI_RARE:LOCAL = MUSHI_RARE
	MUSHI_TRIBE:LOCAL = %MUSHI_TRIBE%
	INPUT
	结果保存 = RESULT
	;素材にする
	IF INRANGE(结果保存, 21, 21 + MUSHI_MAXCAGE)
		PRINTFORM %MUSHI_NAME:(结果保存 % 10)%
		;レア度6以上は稀有昆虫
		IF MUSHI_RARE:(结果保存 % 10) > 5
			PRINTFORMW 重生成了稀有昆虫…
			CALL GET_ITEM("稀有昆虫", 1, 1)
		;レア度5以下
		ELSE
			PRINTFORMW 变成素材了…
			;青蛙は青蛙に
			IF STRCOUNT(MUSHI_TRIBE:(结果保存 % 10), "青蛙")
				CALL GET_ITEM("青蛙", 1, 1)
			ELSE
				CALL GET_ITEM("虫", 1, 1)
			ENDIF
		ENDIF
	;逃がす
	ELSEIF INRANGE(结果保存, 11, 11 + MUSHI_MAXCAGE)
		PRINTFORMW %MUSHI_NAME:(结果保存 % 10)%被放生野外了…
	;适当な数值を入力したら逃がす
	ELSE
		结果保存 = 11 + MUSHI_MAXCAGE
		PRINTFORMW %MUSHI_NAME:(结果保存 % 10)%被放生野外了…
	ENDIF
	;入れ替えた
	IF INRANGE(结果保存 % 10, 1, MUSHI_MAXCAGE)
		MUSHI_CAGE:(结果保存 % 10) = MUSHI_ID
		PRINTFORML %MUSHI_NAME%进入了虫笼【%TOFULL(TOSTR(结果保存 % 10))%】！
	ENDIF
ENDIF

;-------------------------------------------------
;ムシデータを抽出する函数
;-------------------------------------------------
@GET_MUSHIDATA(MUSHI_ID, ARGS)
#FUNCTION
#DIM MUSHI_ID
SELECTCASE ARGS
;回数
CASE "回数"
	RETURNF MUSHI_ID / 1000000000000000000
;日期とエサ番号は同位置
CASE "日期", "エサ番号"
	RETURNF MUSHI_ID / 1000000000000 % 100000
CASE "场所"
	RETURNF MUSHI_ID / 100000000 % 10000
;CASE "ランクブロック"
;	RETURNF MUSHI_ID / 10000 % 10000
CASE "Ｘ型"
	RETURNF MUSHI_ID / 10000000 % 10
CASE "Ｇ型"
	RETURNF MUSHI_ID / 1000000 % 10
CASE "ランク"
	RETURNF MUSHI_ID / 10000 % 100
CASE "レアリティ"
	RETURNF MUSHI_ID / 1000 % 10
CASE "ムシ番号"
	RETURNF MUSHI_ID % 1000
ENDSELECT

