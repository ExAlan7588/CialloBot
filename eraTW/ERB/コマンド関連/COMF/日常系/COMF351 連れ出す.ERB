;-------------------------------------------------
;带出去
;日常系指令、レベル2
;-------------------------------------------------
@COM351
#DIM NUM_TARGET
#DIM N_TO_M
#DIM PREV_REDRAW
NUM_TARGET = GET_TARGETNUM()
N_TO_M = 0
;带出去
VARSET LOCAL
SIF !NUM_TARGET
	RETURN -1
FOR LOCAL, 1, NUM_TARGET + 1
	IF COM_351_CONDITION(TARGET:LOCAL) >= 2
		LOCAL:97 += 1
	ENDIF
NEXT
IF NUM_TARGET == 1 || LOCAL:97 == 1
	IF COM_351_CONDITION(TARGET) < 1
		RETURN -1
	ELSEIF COM_351_CONDITION(TARGET) < 2
		DRAWLINE
		PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", (TARGET))%正在忙碌中。
		RETURN -1
	ENDIF
	IF CFLAG:TARGET:同行
		CFLAG:TARGET:同行 = 0
		CFLAG:MASTER:同行 = 0
		PRINTFORMW 同行解除了。
	ELSE
		CFLAG:TARGET:同行 = 60
		;雨＋外＋伞or相手が伞の时は共用雨伞
		SIF TIME:5 > 3 && TIME:5 < 14 && OUTROOF(CFLAG:MASTER:当前位置) && (ITEM:36 || EQUIP:TARGET:饰品 == 6)
			TEQUIP:TARGET:201 = 1
		PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%跟着来了
		CFLAG:MASTER:同行 = 60
	ENDIF
	TIME += 1
	SIF CFLAG:TARGET:同行
		CALL KOJO_MESSAGE_SEND("DIRECT",351,TARGET,-1,-1)
	RETURN 1
ENDIF
PREV_REDRAW = CURRENTREDRAW()
REDRAW 0
FOR LOCAL, 1, NUM_TARGET + 1
	SIF !CFLAG:(TARGET:LOCAL):同行准备 && !CFLAG:(TARGET:LOCAL):同行 && TARGET:LOCAL == TARGET
		CFLAG:(TARGET:LOCAL):同行准备 = 1
	SIF CFLAG:(TARGET:LOCAL):同行准备 > 0 && TARGET:LOCAL != TARGET
		CFLAG:(TARGET:LOCAL):同行准备 = 0
NEXT
DO
	LOCAL:1 = LINECOUNT
	PRINTL 要邀请谁呢？
	FOR LOCAL, 1, NUM_TARGET + 1
		SIF COM_351_CONDITION(TARGET:LOCAL) <= 0
			CONTINUE
		IF CFLAG:(TARGET:LOCAL):同行 && !(CFLAG:(TARGET:LOCAL):同行准备)
			SETCOLOR 255, 200, 100
		ELSEIF !(CFLAG:(TARGET:LOCAL):同行) && CFLAG:(TARGET:LOCAL):同行准备
			SETCOLOR C_AQUA
		ENDIF
		PRINTFORML [{LOCAL}] - %NAME_OUTPUT_TRANSLATION("CALLNAME", (TARGET:LOCAL))%
		RESETCOLOR
	NEXT
	PRINTL [97] - 带出去
	PRINTL [98] - 全员带出去
	PRINTL [99] - 同行解除
	PRINTL [100] - 中止

	INPUT
	SELECTCASE RESULT
	CASE 100
		FOR LOCAL, 1, NUM_TARGET + 1
			CFLAG:(TARGET:LOCAL):同行准备 = 0
		NEXT
		CLEARLINE LINECOUNT - LOCAL:1
		REDRAW PREV_REDRAW
		RETURN -1
	CASE 99
		FOR LOCAL, 1, NUM_TARGET + 1
			CFLAG:(TARGET:LOCAL):同行 = 0
			CFLAG:(TARGET:LOCAL):同行准备 = 0
			;共用雨伞もなくなる
			TEQUIP:(TARGET:LOCAL):共用雨伞 = 0
		NEXT
		PRINTFORMW 同行解除了
		CFLAG:MASTER:同行 = 0
		CLEARLINE LINECOUNT - LOCAL:1
		REDRAW PREV_REDRAW
		RETURN 1
	CASE 98
		FOR LOCAL, 1, NUM_TARGET + 1
			SIF COM_351_CONDITION(TARGET:LOCAL) == 2
				N_TO_M = 1
		NEXT
		IF N_TO_M > 0
			PRINTFORMW 有些角色不能同时带出去
			N_TO_M = 0
			CLEARLINE LINECOUNT - LOCAL:1
			CONTINUE
		ENDIF
		FOR LOCAL, 1, NUM_TARGET + 1
			IF COM_351_CONDITION(TARGET:LOCAL) >= 3
				CFLAG:(TARGET:LOCAL):同行 = 60
				LOCAL:98 += 1
			ENDIF
		NEXT
		PRINTFORMW 把{LOCAL:98}个人一起带出去了
		CFLAG:MASTER:同行 = 60
		TIME += LOCAL:98
		SIF CFLAG:TARGET:同行
			CALL KOJO_MESSAGE_SEND("DIRECT",351,TARGET,-1,-1)
		CLEARLINE LINECOUNT - LOCAL:1
		REDRAW PREV_REDRAW
		RETURN 1
	CASE 97
		; 先执行同行解除
        FOR LOCAL, 1, NUM_TARGET + 1
            IF CFLAG:(TARGET:LOCAL):同行 && CFLAG:(TARGET:LOCAL):同行准备
    			CFLAG:(TARGET:LOCAL):同行 = 0
			    CFLAG:(TARGET:LOCAL):同行准备 = 0
			    ;共用雨伞もなくなる
			    TEQUIP:(TARGET:LOCAL):共用雨伞 = 0
            ENDIF
		NEXT
        ; 再加入同行
		FOR LOCAL, 1, NUM_TARGET + 1
			IF (COM_351_CONDITION(TARGET:LOCAL) >= 2) && (CFLAG:(TARGET:LOCAL):同行准备 || CFLAG:(TARGET:LOCAL):同行)
				LOCAL:98 += 1
				SIF COM_351_CONDITION(TARGET:LOCAL) == 2
					N_TO_M = 1
			ENDIF
		NEXT
		IF LOCAL:98 == 0
            PRINTFORMW 同行解除了
            CFLAG:MASTER:同行 = 0
			CLEARLINE LINECOUNT - LOCAL:1
			REDRAW PREV_REDRAW
            RETURN 1
        ENDIF
		IF LOCAL:98 == 1
			TIME += 1
			LOCAL = 0
			LOCAL:98 = 0
			FOR LOCAL, 1, NUM_TARGET + 1
				IF (COM_351_CONDITION(TARGET:LOCAL) >= 2) && (CFLAG:(TARGET:LOCAL):同行准备 || CFLAG:(TARGET:LOCAL):同行)
					PRINTFORMW 将%NAME_OUTPUT_TRANSLATION("CALLNAME", (TARGET:LOCAL))%带上了
					CFLAG:(TARGET:LOCAL):同行 = 60
					CFLAG:(TARGET:LOCAL):同行准备 = 0
					;雨＋外＋伞or相手が伞の时は共用雨伞
					SIF TIME:5 > 3 && TIME:5 < 14 && OUTROOF(CFLAG:MASTER:当前位置) && (ITEM:36 || EQUIP:(TARGET:LOCAL):饰品 == 6)
						TEQUIP:(TARGET:LOCAL):共用雨伞 = 1
				ENDIF
			NEXT
		ELSE
			IF N_TO_M > 0
				PRINTFORMW 有些角色不能同时带出去
				N_TO_M = 0
				CLEARLINE LINECOUNT - LOCAL:1
				CONTINUE
			ENDIF
			PRINTFORMW 把{LOCAL:98}个人一起带出去了
			TIME += LOCAL:98
			LOCAL = 0
			LOCAL:98 = 0
			FOR LOCAL, 1, NUM_TARGET + 1
				IF (COM_351_CONDITION(TARGET:LOCAL) >= 3) && (CFLAG:(TARGET:LOCAL):同行准备 || CFLAG:(TARGET:LOCAL):同行)
					CFLAG:(TARGET:LOCAL):同行 = 60
					CFLAG:(TARGET:LOCAL):同行准备 = 0
				ENDIF
			NEXT
		ENDIF
		CFLAG:MASTER:同行 = 60
		SIF CFLAG:TARGET:同行
			CALL KOJO_MESSAGE_SEND("DIRECT",351,TARGET,-1,-1)
		CLEARLINE LINECOUNT - LOCAL:1
		REDRAW PREV_REDRAW
		RETURN 1
	CASEELSE
		IF !INRANGE(RESULT, 1, NUM_TARGET)
			CLEARLINE LINECOUNT - LOCAL:1
			CONTINUE
		ELSEIF COM_351_CONDITION(TARGET:RESULT) < 1
			CLEARLINE LINECOUNT - LOCAL:1
			CONTINUE
		ELSEIF COM_351_CONDITION(TARGET:RESULT) < 2
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", (TARGET:RESULT))%正在忙碌中。
			CLEARLINE LINECOUNT - LOCAL:1
			CONTINUE
		ENDIF
		CFLAG:(TARGET:RESULT):同行准备 ^= 1
	ENDSELECT
	CLEARLINE LINECOUNT - LOCAL:1
LOOP 1

