@COM364

;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
TFLAG:98 = -1
TFLAG:193 = 1
LOCAL:2 = TARGET

FOR LOCAL, 1, GET_TARGETNUM() + 1
	SIF CFLAG:(TARGET:LOCAL):睡眠
		CONTINUE
	SIF CHECK_CHARA(LOCAL, "鬼")
		CONTINUE
	TFLAG:193 ++
	TARGET = TARGET:LOCAL
	CALL COM364_1
NEXT

TARGET = LOCAL:2

DOWNBASE:体力 += TFLAG:193 * 200
DOWNBASE:气力 += TFLAG:193 * 200

SOURCE:苦痛 = TFLAG:193 * 1000
SOURCE:恐怖 = TFLAG:193 * 2000
SOURCE:反感 = TFLAG:193 * 500

DOWNBASE:MASTER:气力 += 50
;仕事扱いで金が入る
TFLAG:207 += TFLAG:193 * 300
;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;苦痛のパラメータによる苦痛のソース增加は先に处理しておく
SOURCE:苦痛 = SOURCE:苦痛 * (10 + 5 * MAX(GETPALAMLV(PALAM:苦痛,5) - 1, 0)) / 10
TIME += 30
RETURN 1


@COM364_1
DOWNBASE:气力 += 50
SOURCE:欢乐 = 1500 + 300 * ABL:施虐属性
SOURCE:征服 = 500 + 200 * ABL:施虐属性

RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE364
;停止中は不可
SIF FLAG:70
	RETURN 0
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(301)
	RETURN RESULT
;睡眠中
SIF CFLAG:睡眠
	RETURN 0
;陪睡中
SIF CFLAG:陪睡中
	RETURN 0
SIF FESTIVAL() != "节分"
	RETURN 0
;TARGETが鬼じゃないと駄目
SIF !CHECK_CHARA(TARGET, "鬼")
	RETURN 0
;气力0
SIF BASE:MASTER:气力 <= 0
	RETURN 0
RETURN 1

