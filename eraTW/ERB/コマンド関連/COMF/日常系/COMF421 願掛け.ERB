ELSEIF RESULT == 10
	IF MONEY < 5000
		PRINTL 金钱不足
		GOTO INPUT_LOOP
	ELSE
		MONEY -= 5000
		FLAG:祈愿内容 = 202
	ENDIF
ELSEIF RESULT == 15
	IF MONEY < 10000
		PRINTL 金钱不足
		GOTO INPUT_LOOP
	ELSE
		MONEY -= 10000
		FLAG:祈愿内容 = 203
	ENDIF
ELSEIF RESULT == 16 && ABL:施虐属性
		CALL IKENIE(TARGET,7)
ELSEIF RESULT == 20 && TARGET != 0
		CALL IKENIE(TARGET,2)
ELSEIF RESULT == 21 && ((BABYDLC == 1) || TALENT:TARGET:恋慕) && !TALENT:妊娠
		CALL IKENIE(TARGET,6)
ELSEIF RESULT == 30
	PRINTL 对谁？
	DRAWLINE
	FOR LOCAL,1,CHARANUM
		SIF MARK:LOCAL:反抗刻印 && !CFLAG:LOCAL:出禁
			PRINTFORMLC [{LOCAL}] %NAME_OUTPUT_TRANSLATION("CALLNAME", LOCAL),15,LEFT%
	NEXT
	PRINTL 
	DRAWLINE
	PRINTL [999] - 还是算了
	INPUT
	IF RESULT >= 1 && RESULT <= CHARANUM && MARK:RESULT:反抗刻印
		CALL IKENIE(RESULT,1)
	ELSE
		RETURN -1
	ENDIF
ELSEIF RESULT == 35
	PRINTL 谁的？
	DRAWLINE
	FOR LOCAL,1,CHARANUM
		SIF !MARK:LOCAL:反抗刻印 && MARK:LOCAL:反抗取得履历 && !CFLAG:LOCAL:出禁
			PRINTFORMLC [{LOCAL}] %NAME_OUTPUT_TRANSLATION("CALLNAME", LOCAL),15,LEFT%
	NEXT
	PRINTL 
	DRAWLINE
	PRINTL [999] - 还是算了
	INPUT
	IF RESULT >= 1 && RESULT <= CHARANUM && !MARK:RESULT:反抗刻印 && MARK:RESULT:反抗取得履历
		CALL IKENIE(RESULT,8)
	ELSE
		RETURN -1
	ENDIF

ELSEIF RESULT == 40 && CFLAG:MASTER:魔力回收 && CFLAG:MASTER:小槌 < 6
	CALL IKENIE(71,3)
ELSEIF RESULT == 50 && FLAG:开运大纹购入回数 > 10
	CALL IKENIE(53,5)
ELSEIF RESULT == 60 && CAN_DOWSING()
	CALL DOWSING_PANTS
ELSEIF RESULT == 66
	call UNIQUE_COM_天候操作
ENDIF
