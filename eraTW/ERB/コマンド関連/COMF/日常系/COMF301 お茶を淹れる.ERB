;泡茶
;日常系指令　レベル1
;-------------------------------------------------
@COM301
SELECTCASE TFLAG:192
	CASE 0
		LOCAL = RAND:100
		LOCAL:1 = 90 + GET_SUCCESS_RATE() / 5
		SIF LOCAL:1 > 99
			LOCAL:1 = 99
		IF LOCAL <= 9
			;10％で大成功
			EXP:MASTER:会话经验 ++
			TFLAG:193 = 1
			TFLAG:98 = 2
		ELSEIF LOCAL >= LOCAL:1
			;10～1％で失败
			TFLAG:193 = -1
			TFLAG:98 = -2
		ELSE
			;残りは成功
			TFLAG:193 = 0
			TFLAG:98 = 0
		ENDIF
	CASE 1
		IF RAND:100 <= 9
			;10％で大成功
			EXP:MASTER:会话经验 ++
			TFLAG:193 = 1
			TFLAG:98 = 2
		ELSE
			;残りは成功
			TFLAG:193 = 0
			TFLAG:98 = 0
		ENDIF
	CASE -1
		TFLAG:193 = -1
		TFLAG:98 = -1
	CASE -2
		RETURN 0
ENDSELECT

;先制发生时は失败しない
SIF TCVAR:20
	TFLAG:193 = MAX(TFLAG:193,0)
DOWNBASE:MASTER:气力 += 100
DOWNBASE:MASTER:体力 += 50
TFLAG:情绪上升抑制 = 1
;信赖
TFLAG:98 += 3

;その场に居るTARGET全员で回す
LOCAL:1 = TARGET
FOR LOCAL, 1, GET_TARGETNUM() + 1
	SIF TARGET:LOCAL <= 0
		CONTINUE
	SIF CFLAG:(TARGET:LOCAL):睡眠
		CONTINUE
	TARGET = TARGET:LOCAL
	CALL COM301_1
NEXT
TARGET = LOCAL:1
SIF GETBIT(TCVAR:MASTER:特别的茶水, 0)
	CLEARBIT TCVAR:MASTER:特别的茶水, 0
TIME += 30
RETURN 1

@COM301_1

DOWNBASE:气力 += 10

;固定で获得するソース
SOURCE:欢乐 = 500

;ABL:顺从をみる
IF ABL:顺从 <= 1
	SOURCE:欢乐 += (ABL:顺从 * 60)
ELSEIF ABL:顺从 <= 3
	SOURCE:欢乐 += 200 + (ABL:顺从 * 60)
ELSEIF ABL:顺从 <= 5
	SOURCE:欢乐 += 500 + (ABL:顺从 * 60)
ELSEIF ABL:顺从 <= 8
	SOURCE:欢乐 += 750 + (ABL:顺从 * 75)
ELSEIF ABL:顺从 <= 11
	SOURCE:欢乐 += 1000 + (ABL:顺从 * 75)
ELSE
	SOURCE:欢乐 += 2000 + (ABL:顺从 * 30)
ENDIF

;好感度をみる
IF CFLAG:2 <= 500
	SOURCE:欢乐 += CFLAG:2
ELSEIF CFLAG:2 <= 5000
	SOURCE:欢乐 += 500 + (CFLAG:2 - 500) / 3
ELSE
	SOURCE:欢乐 += 2000 + (CFLAG:2 - 5000) / 5
ENDIF
SIF SOURCE:欢乐 < 0
	SOURCE:欢乐 = 0


SOURCE:被动 = 200 + 100 * ABL:顺从
SOURCE:征服 = 200 + 100 * ABL:施虐属性

IF TFLAG:193 == -1
	TIMES SOURCE:欢乐 , 0.10
	TIMES SOURCE:征服 , 0.50
	TIMES SOURCE:被动 , 0.50
ELSEIF TFLAG:193 == 0
	TIMES SOURCE:欢乐 , 1.00
	TIMES SOURCE:征服 , 1.00
	TIMES SOURCE:被动 , 1.00
ELSE
	TIMES SOURCE:欢乐 , 2.00
	TIMES SOURCE:征服 , 2.00
	TIMES SOURCE:被动 , 2.00
ENDIF

IF GETBIT(TCVAR:MASTER:特别的茶水, 0)
	SELECTCASE TARGET
		CASE 15, 16, 17, 38, 50, 54, 59, 75
			TIMES SOURCE:欢乐 , 2.00
			TIMES SOURCE:征服 , 2.00
			TIMES SOURCE:被动 , 2.00
		CASEELSE
			TIMES SOURCE:欢乐 , 1.50
			TIMES SOURCE:征服 , 1.50
			TIMES SOURCE:被动 , 1.50
	ENDSELECT
ENDIF

;茶を饮んだフラグ
TCVAR:300 = 1440 * DAY + TIME

RETURN 1

