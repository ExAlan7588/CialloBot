;实行判定
;-------------------------------------------------
@COM_ABLE335
;照料实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(335)
	RETURN RESULT
;仕事内容が醉いつぶれ以外
SIF CFLAG:职业种类 != JOB_醉いつぶれる
	RETURN 0
;气力0
SIF BASE:MASTER:气力 <= 0
	RETURN 0
;时间停止中
SIF FLAG:70
	RETURN 0
RETURN 1
