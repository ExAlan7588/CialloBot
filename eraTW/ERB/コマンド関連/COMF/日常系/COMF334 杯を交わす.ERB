;实行判定
;-------------------------------------------------
@COM_ABLE334
;碰杯实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(334)
	RETURN RESULT
;仕事内容が宴会以外
SIF CFLAG:职业种类 != JOB_宴会参加
	RETURN 0
;工作量(宴会で饮む残り量)がゼロ
SIF BASE:工作量 <= 0
	RETURN 0
;气力0
SIF BASE:MASTER:气力 <= 0
	RETURN 0
;时间停止中
SIF FLAG:70
	RETURN 0
RETURN 1
