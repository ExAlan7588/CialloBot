@DANMAKU_BATTLE(OPPONENT, ENEMY = -1)
#DIM プレイヤー残机
#DIM 相手残机
#DIM 残りHP
#DIM 残りＢ回数
#DIM ターン数
#DIM プレイヤー骰子面
#DIM 相手骰子面
#DIM プレイヤー骰子数
#DIM 相手骰子数
#DIM プレイヤー骰子值
#DIM 相手骰子值
#DIM プレイヤー修正值
#DIM 相手修正值
#DIM 相手强さ
#DIM 灵力充填フラグ
#DIM 慢心フラグ
#DIM OPPONENT
#DIM ENEMY
#DIM BombPower
#DIM B_Min
#DIM B_Max
#DIM 持ち込み道具
#DIM DamageThreshold
#DIM Pichun
#DIM Charge

;PANGCI
#DIM 敌力
#DIM 己力
#DIM 敌波动
#DIM 己波动
#DIM 敌特殊技能
#DIM 己特殊技能
#DIM 敌残机
#DIM 己残机
#DIM 敌当前波动
#DIM 己当前波动
#DIM 技能值
IF PANGCI
	CALL PANNOQIKALA_BATTLE(OPPONENT)
	敌力 = RESULT:0
	己力 = RESULT:1
	敌波动 = RESULT:2
	己波动 = RESULT:3
	敌特殊技能 = RESULT:4
	己特殊技能 = RESULT:5
	敌残机 = RESULT:6
	己残机 = RESULT:7
	敌当前波动 = 0
	己当前波动 = 0
	技能值 = 0
ENDIF

プレイヤー残机 = 3
相手残机 = 3
相手强さ = ABL:OPPONENT:战斗能力
残りHP = MAXBASE:MASTER:体力
残りＢ回数 = 2
ターン数 = 1
灵力充填フラグ = 0
慢心フラグ = 0
Pichun = 0
Charge = 0
B_min = ABL:MASTER:战斗能力 * 7 * (ABL:MASTER:战斗能力 / 2 + 1)
B_Max = ABL:MASTER:战斗能力 * 11 * (ABL:MASTER:战斗能力 / 2 + 1) + 6

IF PANGCI
	プレイヤー残机 += 己残机
	相手残机 += 敌残机
ENDIF

SIF TALENT:OPPONENT:自尊心 > 0 && ABL:MASTER:战斗能力 < 相手强さ && 相手强さ > 2 && TALENT:OPPONENT:路人 == 1
	慢心フラグ = 1
;【洽览深识】の效果
SIF GETBIT(CFLAG:OPPONENT:弹幕特能, 5)
	相手残机 ++
SIF GETBIT(CFLAG:MASTER:弹幕特能, 5)
	プレイヤー残机 ++
;【Extend】の效果
SIF TALENT:MASTER:Extend == 1
	プレイヤー残机 ++
;【大角虫】の效果
SIF TALENT:MASTER:大角虫 == 1
	残りＢ回数 ++
;弹幕胜负补助道具の持ち込み
CALL DANMAKU_ITEM_USE
持ち込み道具 = RESULT

;持ち込み道具 生命卡(856) と 符卡(857) はここで处理
SIF 持ち込み道具 == 856
	プレイヤー残机 ++
SIF 持ち込み道具 == 857
	残りＢ回数 ++

;プレイヤーの骰子数は2.5n + 期待值2 + 期待值1
;骰子面は(n+1)*期待值10*期待值7*n/2

WHILE プレイヤー残机 > 0 && 相手残机 > 0
	;骰子数计算
	プレイヤー骰子数 = (ABL:MASTER:战斗能力 + RAND:5) * 2 + (ABL:MASTER:战斗能力 + RAND:3) / 2
	相手骰子数 = (相手强さ + RAND:4 + 1) * 2 + 相手强さ / 2 * RAND:3
	SELECTCASE 相手残机
		CASE IS > 2
			IF 慢心フラグ && 相手残机 > 2
				CALL COLORMESSAGE(@"%NAME_OUTPUT_TRANSLATION("CALLNAME", OPPONENT)%把%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%看扁了",C_YELLOW,1)
				相手骰子数 -= 相手强さ / 2
			ENDIF
		CASE 2
			相手骰子数 += 相手强さ / 2
		CASE 1
			相手骰子数 += 相手强さ / 2 + 1
	ENDSELECT

	;骰子面计算
	プレイヤー骰子面 = (ABL:MASTER:战斗能力 + 1) * (6 + RAND:8) + RAND:(15 + TFLAG:幸运补正) * ABL:MASTER:战斗能力 / 2
	相手骰子面 = (相手强さ + 1) * (9 + RAND:7) + RAND:10 - (相手残机 - 1) * 相手强さ
	;修正值计算
	IF (相手强さ - ABL:MASTER:战斗能力) < 0
		プレイヤー修正值 = (ABL:MASTER:战斗能力 - 相手强さ + 3) * (-RAND:4 - 8) * ABL:MASTER:战斗能力 / 2
		相手修正值 = (ABL:MASTER:战斗能力 - 相手强さ + 3) * (RAND:4 + 8) * 相手强さ / 2
	ELSEIF (相手强さ - ABL:MASTER:战斗能力) > 0
		プレイヤー修正值 = (相手强さ - ABL:MASTER:战斗能力 + 3) * (RAND:4 + 8) * ABL:MASTER:战斗能力 / 2
		相手修正值 = (相手强さ - ABL:MASTER:战斗能力 + 3) * (-RAND:4 - 8) * 相手强さ / 2
	ELSE
		プレイヤー修正值 = 0
		相手修正值 = 0
	ENDIF
	
	;イベント用
	プレイヤー修正值 -= (HANDICAP_FIXED + TFLAG:GipsLV)
	プレイヤー修正值 -= RAND:(HANDICAP_RAND + TFLAG:GipsLV * ABL:MASTER:战斗能力 + 1)
	;【言笑自若】の效果
	SIF GETBIT(CFLAG:OPPONENT:弹幕特能, 0)
		プレイヤー骰子数 -= (相手强さ / 2 + RAND:3 + 1) * RAND:2
	SIF GETBIT(CFLAG:OPPONENT:弹幕特能, 0)
		相手骰子数 -= (ABL:MASTER:战斗能力 / 2 + RAND:3 + 1) * RAND:2
	;【温柔敦厚】の效果
	SIF GETBIT(CFLAG:OPPONENT:弹幕特能, 1)
		プレイヤー骰子面 -= (相手强さ / 2 + 1) * RAND:4 + RAND:5
	SIF GETBIT(CFLAG:OPPONENT:弹幕特能, 1)
		相手骰子面 -= (ABL:MASTER:战斗能力 / 2 + 1) * RAND:4 + RAND:5
	;【勇气凛々】の效果
	SIF GETBIT(CFLAG:OPPONENT:弹幕特能, 2)
		相手骰子数 += (相手强さ / 2 + RAND:3 + 2) * RAND:2
	SIF GETBIT(CFLAG:OPPONENT:弹幕特能, 2)
		プレイヤー骰子数 += (ABL:MASTER:战斗能力 / 2 + RAND:3 + 2) * RAND:2
	;【豪放磊落】の效果
	SIF GETBIT(CFLAG:OPPONENT:弹幕特能, 3)
		相手骰子面 += 相手强さ * 2 + 6 / (RAND:3 + 1)
	SIF GETBIT(CFLAG:OPPONENT:弹幕特能, 3)
		プレイヤー骰子面 += ABL:MASTER:战斗能力 * 2 + 6 / (RAND:3 + 1)
	;【狷介孤高】の效果
	SIF GETBIT(CFLAG:OPPONENT:弹幕特能, 8)
		相手修正值 += 相手强さ * (RAND:5 + 5) + RAND:5
	SIF GETBIT(CFLAG:OPPONENT:弹幕特能, 8)
		プレイヤー修正值 += ABL:MASTER:战斗能力 * (RAND:5 + 5) + RAND:5
	;【幽愁暗恨】の效果
	SIF GETBIT(CFLAG:OPPONENT:弹幕特能, 9)
		プレイヤー修正值 -= 相手强さ * (RAND:4 + 4) + RAND:9
	SIF GETBIT(CFLAG:OPPONENT:弹幕特能, 9)
		相手修正值 -= ABL:MASTER:战斗能力 * (RAND:4 + 4) + RAND:9
	;【灵力充填】の效果
	IF 灵力充填フラグ
		Charge = 相手强さ / 2 + 1
		プレイヤー骰子数 += Charge
		CALL COLORMESSAGE(@"因为【灵力充填】、骰子数上升了{Charge}！",C_RED,1)
		Charge = (相手强さ / 2 + 1) * 2
		プレイヤー骰子面 += Charge
		CALL COLORMESSAGE(@"因为【灵力充填】、骰子面上升了{Charge}！",C_RED,1)
		Charge = 相手强さ * (RAND:3 + 2)
		プレイヤー修正值 += Charge
		CALL COLORMESSAGE(@"因为【灵力充填】、修正值上升了{Charge}！",C_RED,1)
		灵力充填フラグ = 0
	ENDIF

	;【国士无双（药）】使用中　残りHP增大・骰子面に补正
	SIF TCVAR:MASTER:国士无双（药）
		プレイヤー骰子面 += MAX(RAND:(MAX((TCVAR:MASTER:国士无双（药）), 1) * 2), 1)
	
	;战斗Buffの效果（プレイヤーと对战相手两方）
	SIF TCVAR:MASTER:魔性
		プレイヤー修正值 += ABL:MASTER:战斗能力 * RAND:3 + RAND:3
	SIF TCVAR:OPPONENT:魔性
		相手修正值 += 相手强さ * RAND:3 + RAND:3
	SIF TCVAR:MASTER:加护
		相手修正值 -= ABL:MASTER:战斗能力 * RAND:3 + RAND:3
	SIF TCVAR:OPPONENT:加护
		プレイヤー修正值 -= 相手强さ * RAND:3 + RAND:3

	;弹幕胜负补助道具の效果
	CALL DANMAKU_ITEM_EFFECT(持ち込み道具)
	プレイヤー骰子面 += RESULT:0
	プレイヤー骰子数 += RESULT:1
	;念のためリセット
	VARSET RESULT
	プレイヤー骰子数 = MAX(プレイヤー骰子数, 1)
	相手骰子数 = MAX(相手骰子数, 1)
	プレイヤー骰子面 = MAX(プレイヤー骰子面, 1)
	相手骰子面 = MAX(相手骰子面, 1)
		
	PRINTL 
	PRINTFORML -----------------------------------------------------
	PRINTFORML TURN:{ターン数}
	PRINTFORML -----------------------------------------------------
	PRINTL 

		IF PANGCI
		己当前波动 = RAND:(己波动 + 1)
		敌当前波动 = RAND:(敌波动 + 1)
		IF 己特殊技能 == 1 && RAND:10 + 1 < 4
			技能值 = 1
		ELSEIF 己特殊技能 == 2 && RAND:10 + 1 < 3
			技能值 = 1
		ELSEIF 己特殊技能 == 3 && RAND:10 + 1 < 5
			技能值 = 1
		ELSE
			技能值 = 0
		ENDIF
	ENDIF

	
	CALL DICE_PRINT(プレイヤー骰子数, プレイヤー骰子面, プレイヤー修正值, 相手骰子数, 相手骰子面, 相手修正值, "确定前")
	PRINTFORMW 命运的骰子开始滚动！！
	;イベント用
	IF (HANDICAP_FIXED || HANDICAP_RAND)
		CALL KOJO_MESSAGE_SEND("DANMAKU", 相手残机, OPPONENT, ENEMY, -1, "ハンデ")
	ENDIF
	;骰子值计算
	プレイヤー骰子值 = DICE_VALUE(プレイヤー骰子数, プレイヤー骰子面, プレイヤー修正值)
	相手骰子值 = DICE_VALUE(相手骰子数, 相手骰子面, 相手修正值)
	LOCAL = 相手骰子值 - プレイヤー骰子值
	
	;持ち込み道具【弹丸魔像】の效果　基本骰子差を0.8倍に
	SIF LOCAL && 持ち込み道具 == 854
		TIMES LOCAL, 0.8
	
	CALL DICE_PRINT(プレイヤー骰子值, 0, 0, 相手骰子数, 相手骰子面, 相手修正值, "确定后")
	$BEFORE_BATTLE
	PRINTL 
	PRINTFORML 剩余HP: {残りHP}   剩余B使用回数: {残りＢ回数}   B威力: Min:{B_Min}, Max:{B_Max}   剩余残机: {プレイヤー残机}
	
	IF 持ち込み道具
		SETCOLOR 0x666666
		PRINTFORML   （持有的道具: %ITEMNAME:持ち込み道具% …%DANMAKU_ITEM_EXPLANATION(持ち込み道具)%）
	ENDIF

	IF TCVAR:MASTER:国士无双（药）
		SETCOLOR 0x666666
		PRINTFORML   （效果发挥中: 国士无双的药　　…骰子面轻微的变好了）
	ENDIF
	
	IF TCVAR:MASTER:魔性
		SETCOLOR 0x666666
		PRINTFORML   （Buff效果: 魔性　　…骰子修正值Up）
	ENDIF
	IF TCVAR:MASTER:加护
		SETCOLOR 0x666666
		PRINTFORML   （Buff效果: 加护　　…对手的骰子修正值Down）
	ENDIF
	IF TCVAR:OPPONENT:魔性
		SETCOLOR 0xc86666
		PRINTFORML   （对手的Buff效果: 魔性　　…对手的骰子修正值Up）
	ENDIF
	IF TCVAR:OPPONENT:加护
		SETCOLOR 0xc86666
		PRINTFORML   （对手的Buff效果: 加护　　…骰子修正值Down）
	ENDIF
	RESETCOLOR
	
	CALL ASK_M("专心回避", 1, "一决胜负", 1)
	SELECTCASE RESULT
		CASE 0
			;【灵力充填】の效果
			IF TALENT:MASTER:灵力充填 == 1
				灵力充填フラグ = 1
				CALL COLORMESSAGE(@"%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%的【灵力充填】发动！",C_RED,2)
			ENDIF
			PRINTFORML 专心回避弹幕
			PRINTFORMW ・・・
			PRINTL 
			CALL DICE_PRINT(プレイヤー骰子值, 相手骰子值, 0, 0, 0, 0, "胜负")
			PRINTW 
			;【弹丸魔像】の效果  回避选择时はさらに0.9倍（トータル0.72倍程度に）
			IF LOCAL && 持ち込み道具 == 855
				TIMES LOCAL, 0.9
				PRINTFORML 魔像格雷姆作为盾挡住了弹幕…！
			ENDIF
			$UseEpitaph
			;【熟悉擦弹】の效果
			IF TALENT:MASTER:熟悉擦弹 == 1
				IF ABL:MASTER:战斗能力 < 3
					LOCAL = (LOCAL * 2) / (ABL:MASTER:战斗能力 + 2)
				ELSE
					LOCAL = (LOCAL * 3) / (ABL:MASTER:战斗能力 + 3)
				ENDIF
			ENDIF
			DamageThreshold = MAX(ABL:MASTER:战斗能力 / 2, 1)
			IF LOCAL <= 20 * DamageThreshold
				PRINTFORML 几乎没有受到伤害
				SIF LOCAL > 0
					残りHP -= LOCAL * 4
			ELSEIF LOCAL <= 50 * DamageThreshold
				PRINTFORML 受到了一点伤害
				残りHP -= LOCAL * 5
			ELSEIF LOCAL <= 150 * DamageThreshold
				PRINTFORML 受到了不少伤害
				残りHP -= LOCAL * 6
			ELSE
				PRINTFORML 受到了大量伤害
				残りHP = 残りHP - MAXBASE:MASTER:体力 / 2 + 1
			ENDIF
			PRINTFORMW 剩余HP: {残りHP}
			IF 残りHP <= 0
				Pichun = 1
			ENDIF
		CASE 1
		IF PANGCI
			CALL CHECKPANGCISKILL(OPPONENT, 敌特殊技能, 相手强さ, 相手残机, 相手骰子值, プレイヤー骰子值)
		ENDIF
			;【乾坤一掷】の效果
			IF GETBIT(CFLAG:OPPONENT:弹幕特能, 7)
				IF RAND:100 + 1 < 10 + 相手强さ * 2
					LOCAL:1 = 相手强さ * (7 + RAND:5) * (相手强さ / 2 + 1) + RAND:7
					相手骰子值 += LOCAL:1
					SETCOLOR C_RED
						PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", OPPONENT)%的【乾坤一掷】发动！
						PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", OPPONENT)%的骰子值+{LOCAL:1}了！
					RESETCOLOR
					;口上呼び出し
					CALL KOJO_MESSAGE_SEND("DANMAKU", 相手残机, OPPONENT, ENEMY, -1, "乾坤一掷")
				ENDIF
			ENDIF
			IF GETBIT(CFLAG:MASTER:弹幕特能, 7)
				IF RAND:100 + 1 < 10 + ABL:MASTER:战斗能力 * 2
					LOCAL:1 = ABL:MASTER:战斗能力 * (7 + RAND:5) * (ABL:MASTER:战斗能力 / 2 + 1) + RAND:7
					プレイヤー骰子值 += LOCAL:1
					SETCOLOR C_RED
						PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%的【乾坤一掷】发动！
						PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%的骰子值+{LOCAL:1}了！
					RESETCOLOR
					;口上呼び出し
					;CALL KOJO_MESSAGE_SEND("DANMAKU", 相手残机, MASTER, ENEMY, -1, "乾坤一掷")
				ENDIF
			ENDIF
			LOCAL = 相手骰子值 - プレイヤー骰子值
			IF 残りＢ回数 >= 1
				PRINTFORML 要用B吗？
				CALL ASK_M("使用", 1, "不使用", 1)
				SELECTCASE RESULT
					CASE 0
						CALL UseBomb
						BombPower = RESULT
						プレイヤー骰子值 += BombPower
						PRINTFORMW 骰子值变成{プレイヤー骰子值}了！
						残りＢ回数 --
						LOCAL = 相手骰子值 - プレイヤー骰子值
					CASE 1
						
				ENDSELECT
			ENDIF
			PRINTFORML 一决胜负！
			PRINTFORMW ・・・
			PRINTL 
