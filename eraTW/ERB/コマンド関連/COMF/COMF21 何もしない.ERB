@COM21
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = -1

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力(时间停止时は消费しない
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 10
ELSE
	DOWNBASE:体力 += 10
	DOWNBASE:气力 += 10

	SOURCE:情爱 = 10
	SOURCE:露出 = 10
	SOURCE:偏离正轨 = 10

	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;苦痛を伴わない受虐属性及び受虐狂の伴う处理は先にしておく
	;受虐属性を见る
	SELECTCASE ABL:受虐属性
		CASE 0
			TIMES SOURCE:露出 , 0.80
			SOURCE:液体 += 0
			SOURCE:情欲 += 0
		CASE 1
			TIMES SOURCE:露出 , 1.00
			SOURCE:液体 += 20
			SOURCE:情欲 += 30
		CASE 2
			TIMES SOURCE:露出 , 1.20
			SOURCE:液体 += 40
			SOURCE:情欲 += 70
		CASE 3
			TIMES SOURCE:露出 , 1.40
			SOURCE:液体 += 70
			SOURCE:情欲 += 120
		CASE 4
			TIMES SOURCE:露出 , 1.50
			SOURCE:液体 += 110
			SOURCE:情欲 += 180
		CASE 5
			TIMES SOURCE:露出 , 1.70
			SOURCE:液体 += 150
			SOURCE:情欲 += 250
		CASE 6
			TIMES SOURCE:露出 , 1.90
			SOURCE:液体 += 200
			SOURCE:情欲 += 300
		CASE 7
			TIMES SOURCE:露出 , 2.10
			SOURCE:液体 += 250
			SOURCE:情欲 += 350
		CASE 8
			TIMES SOURCE:露出 , 2.30
			SOURCE:液体 += 300
			SOURCE:情欲 += 400
		CASE 9
			TIMES SOURCE:露出 , 2.50
			SOURCE:液体 += 350
			SOURCE:情欲 += 450
		CASEELSE
			TIMES SOURCE:露出 , 3.00
			SOURCE:液体 += 500
			SOURCE:情欲 += 500
	ENDSELECT

	;受虐狂を见る
	IF TALENT:受虐狂
		TIMES SOURCE:露出 , 2.50
		TIMES SOURCE:液体 , 1.20
		TIMES SOURCE:情欲 , 1.20
	ENDIF
ENDIF
RETURN 1

