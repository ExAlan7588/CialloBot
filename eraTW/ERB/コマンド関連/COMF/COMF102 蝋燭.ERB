;-------------------------------------------------
;蜡烛
;SM系指令、レベル3
;-------------------------------------------------
@COM102
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
ITEM:46 --
;自动补充
IF !ITEM:46 && MONEY >= 2000 && FLAG:1001
	MONEY -= 2000
	ITEM:46 ++
ENDIF
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 40
	SOURCE:苦痛 = 1000

ELSE

	DOWNBASE:体力 += 40
	DOWNBASE:气力 += 30

	SOURCE:苦痛 = 2000
	SOURCE:恐怖 = 3000
	SOURCE:偏离正轨 = 150
	SOURCE:反感 = 700
ENDIF
;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;苦痛のパラメータによる苦痛のソース增加は先に处理しておく
SOURCE:苦痛 = SOURCE:苦痛 * (10 + 5 * MAX(GETPALAMLV(PALAM:苦痛,5) - 1, 0)) / 10

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;同性爱　レズなら返回值1ゲイなら返回值2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 2
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 2
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 2
	ENDIF
ENDIF

EXP:PLAYER:嗜虐快乐经验 += 1

RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE102
;蜡烛实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(102)
	RETURN RESULT
;道具を持っているか、道具无设定でないとダメ
SIF ITEM:46 == 0 && NOITEM == 0
	RETURN 0
;顺从4未满のASSIの场合蜡烛はできない（施虐狂ならＯＫ）
IF ASSIPLAY
	SIF ABL:ASSI:顺从 < 4 && TALENT:ASSI:施虐狂 == 0
		RETURN 0
ENDIF
;全裸でないとダメ（袜子、特殊は除く）
SIF TEQUIP:0 || TEQUIP:1
	RETURN 0
;浴室PLAY中はダメ
SIF TEQUIP:31
	RETURN 0
;新妻PLAY中はダメ
SIF TEQUIP:33
	RETURN 0
;ベッドルームでないとダメ
SIF !BEDROOM(CFLAG:PLAYER:当前位置)
	RETURN 0
RETURN 1

