[SKIPSTART]
;--------------------------------------------
;基本条件いろいろ(6)
;--------------------------------------------
@IRAI_SETTING_5

IRAI_SETTING_DEADLINE:5 = 0
IRAI_SETTING_TARGET:5 = 1
IRAI_SETTING_CLIENT:5 = 1

IRAI_SETTING_COMMANDNAME:5 = 送出酒水


;--------------------------------------------
;依赖发生时のメッセージ
;--------------------------------------------
@IRAI_INITIALMESSAGE_5
PRINTFORML 「能不能帮忙提供些宴会用的酒呢」
PRINTFORML 依赖内容：提供酒(10份)
PRINTFORML 报酬　　：宴会规模提高

;--------------------------------------------
;依赖实行时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_CARRYOUT_5
PRINTL 要交出什么呢？
CALL 酒一览表示(10)
IF RESULT >= 51 && RESULT <= 53
	PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%把酒交给了%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%
	ITEM:RESULT -= 10
	FLAG:宴会礼品 = RESULT
ELSE
	RETURN -1
ENDIF

;--------------------------------------------
;依赖失败时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_FAILED_5
;システムメッセージつき好感度变化
;最后の参数だけ好感度が变化
CALL CHANGE_CFLAG(2,TARGET,-30)

;システムメッセージつき信赖度变化
;最后の参数だけ信赖度が变化
CALL CHANGE_CFLAG(4,TARGET,-10)
;--------------------------------------------
;依赖达成时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_SUCCESS_5
PRINTFORML 「得救了」
;システムメッセージつき好感度变化
;最后の参数だけ好感度が变化
CALL CHANGE_CFLAG(2,TARGET,50)

;システムメッセージつき信赖度变化
;最后の参数だけ信赖度が变化
CALL CHANGE_CFLAG(4,TARGET,20)

;--------------------------------------------
;依赖实行条件
;--------------------------------------------
@IRAI_ACTABLE_5
SIF SHIRAHU(TARGET) == 1 && MAX(ITEM:51,ITEM:52,ITEM:53) > 9
	RETURN 1

;--------------------------------------------
;依赖发生条件
;--------------------------------------------
@IRAI_HAPPEN_5
SIF FLAG:宴会举办FLAG == 1
	RETURN 1

;--------------------------------------------
;依赖消灭条件
;--------------------------------------------
@IRAI_VANISH_5
SIF FLAG:宴会举办FLAG == 1 && !DAY % 7
	RETURN 1
[SKIPEND]
