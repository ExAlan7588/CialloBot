[SKIPSTART]
;--------------------------------------------
;基本条件いろいろ
;--------------------------------------------
@IRAI_SETTING_2

IRAI_SETTING_DEADLINE:2 = 7
IRAI_SETTING_TARGET:2 = 11
IRAI_SETTING_CLIENT:2 = 1

IRAI_SETTING_COMMANDNAME:2 = 送回遗失物


;--------------------------------------------
;依赖发生时のメッセージ
;--------------------------------------------
@IRAI_INITIALMESSAGE_2
PRINTFORML 「魔理沙把东西落下了」
PRINTFORML 依赖内容：把失物还给魔理沙
PRINTFORML 报酬　　：%金额表示(500)%
;--------------------------------------------
;依赖实行时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_CARRYOUT_2
SOURCE:欢乐 = 500
PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%把遗落的东西送到了%NAME_OUTPUT_TRANSLATION("CALLNAME", 11)%手上
;システムメッセージつき好感度变化
;最后の参数だけ好感度が变化
CALL CHANGE_CFLAG(2,11,20)

;システムメッセージつき信赖度变化
;最后の参数だけ信赖度が变化
CALL CHANGE_CFLAG(4,11,10)
;--------------------------------------------
;依赖失败时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_FAILED_2
PRINTFORML 「我已经送过去了哦」
CALL CHANGE_CFLAG(2,TARGET,-10)
CALL CHANGE_CFLAG(4,TARGET,-10)
;--------------------------------------------
;依赖达成时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_SUCCESS_2
PRINTFORML 「谢谢你、帮上大忙了」
MONEY += 500
SOURCE:TARGET:欢乐 += 1000
;システムメッセージつき好感度变化
;最后の参数だけ好感度が变化
CALL CHANGE_CFLAG(2,TARGET,20)

;システムメッセージつき信赖度变化
;最后の参数だけ信赖度が变化
CALL CHANGE_CFLAG(4,TARGET,10)
;--------------------------------------------
;依赖实行条件
;--------------------------------------------
@IRAI_ACTABLE_2
SIF SHIRAHU(TARGET) == 1
	RETURN 1

;--------------------------------------------
;依赖发生条件
;--------------------------------------------
@IRAI_HAPPEN_2
SIF (GET_MAPID(CFLAG:11:当前位置) != 0 || (FLAG:扮演 != 11 && !CFLAG:11:出禁)) && !RAND:10
	RETURN 1

;--------------------------------------------
;依赖消灭条件
;--------------------------------------------
@IRAI_VANISH_2
SIF !RAND:3
	RETURN 1
[SKIPEND]
