@固有依赖14(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE ARG % 1000
;ID101：来ー！玩ー！吧ー！
CASE 101
	SELECTCASE O_DATA
	CASE "依赖名"
		CALLF MAKE_STR(V_NAME, "来ー！玩ー！吧ー！")
	CASE "依赖内容表示"
		CALLF MAKE_STR(V_NAME, "一起玩")
	CASE "依赖报酬表示"
		CALLF MAKE_STR(V_NAME, "好东西")
	CASE "依赖实行指令名"
		CALLF MAKE_STR(V_NAME, "陪着玩")
		
	CASE "依赖内容"
		CALLF MAKE_INT(V_NAME, MAKE_IRAI_DATA(0, "作业"))
	CASE "依赖サブ"
	CASE "依赖期限"
	CASE "依赖发生率"
	;これは他の固有依赖との相对概率なんで10％ではありません
		CALLF MAKE_INT(V_NAME, 10)
	CASE "依赖发生条件"
		CALLF MAKE_INT(V_NAME, 1)
	CASE "依赖受托可能条件"
	;受托可能は@COM_ABLE366も确认のこと
	;ここを参照するのは依赖人をTARGETにしてる时なので素通しでよし
		CALLF MAKE_INT(V_NAME, 1)
	CASE "依赖实行可能条件"
	;实行可能は@COM_ABLE367も确认のこと
		IF SHIRAHU(TARGET) != 1
		ELSE
			CALLF MAKE_INT(V_NAME, 1)
		ENDIF
	;成功/失败处理はCARRYOUTで直接书く
	;SOURCEやITEM入手など、内容が复杂なので
	CASE "依赖消灭条件"
	;30％で消失
		SIF RAND:100 < 30
			CALLF MAKE_INT(V_NAME, 1)
	ENDSELECT
ENDSELECT



;固有依赖の设定用
;この函数は实行/成功/失败时の
;报酬とペナルティと地の文のみを扱います
;各角色のメッセージは别所にて
@IRAI_固有14(CHARA, IRAI_ID, SCENE)
#DIM  CHARA
#DIM  IRAI_ID
#DIMS SCENE
#DIM  CLIENT_ID
CLIENT_ID = IRAI_ID_TO_CLIENT(IRAI_ID)
SELECTCASE STR_DATA_IRAI(IRAI_ID, "依赖名", CLIENT_ID)
;个々の依赖名で分岐
CASE "来ー！玩ー！吧ー！"
	SELECTCASE SCENE
	CASE "依赖条件表示"
	;何か専用の表示情报を设けたい时用
	;受托済みの依赖表示で使用されます
	;
	;PRINT系だけでSOURCEとかは入れちゃダメ、WAITも无しで
	;ここ以外の表示项目は
	;PRINTFORML 　　　　　：
	;となっているのでスペースを揃えたほうが见栄えが良いです
	
	CASE "依赖实行时"
	;このCASEに限り、RESULTが意味を持ちます
	;依赖实行时のRESULTにはIRAI_CONST_RESULT()を使用してください
	;可能な参数は"中止", "实行して成功", "实行して失败", "实行して未解决"です
	;独自处理を仕込みたい时は"实行して未解决"で先延ばしするなりしてください
		SOURCE:欢乐 = 1500
		PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%和%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%玩了投接球游戏
		PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%终始带着天真的笑容
		PRINTL
		TIME += 20
		DOWNBASE:体力 = 150
		DOWNBASE:气力 = 100
		DOWNBASE:MASTER:体力 = 150
		DOWNBASE:MASTER:气力 = 100
		RETURN IRAI_CONST_RESULT("实行して成功")
	CASE "依赖成功时"
	;成功报告时の报酬など
		TALENT:TARGET:心情 = LIMIT(TALENT:心情 + 1, -1, 1)
		CALL CHANGE_CFLAG(2, 14, 30)
		CALL CHANGE_CFLAG(4, 14, 15)
		CALL GET_ITEM("青蛙", 1, 1)
		PRINTFORMW ……这个青蛙、要怎么办？
	CASE "依赖失败时"
	;失败报告时の处理
	ENDSELECT
ENDSELECT
