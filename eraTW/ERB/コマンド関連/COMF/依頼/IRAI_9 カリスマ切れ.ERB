[SKIPSTART]
;--------------------------------------------
;基本条件いろいろ
;--------------------------------------------
@IRAI_SETTING_9

IRAI_SETTING_DEADLINE:9 = 3
IRAI_SETTING_TARGET:9 = 23
IRAI_SETTING_CLIENT:9 = 23

IRAI_SETTING_COMMANDNAME:9 = 送出筹码


;--------------------------------------------
;依赖发生时のメッセージ
;--------------------------------------------
@IRAI_INITIALMESSAGE_9
PRINTFORML 「不小心用光了筹码……能提供100筹码通融一下么？」
PRINTFORML 依赖内容：交出100筹码
PRINTFORML 报酬　　：%金额表示(20000)%
;--------------------------------------------
;依赖实行时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_CARRYOUT_9
SOURCE:欢乐 = 3000
MONEY:2 -= 100

;--------------------------------------------
;依赖失败时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_FAILED_9
PRINTFORML 「对不起、已经够了」
CALL CHANGE_CFLAG(2,TARGET,-10)
CALL CHANGE_CFLAG(4,TARGET,-10)
;--------------------------------------------
;依赖达成时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_SUCCESS_9
PRINTFORML 「非常感谢」
MONEY += 20000

;システムメッセージつき好感度变化
;最后の参数だけ好感度が变化
CALL CHANGE_CFLAG(2,TARGET,20)

;システムメッセージつき信赖度变化
;最后の参数だけ信赖度が变化
CALL CHANGE_CFLAG(4,TARGET,10)
;--------------------------------------------
;依赖实行条件
;--------------------------------------------
@IRAI_ACTABLE_9
SIF SHIRAHU(TARGET) == 1 && MONEY:2 >= 100
	RETURN 1

;--------------------------------------------
;依赖发生条件
;--------------------------------------------
@IRAI_HAPPEN_9
SIF !RAND:15
	RETURN 1

;--------------------------------------------
;依赖消灭条件
;--------------------------------------------
@IRAI_VANISH_9
SIF !RAND:5
	RETURN 1
[SKIPEND]
