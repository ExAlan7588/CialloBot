@固有依赖30(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE ARG % 1000
;ID101：讨厌的说教
CASE 101
	SELECTCASE O_DATA
	CASE "依赖名"
		CALLF MAKE_STR(V_NAME, "讨厌的说教")
	CASE "依赖内容表示"
		CALLF MAKE_STR(V_NAME, "把映姫的信交给小町")
	CASE "依赖报酬表示"
		CALLF MAKE_STR(V_NAME, @"%金额表示(1000)%")
	CASE "依赖实行指令名"
		CALLF MAKE_STR(V_NAME, "送出信件")
		
	CASE "依赖内容"
		CALLF MAKE_INT(V_NAME, MAKE_IRAI_DATA([[小町]], "传令（人物）"))
	CASE "依赖サブ"
	CASE "依赖期限"
	;发生时ではなく受托时に确定します
	CASE "依赖发生率"
	;これは他の固有依赖との相对概率なんで10％ではありません
		CALLF MAKE_INT(V_NAME, 10)
	CASE "依赖发生条件"
		SIF CAN_MEET([[小町]])
			CALLF MAKE_INT(V_NAME, 1)
	CASE "依赖受托可能条件"
	;受托可能は@COM_ABLE366も确认のこと
		;仕事の曜日でない
		IF !YOUBI_MATCH(DAY, "月水金")
		;仕事の时间带でない
		ELSEIF !INRANGE(TIME / 60, 11, 15)
		;小町が外出Mapで三途之川、若しくはMAIN_MAPで赛河原にいる
		ELSEIF (CFLAG:[[小町]]:当前位置 == 三途之川 && MAIN_MAP != 6) || (CFLAG:[[小町]]:当前位置 == 602 && MAIN_MAP == 6)
		;小町が产假中
		ELSEIF CFLAG:[[小町]]:产假中
		;上记の条件を抜けた场合、サボり认定とする
		ELSE
			CALLF MAKE_INT(V_NAME, 1)
		ENDIF
	CASE "依赖实行可能条件"
	;实行可能は@COM_ABLE367も确认のこと
		CALLF MAKE_INT(V_NAME, 1)
	;成功/失败处理はCARRYOUTで直接书く
	;SOURCEやITEM入手など、内容が复杂なので
	CASE "依赖消灭条件"
	;30％で消失
	SIF RAND:100 < 30
		CALLF MAKE_INT(V_NAME, 1)
	ENDSELECT
ENDSELECT



;固有依赖の设定用
;この函数は实行/成功/失败时の
;报酬とペナルティと地の文のみを扱います
;各角色のメッセージは别所にて
@IRAI_固有30(CHARA, IRAI_ID, SCENE)
#DIM  CHARA
#DIM  IRAI_ID
#DIMS SCENE
#DIM  CLIENT_ID
CLIENT_ID = IRAI_ID_TO_CLIENT(IRAI_ID)
SELECTCASE STR_DATA_IRAI(IRAI_ID, "依赖名", CLIENT_ID)
;个々の依赖名で分岐
CASE "讨厌的说教"
	SELECTCASE SCENE
	CASE "依赖条件表示"
	;何か専用の表示情报を设けたい时用
	;受托済みの依赖表示で使用されます
	;
	;PRINT系だけでSOURCEとかは入れちゃダメ、WAITも无しで
	;ここ以外の表示项目は
	;PRINTFORML 　　　　　：
	;となっているのでスペースを揃えたほうが见栄えが良いです
	
	CASE "依赖实行时"
	;このCASEに限り、RESULTが意味を持ちます
	;依赖实行时のRESULTにはIRAI_CONST_RESULT()を使用してください
	;可能な参数は"中止", "实行して成功", "实行して失败", "实行して未解决"です
	;独自处理を仕込みたい时は"实行して未解决"で先延ばしするなりしてください
		PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%把映姫的信交给了%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%
		SIF DIARY:30:8 == 0
			CALL K30_WRITE_DIARY(8)
		SOURCE:恐怖 = 100
		SOURCE:屈从 = 500
		CALL CHANGE_CFLAG(4, TARGET, 3)
		RETURN IRAI_CONST_RESULT("实行して成功")
	CASE "依赖成功时"
	;成功报告时の报酬など
		;システムメッセージつき好感度变化
		;最后の参数だけ好感度が变化
		CALL CHANGE_CFLAG(2, TARGET, 20)
		;システムメッセージつき信赖度变化
		;最后の参数だけ信赖度が变化
		CALL CHANGE_CFLAG(4, TARGET, 15)
		CALL GET_MONEY_YEN(1000, 2)
	CASE "依赖失败时"
	;失败报告时の处理
		;システムメッセージつき好感度变化
		;最后の参数だけ好感度が变化
		CALL CHANGE_CFLAG(2, TARGET, -20)
		;システムメッセージつき信赖度变化
		;最后の参数だけ信赖度が变化
		CALL CHANGE_CFLAG(4, TARGET, -10)
	ENDSELECT
ENDSELECT
