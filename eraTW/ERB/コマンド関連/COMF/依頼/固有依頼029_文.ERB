@固有依赖29(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE ARG % 1000
;ID101：请给我酒
CASE 101
	SELECTCASE O_DATA
	CASE "依赖名"
		CALLF MAKE_STR(V_NAME, "请给我酒")
	CASE "依赖内容表示"
		CALLF MAKE_STR(V_NAME, "提供三瓶以上的酒")
	CASE "依赖报酬表示"
		CALLF MAKE_STR(V_NAME, @"%金额表示(5000)%")
	CASE "依赖实行指令名"
		CALLF MAKE_STR(V_NAME, "送出酒水")
		
	;依赖目标对象が实行时に决定するので
	;とりあえず作业にしてCLIENTとの同室判定だけさせるよ
	CASE "依赖内容"
		CALLF MAKE_INT(V_NAME, MAKE_IRAI_DATA(0, "作业"))
	CASE "依赖サブ"
	CASE "依赖期限"
	;发生时ではなく受托时に确定します
		CALLF MAKE_INT(V_NAME, 8)
	CASE "依赖发生率"
	;これは他の固有依赖との相对概率なんで10％ではありません
		CALLF MAKE_INT(V_NAME, 10)
	CASE "依赖发生条件"
		CALLF MAKE_INT(V_NAME, 1)
	CASE "依赖受托可能条件"
	;受托可能は@COM_ABLE366も确认のこと
	;ここを参照するのは依赖人をTARGETにしてる时なので素通しでよし
		CALLF MAKE_INT(V_NAME, 1)
	CASE "依赖实行可能条件"
	;实行可能は@COM_ABLE367も确认のこと
		SIF MAX(ITEM:51, ITEM:52, ITEM:53) >= 3
			CALLF MAKE_INT(V_NAME, 1)
	;成功/失败处理はCARRYOUTで直接书く
	;SOURCEやITEM入手など、内容が复杂なので
	CASE "依赖消灭条件"
	;30％で消失
		SIF RAND:100 < 30
			CALLF MAKE_INT(V_NAME, 1)
	ENDSELECT
;ID102：街头问卷
CASE 102
	SELECTCASE O_DATA
	CASE "依赖名"
		CALLF MAKE_STR(V_NAME, "街头问卷")
	CASE "依赖内容表示"
		CALLF MAKE_STR(V_NAME, "人间之里广场的问卷调查")
	CASE "依赖报酬表示"
		CALLF MAKE_STR(V_NAME, @"\\3000")
	CASE "依赖实行指令名"
		CALLF MAKE_STR(V_NAME, "街头问卷")
		
	CASE "依赖内容"
		;人里中央广场(202)が对象
		CALLF MAKE_INT(V_NAME, MAKE_IRAI_DATA(202, "传令（场所）"))
	CASE "依赖サブ"
	CASE "依赖期限"
	;发生时ではなく受托时に确定します
		CALLF MAKE_INT(V_NAME, 7)
	CASE "依赖发生率"
	;これは他の固有依赖との相对概率なんで10％ではありません
		CALLF MAKE_INT(V_NAME, 10)
	CASE "依赖发生条件"
		CALLF MAKE_INT(V_NAME, 1)
	CASE "依赖受托可能条件"
	;受托可能は@COM_ABLE366も确认のこと
	;ここを参照するのは依赖人をTARGETにしてる时なので素通しでよし
		CALLF MAKE_INT(V_NAME, 1)
	CASE "依赖实行可能条件"
	;实行可能は@COM_ABLE367も确认のこと
		IF FLAG:70
		ELSE
			CALLF MAKE_INT(V_NAME, 1)
		ENDIF
	;成功/失败处理はCARRYOUTで直接书く
	;SOURCEやITEM入手など、内容が复杂なので
	CASE "依赖消灭条件"
	;30％で消失
		SIF RAND:100 < 30
			CALLF MAKE_INT(V_NAME, 1)
	ENDSELECT
ENDSELECT



;固有依赖の设定用
;この函数は实行/成功/失败时の
;报酬とペナルティと地の文のみを扱います
;各角色のメッセージは别所にて
@IRAI_固有29(CHARA, IRAI_ID, SCENE)
#DIM  CHARA
#DIM  IRAI_ID
#DIMS SCENE
#DIM  CLIENT_ID
CLIENT_ID = IRAI_ID_TO_CLIENT(IRAI_ID)
SELECTCASE STR_DATA_IRAI(IRAI_ID, "依赖名", CLIENT_ID)
;个々の依赖名で分岐
CASE "请给我酒"
	SELECTCASE SCENE
	CASE "依赖条件表示"
	;何か専用の表示情报を设けたい时用
	;受托済みの依赖表示で使用されます
	;
	;PRINT系だけでSOURCEとかは入れちゃダメ、WAITも无しで
	;ここ以外の表示项目は
	;PRINTFORML 　　　　　：
	;となっているのでスペースを揃えたほうが见栄えが良いです
	
	CASE "依赖实行时"
	;このCASEに限り、RESULTが意味を持ちます
	;依赖实行时のRESULTにはIRAI_CONST_RESULT()を使用してください
	;可能な参数は"中止", "实行して成功", "实行して失败", "实行して未解决"です
	;独自处理を仕込みたい时は"实行して未解决"で先延ばしするなりしてください
		PRINTL 要交出什么呢？
		CALL 酒一览表示(3)
		IF INRANGE(RESULT, 51, 53)
			PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%把酒交给了%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%
			;TFLAGに渡した酒番号を保存。报酬などを分岐させたい场合に。
			TFLAG:194 = RESULT
			LOCALS = %ITEMNAME:RESULT%
			CALL LOST_ITEM(LOCALS, 3, 2)
			RETURN IRAI_CONST_RESULT("实行して成功")
		ELSE
			RETURN IRAI_CONST_RESULT("中止")
		ENDIF
	CASE "依赖成功时"
	;成功报告时の报酬など
		CALL KIGEN_CHANGE(TARGET, 100, 1)
		SOURCE:TARGET:欢乐 += 2000
		;システムメッセージつき好感度变化
		;最后の参数だけ好感度が变化
		CALL CHANGE_CFLAG(2, TARGET, 30)
		;システムメッセージつき信赖度变化
		;最后の参数だけ信赖度が变化
		CALL CHANGE_CFLAG(4, TARGET, 10)
		CALL GET_MONEY_YEN(5000, 2)
	CASE "依赖失败时"
	;失败报告时の处理
		;システムメッセージつき好感度变化
		;最后の参数だけ好感度が变化
		CALL CHANGE_CFLAG(2, TARGET, -20)
		;システムメッセージつき信赖度变化
		;最后の参数だけ信赖度が变化
		CALL CHANGE_CFLAG(4, TARGET, -10)
	ENDSELECT
	
CASE "街头问卷"
	SELECTCASE SCENE
	CASE "依赖条件表示"
	;何か専用の表示情报を设けたい时用
	;受托済みの依赖表示で使用されます
	;
	;PRINT系だけでSOURCEとかは入れちゃダメ、WAITも无しで
	;ここ以外の表示项目は
	;PRINTFORML 　　　　　：
	;となっているのでスペースを揃えたほうが见栄えが良いです
	
	CASE "依赖实行时"
	;このCASEに限り、RESULTが意味を持ちます
	;依赖实行时のRESULTにはIRAI_CONST_RESULT()を使用してください
	;可能な参数は"中止", "实行して成功", "实行して失败", "实行して未解决"です
	;独自处理を仕込みたい时は"实行して未解决"で先延ばしするなりしてください
		DOWNBASE:MASTER:气力 += 50
		PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%拉住在村里步行的人进行着问卷调查
		TIME += 120
		RETURN IRAI_CONST_RESULT("实行して成功")
	CASE "依赖成功时"
	;成功报告时の报酬など
		CALL KIGEN_CHANGE(TARGET, 100, 1)
		SOURCE:TARGET:欢乐 = 1000
		SOURCE:TARGET:征服 = 500
		;システムメッセージつき好感度变化
		;最后の参数だけ好感度が变化
		CALL CHANGE_CFLAG(2, TARGET, 30)
		;システムメッセージつき信赖度变化
		;最后の参数だけ信赖度が变化
		CALL CHANGE_CFLAG(4, TARGET, 15)
		CALL GET_MONEY_YEN(3000, 2)
	CASE "依赖失败时"
	;失败报告时の处理
		;システムメッセージつき好感度变化
		;最后の参数だけ好感度が变化
		CALL CHANGE_CFLAG(2, TARGET, -20)
		;システムメッセージつき信赖度变化
		;最后の参数だけ信赖度が变化
		CALL CHANGE_CFLAG(4, TARGET, -10)
	ENDSELECT
ENDSELECT
