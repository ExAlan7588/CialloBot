[SKIPSTART]
;--------------------------------------------
;基本条件いろいろ(5)
;--------------------------------------------
@IRAI_SETTING_4

IRAI_SETTING_DEADLINE:4 = 8
IRAI_SETTING_TARGET:4 = 29
IRAI_SETTING_CLIENT:4 = 29

IRAI_SETTING_COMMANDNAME:4 = 送出酒水


;--------------------------------------------
;依赖发生时のメッセージ
;--------------------------------------------
@IRAI_INITIALMESSAGE_4
PRINTFORML 「有点想喝酒了呢」
PRINTFORML 「什么样的酒都行、请帮我带3瓶来吧」
PRINTFORML 「一定会有丰厚的谢礼哦、如何呢？」
PRINTFORML 依赖内容：提供三瓶以上的酒
PRINTFORML 报酬　　：%金额表示(5000)%

;--------------------------------------------
;依赖实行时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_CARRYOUT_4
PRINTL 要交出什么呢？
CALL 酒一览表示(3)
IF RESULT >= 51 && RESULT <= 53
	PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%把酒交给了%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%
	ITEM:RESULT -= 3
	;TFLAGに渡した酒番号を保存。报酬などを分岐させたい场合に。
	TFLAG:194 = RESULT
ELSE
	RETURN -1
ENDIF

;--------------------------------------------
;依赖失败时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_FAILED_4
IF TALENT:29:恋慕
	PRINTFORML 「啊呀呀、有点迟了呢。不好意思呢、%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%君」
ELSE
	PRINTFORML 「虽然不好意思、这次你有些迟了呢」
ENDIF
;システムメッセージつき好感度变化
;最后の参数だけ好感度が变化
CALL CHANGE_CFLAG(2,TARGET,-20)

;システムメッセージつき信赖度变化
;最后の参数だけ信赖度が变化
CALL CHANGE_CFLAG(4,TARGET,-10)
;--------------------------------------------
;依赖达成时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_SUCCESS_4
IF TALENT:29:恋慕
	PRINTFORML 「非常感谢、%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%君♪」
ELSE
	PRINTFORML 「非、非常感谢您」
ENDIF
CALL KIGEN_CHANGE(TARGET,100,1)
SOURCE:TARGET:欢乐 += 2000
;システムメッセージつき好感度变化
;最后の参数だけ好感度が变化
CALL CHANGE_CFLAG(2,TARGET,30)

;システムメッセージつき信赖度变化
;最后の参数だけ信赖度が变化
CALL CHANGE_CFLAG(4,TARGET,10)

MONEY += 5000
;--------------------------------------------
;依赖实行条件
;--------------------------------------------
@IRAI_ACTABLE_4
SIF SHIRAHU(TARGET) == 1 && (ITEM:51 >= 3 || ITEM:52 >= 3 || ITEM:53 >= 3)
	RETURN 1

;--------------------------------------------
;依赖发生条件
;--------------------------------------------
@IRAI_HAPPEN_4
SIF !RAND:5
	RETURN 1

;--------------------------------------------
;依赖消灭条件
;--------------------------------------------
@IRAI_VANISH_4
SIF !RAND:3
	RETURN 1
[SKIPEND]
