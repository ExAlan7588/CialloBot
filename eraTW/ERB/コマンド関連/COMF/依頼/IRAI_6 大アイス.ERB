[SKIPSTART]
;--------------------------------------------
;基本条件いろいろ(13)
;--------------------------------------------
@IRAI_SETTING_6

IRAI_SETTING_DEADLINE:6 = 0
IRAI_SETTING_TARGET:6 = 13
IRAI_SETTING_CLIENT:6 = 13

IRAI_SETTING_COMMANDNAME:6 = 送出冰淇淋


;--------------------------------------------
;依赖发生时のメッセージ
;--------------------------------------------
@IRAI_INITIALMESSAGE_6
PRINTFORML 「请帮我带冰淇淋来」
PRINTFORML 依赖内容：提供六份冰淇淋
PRINTFORML 报酬　　：%金额表示(3000)%

;--------------------------------------------
;依赖实行时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_CARRYOUT_6
PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%把冰淇淋交给了%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%
PRINTFORMW 「非常感谢♪%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%要不要也和我一起尝尝看呢？」
PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%邀请%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%同席的样子
PRINTFORML
;冰淇淋
ITEM:213 -= 6

;--------------------------------------------
;依赖失败时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_FAILED_6
;システムメッセージつき好感度变化
;最后の参数だけ好感度が变化
CALL CHANGE_CFLAG(2,TARGET,-20)

;システムメッセージつき信赖度变化
;最后の参数だけ信赖度が变化
CALL CHANGE_CFLAG(4,TARGET,-10)
;--------------------------------------------
;依赖达成时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_SUCCESS_6
SOURCE:TARGET:欢乐 += 200
SOURCE:TARGET:征服 += 300

;システムメッセージつき好感度变化
;最后の参数だけ好感度が变化
CALL CHANGE_CFLAG(2,TARGET,20)

;システムメッセージつき信赖度变化
;最后の参数だけ信赖度が变化
CALL CHANGE_CFLAG(4,TARGET,5)
MONEY += 3000

;--------------------------------------------
;依赖实行条件
;--------------------------------------------
@IRAI_ACTABLE_6
SIF SHIRAHU(TARGET) == 1 && ITEM:冰淇淋 >= 6
	RETURN 1

;--------------------------------------------
;依赖发生条件
;--------------------------------------------
@IRAI_HAPPEN_6
SIF !RAND:4
	RETURN 1


;--------------------------------------------
;依赖消灭条件
;--------------------------------------------
@IRAI_VANISH_6
RETURN 1
[SKIPEND]
