[SKIPSTART]
;--------------------------------------------
;基本条件いろいろ
;--------------------------------------------
@IRAI_SETTING_159

IRAI_SETTING_DEADLINE:159 = 7
IRAI_SETTING_TARGET:159 = 158
IRAI_SETTING_CLIENT:159 = 1

IRAI_SETTING_COMMANDNAME:159 = 送回遗失物


;--------------------------------------------
;依赖发生时のメッセージ
;--------------------------------------------
@IRAI_INITIALMESSAGE_159
PRINTFORML 「灵梦把东西落在外面了」
PRINTFORML 依赖内容：把失物还给灵梦
PRINTFORML 报酬　　：\\500
;--------------------------------------------
;依赖实行时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_CARRYOUT_159
SOURCE:欢乐 = 500
PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%把遗落的东西送到了%NAME_OUTPUT_TRANSLATION("CALLNAME", 11)%手上    
;システムメッセージつき好感度变化
;最后の参数だけ好感度が变化
CALL CHANGE_CFLAG(2,1,20)

;システムメッセージつき信赖度变化
;最后の参数だけ信赖度が变化
CALL CHANGE_CFLAG(4,1,10)
;--------------------------------------------
;依赖失败时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_FAILED_159
PRINTFORML 「我已经送过去了哦」
CALL CHANGE_CFLAG(2,TARGET,-10)
CALL CHANGE_CFLAG(4,TARGET,-10)
;--------------------------------------------
;依赖达成时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_SUCCESS_159
PRINTFORML 「谢谢你、帮上大忙了」
MONEY += 500
SOURCE:TARGET:欢乐 += 1000
;システムメッセージつき好感度变化
;最后の参数だけ好感度が变化
CALL CHANGE_CFLAG(2,TARGET,20)

;システムメッセージつき信赖度变化
;最后の参数だけ信赖度が变化
CALL CHANGE_CFLAG(4,TARGET,10)
;--------------------------------------------
;依赖实行条件
;--------------------------------------------
@IRAI_ACTABLE_159
SIF SHIRAHU(TARGET) == 1
	RETURN 1

;--------------------------------------------
;依赖发生条件
;--------------------------------------------
@IRAI_HAPPEN_159
SIF (GET_MAPID(CFLAG:1:当前位置) != 0 || (FLAG:扮演 != 1 && !CFLAG:1:出禁)) && !RAND:10
	RETURN 1

;--------------------------------------------
;依赖消灭条件
;--------------------------------------------
@IRAI_VANISH_159
SIF !RAND:3
	RETURN 1
[SKIPEND]
