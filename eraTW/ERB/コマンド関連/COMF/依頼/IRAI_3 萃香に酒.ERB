[SKIPSTART]
;--------------------------------------------
;基本条件いろいろ(4)
;--------------------------------------------
@IRAI_SETTING_3

IRAI_SETTING_DEADLINE:3 = 5
IRAI_SETTING_TARGET:3 = 10
IRAI_SETTING_CLIENT:3 = 10

IRAI_SETTING_COMMANDNAME:3 = 送出清酒


;--------------------------------------------
;依赖发生时のメッセージ
;--------------------------------------------
@IRAI_INITIALMESSAGE_3
PRINTFORML 「我想喝清酒了帮我拿一点来吧」
PRINTFORML 依赖内容：提供清酒
PRINTFORML 报酬　　：%金额表示(5000)%

;--------------------------------------------
;依赖实行时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_CARRYOUT_3
ITEM:清酒 --

;--------------------------------------------
;依赖失败时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_FAILED_3
;システムメッセージつき好感度变化
;最后の参数だけ好感度が变化
CALL CHANGE_CFLAG(2,TARGET,-50)

;システムメッセージつき信赖度变化
;最后の参数だけ信赖度が变化
CALL CHANGE_CFLAG(4,TARGET,-20)

;心情を恶化させる处理を入れてもいい
TALENT:(TARGET):心情 = LIMIT(TALENT:(TARGET):心情 -1, -1,1)
;--------------------------------------------
;依赖达成时のメッセージやソースなどの处理
;--------------------------------------------
@IRAI_SUCCESS_3
SOURCE:TARGET:欢乐 += 2000
MONEY += 5000
;システムメッセージつき好感度变化
;最后の参数だけ好感度が变化
CALL CHANGE_CFLAG(2,TARGET,30)

;システムメッセージつき信赖度变化
;最后の参数だけ信赖度が变化
CALL CHANGE_CFLAG(4,TARGET,20)

;心情をよくする处理を入れてもいい
TALENT:TARGET:心情 = LIMIT(TALENT:心情 + 1, -1, 1)
;--------------------------------------------
;依赖实行条件
;--------------------------------------------
@IRAI_ACTABLE_3
SIF SHIRAHU(TARGET) != 1
	RETURN 0
SIF !ITEM:清酒
	RETURN 0
RETURN 1
;--------------------------------------------
;依赖发生条件
;--------------------------------------------
@IRAI_HAPPEN_3
SIF !RAND:5
	RETURN 1

;--------------------------------------------
;依赖消灭条件
;--------------------------------------------
@IRAI_VANISH_3
SIF !RAND:3
	RETURN 1
[SKIPEND]
