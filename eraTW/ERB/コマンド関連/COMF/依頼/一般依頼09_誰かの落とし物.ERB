;存否函数
;F函数はTRYCALL系が使えないので通常函数で存否配列を作っちゃう
@EXIST_一般依赖9
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
;ここでARGで渡されるのはCLIENT_IDです
@一般依赖9(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "依赖名"
	CALLF MAKE_STR(V_NAME, "谁的遗失物")
CASE "依赖内容表示"
	CALLF MAKE_STR(V_NAME, @"寻找失主")
CASE "依赖报酬表示"
	CALLF MAKE_STR(V_NAME, @"上级素材")
CASE "依赖报告不要"
	CALLF MAKE_STR(V_NAME, "报告不要（接受报酬必须报告）")
CASE "依赖实行指令名"
	CALLF MAKE_STR(V_NAME, "送还遗失物")

CASE "依赖内容"
	CALLF MAKE_INT(V_NAME, MAKE_IRAI_DATA(RAND_PERSON(ARG), "捜索（人物）"))
CASE "依赖サブ"
	;パターンの设定
	CALLF MAKE_INT(V_NAME, RAND:3 + 1)
CASE "依赖期限"
	CALLF MAKE_INT(V_NAME, 10)
CASE "依赖发生率"
	CALLF MAKE_INT(V_NAME, 4)
CASE "依赖发生条件"
	SIF CFLAG:ARG:信赖度 >= 30
		CALLF MAKE_INT(V_NAME, 1)
CASE "依赖受托可能条件"
	CALLF MAKE_INT(V_NAME, 1)
CASE "依赖实行可能条件"
	CALLF MAKE_INT(V_NAME, 1)
;成功/失败处理はCARRYOUTで直接书く
;SOURCEやITEM入手、消费が烦杂になるので
CASE "依赖消灭条件"
	SIF RAND:100 < 30
		CALLF MAKE_INT(V_NAME, 1)
ENDSELECT



@IRAI_一般9(CHARA, IRAI_ID, SCENE)
#DIM  CHARA
#DIM  IRAI_ID
#DIMS SCENE
#DIM  CLIENT_ID
CLIENT_ID = IRAI_ID_TO_CLIENT(IRAI_ID)
SELECTCASE SCENE
CASE "依赖条件表示"
;何か専用の表示情报を设けたい时用
;受托済みの依赖表示で使用されます
;
;PRINT系だけでSOURCEとかは入れちゃダメ、WAITも无しで
;ここ以外の表示项目は
;PRINTFORML 　　　　　：
;となっているのでスペースを揃えたほうが见栄えが良いです

CASE "依赖实行时"
;このCASEに限り、RESULTが意味を持ちます
;依赖实行时のRESULTにはIRAI_CONST_RESULT()を使用してください
;可能な参数は"中止", "实行して成功", "实行して失败", "实行して未解决"です
;独自处理を仕込みたい时は"实行して未解决"で先延ばしするなりしてください
	PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%把保管着的遗失物交给了%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%
	PRINTFORML 
	SOURCE:恭顺 = 1500
	SOURCE:欢乐 = 1000
	CALL CHANGE_CFLAG(2, TARGET, 20)
	CALL CHANGE_CFLAG(4, TARGET, 10)
	RETURN IRAI_CONST_RESULT("实行して成功")
CASE "依赖成功时"
;成功报告时の报酬など
	SOURCE:欢乐 = 500
	CALL CHANGE_CFLAG(2, TARGET, 30)
	CALL CHANGE_CFLAG(4, TARGET, 20)
	CALL GetRandMaterial(1, 10000, 5000)
CASE "依赖失败时"
;失败报告时の处理
	CALL CHANGE_CFLAG(2, TARGET, -2)
	CALL CHANGE_CFLAG(4, TARGET, -1)
ENDSELECT
