@COM125
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = TARGET
;侍奉快乐フラグ
TCVAR:108 = 1

CSTR:PLAYER:10 += @"{TARGET}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具）
TCVAR:PLAYER:2 = 4
;强度
TCVAR:PLAYER:4 = 1500

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------

;コメントアウト状态で提出
;SOURCE:PLAYER:快Ｃ = 80
;SOURCE:PLAYER:快Ｂ = 80

;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 50
	SOURCE:PLAYER:快Ｃ = 40
	SIF GETBIT(TALENT:PLAYER:性别,0)
		SOURCE:PLAYER:快Ｂ = 40
ELSE
	DOWNBASE:体力 += 10
	DOWNBASE:气力 += 100
	SOURCE:PLAYER:快Ｃ = 40
	SIF GETBIT(TALENT:PLAYER:性别,0)
		SOURCE:PLAYER:快Ｂ = 40
	
;コメントアウト状态で提出
	;SOURCE:性行动 = 250
	;SOURCE:屈从 = 350
	;SOURCE:偏离正轨 = 100
	SOURCE:反感 = 100
	SOURCE:情爱 = 50
	
	;上のほうで计算した污れデータ
	SOURCE:不洁 = Y*80 + 50

	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	SIF TALENT:自己爱 < 0 || TALENT:抵抗
		SOURCE:郁闷 += 400
ENDIF
;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;调教者の指⇔奴隷の指的污垢が移动
STAIN:PLAYER:1 |= STAIN:1
STAIN:1 |= STAIN:PLAYER:1
;调教者のＢ⇔奴隷の指的污垢が移动
STAIN:PLAYER:5 |= STAIN:1
STAIN:1 |= STAIN:PLAYER:5
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;手淫经验;コメントアウト状态で提出
SIF !FLAG:70
	EXP:手淫经验 ++

;同性爱　レズなら返回值1ゲイなら返回值2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 2
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 2
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 2
	ENDIF
ENDIF
RETURN 1

@CAN_COM125(ARG)
SKIPDISP ARG
PRINTL 被爱抚
;-------------------------------------------------
;实行判定处理
;-------------------------------------------------
IF !FLAG:70
	A = 0
	S = 0

	;全部の命令に共通の要素を考虑
	;(顺从が高いと命令に从いやすいなど)
	CALL COM_ORDER

	;ABL:欲望
	IF ABL:欲望
		SIF S
			PRINT  + 
		A += ABL:欲望 * 1
		PRINT 欲望
		PRINTV 'LV,ABL:欲望,'(,ABL:欲望 * 1,')
		S = 1
	ENDIF
	;ABL:侍奉精神
	IF ABL:侍奉精神
		SIF S
			PRINT  + 
		A += ABL:侍奉精神 * 4
		PRINT 侍奉精神
		PRINTV 'LV,ABL:侍奉精神,'(,ABL:侍奉精神 * 4,')
		S = 1
	ENDIF

	IF MARK:快乐刻印
		SIF S
			PRINT  + 
		A += MARK:快乐刻印 * 2
		PRINT 快乐刻印
		PRINTV 'LV,MARK:快乐刻印,'(,MARK:快乐刻印 * 2,')
		S = 1
	ENDIF
	;PALAM:情欲
	IF GETPALAMLV(PALAM:情欲,5)
		SIF S
			PRINT  + 
		A += GETPALAMLV(PALAM:情欲,5) * 1
		PRINT 情欲
		PRINTV 'LV,GETPALAMLV(PALAM:情欲,5),'(,GETPALAMLV(PALAM:情欲,5) * 1,')
		S = 1
	ENDIF
	;害羞
	IF TALENT:羞耻心 > 0
		PRINT  - 
		A -= 1
		PRINT 害羞
		PRINTV '(,1,')
		S = 1
	ENDIF
	;污臭钝感
	IF TALENT:污臭耐性 > 0
		SIF S
			PRINT  + 
		A += 3
		PRINT 污臭钝感
		PRINTV '(,3,')
		S = 1
	ENDIF
	;污臭敏感
	IF TALENT:污臭耐性 < 0
		PRINT  - 
		A -= 3
		PRINT 污臭敏感
		PRINTV '(,3,')
		S = 1
	ENDIF
	;献身的
	IF TALENT:献身的
		SIF S
			PRINT  + 
		A += 6
		PRINT 献身的
		PRINTV '(,6,')
		S = 1
	ENDIF
	;否定快感（淫乱で无效）
	IF TALENT:快感应答 < 0 && !TALENT:淫乱
		PRINT  - 
		A -= 1
		PRINT 否定快感
		PRINTV '(,1,')
		S = 1
	ENDIF
	;淫乱
	IF TALENT:淫乱 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 淫乱
		PRINTV '(,5,')
		S = 5
	ENDIF
	Y = 0
	;爱液的污垢
	SIF STAIN:PLAYER:3 & 1
		Y += 1
	;精液的污垢
	SIF STAIN:PLAYER:3 & 4
		Y += 3
	;肛门的污垢
	SIF STAIN:PLAYER:3 & 8
		Y += 7
	SIF STAIN:PLAYER:3 & 16
		Y += 15

	Y = Y * (2 - TALENT:污臭耐性) / 2

	;有污垢
	IF Y
		PRINT  - 
		A -= Y
		PRINT 有污垢
		;污臭钝感
		IF TALENT:污臭耐性 > 0
			PRINT 、污臭钝感
		ELSEIF TALENT:污臭耐性 < 0
			PRINT 、污臭敏感
		ENDIF
		PRINTV '(,Y,')
		S = 1
	ENDIF

	;合计を表示(23以上で实行)
	PRINT  = 
	PRINTV A

	V = 23
	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 实行值
	PRINTV V

	WAIT
	SKIPDISP 0
	;实行できない
	SIF A < V
		RETURN 0
ENDIF
RETURN 1

