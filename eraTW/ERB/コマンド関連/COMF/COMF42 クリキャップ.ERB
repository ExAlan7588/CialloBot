;-------------------------------------------------
;阴蒂夹
;道具使用指令、レベル2
;-------------------------------------------------
@COM42
;着脱の处理
TEQUIP:阴蒂夹 = !TEQUIP:阴蒂夹

;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;侍奉快乐フラグ
TCVAR:PLAYER:108 = 1

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 80
	SOURCE:快Ｃ += 200

ELSE

	DOWNBASE:体力 += 10
	DOWNBASE:气力 += 80

	SOURCE:快Ｃ += 200
	SOURCE:露出 += 20
	SOURCE:偏离正轨 += 30
	SOURCE:反感 += 30


	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	SIF TALENT:自己爱 < 0 || TALENT:抵抗
		SOURCE:郁闷 += 30
ENDIF
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;同性爱　レズなら返回值1ゲイなら返回值2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
ENDIF
EXP:PLAYER:道具使用经验 ++

RETURN 1
;-------------------------------------------------
;装着继续の处理
;-------------------------------------------------
@EQUIP_COM42(ARG)
PRINTL ＜阴蒂夹装备中＞

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 20
	SOURCE:ARG:快Ｃ += 100

ELSE

	DOWNBASE:ARG:体力 += 5
	DOWNBASE:ARG:气力 += 20

	SOURCE:ARG:快Ｃ += 100
	SOURCE:ARG:露出 += 10
	SOURCE:ARG:偏离正轨 += 15
	SOURCE:ARG:反感 += 15
ENDIF
;-------------------------------------------------
;経験の处理
;-------------------------------------------------

RETURN 1

;-------------------------------------------------
;实行判定
;-------------------------------------------------
@COM_ABLE42
;电动阴蒂夹实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(42)
	RETURN RESULT
;毒人形だと性器がついてないのでダメ
SIF TALENT:196 == 99
	RETURN 0
;解除是つでも可能
SIF TEQUIP:11
	RETURN 1
;道具を持っているか、道具无设定でないとダメ
SIF ITEM:2 == 0 && NOITEM == 0
	RETURN 0

;下半身着衣
SIF TEQUIP:0 > 1
	RETURN 0
;男人や扶她はダメ
SIF HAS_PENIS(TARGET)
	RETURN 0
;ASSIの场合、技巧3以上じゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:技巧 < 3
		RETURN 0
ENDIF
;淋浴中はダメ
SIF TEQUIP:32
	RETURN 0
RETURN 1

