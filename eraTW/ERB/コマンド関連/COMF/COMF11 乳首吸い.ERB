	;授乳PLAYの时は表示しない
ELSE
	PRINT 舌和唇上
	SIF CFLAG:PLAYER:现在忙得抽不出手 == 1
		PRINTFORM %NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%
	IF EX:Ｂ绝顶 * 10000 + PALAM:快Ｂ + PALAM:情欲 >= 10000 && ABL:Ｂ感觉 <= 5
		PRINTFORM %TEXTR("因为对玩弄乳部的期待而颤抖着/无法隐藏对接下来的乳嬲的迫不及待/")%，
	ENDIF
	PRINTFORM %NIPPLE_DESCRIPTION(TARGET,1)%
	IF RAND:2
		;情欲のPALAMLV4以上
		IF PALAM:情欲 >= PALAMLV:4 && RAND:3
			PRINT 的咯哩咯哩的
		ELSEIF EX:Ｂ绝顶 * 10000 + PALAM:快Ｂ + PALAM:情欲 >= 10000 && RAND:2
			PRINT 的软糖般的
		ELSE
			PRINT 的柔软的
		ENDIF
		PRINT 触感品味着的同时、
	ELSE
		PRINT 触感反复舔舐的同时、
	ENDIF
ENDIF

