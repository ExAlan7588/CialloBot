;-------------------------------------------------
;指插入れ
;爱抚系指令、レベル1
;-------------------------------------------------
@COM3
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;侍奉快乐
TCVAR:PLAYER:108 = 1

;破瓜抑制
TFLAG:2 = 1

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 40
	IF !TALENT:处女 || TALENT:处女 == -1
		SOURCE:快Ｖ = 120
		SOURCE:苦痛 = 10
	ELSE
		SOURCE:快Ｖ = 60
		SOURCE:苦痛 = 5
	ENDIF
	SIF TALENT:PLAYER:灵活手指
		SOURCE:快Ｖ += 20
	SOURCE:快Ｖ += ABL:PLAYER:指 * 5
	;Vへの苦痛
	CALL PAIN_CHECK_V(TARGET)
	;奴隷の膣内⇔调教者の指的污垢が移动
	STAIN:6 |= STAIN:PLAYER:1
	STAIN:PLAYER:1 |= STAIN:6
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
	EXP:Ｖ经验 ++
	EXP:PLAYER:手淫经验 ++
ELSE

	DOWNBASE:体力 += 30
	DOWNBASE:气力 += 80

	IF !TALENT:处女 || TALENT:处女 == -1
		SOURCE:快Ｖ = 120
		SOURCE:苦痛 = 15
		SOURCE:露出 = 10
		SOURCE:偏离正轨 = 20
		SOURCE:反感 = 20
	;V経験が0の时はV経験を伴わない物に派生
	;Vの珠は入らないが、快Vが高いと惯らしてあるため处女丧失时に影响
	ELSE
		SOURCE:快Ｖ = 60
		SOURCE:苦痛 = 10
		SOURCE:露出 = 30
		SOURCE:偏离正轨 = 30
		SOURCE:反感 = 30
	ENDIF

	SIF TALENT:PLAYER:灵活手指
		SOURCE:快Ｖ += 20
	SOURCE:快Ｖ += ABL:PLAYER:指 * 5
	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	IF TALENT:自己爱 < 0 || TALENT:抵抗
		SOURCE:郁闷 += 20
		;处女
		SIF TALENT:处女
			SOURCE:郁闷 += 10
	ENDIF
	;Vへの苦痛
	CALL PAIN_CHECK_V(TARGET)

	;-------------------------------------------------
	;污れの处理
	;-------------------------------------------------
	;奴隷の膣内⇔调教者の指的污垢が移动
		STAIN:6 |= STAIN:PLAYER:1
		STAIN:PLAYER:1 |= STAIN:6
	;-------------------------------------------------
	;経験の处理
	;-------------------------------------------------
	;同性爱　レズなら返回值1ゲイなら返回值2
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	ENDIF
	EXP:Ｖ经验 ++
	EXP:PLAYER:手淫经验 ++
ENDIF
RETURN 1

