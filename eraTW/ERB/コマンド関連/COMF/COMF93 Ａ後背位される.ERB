@COM93
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = TARGET

;侍奉快乐フラグ
TCVAR:108 = 1

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:TARGET:2 = 2
TCVAR:TARGET:童贞丧失 = 1
TCVAR:PLAYER:Ａ丧失发生 = 1
;强度
TCVAR:TARGET:4 = 1700

CSTR:PLAYER:10 += @"{TARGET}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:PLAYER:2 = 12
;强度
TCVAR:PLAYER:4 = 1000 + (200 * MIN(ABL:PLAYER:Ａ感觉,5))



;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
DOWNBASE:体力 += 50
DOWNBASE:气力 += 150
DOWNBASE:PLAYER:体力 += 50
DOWNBASE:PLAYER:气力 += 150

SOURCE:PLAYER:快Ａ = 400
SOURCE:快Ｃ = 400
SOURCE:性行动 = 500
SOURCE:征服 = 1200
SOURCE:偏离正轨 = 500
SOURCE:反感 = 500

;上のほうで计算した污れデータ
SOURCE:不洁 = Y*10 + 60
;-------------------------------------------------
;特殊ソース处理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:自己爱 < 0 || TALENT:抵抗
	SOURCE:郁闷 += 500

;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;奴隷のＰ⇔调教者のＡ的污垢が移动
STAIN:2 |= STAIN:PLAYER:4
STAIN:2 |= STAIN:PLAYER:7
STAIN:PLAYER:4 |= STAIN:2
STAIN:PLAYER:7 |= STAIN:2

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
EXP:PLAYER:Ａ性交经验 ++
EXP:插入经验 ++

;同性爱　レズなら返回值1ゲイなら返回值2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 4
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
ENDIF

;爱情经验
SIF !ASSIPLAY
EXP:爱情经验 += TALENT:恋慕

IF (!INROOM(CFLAG:PLAYER:当前位置) && !(BATHROOM() && ITEM:20))
	STR:0 = 被Ａ背面立位
ELSE
	STR:0 = 被Ａ后背位
ENDIF

RETURN 1

@CAN_COM93(ARG)
;-------------------------------------------------
;实行判定处理
;-------------------------------------------------
;绳で缚られている场合は无视（绳が无い时のみ实行判定を行う）
IF !TEQUIP:绳
	SKIPDISP ARG
	IF (!INROOM(CFLAG:PLAYER:当前位置) && !(BATHROOM() && ITEM:20))
		PRINTL 被Ａ背面立位
	ELSE
		PRINTL 被Ａ后背位
	ENDIF
	A = 0
	S = 0

	;全部の命令に共通の要素を考虑
	;(顺从が高いと命令に从いやすいなど)
	CALL COM_ORDER

	;ABL:欲望
	IF ABL:欲望
		SIF S
			PRINT  + 
		A += ABL:欲望 * 2
		PRINT 欲望
		PRINTV 'LV,ABL:欲望,'(,ABL:欲望 * 2,')
		S = 1
	ENDIF
	
	;ABL:侍奉精神
	IF ABL:侍奉精神
		SIF S
			PRINT  + 
		A += ABL:侍奉精神
		PRINT 侍奉精神
		PRINTV 'LV,ABL:侍奉精神,'(,ABL:侍奉精神,')
		S = 1
	ENDIF

	;ABL:施虐属性
	IF ABL:施虐属性
		SIF S
			PRINT  + 
		A += ABL:施虐属性 * 4
		PRINT 施虐属性
		PRINTV 'LV,ABL:施虐属性,'(,ABL:施虐属性 * 4,')
		S = 1
	ENDIF

	IF MARK:快乐刻印
		SIF S
			PRINT  + 
		A += MARK:快乐刻印 * 2
		PRINT 快乐刻印
		PRINTV 'LV,MARK:快乐刻印,'(,MARK:快乐刻印 * 2,')
		S = 1
	ENDIF

	;PALAM:情欲
	IF GETPALAMLV(PALAM:情欲,5)
		SIF S
			PRINT  + 
		A += GETPALAMLV(PALAM:情欲,5) * 2
		PRINT 情欲
		PRINTV 'LV,GETPALAMLV(PALAM:情欲,5),'(,GETPALAMLV(PALAM:情欲,5) * 2,')
		S = 1
	ENDIF

	;害羞
	IF TALENT:羞耻心 > 0
		PRINT  - 
		A -= 1
		PRINT 害羞
		PRINTV '(,1,')
		S = 1
	ENDIF
	
	;献身的
	IF TALENT:献身的
		SIF S
			PRINT  + 
		A += 6
		PRINT 献身的
		PRINTV '(,2,')
		S = 1
	ENDIF

	;接受快感
	IF TALENT:快感应答 > 0
		SIF S
			PRINT  + 
		A += 2
		PRINT 接受快感
		PRINTV '(,2,')
		S = 1
	ENDIF

	;否定快感（淫乱、娼妇で无效）
	IF TALENT:快感应答 < 0 && !TALENT:淫乱
		PRINT  - 
		A -= 2
		PRINT 否定快感
		PRINTV '(,2,')
		S = 1
	ENDIF
	
	;倒错的
	IF TALENT:倒错的
		SIF S
			PRINT  + 
		A += 4
		PRINT 倒错的
		PRINTV '(,4,')
		S = 1
	ENDIF
	
	;施虐狂
	IF TALENT:施虐狂
		SIF S
			PRINT  + 
		A += 3
		PRINT 施虐狂
		PRINTV '(,6,')
		S = 1
	ENDIF
	
	;小恶魔
	IF TALENT:小恶魔
		SIF S
			PRINT  + 
		A += 4
		PRINT 小恶魔
		PRINTV '(,4,')
		S = 1
	ENDIF
	
	;恋慕
	IF TALENT:恋慕 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 恋慕
		PRINTV '(,5,')
		S = 5
	ENDIF

	;亲爱
	IF TALENT:恋慕 > 1 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 亲爱
		PRINTV '(,5,')
		S = 5
	ENDIF

	;淫乱
	IF TALENT:淫乱 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 淫乱
		PRINTV '(,5,')
		S = 5
	ENDIF

	;娼妇
	IF TALENT:淫乱 > 1 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 娼妇
		PRINTV '(,5,')
		S = 5
	ENDIF
	
	;STAIN关系の计算
	;肛门と肠内の两方を见る
	Y = 0
	;爱液的污垢
	SIF (STAIN:PLAYER:4 & 1) || (STAIN:PLAYER:7 & 1)
		Y += 1
	;精液的污垢
	SIF (STAIN:PLAYER:4 & 4) || (STAIN:PLAYER:7 & 4)
		Y += 3
	;触手粘液的污垢
	SIF (STAIN:PLAYER:4 & 32) || (STAIN:PLAYER:7 & 32)
		Y += 15
	Y = Y * (2 - TALENT:污臭耐性) / 2

	;有污垢
	IF Y
		PRINT  - 
		A -= Y
		PRINT 有污垢
		;污臭钝感
		IF TALENT:污臭耐性 > 0
			PRINT 、污臭钝感
		ELSEIF TALENT:污臭耐性 < 0
			PRINT 、污臭敏感
		ENDIF
		PRINTV '(,Y,')
		S = 1
	ENDIF

	;合计を表示(30以上で实行)
	PRINT  = 
	PRINTV A

	V = 30
	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 实行值
	PRINTV V

	WAIT
	SKIPDISP 0
	;实行できない
	SIF A < V
		RETURN 0
ENDIF
RETURN 1

