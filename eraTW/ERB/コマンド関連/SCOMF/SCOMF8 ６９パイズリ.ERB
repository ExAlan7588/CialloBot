SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(508)
	RETURN RESULT
;睡眠奸中
SIF CFLAG:恶作剧 > 1
	RETURN 0
;男人だとダメ
SIF !(TALENT:2 & 1)
	RETURN 0
;体格差があるとダメ
