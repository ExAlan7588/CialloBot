SIF !(TALENT:PLAYER:2 & 2)
	RETURN 0
;猫舌の调教者の场合は技巧Lv2以上必要
SIF TALENT:PLAYER:猫舌 && ABL:PLAYER:技巧 < 2
	RETURN 0
;猫舌の奴隷の场合は技巧Lv2以上必要
SIF TALENT:猫舌 && ABL:技巧 < 2
	RETURN 0
;上半身着衣
SIF TEQUIP:1 > 1
	RETURN 0
;绳使用中は不可
SIF TEQUIP:绳
	RETURN 0
;ベッドルームでないとダメ
SIF !BEDROOM(CFLAG:PLAYER:当前位置) && !(BATHROOM() && ITEM:20)
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

