;-------------------------------------------------
;插入责弄Ｇ点
;性交系派生指令
;-------------------------------------------------
@SCOM6
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手）

LOCALS = {TARGET}/
CSTR:PLAYER:10 += LOCALS
TCVAR:PLAYER:2 = 1
;强度
TCVAR:PLAYER:4 = 1800

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:TARGET:2 = 13
;强度
TCVAR:TARGET:4 = 2000

;侍奉快乐フラグ
TCVAR:PLAYER:108 = 1

DOWNBASE:MASTER:体力 += 50
DOWNBASE:MASTER:气力 += 100
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 60
	SOURCE:MASTER:快Ｃ = 500

	SOURCE:快Ｖ = 500
	SOURCE:苦痛 = 250

ELSE

	DOWNBASE:体力 += 40
	DOWNBASE:气力 += 50
	SOURCE:MASTER:快Ｃ = 500

	SOURCE:快Ｖ = 500
	SOURCE:情爱 = 200
	SOURCE:苦痛 = 500
	SOURCE:露出 = 100
	SOURCE:反感 = 500


	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	SIF TALENT:自己爱 < 0 || TALENT:抵抗
		SOURCE:郁闷 += 500

	;贞操重视持ちで恋慕、亲爱持ち以外には常に反抗のソースを追加する（性交系のみ）
	SIF TALENT:贞操 > 0 && !TALENT:恋慕
		SOURCE:反感 += 1000
ENDIF
;Vへの苦痛は先に处理しておく
CALL PAIN_CHECK_V(TARGET)

;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;射精に关系なく行われる处理はここから
;膣内に破瓜之血的污垢を付加
SIF TALENT:处女 && TALENT:处女 != -1
	STAIN:6 |= 64
;奴隷の膣内⇔调教者のＰ的污垢が移动
STAIN:6 |= STAIN:PLAYER:2
STAIN:PLAYER:2 |= STAIN:6

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
EXP:PLAYER:插入经验 ++
;同性爱　レズなら返回值1ゲイなら返回值2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 4
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
ENDIF
IF FLAG:70 == 1
	EXP:MASTER:时奸经验 += 1
ELSEIF CFLAG:MASTER:恶作剧 == 2
	EXP:MASTER:睡眠奸经验 += 1
	EXP:TARGET:睡眠奸经验 += 1
ELSE
	EXP:Ｖ性交经验 ++
	;爱情经验
	SIF ASSIPLAY == 0
		EXP:爱情经验 += TALENT:恋慕
ENDIF
RETURN 1


