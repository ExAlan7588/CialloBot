;-------------------------------------------------
;S状结肠责め
;Ａ性交系派生指令
;-------------------------------------------------
@SCOM14
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手）

LOCALS = {TARGET}/
CSTR:PLAYER:10 += LOCALS
TCVAR:PLAYER:2 = 2
;强度
TCVAR:PLAYER:4 = 2000

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:TARGET:2 = 12
;强度
TCVAR:TARGET:4 = 1600

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 80
	SOURCE:MASTER:快Ｃ = 500
	SOURCE:快Ａ = 500
	SOURCE:苦痛 = 450

ELSE

	DOWNBASE:体力 += 100
	DOWNBASE:气力 += 120
	SOURCE:MASTER:快Ｃ = 500

	SOURCE:快Ａ = 500
	SOURCE:情爱 = 150
	SOURCE:苦痛 = 900
	SOURCE:露出 = 160
	SOURCE:偏离正轨 = 200
	SOURCE:反感 = 700

	;上のほうで计算した污れデータ
	SOURCE:不洁 = Y*10 + 60
	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	SIF TALENT:自己爱 < 0 || TALENT:抵抗
		SOURCE:郁闷 += 700
ENDIF
;Aへの苦痛は先に处理しておく
CALL PAIN_CHECK_A(TARGET)

;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;射精に关系なく行われる处理はここから
;奴隷のＡ⇔调教者のＰ的污垢が移动
STAIN:PLAYER:2 |= STAIN:4
STAIN:PLAYER:2 |= STAIN:7
STAIN:4 |= STAIN:PLAYER:2
STAIN:7 |= STAIN:PLAYER:2

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
EXP:PLAYER:插入经验 ++
;同性爱　レズなら返回值1ゲイなら返回值2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 4
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
ENDIF
IF FLAG:70 == 1
	EXP:MASTER:时奸经验 += 1
ELSEIF CFLAG:MASTER:恶作剧 == 2
	EXP:MASTER:睡眠奸经验 += 1
	EXP:TARGET:睡眠奸经验 += 1
ELSE
	EXP:Ａ性交经验 ++
	;爱情经验
	SIF !ASSIPLAY
		EXP:爱情经验 += TALENT:恋慕
ENDIF
RETURN 1

