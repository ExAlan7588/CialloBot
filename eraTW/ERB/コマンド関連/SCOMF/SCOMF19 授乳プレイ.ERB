;-------------------------------------------------
;授乳PLAY
;爱抚系派生指令
;-------------------------------------------------
@SCOM19
;-------------------------------------------------
;实行决定
;-------------------------------------------------
STR:0 = 授乳PLAY

;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = TARGET

LOCALS = {TARGET}/
CSTR:PLAYER:10 += LOCALS
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:PLAYER:2 = 3

;强度
TCVAR:PLAYER:4 = 1000
;侍奉快乐
TCVAR:108 = 1

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	;角色主体なので时止め中は实行不可能

ELSE
	;手淫によるマ斯塔へのソース追加
	IF ABL:指 < 4 || FLAG:70
		SOURCE:PLAYER:快Ｃ += 80
	ELSE
		SOURCE:PLAYER:快Ｃ += ABL:指 * 20
	ENDIF
	
	IF TALENT:TARGET:胸围 >= 1
		;基本的に吸乳头と一绪
		DOWNBASE:体力 += 10
		DOWNBASE:气力 += 50
	
		SOURCE:快Ｂ = 20
		SOURCE:情爱 = 100
		SOURCE:露出 = 20
		SOURCE:屈从 = 200
		SOURCE:偏离正轨 = 100
		SOURCE:反感 = 100
	ELSE
		;胸がちっちゃいと疲れるよ！ 头しっかり抱き寄せないといけないからね！
		DOWNBASE:体力 += 20
		DOWNBASE:气力 += 80
	
		SOURCE:快Ｂ = 20
		SOURCE:情爱 = 100
		SOURCE:露出 = 20
		SOURCE:屈从 = 200
		SOURCE:偏离正轨 = 200
		SOURCE:反感 = 100
	ENDIF
		
	;手淫と同じ污れデータの计算
	SOURCE:不洁 = Y*10 + 60
	
	;吸乳头より角色依存のため、情爱を增やす
	SOURCE:快Ｂ += ABL:PLAYER:舌 * 20
	SOURCE:情爱 += ABL:PLAYER:舌 * 10

	SIF ABL:亲密 >= 7
		SOURCE:情爱 += (ABL:亲密 * 20)

	;你のTALENT:舌头灵活をみる
	SIF TALENT:PLAYER:舌头灵活
		TIMES SOURCE:快Ｂ , 1.50

	;你のTALENT:猫舌をみる
	SIF TALENT:PLAYER:猫舌
		TIMES SOURCE:快Ｂ , 0.75
	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	SIF TALENT:自己爱 < 0 || TALENT:抵抗
		SOURCE:郁闷 += 200
ENDIF

;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;角色の指⇔你のＰ的污垢が移动
STAIN:1 |= STAIN:PLAYER:2
STAIN:PLAYER:2 |= STAIN:1

;奴隷のＢ⇔调教者の口的污垢が移动
STAIN:5 |= STAIN:PLAYER:0
STAIN:PLAYER:0 |= STAIN:5
;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;手淫经验
SIF !FLAG:70 && !CFLAG:恶作剧
	EXP:手淫经验 ++

;爱情经验
SIF TALENT:恋慕 && !ASSIPLAY
	EXP:爱情经验 += 1
	
;母性持ちなら爱情经验にBOUNS
SIF TALENT:母性 && !ASSIPLAY
	EXP:爱情经验 += 1

;同性爱　レズなら返回值1ゲイなら返回值2
IF FLAG:70 == 1
IF HETEROSEX(TARGET,PLAYER)
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 5
ENDIF
ELSE
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 5
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 5
ENDIF
ENDIF

;你が猫舌持ちの场合は、你に嗜虐快乐经验を追加
SIF TALENT:PLAYER:猫舌
	EXP:PLAYER:嗜虐快乐经验 += 1
EXP:PLAYER:口淫经验 ++
RETURN 1

;-------------------------------------------------
;实行可能判定 难度は乳夹口交よりちょい低いくらい
;-------------------------------------------------
@CAN_SCOM19(ARG)
SKIPDISP ARG
PRINTL 授乳PLAY
;-------------------------------------------------
;实行判定处理
;-------------------------------------------------
IF !FLAG:70

	A = 0
	S = 0

	;全部の命令に共通の要素を考虑
	;(顺从が高いと命令に从いやすいなど)
	CALL COM_ORDER

	;ABL:欲望
	IF ABL:欲望
		SIF S
			PRINT  + 
		A += ABL:欲望 * 1
		PRINT 欲望
		PRINTV 'LV,ABL:欲望,'(,ABL:欲望 * 1,')
		S = 1
	ENDIF
	;ABL:侍奉精神
	IF ABL:侍奉精神
		SIF S
			PRINT  + 
		A += ABL:侍奉精神 * 4
		PRINT 侍奉精神
		PRINTV 'LV,ABL:侍奉精神,'(,ABL:侍奉精神 * 4,')
		S = 1
	ENDIF
	;ABL:精液中毒
	IF ABL:精液中毒
		SIF S
			PRINT  + 
		A += ABL:精液中毒 * 3
		PRINT 精液中毒
		PRINTV 'LV,ABL:精液中毒,'(,ABL:精液中毒 * 3,')
		S = 1
	ENDIF

	IF MARK:快乐刻印
		SIF S
			PRINT  + 
		A += MARK:快乐刻印 * 1
		PRINT 快乐刻印
		PRINTV 'LV,MARK:快乐刻印,'(,MARK:快乐刻印 * 1,')
		S = 1
	ENDIF
	;PALAM:情欲
	IF GETPALAMLV(PALAM:情欲,5)
		SIF S
			PRINT  + 
		A += GETPALAMLV(PALAM:情欲,5) * 1
		PRINT 情欲
		PRINTV 'LV,GETPALAMLV(PALAM:情欲,5),'(,GETPALAMLV(PALAM:情欲,5) * 1,')
		S = 1
	ENDIF
	;害羞
	IF TALENT:羞耻心 > 0
		PRINT  - 
		A -= 3
		PRINT 害羞
		PRINTV '(,3,')
		S = 1
	ENDIF
	;污臭钝感
	IF TALENT:污臭耐性 > 0
		SIF S
			PRINT  + 
		A += 1
		PRINT 污臭钝感
		PRINTV '(,1,')
		S = 1
	ENDIF
	;污臭敏感
	IF TALENT:污臭耐性 < 0
		PRINT  - 
		A -= 3
		PRINT 污臭敏感
		PRINTV '(,3,')
		S = 1
	ENDIF
	;献身的
	IF TALENT:献身的
		SIF S
			PRINT  + 
		A += 6
		PRINT 献身的
		PRINTV '(,6,')
		S = 1
	ENDIF
	;否定快感（淫乱、娼妇で无效）
	IF TALENT:快感应答 < 0 && !TALENT:淫乱
		PRINT  - 
		A -= 3
		PRINT 否定快感
		PRINTV '(,3,')
		S = 1
	ENDIF
	;讨厌男人（恋慕、亲爱で无效）
	IF OTOKOGIRAI(TARGET)
		PRINT  - 
		A -= 12
		PRINT 讨厌男人
		PRINTV '(,12,')
		S = 1
	ENDIF
	;恋慕
	IF TALENT:恋慕 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 恋慕
		PRINTV '(,5,')
		S = 5
	ENDIF
	;亲爱
	IF TALENT:恋慕 > 1 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 亲爱
		PRINTV '(,5,')
		S = 5
	ENDIF

	;调教者が扶她
	IF (TALENT:PLAYER:2 & 3) == 3
		SIF S
			PRINT  + 
		A += 8
		PRINT 扶她
		PRINTV '(,8,')
		S = 1
	ENDIF

	Y = 0
	;爱液的污垢
	SIF STAIN:PLAYER:2 & 1
		Y += 1
	;精液的污垢
	SIF STAIN:PLAYER:2 & 4
		Y += 3
	;肛门的污垢
	SIF STAIN:PLAYER:2 & 8
		Y += 7
	SIF STAIN:PLAYER:2 & 16
		Y += 15

	Y = Y * (2 - TALENT:污臭耐性) / 2

	;有污垢
	IF Y
		PRINT  - 
		A -= Y
		PRINT 有污垢
		;污臭钝感
		IF TALENT:污臭耐性 > 0
			PRINT 、污臭钝感
		ELSEIF TALENT:污臭耐性 < 0
			PRINT 、污臭敏感
		ENDIF
		PRINTV '(,Y,')
		S = 1
	ENDIF

	;合计を表示(30以上で实行)
	PRINT  = 
	PRINTV A

	V = 32
	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 实行值
	PRINTV V

	WAIT
	SKIPDISP 0
	;实行できない
	SIF A < V
		RETURN 0
ENDIF
RETURN 1

