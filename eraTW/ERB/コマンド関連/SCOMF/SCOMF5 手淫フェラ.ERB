@COM_ABLE505
;手淫口交实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(505)
	RETURN RESULT
;睡眠奸中
SIF CFLAG:恶作剧 > 1
	RETURN 0
;技巧Lv1以上必要
SIF ABL:技巧 < 1
	RETURN 0
;猫舌の奴隷の场合は技巧Lv2以上必要
SIF TALENT:猫舌 && ABL:技巧 < 2
	RETURN 0
;口球使用中は不可
SIF TEQUIP:口球
	RETURN 0
;绳使用中は不可
SIF TEQUIP:绳
	RETURN 0
;调教者が男人か半人半妖か扶她じゃないとダメ
SIF !(TALENT:PLAYER:2 & 2)
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

