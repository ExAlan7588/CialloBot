;-------------------------------------------------
;G点刺激
;爱抚系派生指令
;-------------------------------------------------
@SCOM3
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
TCVAR:TARGET:2 = 13
;强度
TCVAR:TARGET:4 = 1300

;侍奉快乐フラグ
TCVAR:PLAYER:108 = 1

;破瓜抑制
TFLAG:2 = 1
;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 15

	SOURCE:快Ｖ = 180
	SOURCE:苦痛 = 10
	SOURCE:液体 = 50

	;处女だった场合は、苦痛のソースと反抗のソースを追加する
	IF TALENT:处女 == 1
		SOURCE:苦痛 += 1000
	ENDIF

	;再生处女だった场合は、苦痛のソースと反抗のソースを追加する
	IF TALENT:处女 == 2
		SOURCE:苦痛 += 250
	ENDIF

ELSE

	DOWNBASE:体力 += 50
	DOWNBASE:气力 += 80

	SOURCE:快Ｖ = 180
	SOURCE:苦痛 = 20
	SOURCE:液体 = 50
	SOURCE:露出 = 80
	SOURCE:偏离正轨 = 100
	SOURCE:反感 = 100


	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	SIF TALENT:自己爱 < 0 || TALENT:抵抗
		SOURCE:郁闷 += 100

	;处女だった场合は、苦痛のソースと反抗のソースを追加する
	IF TALENT:处女 == 1
		SOURCE:苦痛 += 2000
		SOURCE:反感 += 3000
	ENDIF

	;再生处女だった场合は、苦痛のソースと反抗のソースを追加する
	IF TALENT:处女 == 2
		SOURCE:苦痛 += 500
		SOURCE:反感 += 1000
	ENDIF
ENDIF
;Vへの苦痛は先に处理しておく
CALL PAIN_CHECK_V(TARGET)

;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;膣内に破瓜之血的污垢を付加
SIF TALENT:处女 && TALENT:处女 != -1
	STAIN:6 |= 64
;奴隷の膣内⇔调教者の指的污垢が移动
	STAIN:6 |= STAIN:PLAYER:1
	STAIN:PLAYER:1 |= STAIN:6

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;V経験
EXP:Ｖ经验 += 1
;同性爱　レズなら返回值1ゲイなら返回值2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 3
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 3
ENDIF

RETURN 1

;-------------------------------------------------
;选择可能判定
;-------------------------------------------------
@COM_ABLE503
;G点刺激
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(503)
	RETURN RESULT
;男人だとダメ
SIF  !(TALENT:2 & 1)
	RETURN 0
;润滑不足で、顺从3以下・百合属性3以下のASSIの场合指插入れはできない（施虐狂ならＯＫ）
IF PALAM:润滑 < PALAMLV:2 && ASSIPLAY
	SIF (ABL:ASSI:顺从 <= 3 || ABL:ASSI:百合属性 <= 3) && TALENT:ASSI:施虐狂 == 0
		RETURN 0
ENDIF

;下半身着衣
SIF TEQUIP:0 & 4
	RETURN 0
;主人の技巧が3以下はだめ
SIF ABL:PLAYER:技巧 < 3
	RETURN 0
RETURN 1

