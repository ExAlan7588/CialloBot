@COM_ABLE73
;插入子宫口玩弄
SIF !TFLAG:100
	RETURN 0
SIF !MASTER_POSE(SET_V,SET_P,1)
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(73)
	RETURN RESULT
;下半身着衣
SIF TEQUIP:0 & 4
	RETURN 0
SIF TEQUIP:TARGET:50 != MASTER
	RETURN 0
;体格差がある场合は主人が禁断的知识持ちじゃないとダメ
SIF 插入不可(TARGET) == 1 && !TALENT:PLAYER:禁断的知识
	RETURN 0
;さらに体格差があると経験が必要
SIF 插入不可(TARGET) == 2 && (!TALENT:PLAYER:禁断的知识 || EXP:Ｖ经验 < 50)
	RETURN 0
SIF 插入不可(TARGET) == 3
	RETURN 0
RETURN 1

