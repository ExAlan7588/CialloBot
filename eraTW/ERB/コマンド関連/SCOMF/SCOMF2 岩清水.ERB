;-------------------------------------------------
;岩清水
;爱抚系派生指令
;-------------------------------------------------
@SCOM2
;-------------------------------------------------
;COM别FLAGの设定
;-------------------------------------------------
;行为者
TCVAR:116 = PLAYER

;侍奉快乐フラグ
TCVAR:PLAYER:108 = 1

;-------------------------------------------------
;ソース追加处理
;-------------------------------------------------
;消费体力、气力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 5
	SOURCE:快Ｃ = 150

ELSE

	DOWNBASE:体力 += 20
	DOWNBASE:气力 += 150

	SOURCE:快Ｃ = 150
	SOURCE:恐怖 = 100
	SOURCE:液体 = 100
	SOURCE:露出 = 150
	SOURCE:偏离正轨 = 300
	SOURCE:反感 = 300

	;-------------------------------------------------
	;特殊ソース处理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑郁ソース追加
	SIF TALENT:自己爱 < 0 || TALENT:抵抗
		SOURCE:郁闷 += 300
ENDIF
;舌を使用调教では、调教者の舌头灵活によって、快感のソース增加
SIF TALENT:PLAYER:舌头灵活
	TIMES SOURCE:快Ｃ , 1.50

;-------------------------------------------------
;污れの处理
;-------------------------------------------------
;奴隷のＶ⇔调教者の口的污垢が移动
STAIN:3 |= STAIN:PLAYER:0
STAIN:PLAYER:0 |= STAIN:3

;-------------------------------------------------
;経験の处理
;-------------------------------------------------
;同性爱　レズなら返回值1ゲイなら返回值2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 3
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 3
ENDIF

;调教者が猫舌持ちの场合は、调教者に嗜虐快乐经验を追加
SIF TALENT:PLAYER:猫舌
	EXP:PLAYER:嗜虐快乐经验 += 1

RETURN 1

;-------------------------------------------------
;选择可能判定
;-------------------------------------------------
@COM_ABLE502
;岩清水实行判定
SIF !TFLAG:100
	RETURN 0
;批量管理
SIF GLOBAL_COMABLE(502)
	RETURN RESULT
;羞耻PLAY中じゃないとダメ
SIF TEQUIP:30 == 0
	RETURN 0
;猫舌の调教者の场合は技巧Lv2以上必要
SIF TALENT:PLAYER:猫舌 && ABL:PLAYER:技巧 < 2
	RETURN 0
;性器が污れているとMASTERの场合舐阴はできない（调教者が污臭无视か爱液、母乳のよごれならＯＫ）
SIF STAIN:3 >= 2 && (STAIN:3 != 16 && STAIN:3 != 17) && ASSIPLAY == 0 && TALENT:MASTER:污臭耐性 < 2
	RETURN 0
;性器が污れており、污臭敏感で顺从3以下のASSIの场合舐阴はできない（调教者が污臭无视か爱液、母乳のよごれならＯＫ）
IF STAIN:3 >= 2 && (STAIN:3 != 16 && STAIN:3 != 17) && ASSIPLAY
	SIF ABL:ASSI:顺从 <= 3 && TALENT:ASSI:污臭耐性 < 0
		RETURN 0
ENDIF

;下半身着衣
SIF TEQUIP:0 > 1
	RETURN 0
;男人だとダメ
SIF  !(TALENT:2 & 1)
	RETURN 0
RETURN 1

