;ド○クエっぽく文本を流す
;ARGS ""で括って文字列を入れる
;ARG:0	0 = クリックしたら消える（省略时）
;		1 = 消えない（改行つき）
;		2 = 灰色にして残す(改行つき) FLAG:594を利用
;ARG:1 文本表记・１文字中奖了wait时间 省略可
;-------------------------------------------------
@DQPRINT(ARGS, ARG:0 = 0, ARG:1)
#DIM 文字数
#DIM 検索数

LOCAL:0 = 0

IF ARG:1 == 0
	ARG:1 = 8 + FLAG:教程文速度
ENDIF
STRLENFORM %ARGS%
文字数 = RESULT:0
検索数 = 文字数 + 1

FOR LOCAL:0, 0, 検索数
	IF LOCAL:0 == 文字数
		IF ARG:0
			PRINTFORM %ARGS%
		ELSE
			REUSELASTLINE %ARGS%
		ENDIF
		WAIT
	ELSE
		SUBSTRING ARGS, 0, LOCAL:0
		REUSELASTLINE %RESULTS:0%
		TWAIT ARG:1, 1
	ENDIF
NEXT
IF ARG:0 == 0
	REUSELASTLINE 
ELSEIF ARG:0 == 2
	CLEARLINE 1
	CALL COLORMESSAGE(@"%ARGS%", 0x696969, 1)
ENDIF

