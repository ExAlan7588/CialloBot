;-----------------------------------------------------------
;钓った鱼列表の表示
;-----------------------------------------------------------
@SHOW_COLLECTION_FISH
#DIM 选んだ鱼
#DIM 全种数
#DIM 钓った种数
#DIM 钓った总数
#DIM 最大尺寸
#DIM 消去行数

VARSET LOCAL
全种数 = 0
钓った种数 = 0
钓った总数 = 0
最大尺寸 = 0
消去行数 = 0

CLEARLINE 1
PRINTFORML 至今为止钓上来的鱼的列表
DRAWLINE
FOR LOCAL, 1, 61
	;鱼が无名でない
	IF FISH_NAME(LOCAL) != ""
		全种数 ++
		SIF LOCAL < 10
			PRINTFORM  
		IF FISH_EXP:(LOCAL)
			钓った种数 ++
			PRINTFORM [{LOCAL}] %FISH_NAME(LOCAL), 18, LEFT%
			SETCOLOR C_L_GRAY
			PRINTFORM （钓鱼总数：
			SELECTCASE FISH_EXP:LOCAL
				CASE IS < 10
					PRINTFORM     
				CASE IS < 100
					PRINTFORM    
				CASE IS < 1000
					PRINTFORM   
				CASE IS < 10000
					PRINTFORM  
			ENDSELECT
			钓った总数 += FISH_EXP:LOCAL
			PRINTFORM {FISH_EXP:LOCAL}条／最大尺寸：
			SELECTCASE FISHSIZE_RECORD:LOCAL
				CASE IS < 10
					PRINTFORM   
				CASE IS < 100
					PRINTFORM  
			ENDSELECT
			PRINTFORML {FISHSIZE_RECORD:LOCAL}cm ）
			SIF FISHSIZE_RECORD:LOCAL > 最大尺寸
				最大尺寸 = FISHSIZE_RECORD:LOCAL
		ELSE
			PRINTFORML [{LOCAL}] ????????????
		ENDIF
	ENDIF
	RESETCOLOR
NEXT
SETCOLOR 0x00FF00
PRINTFORM 钓鱼种类：{钓った种数}／{全种数}
IF 钓った总数
	PRINTFORML 　钓鱼总数：{钓った总数}条　至今为止钓上来的鱼的最大尺寸：{最大尺寸}cm
ELSE
	PRINTL 
ENDIF
RESETCOLOR
DRAWLINE
PRINT [0] - 返回

$LOOP
INPUT

选んだ鱼 = RESULT
SELECTCASE 选んだ鱼
	CASE 1 TO 60
		IF FISH_NAME(选んだ鱼) != ""
			CLEARLINE 1
			CALL PRINT_FISHINFO(选んだ鱼)
			IF FISH_EXP:选んだ鱼
				消去行数 = 9
			ELSE
				消去行数 = 2
			ENDIF
			CLEARLINE 消去行数
			GOTO LOOP
		ELSE
			CLEARLINE 1
			GOTO LOOP
		ENDIF
	CASE 0
		RETURN
	CASEELSE
		CLEARLINE 1
		GOTO LOOP
ENDSELECT

;-----------------------------------------------------------
;选择した鱼の说明／ヒント表记
;ARG …选んだ鱼番号
;-----------------------------------------------------------
@PRINT_FISHINFO(ARG)

DRAWLINE
IF FISH_EXP:ARG
	PRINTPLAINFORM [{ARG}] %FISH_NAME(ARG)%
	PRINTFORML （钓鱼数：{FISH_EXP:ARG}条／最大尺寸：{FISHSIZE_RECORD:ARG}cm ）
	IF ABL:MASTER:教养 < 3
		CALL COLORMESSAGE(@"　　（提升教养的Lv的话、可以获得分布域・钓期的信息…）",C_L_GRAY,1)
	ELSE
		CALL FISHING_HINT(ARG)
	ENDIF
	CALL FISHING_EXPLANATION(ARG)
ELSE
	PRINTPLAINFORM [{ARG}] ?????????????
	CALL FISHING_HINT(ARG)
ENDIF
