@GET_GIFT
VARSET LOCAL
LOCAL = RAND:(CHARANUM-1) + 1
;好感度1000以上、四角裤以外の内衣を履いている
SIF CFLAG:LOCAL:2 < 1000 || EQUIP:LOCAL:6 < 2
	RETURN 0
SIF RAND:10 > 0
	RETURN 0

;描写
DRAWLINE
PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%一醒来、就发现枕边好像放着个不太熟悉的东西
IF RAND:3 == 2
	PRINTFORM 胡乱
ELSEIF RAND:2 == 1
	PRINTFORM 精心
ELSE
	PRINTFORM 随意
ENDIF
PRINTFORM 叠着的这东西展开来一看、看上去好像是%NAME_OUTPUT_TRANSLATION("CALLNAME", LOCAL)%所穿的
PRINTFORMW %PANTSNAME(EQUIP:LOCAL:6,LOCAL)%的样子
PRINTFORMW 上面还残留着微妙的折皱、看起来被%NAME_OUTPUT_TRANSLATION("CALLNAME", LOCAL)%穿过一天的样子
PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%把它放进桌子的抽屉里、若无其事的开始整理行装

PRINTFORML
PRINTFORMW 得到了%NAME_OUTPUT_TRANSLATION("CALLNAME", LOCAL)%的%PANTSNAME(EQUIP:LOCAL:6,LOCAL)%
PRINTFORML

[SKIPSTART]
LOCALS = %NAME_OUTPUT_TRANSLATION("CALLNAME", LOCAL)%{EQUIP:LOCAL:6}/
SIF SAVESTR:10 == ""
	SAVESTR:10 = /
SAVESTR:10 += LOCALS
[SKIPEND]
CFLAG:LOCAL:(EQUIP:LOCAL:6) += 1
