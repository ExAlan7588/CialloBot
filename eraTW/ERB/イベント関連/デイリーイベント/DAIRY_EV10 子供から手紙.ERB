@DAILY_CONDITION_EV10
#DIM YOME
#DIM CHILDNUM
SIF RAND:20 > 0
	RETURN -1
CALL PickRandGrownChild
YOME = RESULT
CHILDNUM = RESULT:1
VARSET RESULT

SIF YOME <= 0
	RETURN -1

CALL DAILY_EV10(YOME, CHILDNUM)
RETURN 1

@DAILY_EV10(ARG, ARG:1)
;PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%との儿童の从%CHILDNAME:ARG:(ARG:1)%来信
PRINTFORMW 从%CHILDNAME:ARG:(ARG:1)%来信
LOCAL:1 = 0
FOR LOCAL,1,CHARANUM
	SIF CFLAG:LOCAL:好感度 > CFLAG:ARG:好感度
		LOCAL:1 ++
NEXT

TARGET = ARG
;口上専用の手纸イベント分岐（なければ通常イベント）,存在しないならRESULT = 2
IF !RAND:2
	CALL KOJO_MESSAGE_SEND("CHILD", 0, TARGET, ARG:1, 0, "DAILY_口上手纸")
	SIF RESULT == 2
		GOTO TEGAMI
ELSE
	$TEGAMI
	IF LOCAL:1 >= 3
		CALL KOJO_MESSAGE_SEND("CHILD", 0, TARGET, ARG:1, 0, "DAILY_共通手纸", "すけこまし")
		;存在しないならRESULT = 2（以下同样）
		IF RESULT == 2
			PRINTFORMW 上面写着要好好爱护%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%……
		ENDIF
	ELSEIF !RAND:5
		CALL KOJO_MESSAGE_SEND("CHILD", 0, TARGET, ARG:1, 0, "DAILY_共通手纸", "金の无心")
		IF RESULT == 2
			PRINTFORMW 又来要钱了……
		ENDIF
		PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%决定送去\@ MONEY > 30000? %金额表示(30000)%# 所有的钱\@
		MONEY = MAX(MONEY - 30000,0)
	ELSE
		CALL KOJO_MESSAGE_SEND("CHILD", 0, TARGET, ARG:1, 0, "DAILY_共通手纸", "仕送り")
		IF RESULT == 2
			PRINTFORMW 收到了担心%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%和%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%的话，以及寄来的%金额表示(10000)%
		ENDIF
		MONEY += 10000
	ENDIF
ENDIF
TARGET = TARGET:1
RETURN 1
