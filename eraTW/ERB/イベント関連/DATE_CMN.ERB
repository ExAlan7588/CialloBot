			PRINTL
			PRINTFORMW 与%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%成为了恋人
		ELSE
			CALL KOJO_MESSAGE_SEND("SP_EVENT",2,ARG,2)
		ENDIF
	;赠り物イベント
	ELSEIF GIFT_DATE_CHECK(ARG)
		CALL GIFT_DATE_EVENT(ARG)
	ELSEIF !MARK:ARG:反抗刻印
		CALL KOJO_MESSAGE_SEND("SP_EVENT",3,ARG,0)
	ENDIF
	;PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%の约会告白判定:需{LOCAL}大于{530 + TALENT:ARG:难以越过的底线 * 20}		
	;TRYCALL PRINT_RAINBOW2W(@"%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%de约会告白判定:需{LOCAL}大于{530 + TALENT:ARG:难以越过的底线 * 20}", 20)			
