	LOCAL += MIN(ABL:ARG:亲密 * 10, 100) + MIN(ABL:ARG:欲望 * 10,100) + MIN(ABL:ARG:侍奉精神 * 10,100)
	LOCAL += MIN(EXP:ARG:约会经验,100) + MIN(EXP:ARG:爱情经验,100)
ELSEIF TALENT:ARG:思慕
	LOCAL += MIN(ABL:ARG:亲密 * 10, 50) + MIN(ABL:ARG:欲望 * 10,50) + MIN(ABL:ARG:侍奉精神 * 10,50)
	LOCAL += MIN(EXP:ARG:约会经验,50)
ENDIF
LOCAL += GETPALAMLV(PALAM:ARG:情欲,10) * 5 + GETPALAMLV(PALAM:ARG:好意,10) * 5 + GETPALAMLV(PALAM:ARG:恭顺,10) * 5
;60
LOCAL += BASE:ARG:情绪 / 50 + (1000 - BASE:ARG:理性) / 30
LOCAL += TALENT:ARG:胆量 * 10 + TALENT:ARG:性的兴趣 * 10 - TALENT:ARG:自制心 * 10 - TALENT:ARG:冷漠 * 10 
DEBUGPRINTFORML 【DATE_EVENT({ARG})】DateEvent_Checksum = {LOCAL}
;别れ际に礼物
CALL GIFT(ARG)
IF RESULT == 1
;合意无し（接吻成功してない）
;修改约会后初吻判定
;ELSEIF !(CFLAG:ARG:1 & 1) && !(CFLAG:ARG:13 & 1)
ELSEIF TALENT:ARG:无接吻经验 && !(CFLAG:ARG:13 & 1) && CSTR:ARG:初吻位置 != "约会后回去的路上"
	;成功判定
	IF (LOCAL > 220 + TALENT:ARG:难以越过的底线 * 30 + ABS(TALENT:ARG:无接吻经验 * 20)) && CFLAG:ARG:合意判定 > 180 && (TALENT:ARG:思慕 || TALENT:ARG:恋慕)
		CALL KOJO_MESSAGE_SEND("SP_EVENT",1,ARG,0)
		;中止フラグ
		IF !TCVAR:ARG:中止接吻
			CALL ADD_KISS(ARG)
			SETBIT CFLAG:ARG:约会后EVENTFLAG , 0
		ENDIF
	ELSEIF !MARK:ARG:反抗刻印
		CALL KOJO_MESSAGE_SEND("SP_EVENT",3,ARG,0)
	ENDIF
	EXP:ARG:爱情经验 += 10
	;PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%の约会接吻判定:需{LOCAL}大于{220 + TALENT:ARG:难以越过的底线 * 30 + ABS(TALENT:ARG:无接吻经验 * 20)}且合意{CFLAG:ARG:合意判定,3,RIGHT}大于180,必须有思慕or恋慕
	;TRYCALL PRINT_RAINBOW2W(@"%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%の约会接吻判定:需{LOCAL}大于{220 + TALENT:ARG:难以越过的底线 * 30 + ABS(TALENT:ARG:无接吻经验 * 20)}且合意{CFLAG:ARG:合意判定,3,RIGHT}大于180,必须有思慕or恋慕", 20)
;反抗刻印消去处理
ELSEIF MARK:ARG:反抗刻印 && LOCAL > 50
	;ABL:亲密LVUP处理取り込み。解读が面倒だったので要所々々取り摘んで…
	FOR LOCAL,0,4
		珠不足 = 0
		経験不足 = 0
		SIF JUEL_DEMAND(9,LOCAL,0,ARG) == -2
			BREAK
		SIF JUEL_DEMAND(9,LOCAL,0,ARG) < 0
			CONTINUE
		;必要な宝珠を寻找
		FOR LOCAL:1,0,100
			IF JUEL_DEMAND(9,LOCAL,LOCAL:1,ARG) > 0
				IF JUEL:(ARG):(LOCAL:1) < JUEL_DEMAND(9,LOCAL,LOCAL:1,ARG) / 2
					珠不足 ++
					BREAK
				ENDIF
			ENDIF
		NEXT
		SIF 珠不足
			CONTINUE
