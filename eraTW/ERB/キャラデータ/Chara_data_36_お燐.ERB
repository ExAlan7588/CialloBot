@CHARAMOVE_DATA_36(ARG, ARG:2)
LOCAL = 36
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
		;土日は阿空と一绪
		IF YOUBI_MATCH(DAY, "土日")
			RESULT:1 = [[阿燐]]
			RESULT:2 = [[阿空]]
		ENDIF
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;中庭が好き
			CASE P926中庭
				RETURN 5
			;入らない房间
			CASE P904大会堂, P910食料库, P916库房, P918恋私室, P919觉私室, P920书斋, P925薔薇园, P930旧血池地狱
				RETURN -100
			CASE P936勇仪的家, P937空屋, P938鬼的聚集场所, P940帕露西的家, P941山女的家, P942琪斯美的家, P943茅屋, P947血枪的栖息处
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 樱花道的鸟居, 神社境内, 神社走廊
				RETURN 1
			CASE 墓地
				RETURN 1
			CASE 间歇泉地下中枢
				RETURN 1
			CASE 幻想风穴, 地狱的深道, 旧地狱街道, 地灵殿, 灼热地狱遗迹
				RETURN 1
		ENDSELECT
	;引力设定
	CASE 8
		;仕事终わりに出步行の,概率6分の4
		IF YOUBI_MATCH(DAY, "月火水木金") && INRANGE(TIME, 720, 1080)
			SELECTCASE CFLAG:LOCAL:今日的运势 % 6
			CASE 1
				TCVAR:LOCAL:引力点 = P923后院
			CASE 2
				TCVAR:LOCAL:引力点 = P931大街
			CASE 3
				TCVAR:LOCAL:引力点 = P933酒场
			CASE 4
				TCVAR:LOCAL:引力点 = P932后街
			CASEELSE
				TCVAR:LOCAL:引力点 = 0
			ENDSELECT
		;休日はまれに觉样にくっつく
		ELSEIF CFLAG:LOCAL:今日的运势 % 10 == 0 && !CFLAG:[[觉]]:诶嘿嘿 && SHIRAHU([[觉]])
			TCVAR:LOCAL:引力点 = CFLAG:[[觉]]:当前位置
		ENDIF
ENDSELECT

