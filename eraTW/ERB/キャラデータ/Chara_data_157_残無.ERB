@CHARAMOVE_DATA_157(ARG, ARG:2)
LOCAL = 157
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;よく居る
			CASE P605地狱
				RETURN 5
			;是非曲直厅、冥界、八云邸には行かない（入り口部分は出る时用）
			CASE P612法庭 TO P639八云邸起居室
				RETURN -100
			;灵长园,组长的家には行かない
			CASE P642灵长园 TO P655尤魔宅的澡堂
				RETURN -100
			;他人的家には入らない
			CASE P608润美的家, P609璎花的家, P606日狭美的家
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 樱花道的鸟居, 神社境内, 神社走廊
				RETURN 1
			CASE 中有之道, 三途之川, 彼岸, 地狱
				RETURN 1
			CASE 山麓树海, 玄武之泽, 大蛤蟆之池, 森林深处
				RETURN 1
			CASE 九天瀑布, 绝景之丘, 山之湖
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

