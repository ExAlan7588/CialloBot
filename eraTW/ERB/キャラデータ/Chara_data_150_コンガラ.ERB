@CHARAMOVE_DATA_150(ARG, ARG:2)
LOCAL = 150
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;地灵殿には行かない
			CASE P901地灵殿前 TO P930旧血池地狱
				RETURN -100
			;酒场と鬼の溜まり场に行きやすい
			CASE P933酒场, P938鬼的聚集场所
				RETURN 5
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 命莲寺境内, 命莲寺方丈
				RETURN 1
			CASE 广场, 商业街, 吞屋小道
				RETURN 1
			CASE 幻想风穴, 地狱的深道, 旧地狱街道
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ150
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ150(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "矜羯罗")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（襦袢）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "蝴蝶结"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "雪駄"))
CASE "便装：袜子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("袜子", "足袋"))
CASE "便装：和服"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("和服", "色袖替わり着物"))
CASE "便装：其他１"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("其他１", "带"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "何度も繕った迹がある")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "もっこ褌")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "サラシ")
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 胜负内衣判定([[矜羯罗]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 3)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "鱼料理/米/野菜/和食/和食/油炸食品/辣/辣/简易/清淡/艺术的/野趣/豪快/地狱风/酸/" + "咸/壮大/" * 3)
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "中华/洋食/小人族秘传的味道/" + "甜/" * 2 + "谜料理/"*5 + "化学的/青蛙/虫肉/"*3)
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "地狱风/切れ味/得意料理＊朴素＊/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "赤/美的/和风/别致/帅气的/充满力量/壮大/鬼の/鬼力の/酒/怀剑/高级/威严/" + "土/刃物/暗/小手/秩序/法具/" * 3 + "护刀/力の/宝剑/暗の/法界の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "精神/活泼/纤细/洋风/洛丽塔/奇妙/" + "弹/机械/派手/巫术/" * 3 + "混沌/" * 10)
ENDSELECT

