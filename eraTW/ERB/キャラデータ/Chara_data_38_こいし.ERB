;IMAGE_I38_特殊表情COM(CHARA, 指令)-------------------------------------------------------
;直前の指令で变化する角色特有の表情表示条件
;时间停止中は变化しない表情はこちら
;使用时注意点:
;	RESULTS:0に表情を格纳
;	RESULTS:1にマウスオーバー时の表情を格纳すること
;	"自慰","爱抚","性交"は本编で实装済み
;-------------------------------------------------------------------------------------------
@IMAGE_I38_特殊表情COM(CHARA, 指令)
#DIM CHARA
#DIM 指令

IF CFLAG:CHARA:应用差分替换
	;替换用画像
	IF (BATHROOM(CFLAG:CHARA:当前位置) || (MARK:CHARA:快乐刻印 > 1 && (PALAM:CHARA:情欲 > 100000 || PALAM:CHARA:羞耻 > 50000)))
		SELECTCASE RESULTS:0
		CASE "笑颜"
			RESULTS:0 = 耻笑颜
		CASE "愤怒"
			RESULTS:0 = 耻愤怒
		CASEELSE
			RESULTS:0 = 耻通常
		ENDSELECT
		SELECTCASE RESULTS:1
		CASE "笑颜"
			RESULTS:1 = 耻笑颜
		CASE "愤怒"
			RESULTS:1 = 耻愤怒
		CASEELSE
			RESULTS:1 = 耻通常
		ENDSELECT
	ENDIF
	SELECTCASE 指令
		;接吻系、侍奉系 恋慕时LOVE表情
		CASE 19, 20, 80 TO 88, 312, 501, 505, 508 TO 512, 563
			SIF TALENT:CHARA:恋慕
				RESULTS:0 = LOVE
		;赤面表情、开帐、摸屁股、掀起裙子
		CASE 8, 13, 310, 330
			RESULTS:0 = 赤面
	ENDSELECT
	SIF 绝顶判定(CHARA) || 绝顶判定2(CHARA)
		RESULTS:1 = 绝顶
	;诶嘿嘿かつ绝顶时2/3でマウスオーバーと表情交代
	SIF RAND:3 && CFLAG:CHARA:诶嘿嘿 && 绝顶判定(CHARA)
		SWAP RESULTS:0, RESULTS:1
ELSE
	;通常画像
	IF FLAG:立绘种类
		;颜绘
	ELSE
		;立绘
	ENDIF
ENDIF

