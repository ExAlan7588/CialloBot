@CHARAMOVE_DATA_38(ARG, ARG:2)
LOCAL = 38
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;旧血池地狱まではあんまり行かない
			CASE P930旧血池地狱
				RETURN -10
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 地藏小路, 倒垂的柳树下, 命莲寺境内, 命莲寺方丈, 墓地, 神灵庙广场, 神灵庙道场
				RETURN 1
			CASE 广场, 商业街, 吞屋小道, 长屋街
				RETURN 1
			CASE 大厅, 食堂, 大图书馆, 地下室
				RETURN 1
			CASE 山之湖, 守矢神社境内, 守矢神社本殿
				RETURN 1
			CASE 幻想风穴, 地狱的深道, 旧地狱街道, 地灵殿
				RETURN 1
		ENDSELECT
	;引力设定
	CASE 8
		;まれにお姊ちゃんにくっつく
		IF YOUBI_MATCH(DAY, "土日") && CFLAG:LOCAL:今日的运势 % 10 == 0 && !CFLAG:[[觉]]:诶嘿嘿 && SHIRAHU([[觉]])
			TCVAR:LOCAL:引力点 = CFLAG:[[觉]]:当前位置
		ELSE
			;ほぼ每ターン呼ばれるので动き出す时间がより不安定に,最大14时前まで
			IF INRANGE(TIME, 600 + RAND:60, 700 + (CFLAG:LOCAL:今日的运势 / 8))
				SELECTCASE CFLAG:LOCAL:今日的运势 % 6
				CASE 1
					TCVAR:LOCAL:引力点 = P925薔薇园
				CASE 2
					TCVAR:LOCAL:引力点 = P929地狱的人工太阳
				CASE 3
					TCVAR:LOCAL:引力点 = P933酒场
				CASE 4
					TCVAR:LOCAL:引力点 = P945河岸
				CASEELSE
					TCVAR:LOCAL:引力点 = 0
				ENDSELECT
			ENDIF
		ENDIF
ENDSELECT

