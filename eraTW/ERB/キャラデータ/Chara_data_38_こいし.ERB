;	RESULTSに特殊服装を格纳すること
;	书式は %服装%%特殊服装% 适宜"_"等入れること
;-------------------------------------------------------------------------------------------
@IMAGE_I38_特殊服装(CHARA)
#DIM CHARA
VARSET RESULTS

IF CFLAG:CHARA:应用差分替换
	;替换用画像
	IF CHECK_NUDE(CHARA)
		;裸
		IF FLAG:立绘种类
			;颜绘
		ELSE
			;立绘
		ENDIF
	ELSE
		;服
		IF  NUDITYCHECK(CHARA) == 1
			RESULTS = _内衣P
			SIF FLAG:立绘种类
				RESULTS = _半裸
		ELSEIF NUDITYCHECK(CHARA) == 2
			RESULTS = _内衣B
		ELSEIF NUDITYCHECK(CHARA) == 3
			RESULTS = _内衣
			SIF FLAG:立绘种类
				RESULTS = _内衣B
		ENDIF
	ENDIF
ELSE
	;通常画像
	IF CHECK_NUDE(CHARA)
		;裸
		IF FLAG:立绘种类
			;颜绘
		ELSE
			;立绘
		ENDIF
	ELSE
		;服
		IF FLAG:立绘种类
			;颜绘
		ELSE
			;立绘
		ENDIF
	ENDIF
ENDIF

