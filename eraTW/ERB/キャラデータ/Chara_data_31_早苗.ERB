@CHARAMOVE_DATA_31(ARG, ARG:2)
LOCAL = 31
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;分社引かれる
			CASE P21守矢神社分社
				RETURN 5
			;主に境内
			CASE P811境内
				RETURN 5
			;天界には行かない
			CASE P830玄云海 TO P842比那名居邸库房
				RETURN -100
			;他所的家には行かない
			CASE P807椛宅, P808文宅, P809果宅, P851久侘歌的小屋, P852驹草的小屋, P853魅须丸的小屋, P854龙宅, P855虹龙洞, P856百百世的住所
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 樱花道的鸟居, 神社境内, 神社走廊
				RETURN 1
			CASE 广场, 商业街, 吞屋小道, 长屋街
				RETURN 1
			CASE 山麓树海, 玄武之泽, 大蛤蟆之池, 间歇泉地下中枢
				RETURN 1
			CASE 九天瀑布, 绝景之丘, 山之湖, 守矢神社境内, 守矢神社本殿
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
		;平日の朝はとりあえず境内に出てくる
		SIF YOUBI_MATCH(DAY, "月火水木金") && INRANGE(TIME, 540, 660)
			TCVAR:LOCAL:引力点 = P811境内
ENDSELECT

