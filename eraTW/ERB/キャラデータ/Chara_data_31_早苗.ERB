	IF CHECK_NUDE(CHARA)
		;裸
		IF FLAG:立绘种类
			;颜绘
		ELSE
			;立绘
		ENDIF
	ELSE
		;服
		IF EQUIP:CHARA:上身衣服１ == 2
			RESULTS = _セーラー
		ELSEIF CFLAG:CHARA:衣物暂时更换 == 55 || (CFLAG:CHARA:基本服装SET == 55 && CFLAG:CHARA:衣物暂时更换==0)
			IF FLAG:立绘种类
				;颜绘
				RESULTS = _バニー
			ELSE
				;立绘
				RESULTS = _バニー
			ENDIF
		ENDIF
	ENDIF
ENDIF

