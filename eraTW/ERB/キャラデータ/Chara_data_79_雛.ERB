@キャラデータ79(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "雏")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "蝴蝶结"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：袜子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("袜子", "袜子"))
CASE "便装：连衣裙"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("连衣裙", "连衣裙"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "黑色和绿色被厚重地装饰了")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "哥特内裤")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "哥特胸罩")
CASE "固有内衣着用条件"
	SIF !RAND:(3 - (2 * 胜负内衣判定([[雏]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "野菜/汁物/甜/清淡/朴素/新鲜/家庭的/粘稠/妖力/酸/酸/酸/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "丰盛/浓厚/辣/辣/豪华/豪华/青蛙/青蛙/青蛙/虫肉/虫肉/虫肉/")
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "隐し味/得意料理＊家庭的＊/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "赤/黑/美的/艺术的/别致/" + "暗/妖术/护符/" * 3 + "厄の/不吉の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "充满力量/威严/" + "光/护臂/" * 3)

;农民关联
;服の模样に似ている＆山で生えてそう
;あまり裕福なイメージはない
CASE "农民：说明"
	CALLF MAKE_STR(V_NAME, "山菜农家")
CASE "农民：作物"
	CALLF MAKE_STR(V_NAME, "薇菜")
CASE "农民：田的种类"
	CALLF MAKE_STR(V_NAME, "薇菜畑")
CASE "农民：畑の所在地"
	CALLF MAKE_STR(V_NAME, "妖怪之山・山麓")

CASE "农民：MapID"
	CALLF MAKE_INT(V_NAME, 7)
CASE "农民：场所ID"
	CALLF MAKE_INT(V_NAME, 705)
CASE "农民：报酬"
	CALLF MAKE_INT(V_NAME, 350)
CASE "农民：金利"
	CALLF MAKE_INT(V_NAME, 3)

;ここは依赖IDが关联しない情报
;依赖发生率スカ2/一般3/固有5
CASE "没有依赖发生率"
	CALLF MAKE_INT(V_NAME, 2)
CASE "一般依赖发生率"
	CALLF MAKE_INT(V_NAME, 3)
CASE "固有依赖发生率"
	CALLF MAKE_INT(V_NAME, 5)
CASE "固有依赖最终要素"
	CALLF MAKE_INT(V_NAME, 101)
CASEELSE
	;固有依赖关联のデータにバトンタッチ
	SIF STRCOUNT(O_DATA, "依赖")
		CALLF 固有依赖79(ARG, O_DATA, V_NAME)
ENDSELECT

