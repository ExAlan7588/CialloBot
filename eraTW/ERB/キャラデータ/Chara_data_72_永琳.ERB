@CHARAMOVE_DATA_72(ARG, ARG:2)
LOCAL = 72
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;梦幻馆には行かない
			CASE P450玄关 TO P466庭
				RETURN -100
			;他人的家には入らない
			CASE P432影狼的家, P437梅蒂欣的家, P439拉尔瓦的家, P443米斯蒂亚的家, P445妹红的家
				RETURN -100
			;来客用厕所,永琳私室,辉夜私室,后院はあんまり行かない
			CASE P406来客用厕所, P410帝私室, P411铃仙私室, P422后院
				RETURN -5
			;诊察室,配药室,走廊,起居室によく居る
			CASE P404诊察室, P405配药室, P409走廊, P416起居室
				RETURN 5

			;纯狐邸には行かない
			CASE P1060纯狐邸・玄关 TO P1072赫卡提亚私室
				RETURN -100
			;哆来咪宅には行かない
			CASE P1050哆来咪宅・起居室 TO P1055哆来咪宅・厕所
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 广场, 商业街, 吞屋小道, 长屋街
				RETURN 1
			CASE 竹林入口, 迷失的小道, 斜角的竹林, 永远亭, 永远亭的内院
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

