	CALLF MAKE_STR(V_NAME, "浓厚/野趣/酸/酸/" + "青蛙/虫肉/谜料理/" * 3)
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "魔界风/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "白/可爱的/活泼/洋风/别致/纤细/" + "魔法/" * 3 + "魔界の/背叛の/禁断の/" * 5)
