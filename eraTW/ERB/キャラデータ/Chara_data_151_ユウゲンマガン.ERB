@CHARAMOVE_DATA_151(ARG, ARG:2)
LOCAL = 151
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;地灵殿には行かない
			CASE P901地灵殿前 TO P930旧血池地狱
				RETURN -100
			;酒场と鬼の溜まり场に行きやすい
			CASE P933酒场, P938鬼的聚集场所
				RETURN 5
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			;Lots of occult tomes in the library and Suzunaan
			CASE 大图书馆, 商业街
				RETURN 1
			;Looks for magic artifacts at Kourindou
			CASE 香霖堂
				RETURN 1
			;Her friend Sariel visits these places sometimes
			CASE 地狱的深道, 旧地狱街道
				RETURN 1
			;spooky places
			CASE 墓地, 无名之丘, 再思之道, 无缘冢
				RETURN 1
			;Sightseeing before "the things that devour and dissolve" consume Gensokyo
			CASE 三途之川, 梦幻遗迹, 玄武之泽, 虹龙洞, 宁静海
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
		;夜はよく酒场
		SIF CFLAG:LOCAL:今日的运势 % 4 == 0 && INRANGE(TIME, 1200, 1440)
			TCVAR:LOCAL:引力点 = P933酒场
ENDSELECT

@EXIST_キャラデータ151
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ151(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "魔眼")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（连衣裙）套")

CASE "便装：和服"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("和服", "和服"))
CASE "便装：裙子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裙子", "裙子"))	
CASE "便装：饰品"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("饰品", "袖"))
CASE "便装：其他１"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("其他１", "蝴蝶结"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "electrified")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "conductive panties")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "conductive bra")
CASE "固有内衣着用条件"
	SIF !RAND:(3 - (2 * 胜负内衣判定([[魔眼]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 3)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "谜料理/魔界风/新鲜/外界风/魔力/魔性/逆转/不穏/予想外/实验的/" + "心跳味/禁断/魔法/" * 3 + "不思议/" * 5)
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "薄味/灵障/秘术/朴素/慈悲/" + "科学的/化学的/" * 3 + "可爱的/" * 5)
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "魔界风/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "恐怖的/妖艳な/怪奇な/Enigmaticな/狂热な/幻兽の/暗の/法界の/诅咒の/电子工学の/" + "哥特的/怀旧的/神秘的/前卫的な/超自然な/外界の/" * 3 + "幽玄な/神秘的/奇妙な/令人害怕の/疯狂な/禁忌の/幻影の/" * 5 + "邪恶の/狂气の/" * 10)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "红魔の/巫女の/天空の/平和の/肉体の/俗气の/时空の/退魔の/" + "现代的/东方风格的/天轮の/" * 3 + "可爱的/封魔の/封呪の/" * 5)
ENDSELECT

