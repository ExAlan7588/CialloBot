@CHARAMOVE_DATA_3(ARG, ARG:2)
LOCAL = 3
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向
	CASE 4
		SELECTCASE ARG:2
			;壁橱间にはあんまりいない
			CASE P18壁橱间
				RETURN -5
			;他所
			CASE P27三妖精之家・大厅 TO P35三妖精之家・地下室, P39梦幻遗迹・浴室, P56阿吽的小屋
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 樱花道的鸟居, 神社境内, 神社走廊, 梦幻遗迹
				RETURN 1
			CASE 广场, 商业街, 吞屋小道, 长屋街
				RETURN 1
			CASE 梦幻馆
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

