@CHARAMOVE_DATA_119(ARG, ARG:2)
LOCAL = 119
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;自宅によく居る
			CASE P736山姥之家
				RETURN 5
			;私室には入らない
			CASE P704河童的宣传站, P706厄神的家, P709莉莉们的家, P716秋姊妹的家・土间 TO P730仙人的宅邸・庭
				RETURN -100
			CASE P733正邪的藏身处, P737招财猫的家, P740山童的宣传站, P741美天的栖息处
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 山麓树海, 玄武之泽, 大蛤蟆之池, 森林深处
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ119
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ119(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "合欢乃")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子）套")

CASE "便装：连衣裙"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("连衣裙", "连衣裙"))

;あえて色は决めない
CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "颜色变化有趣的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "手染兜裆布")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "手染胸罩")
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 胜负内衣判定([[合欢乃]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 3)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "鱼料理/蘑菇/和食/锅物/开胃/丰盛/浓厚/秋物/朴素/野趣/家庭的/粘稠/咸/咸/酸/酸/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "面包/乳酪/洋食/简易/清淡/外界风/甜/甜/谜料理/谜料理/谜料理/")
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "母亲的味道/得意料理＊秋物＊/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "茶/美的/朴素/别致/" + "秩序/刃物/" * 3 + "山の/圣域の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "混沌/洋风/洛丽塔/" + "机械/" * 5)
ENDSELECT

