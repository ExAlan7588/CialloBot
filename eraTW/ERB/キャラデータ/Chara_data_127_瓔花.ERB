@CHARAMOVE_DATA_127(ARG, ARG:2)
LOCAL = 127
SELECTCASE ARG
	;连动设定（参照する侧＞RETURN=参照先, 参照される侧＞RESULT:1～3=连动对象）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向
	CASE 4
		SELECTCASE ARG:2
			;八云邸と彼岸から先は行かない（入り口部分は出る时用）
			CASE P604彼岸, P610是非曲直厅大堂 TO P655尤魔宅的澡堂, P605地狱
				RETURN -100
			;润美的家には行かない
			CASE P608润美的家, P606日狭美的家, P607残无的家
				RETURN -100
			;积石冢に引きこもる
			CASE P603积石冢
				RETURN 10
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 中有之道, 三途之川
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

