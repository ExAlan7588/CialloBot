@CHARAMOVE_DATA_44(ARG, ARG:2)
LOCAL = 44
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;引きこもらない
			CASE P535艾伦宅・寝室
				RETURN -10
			;魔理沙家,爱丽丝家,妖怪的栖息处
			CASE P511魔理沙宅・起居室 TO P515魔理沙宅・仓库, P521人偶洋馆・爱丽丝的房间 TO P531人偶洋馆・空的房间
				RETURN -100
			CASE P541朱鹭子的栖息处, P542莉格露的栖息处, P543露米亚的栖息处, P544成美的小屋
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 梦幻遗迹
				RETURN 1
			CASE 广场, 商业街, 吞屋小道, 长屋街
				RETURN 1
			CASE 雾之湖, 大图书馆
				RETURN 1
			CASE 竹林入口, 迷失的小道, 斜角的竹林, 无名之丘, 太阳花田
				RETURN 1
			CASE 森林的入口, 香霖堂, 古木的大树, 再思之道, 无缘冢
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
		;平日15～19时は看店
		SIF YOUBI_MATCH(DAY, "月火水木金") && INRANGE(TIME, 900, 1140)
			TCVAR:LOCAL:引力点 = P534轻飘飘的艾伦魔法商店
ENDSELECT

@EXIST_キャラデータ44
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ44(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "艾伦")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（睡袍）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "蝴蝶结"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：袜子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("袜子", "袜子"))
CASE "便装：连衣裙"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("连衣裙", "围裙洋装"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "非常蓬松的样子的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "丝带褶边内裤")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "吊带衫")
CASE "固有内衣着用条件"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "卵/蘑菇/洋食/叶物/派/简易/健康/清淡/艺术的/新鲜/家庭的/软绵绵/赏月/甜/甜/甜/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "丰盛/浓厚/辣/辣/" + "青蛙/虫肉/怪诞/谜料理/" * 3)
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "得意料理＊软绵绵＊/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "黄/可爱的/活泼/不思议/" + "月/魔法/" * 3 + "蓬蓬松松の/猫の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "充满力量/威严/" + "妖术/护臂/机械/" * 3)
ENDSELECT

