@CHARAMOVE_DATA_14(ARG, ARG:2)
LOCAL = 14
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;三妖精宅内に行きやすい
			CASE P27三妖精之家・大厅 TO P34斯塔私室
				RETURN 5
			;よく居る
			CASE P343湖畔, P345琪露诺的冰屋, P346大妖精的小屋, P347雾之湖
				RETURN 5
			;あとはどこでも入ってくる
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 樱花道的鸟居, 神社境内, 妖精的大树
				RETURN 1
			CASE 雾之湖, 冰造的小雪屋, 正门
				RETURN 1
			CASE 森林的入口, 香霖堂, 古木的大树, 雾雨魔法店, 人偶的洋馆, 再思之道, 无缘冢
				RETURN 1
			CASE 山麓树海, 玄武之泽, 大蛤蟆之池
				RETURN 1
		ENDSELECT
ENDSELECT

@EXIST_キャラデータ14
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ14(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "琪露诺")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "蝴蝶结"))
CASE "便装：连衣裙"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("连衣裙", "连衣裙"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "凉凉的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "冰精の胖次")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "冰精の吊带衫")
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 胜负内衣判定([[琪露诺]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

CASE "固有指令"
	CALLF MAKE_STR(V_NAME, "买冰淇淋")
CASE "固有指令实行可能"
	CALLF MAKE_INT(V_NAME, 1)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "青蛙/鱼料理/汁物/冰淇淋/浓厚/野趣/豪快/扑鼻/闪耀/" + "甜/冷/夏物/谜料理/" * 3)
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "锅物/辣/辣/" + "野菜/香料/温暖/" * 3)
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "冰结/得意料理＊夏物＊/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "青/帅气的/活泼/充满力量/洛丽塔/壮大/" + "冰/夏の/" * 3 + "向日葵の/冰精の/冰の/冰结の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "赤/纤细/知的/" + "书物/烟袋/" * 3 + "火/" * 5)

;农民关联
;最强とか天才とかそういう言叶が好きそう
;寒冷地的作物って感じがするしこの子に任せるっきゃない
;收获した甜菜は红魔馆に出荷され砂糖に加工されるのであった
CASE "农民：说明"
	CALLF MAKE_STR(V_NAME, "甜菜农家")
CASE "农民：作物"
	CALLF MAKE_STR(V_NAME, "甜菜")
CASE "农民：田的种类"
	CALLF MAKE_STR(V_NAME, "甜菜畑")
CASE "农民：畑の所在地"
	CALLF MAKE_STR(V_NAME, "雾之湖")

CASE "农民：MapID"
	CALLF MAKE_INT(V_NAME, 3)
CASE "农民：场所ID"
	CALLF MAKE_INT(V_NAME, 343)
CASE "农民：报酬"
	CALLF MAKE_INT(V_NAME, 250)
CASE "农民：金利"
	CALLF MAKE_INT(V_NAME, 9)

;ここは依赖IDが关联しない情报
;依赖发生率スカ2/一般3/固有5
CASE "没有依赖发生率"
	CALLF MAKE_INT(V_NAME, 2)
CASE "一般依赖发生率"
	CALLF MAKE_INT(V_NAME, 3)
CASE "固有依赖发生率"
	CALLF MAKE_INT(V_NAME, 5)
CASE "固有依赖最终要素"
	CALLF MAKE_INT(V_NAME, 101)
CASEELSE
	;固有依赖关联のデータにバトンタッチ
	SIF STRCOUNT(O_DATA, "依赖")
		CALLF 固有依赖14(ARG, O_DATA, V_NAME)
ENDSELECT

