	SIF !RAND:(3 - (2 * 胜负内衣判定([[帕露西]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 1)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "鱼料理/和食/煮物/清淡/朴素/上品/家庭的/软绵绵/地底风/辣/辣/咸/咸/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "简易/浓厚/甜/甜/酸/酸/谜料理/谜料理/谜料理/谜料理/谜料理/")
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "地底风/嫉妒/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "可爱的/时尚/和风/别致/" + "绿/刃物/人形/" * 3 + "诅咒の/嫉妒の/樱花の/针/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "夸张/洛丽塔/威严/狂热/" + "背叛の/" * 10)

;农民关联
;はじかみ
;新鲜な绿やら食べた时のヒリヒリ感もなんとなくイメージに合うかな
