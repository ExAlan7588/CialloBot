@CHARAMOVE_DATA_81(ARG, ARG:2)
LOCAL = 81
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
		RESULT:1 = [[莲子]]
		RESULT:2 = [[梅莉]]
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;遗迹によく行く
			CASE P36梦幻遗迹前 TO P51梦幻遗迹・仓库
				RETURN 5
			;莲メリ的房间,广场
			CASE P232莲子的房间, P233梅莉的房间, P202中央广场
				RETURN 5
			;私室には行かない
			CASE P221稗田邸, P224慧音宅, P222寺子屋, P226小铃私室, P229阿求私室
				RETURN -100
			CASE P208雷鼓的房间, P209八桥的房间, P210弁弁的房间
				RETURN -100
			CASE P231蛮奇的房间, P234雪的房间, P235​舞​的房间, P239美宵的房间
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 樱花道的鸟居, 神社境内, 神社本堂, 神社走廊, 梦幻遗迹
				RETURN 1
			CASE 地藏小路, 倒垂的柳树下, 命莲寺境内, 墓地, 神灵庙广场
				RETURN 1
			CASE 广场, 商业街, 吞屋小道, 长屋街
				RETURN 1
			CASE 竹林入口, 迷失的小道, 斜角的竹林, 兔的洞穴, 无名之丘, 太阳花田
				RETURN 1
			CASE 中有之道, 三途之川
				RETURN 1
		ENDSELECT
	;引力设定
	CASE 8
ENDSELECT

