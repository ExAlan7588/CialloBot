@CHARAMOVE_DATA_110(ARG, ARG:2)
LOCAL = 110
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;梦幻馆には行かない
			CASE P450玄关 TO P466庭
				RETURN -100
			;他人的家には入らない
			CASE P432影狼的家, P437梅蒂欣的家, P439拉尔瓦的家, P443米斯蒂亚的家, P445妹红的家
				RETURN -100
			;走廊,起居室によく居る
			CASE P409走廊, P416起居室
				RETURN 5

			;宁静海の方へは行かない
			CASE P1016入海口, P1060纯狐邸・玄关 TO P1072赫卡提亚私室
				RETURN -100
			;哆来咪宅には行かない
			CASE P1050哆来咪宅・起居室 TO P1055哆来咪宅・厕所
				RETURN -100
			;值班室、食料库は行かない
			CASE P1023门卫值班室 TO P1025玉兔值班室, P1028食料库
				RETURN -100
			;玉兔街方面はあまり行かない
			CASE P1003玉兔街, P1004广场, P1010饭店 TO P1013蔬菜店
				RETURN 5
			;月之都によく居る
			CASE P1002月之都
				RETURN 5
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 槐安通路, 月之都, 绵月亭, 玉兔之街, 桃林～沙滩
				RETURN 1
			CASE 永远亭, 永远亭的内院
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

