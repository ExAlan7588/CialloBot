@キャラデータ75(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "梅蒂欣")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "蝴蝶结"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：袜子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("袜子", "袜子"))
CASE "便装：裙子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裙子", "裙子"))
CASE "便装：上身衣服２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "女式衬衫"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "可能有毒的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "紫色的胖次")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "紫色的胸罩")
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 胜负内衣判定([[梅蒂欣]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "卵/牛奶/汁物/派/简易/豪华/上品/新鲜/软绵绵/灵障/甜/甜/酸/酸/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "神力/辣/辣/丰盛/丰盛/" + "青蛙/虫肉/香料/" * 3)
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "刺激的/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "紫/混沌/可爱的/洋风/不思议/" + "毒/装饰/" * 3 + "铃兰の/毒の/药瓶/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "秩序/和风/知的/" + "金属/生体品/护臂/烟袋/机械/" * 3)
ENDSELECT

