@CHARAMOVE_DATA_54(ARG, ARG:2)
LOCAL = 54
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;仓库と屋敷外には出ない
			CASE P305仓库, P334废洋馆・入口 TO P348雾之湖・湖底
				RETURN -100
			;外にも二阶にもあまり行かない
			CASE P302庭, P319二层走廊 TO P327小露台
				RETURN -5
			;いつも图书馆
			CASE P310图书馆
				RETURN 5
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 正门, 大厅, 食堂, 大图书馆, 地下室
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
		;ごくまれに运动の
		IF CFLAG:LOCAL:今日的运势 % 100 == 0 && INRANGE(TIME, 720, 960)
			SELECTCASE DAY % 3
			CASE 1
				TCVAR:LOCAL:引力点 = P302庭
			CASE 2
				TCVAR:LOCAL:引力点 = P324大露台
			CASEELSE
				TCVAR:LOCAL:引力点 = P314食堂
			ENDSELECT
		ENDIF
ENDSELECT

