@CHARAMOVE_DATA_122(ARG, ARG:2)
LOCAL = 122
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
		RESULT:1 = [[舞]]
		RESULT:2 = [[里乃]]
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;未设定
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 广场, 商业街, 吞屋小道
				RETURN 1
			CASE 竹林入口, 迷失的小道, 斜角的竹林, 无名之丘, 太阳花田
				RETURN 1
			CASE 森林的入口, 香霖堂, 古木的大树, 再思之道, 无缘冢
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ122
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ122(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "舞")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "乌帽子"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：袜子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("袜子", "长筒袜"))
CASE "便装：连衣裙"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("连衣裙", "连衣裙"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "看起来很适合舞蹈的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "男孩内裤")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "运动文胸")
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 胜负内衣判定([[舞]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "肉料理/锅物/丰盛/垃圾/浓厚/豪华/艺术的/豪快/软绵绵/甜/甜/辣/辣/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "野菜/朴素/酸/酸/天狗流/天狗流/天狗流/")
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "魔性/浓郁/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "绿/混沌/帅气的/活泼/夸张/不思议/" + "音乐/乐器/" * 3 + "竹の/疯狂な/后户の/肉体の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "别致/纤细/知的/" + "书物/" * 3 + "天狗の/" * 10)
ENDSELECT

