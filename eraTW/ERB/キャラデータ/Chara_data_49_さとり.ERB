@CHARAMOVE_DATA_49(ARG, ARG:2)
LOCAL = 49
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;私室はあんまり入らない
			CASE P911阿空私室, P912阿燐私室, P918恋私室
				RETURN -5
			;食堂,私室,书斋によく行く
			CASE P913食堂, P919觉私室, P920书斋
				RETURN 5
			;入らない
			CASE P928灼热地狱遗迹, P929地狱的人工太阳, P930旧血池地狱
				RETURN -100
			CASE P936勇仪的家, P937空屋, P938鬼的聚集场所, P940帕露西的家, P941山女的家, P942琪斯美的家, P943茅屋, P947血枪的栖息处
				RETURN -100
			CASE P901地灵殿前
				;内侧からは出ない
				SIF !TCVAR:LOCAL:引力点 && CFLAG:LOCAL:当前位置 == P905一层走廊
					RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 幻想风穴, 地狱的深道, 旧地狱街道, 地灵殿
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;引力设定
	CASE 8
		;休日は5分の1で出步行の
		IF YOUBI_MATCH(DAY, "土日") && INRANGE(TIME, 720, 1080)
			SELECTCASE CFLAG:LOCAL:今日的运势 % 10
			CASE 1
				TCVAR:LOCAL:引力点 = P933酒场
			CASE 2
				TCVAR:LOCAL:引力点 = P944街道
			CASEELSE
				TCVAR:LOCAL:引力点 = 0
			ENDSELECT
		ENDIF
ENDSELECT

