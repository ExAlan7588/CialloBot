@CHARAMOVE_DATA_107(ARG, ARG:2)
LOCAL = 107
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
		;たまに连动
		IF FLAG:每日变更事件 % 10 == 0
			RESULT:1 = [[清兰]]
			RESULT:2 = [[铃瑚]]
		ENDIF
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;宁静海の方へは行かない
			CASE P1016入海口, P1060纯狐邸・玄关 TO P1072赫卡提亚私室
				RETURN -100
			;哆来咪宅には行かない
			CASE P1050哆来咪宅・起居室 TO P1055哆来咪宅・厕所
				RETURN -100
			;门卫值班室は行かない
			CASE P1023门卫值班室
				RETURN -100
			;二阶はあまり行かない
			CASE P1040二层回廊 TO P1044会客厅
				RETURN -5
			;玉兔街方面,玉兔食堂,玉兔值班室によく居る
			CASE P1003玉兔街, P1004广场, P1010饭店 TO P1013蔬菜店, P1024玉兔食堂, P1025玉兔值班室
				RETURN 5
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 竹林入口, 迷失的小道, 斜角的竹林, 兔的洞穴, 永远亭
				RETURN 1
			CASE 广场, 商业街, 吞屋小道
				RETURN 1
			CASE 月之都, 绵月亭, 玉兔之街, 桃林～沙滩
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

