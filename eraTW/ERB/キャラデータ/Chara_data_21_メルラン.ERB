@CHARAMOVE_DATA_21(ARG, ARG:2)
LOCAL = 21
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
		RESULT:1 = [[莉莉卡]]
		RESULT:2 = [[梅露兰]]
		RESULT:3 = [[露娜萨]]
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;よく居る
			CASE P335废洋馆・大厅
				RETURN 5
			;私室には入らない
			CASE P303守卫小屋, P304空的小屋, P305仓库, P311帕秋莉私室, P312小恶魔私室, P320咲夜私室, P326蕾米莉亚私室, P331地下室
				RETURN -100
			CASE P344蕾蒂的冰屋, P345琪露诺的冰屋, P346大妖精的小屋, P348雾之湖・湖底
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 广场, 商业街, 吞屋小道
				RETURN 1
			CASE 雾之湖, 废洋馆, 正门
				RETURN 1
			CASE 中有之道, 三途之川, 白玉楼庭院, 白玉楼
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ21
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ21(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "梅露兰")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "帽子"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：袜子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("袜子", "袜子"))
CASE "便装：裙子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裙子", "裙子"))
CASE "便装：上身衣服２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "女式衬衫"))
CASE "便装：外衣"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("外衣", "背心"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "太阳模样的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "襟翼内裤")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "全剪子")
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 胜负内衣判定([[梅露兰]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "牛奶/乳酪/洋食/锅物/派/丰盛/垃圾/艺术的/新鲜/豪快/软绵绵/甜/甜/辣/辣/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "简易/咸/咸/虫肉/虫肉/虫肉/香料/香料/香料/")
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "未知の味/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "粉色/幽灵/可爱的/夸张/充满力量/" + "音乐/日/乐器/" * 3 + "虹の/幽灵の/欢愉の/幸福の/三位一体の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "别致/纤细/" + "星/月/刃物/弹/护臂/烟袋/" * 3 + "鼓槌/拨片/指挥棒/" * 5 + "精灵银の/忧郁の/" * 10)
ENDSELECT

