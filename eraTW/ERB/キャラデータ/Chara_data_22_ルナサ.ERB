@CHARAMOVE_DATA_22(ARG, ARG:2)
LOCAL = 22
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
		RESULT:1 = [[莉莉卡]]
		RESULT:2 = [[梅露兰]]
		RESULT:3 = [[露娜萨]]
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;よく居る
			CASE P335废洋馆・大厅
				RETURN 5
			;私室には入らない
			CASE P303守卫小屋, P304空的小屋, P305仓库, P311帕秋莉私室, P312小恶魔私室, P320咲夜私室, P326蕾米莉亚私室, P331地下室
				RETURN -100
			CASE P344蕾蒂的冰屋, P345琪露诺的冰屋, P346大妖精的小屋, P348雾之湖・湖底
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 广场, 商业街, 吞屋小道
				RETURN 1
			CASE 雾之湖, 废洋馆, 正门
				RETURN 1
			CASE 中有之道, 三途之川, 白玉楼庭院, 白玉楼
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

