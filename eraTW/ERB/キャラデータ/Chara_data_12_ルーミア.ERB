@CHARAMOVE_DATA_12(ARG, ARG:2)
LOCAL = 12
;------------------------------------------------------------
;口上の存在判定 and RESULTSに文字列代入
IF CFLAG:LOCAL:口上セレクタ
	TRYCALLFORM M_KOJO_K{LOCAL}_{CFLAG:LOCAL:口上セレクタ}
ELSE
	TRYCALLFORM M_KOJO_K{LOCAL}
ENDIF
;口上存在しないなら结束
IF !RESULT
	CALLFORM M_KOJO_CHARAMOVE_DATA_K{LOCAL}_INITIAL	
ENDIF
;口上表示设定なら表示
IF FLAG:口上文本设定 > 0
	TRYCCALLFORM M_KOJO_CHARAMOVE_DATA_K{LOCAL}_{CFLAG:LOCAL:口上セレクタ}(ARG, ARG:2)
		RETURN RESULT 
	CATCH
		CALLFORM CHARAMOVE_DATA_K{LOCAL}_INITIAL(ARG, ARG:2)
		RETURN RESULT 
	ENDCATCH
ENDIF
;------------------------------------------------------------
@CHARAMOVE_DATA_K12_INITIAL(ARG, ARG:2)
	SELECTCASE ARG
		;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
		CASE 1
		;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
		CASE 3
		;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
		CASE 4
			SELECTCASE ARG:2
				;私室には入らない
				CASE P512魔理沙宅・寝室, P514魔理沙宅・澡堂, P521人偶洋馆・爱丽丝的房间, P522人偶洋馆・神绮的房间
					RETURN -100
				CASE P523人偶洋馆・梦子的房间, P526人偶洋馆・澡堂, P531人偶洋馆・空的房间
					RETURN -100
				CASE P541朱鹭子的栖息处, P542莉格露的栖息处, P544成美的小屋
					RETURN -100
			ENDSELECT
		;出现场所
		CASE 7
			SELECTCASE ARG:2
				CASE 地藏小路, 倒垂的柳树下, 墓地
					RETURN 1
				CASE 森林的入口, 古木的大树, 再思之道, 无缘冢
					RETURN 1
				CASE 中有之道, 三途之川
					RETURN 1
			ENDSELECT
		;引力设定（CFLAG:LOCAL:引力点を设定する）
		CASE 8
	ENDSELECT

