@CHARAMOVE_DATA_120(ARG, ARG:2)
LOCAL = 120
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;よく居る
			CASE P1鸟居, P2境内, P3功德箱
				RETURN 5
			;屋内にはあまり入らない
			CASE P8厨房, P9起居室, P10走廊, P12更衣间 TO P19大的仓库, P52别馆
				RETURN -5
			;他所
			CASE P27三妖精之家・大厅 TO P35三妖精之家・地下室, P37梦幻遗迹・一层廊道 TO P51梦幻遗迹・仓库
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 樱花道的鸟居, 神社境内, 神社走廊
				RETURN 1
			CASE 地藏小路, 倒垂的柳树下, 命莲寺境内
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

