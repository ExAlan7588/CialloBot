@CHARAMOVE_DATA_74(ARG, ARG:2)
LOCAL = 74
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;よく居る
			CASE P343湖畔, P345琪露诺的冰屋, P347雾之湖
				RETURN 5
			;红魔馆内部、废洋馆には行かない
			CASE P303守卫小屋 TO P342莉莉卡私室
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 广场, 商业街, 吞屋小道
				;冬の间だけ
				SIF DAY:2 == 4
					RETURN 1
			CASE 雾之湖, 冰造的小雪屋, 正门
				RETURN 1
			CASE 森林的入口, 古木的大树, 再思之道, 无缘冢
				;冬の间だけ
				SIF DAY:2 == 4
					RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

