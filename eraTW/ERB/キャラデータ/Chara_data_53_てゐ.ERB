@CHARAMOVE_DATA_53(ARG, ARG:2)
LOCAL = 53
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;梦幻馆には行かない
			CASE P450玄关 TO P466庭
				RETURN -100
			;他人的家には入らない
			CASE P432影狼的家, P437梅蒂欣的家, P439拉尔瓦的家, P443米斯蒂亚的家, P445妹红的家
				RETURN -100
			;来客用厕所,永琳私室,辉夜私室,后院はあんまり行かない
			CASE P406来客用厕所, P413永琳私室, P414辉夜私室, P422后院
				RETURN -5
			;帝私室,铃仙私室,庭が稍微好き
			CASE P410帝私室, P411铃仙私室, P421庭
				RETURN 3
			;走廊,起居室,兔的洞穴,斜角的竹林,迷失的小道によく居る
			CASE P409走廊, P416起居室, P431兔的洞穴, P433斜角的竹林, P434迷失的小道
				RETURN 5
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 竹林入口, 迷失的小道, 斜角的竹林, 兔的洞穴, 永远亭, 无名之丘, 太阳花田
				RETURN 1
			CASE 森林的入口, 香霖堂, 古木的大树, 再思之道, 无缘冢
				RETURN 1
		ENDSELECT
	;引力设定
	CASE 8
		;平日は5分の3で竹林をうろつく
		IF YOUBI_MATCH(DAY, "月火水木金") && INRANGE(TIME, 600, 960)
			SELECTCASE CFLAG:LOCAL:今日的运势 % 5
			CASE 1
				TCVAR:LOCAL:引力点 = 431
			CASE 2
				TCVAR:LOCAL:引力点 = 434
			CASE 3
				TCVAR:LOCAL:引力点 = 446
			CASEELSE
				TCVAR:LOCAL:引力点 = 0
			ENDSELECT
		ENDIF
ENDSELECT

