@CHARAMOVE_DATA_118(ARG, ARG:2)
LOCAL = 118
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
		;まれに连动
		SIF CFLAG:LOCAL:今日的运势 % 16 == 0
			RETURN [[桑尼]]
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;三妖精宅内に行きやすい
			CASE P27三妖精之家・大厅 TO P34斯塔私室
				RETURN 5
			;梦幻馆には行かない
			CASE P450玄关 TO P465大堂
				RETURN -100
			;永远亭の奥には行かない
			CASE P405配药室, P407走廊 TO P430地下室
				RETURN -100
			;他人的家には入らない
			CASE P432影狼的家, P437梅蒂欣的家, P443米斯蒂亚的家, P445妹红的家
				RETURN -100
			;自宅,无名之丘,太阳花田,梦幻馆庭によく居る
			CASE P439拉尔瓦的家, P436无名之丘, P438太阳花田, P466庭
				RETURN 5
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 雾之湖, 冰造的小雪屋, 正门
				;冬は行かない
				SIF DAY:2 != 4
					RETURN 1
			CASE 森林的入口, 古木的大树, 再思之道, 无缘冢
				RETURN 1
			CASE 无名之丘, 太阳花田
				RETURN 1
			CASE 妖精的大树
				;冬は行かない
				SIF DAY:2 != 4
					RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

