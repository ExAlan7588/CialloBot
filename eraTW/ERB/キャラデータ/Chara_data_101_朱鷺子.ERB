@CHARAMOVE_DATA_101(ARG, ARG:2)
LOCAL = 101
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;自宅によく居る
			CASE P541朱鹭子的栖息处
				RETURN 5
			;魔理沙家,爱丽丝家,艾伦家,妖怪的栖息处
			CASE P510雾雨魔法店 TO P515魔理沙宅・仓库, P521人偶洋馆・爱丽丝的房间 TO P531人偶洋馆・空的房间
				RETURN -100
			CASE P535艾伦宅・寝室 TO P537艾伦宅・澡堂, P542莉格露的栖息处, P543露米亚的栖息处, P544成美的小屋, P545慧之子的栖息处
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 雾之湖, 正门, 大图书馆
				RETURN 1
			CASE 森林的入口, 香霖堂, 古木的大树
				RETURN 1
			CASE 山麓树海, 玄武之泽, 大蛤蟆之池
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ101
