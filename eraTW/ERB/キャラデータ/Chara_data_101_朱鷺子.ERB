@キャラデータ101(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "朱鹭子")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子）套")

CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：袜子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("袜子", "袜子"))
CASE "便装：裙子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裙子", "裙子"))
CASE "便装：上身衣服２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "女式衬衫"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "白色渐染上了红色")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "朱鹭色胖次")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "朱鹭色胸罩")
CASE "固有内衣着用条件"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "野菜/虫肉/和食/叶物/简易/清淡/朴素/野趣/家庭的/粘稠/甜/甜/酸/酸/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "辣/辣/卵/卵/卵/" + "禽肉/谜料理/" * 5)
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "薄味/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "赤/秩序/可爱的/朴素/和风/别致/纤细/知的/" + "鸟/书物/" * 3 + "知惠の/知识の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "活泼/充满力量/威严/" + "刃物/弹/护臂/" * 3)
ENDSELECT


