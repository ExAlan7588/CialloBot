@CHARAMOVE_DATA_95(ARG, ARG:2)
LOCAL = 95
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
		RESULT:1 = [[弁弁]]
		RESULT:2 = [[八桥]]
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;付丧神的房间,广场によく居る
			CASE P208雷鼓的房间, P209八桥的房间, P210弁弁的房间, P202中央广场
				RETURN 5
			;私室には行かない
			CASE P221稗田邸, P224慧音宅, P222寺子屋, P226小铃私室, P229阿求私室
				RETURN -100
			CASE P231蛮奇的房间, P232莲子的房间, P233梅莉的房间, P234雪的房间, P235​舞​的房间, P239美宵的房间
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 广场, 商业街, 吞屋小道, 长屋街
				RETURN 1
			CASE 森林的入口, 香霖堂, 古木的大树, 再思之道, 无缘冢
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ95
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ95(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "八桥")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "发箍"))
CASE "便装：裙子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裙子", "裙子"))
CASE "便装：上身衣服２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "女式衬衫"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "旧衣服重置")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "松开的绳子内裤")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "素朴的绳子胸罩")
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 胜负内衣判定([[八桥]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "米/肉料理/和食/煮物/浓厚/豪华/艺术的/家庭的/扑鼻/甜/甜/咸/咸/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "清淡/辣/辣/" + "青蛙/虫肉/蘑菇/怪诞/谜料理/" * 3)
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "浓郁/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "茶/可爱的/艺术的/和风/别致/" + "音乐/乐器/" * 3 + "岚の/旋律の/爪/拨片/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "洋风/纤细/" + "刃物/生体品/护臂/" * 3 + "鼓槌/指挥棒/" * 5 + "精灵银の/" * 10)
ENDSELECT

