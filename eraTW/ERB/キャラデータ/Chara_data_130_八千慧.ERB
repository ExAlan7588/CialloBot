@キャラデータ130(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "八千慧")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（襦袢）套")

CASE "便装：上身衣服２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "女式衬衫"))
CASE "便装：裙子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裙子", "裙子"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：袜子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("袜子", "袜子"))
CASE "便装：其他１"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("其他１", "甲罗"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "人には见せられない")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "印花内裤（龟）")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "甲罗ブラ")
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 胜负内衣判定([[八千慧]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "野菜/香料/面类/开胃/丰盛/健康/浓厚/冷/豪华/上品/怪诞/粘稠/畜生流/中华/中华/辣/辣/酸/酸/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "清淡/新鲜/甜/甜/虫肉/虫肉/虫肉/天界风/天界风/天界风/")
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "畜生流/幸运/得意料理＊中华＊/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "绿/高级/混沌/可爱的/奇妙/大陆风/别致/知的/威严/" + "水/宝石/美术品/" * 3 + "水獭の/龟の/龙の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "秩序/活泼/夸张/洛丽塔/" + "安物/神灵/" * 3 + "埴轮の/狼の/马の/鹫の/天马の/埴轮/" * 10)
ENDSELECT

