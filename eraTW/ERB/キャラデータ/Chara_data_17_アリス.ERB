;ENDIF
@キャラデータ17(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "爱丽丝")
CASE "便服"
	SIF (DAY:2 == 1 && DAY:3 == 1) || (DAY:2 == 4 && DAY:3 == 31)
		CALLF MAKE_STR(V_NAME, "年越し")
CASE "明日の衣装"
	SIF DAY:2 == 4 && (DAY:3 == 30 || DAY:3 == 31)
		CALLF MAKE_STR(V_NAME, "年越し")
CASE "今天的睡衣"
	IF (DAY:2 == 1 && DAY:3 == 1) || (DAY:2 == 4 && DAY:3 == 31)
		CALLF MAKE_STR(V_NAME, "睡衣（襦袢）套")
	ELSEIF CFLAG:ARG:初始位置 == CFLAG:MASTER:初始位置
		CALLF MAKE_STR(V_NAME, "睡衣（背带裙衣）套")
	ELSE
		CALLF MAKE_STR(V_NAME, "睡衣（裤子）套")
	ENDIF

CASE "便装：外衣"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("外衣", "披肩"))
CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "发箍"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "长靴"))
CASE "便装：袜子"
	IF FLAG:2 > 0
		CALLF MAKE_INT(V_NAME, CLOTHES_ID("袜子", "半透明连裤袜"))
	ELSE
		CALLF MAKE_INT(V_NAME, CLOTHES_ID("袜子", "长筒袜"))
	ENDIF
CASE "便装：连衣裙"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("连衣裙", "连衣裙"))

CASE "年越し：和服"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("和服", "和服"))
CASE "年越し：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "发箍"))
CASE "年越し：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "长靴"))
