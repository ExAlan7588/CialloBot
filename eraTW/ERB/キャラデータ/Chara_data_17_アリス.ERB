CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "爱丽丝手制的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "手织的蕾丝")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "衬裙")
CASE "固有内衣着用条件"
	SIF !RAND:(3 - (2 * 胜负内衣判定([[爱丽丝]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
