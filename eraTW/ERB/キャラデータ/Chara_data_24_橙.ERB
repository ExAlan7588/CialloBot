@CHARAMOVE_DATA_24(ARG, ARG:2)
LOCAL = 24
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
		;たまに连动
		SIF CFLAG:LOCAL:今日的运势 % 8 == 0
			RETURN [[蓝]]
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;よく居る
			CASE P632八云邸庭, P604彼岸
				RETURN 5
			;是非曲直厅、畜生界、地狱は行かない
			CASE P610是非曲直厅大堂 TO P618空的房间, P640异界的关卡 TO P655尤魔宅的澡堂, P605地狱
				RETURN -100
			;他人的家には入らない
			CASE P608润美的家, P609璎花的家, P606日狭美的家, P607残无的家
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 中有之道, 三途之川, 迷途之家
				RETURN 1
			CASE 山麓树海, 玄武之泽, 大蛤蟆之池, 森林深处
				RETURN 1
			CASE 九天瀑布, 绝景之丘, 山之湖, 守矢神社境内
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ24
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ24(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "橙")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（襦袢）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "帽子"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：袜子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("袜子", "袜子"))
CASE "便装：连衣裙"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("连衣裙", "连衣裙"))
CASE "便装：上身衣服２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "女式衬衫"))
CASE "便装：其他１"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("其他１", "耳环"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "黑猫柄の")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "手工缝制的")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 胜负内衣判定([[橙]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 0)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "鱼料理/肉料理/中华/油炸食品/丰盛/浓厚/野趣/家庭的/谜料理/松脆/甜/甜/咸/咸/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "健康/酸/酸/野菜/野菜/野菜/香料/香料/香料/")
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "妖力/" * 2)
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "朱/帅气的/大陆风/洛丽塔/" + "妖术/生体品/" * 3 + "猫の/橙子の/式神の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "水/冰/书物/烟袋/" * 3 + "犬の/狼の/" * 10)
ENDSELECT

