@CHARAMOVE_DATA_147(ARG, ARG:2)
LOCAL = 147
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4 ;lives at 853
		SELECTCASE ARG:2
			;often visits heaven
			CASE P830玄云海 TO P842比那名居邸库房
				RETURN 10
			;私室やお澡堂は入らない
			CASE P817神奈子私室, P818诹访子私室, P820早苗私室
				RETURN -100
			;他所的家には行かない
			CASE P807椛宅, P808文宅, P809果宅, P851久侘歌的小屋, P854龙宅, P855虹龙洞, P856百百世的住所
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 九天瀑布, 绝景之丘, 山之湖, 天界
				RETURN 1
			CASE 地狱的深道, 旧地狱街道
				RETURN 1
			;spooky places
			CASE 墓地, 无名之丘, 再思之道, 无缘冢
				RETURN 1
			;death
			CASE 三途之川, 彼岸, 地狱
				RETURN 1
		ENDSELECT
	;引力设定
	CASE 8
ENDSELECT

