@CHARAMOVE_DATA_96(ARG, ARG:2)
LOCAL = 96
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
		RESULT:1 = [[弁弁]]
		RESULT:2 = [[八桥]]
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;付丧神的房间,广场によく居る
			CASE P208雷鼓的房间, P209八桥的房间, P210弁弁的房间, P202中央广场
				RETURN 5
			;私室には行かない
			CASE P221稗田邸, P224慧音宅, P222寺子屋, P226小铃私室, P229阿求私室
				RETURN -100
			CASE P231蛮奇的房间, P232莲子的房间, P233梅莉的房间, P234雪的房间, P235​舞​的房间, P239美宵的房间
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 广场, 商业街, 吞屋小道, 长屋街
				RETURN 1
			CASE 森林的入口, 香霖堂, 古木的大树, 再思之道, 无缘冢
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ96
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ96(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "雷鼓")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子）套")

CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：裙子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裙子", "裙子"))
CASE "便装：外衣"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("外衣", "夹克衫"))
CASE "便装：上身衣服１"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服１", "衬衫"))
CASE "便装：其他１"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("其他１", "领带"))
CASE "便装：其他２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("其他２", "吊带"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "锁定进攻的设计")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "镂空内裤")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "黑色胸罩")
CASE "固有内衣着用条件"
	SIF !RAND:(3 - (2 * 胜负内衣判定([[雷鼓]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "面包/香料/洋食/油炸食品/丰盛/豪华/艺术的/豪快/松脆/辣/辣/咸/咸/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "简易/酸/酸/" + "青蛙/虫肉/蘑菇/谜料理/" * 3)
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "刺激的/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "赤/帅气的/混沌/朴素/和风/充满力量/知的/" + "雷/音乐/乐器/" * 3 + "太古の/雷神の/闪电の/领带/鼓槌/指挥棒/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "洋风/纤细/洛丽塔/" + "刃物/生体品/护臂/" + "精灵银の/" * 10)
ENDSELECT

