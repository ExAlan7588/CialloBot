@CHARAMOVE_DATA_126(ARG, ARG:2)
LOCAL = 126
SELECTCASE ARG
	;连动设定（参照する侧＞RETURN=参照先, 参照される侧＞RESULT:1～3=连动对象）
	CASE 1
		;日・月曜日は天子にくっつく
		IF YOUBI_MATCH(DAY, "月日")
			RETURN [[天子]]
		;水木金曜日は女苑にくっつく
		ELSEIF YOUBI_MATCH(DAY, "水木金")
			RETURN [[女苑]]
		ENDIF
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向
	CASE 4
		SELECTCASE ARG:2
			;あえて未设定（どこにでも行く）
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 地藏小路, 倒垂的柳树下, 命莲寺境内, 命莲寺方丈
				RETURN 1
			CASE 九天瀑布, 绝景之丘, 天界
				RETURN 1
		ENDSELECT
	;引力设定
	CASE 8
		;女苑がいるなら女苑を、そうでないなら日中は天子にくっつく
		IF AT_HOME([[女苑]]) && !CFLAG:[[女苑]]:诶嘿嘿 && SHIRAHU([[女苑]])
			TCVAR:LOCAL:引力点 = CFLAG:[[女苑]]:当前位置
		ELSEIF !CFLAG:[[天子]]:诶嘿嘿 && SHIRAHU([[天子]]) && INRANGE(TIME, 720, 1080)
			TCVAR:LOCAL:引力点 = CFLAG:[[天子]]:当前位置
		ENDIF
ENDSELECT

@EXIST_キャラデータ126
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ126(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "紫苑")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（浴巾）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "蝴蝶结"))
CASE "便装：上身衣服２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "Ｔ恤衬衫"))
CASE "便装：外衣"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("外衣", "连帽风衣"))
CASE "便装：裙子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裙子", "裙子"))
CASE "便装：其他３"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("其他１", "手链"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "已经不是内衣了")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "写着『抵押品』的纸牌")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "写着『大减价』的纸牌")
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 胜负内衣判定([[紫苑]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "高级食材/肉料理/蘑菇/野菜/和食/面类/甜/丰盛/垃圾/浓厚/豪华/新鲜/家庭的/软绵绵/" + "咸/" * 3)
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "简易/健康/清淡/朴素/辣/辣/平价食材/平价食材/平价食材/谜料理/谜料理/谜料理/")
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "贫乏饭/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "金/青/高级/混沌/可爱的/奇妙/和风/别致/" + "护符/食器/人形/" * 3 + "幸运の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "秩序/夸张/" + "刃物/弹/遗物/护臂/机械/" * 3 + "主役の/" * 10)
ENDSELECT

