@CHARAMOVE_DATA_57(ARG, ARG:2)
LOCAL = 57
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;よく居る
			CASE P2境内, P10走廊
				RETURN 5
			;私室にはあまり入らない
			CASE P15灵梦私室, P52别馆
				RETURN -5
			;他所
			CASE P27三妖精之家・大厅 TO P35三妖精之家・地下室, P37梦幻遗迹・一层廊道 TO P51梦幻遗迹・仓库, P56阿吽的小屋
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 樱花道的鸟居, 神社境内, 神社走廊
				RETURN 1
			CASE 地藏小路, 倒垂的柳树下, 命莲寺境内, 命莲寺方丈, 神灵庙广场, 神灵庙道场
				RETURN 1
			CASE 广场, 商业街, 吞屋小道
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ57
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ57(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "心")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子+兜帽）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "面"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：袜子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("袜子", "袜子"))
CASE "便装：裙子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裙子", "长裙"))
CASE "便装：上身衣服２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "女式衬衫"))

;けして开放式胖次ではない
CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "各种面具笑脸的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "穿孔胖次")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 胜负内衣判定([[心]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 1)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "米/果物/和食/煮物/垃圾/清淡/豪华/艺术的/新鲜/软糯的/辣/辣/咸/咸/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "浓厚/酸/酸/" + "青蛙/虫肉/谜料理/" * 3)
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "彩り/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "粉色/美的/艺术的/和风/夸张/不思议/" + "精神/音乐/面/蜃气楼の/" * 3 + "心の/希望の/舞踊の/感情の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "别致/洋风/" + "生体品/护臂/" * 3)
ENDSELECT

