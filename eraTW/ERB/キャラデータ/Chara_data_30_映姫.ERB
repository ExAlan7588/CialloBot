				IF (BETWEENTIME(CFLAG:CHARA:就寝时间 - 90, CFLAG:CHARA:起床时间 + 30) && CFLAG:CHARA:当前位置 ==  CFLAG:CHARA:初始位置) || CFLAG:CHARA:睡眠
