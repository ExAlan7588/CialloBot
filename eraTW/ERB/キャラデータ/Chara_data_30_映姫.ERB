;-------------------------------------------------------------------------------------------
@IMAGE_I30_特殊表情(CHARA)
#DIM CHARA

IF CFLAG:CHARA:应用差分替换
	;替换用画像
	;朝口交结束、朝诶嘿嘿开始直后の表情
	IF ((CFLAG:CHARA:诶嘿嘿 == 2 && TIME:0 == TIME:3) || (TCVAR:CHARA:363 == TIME:0 && TCVAR:CHARA:363 > 0)) && SHIRAHU(CHARA)
		RESULTS:0 = LOVE
		RESULTS:1 = 笑颜
		SIF TCVAR:CHARA:363 == TIME:0 && TCVAR:CHARA:363 > 0
			SWAP RESULTS:0, RESULTS:1
		RETURN
	ENDIF
	;反抗刻印
	SIF MARK:CHARA:3
		RESULTS:1 = 反抗
	;无气力
	IF COM_STR == "K30_无表情"
		RESULTS:0 = 无表情
		RESULTS:1 = 无表情
	ENDIF
	;振动棒约会中
	SIF TCVAR:30:364 > 0
		RESULTS:1 = 爱抚
	;スイッチ强
	SIF TCVAR:30:365 == 2
		RESULTS:0 = 发情
	SIF !FLAG:立绘种类 || CFLAG:CHARA:衣物暂时更换 == 62
		RETURN
	SIF FLAG:时间停止 || !GETBIT(CFLAG:CHARA:1500, 2)
		RETURN
	;まばたき
	RESULTS:0 = %\@ RESULTS:0 == "通常" ? アニメ # %RESULTS:0% \@%
	RESULTS:1 = %\@ RESULTS:1 == "通常" ? アニメ # %RESULTS:1% \@%
ELSE
	;通常画像
	IF FLAG:立绘种类
		;颜绘
	ELSE
		;立绘
	ENDIF
ENDIF

