	ENDIF
	IF FLAG:立绘种类
		;颜绘
		IF CFLAG:CHARA:口内精液 || (TCVAR:CHARA:363 == TIME && INRANGE(TIME, 360, 540))
			;颜ぶっかけ
			RESULTS:エフェクト数 = 精液上
			エフェクト数 += 1
			;朝口交后红潮
			IF TCVAR:CHARA:363 == TIME
				RESULTS:エフェクト数 = 照れ
				エフェクト数 += 1
			ENDIF
		ENDIF
		IF CFLAG:CHARA:手上精液 && CHECK_NUDE(CHARA) && CFLAG:CHARA:妊娠经过日数 < 40
			;手コキ
			RESULTS:エフェクト数 = 精液手
			エフェクト数 += 1
		ENDIF
		IF CFLAG:CHARA:脸上精液
			;胸ぶっかけ
			RESULTS:エフェクト数 = 精液下
			エフェクト数 += 1
		ENDIF
	ELSE
		;立绘
		IF CFLAG:CHARA:脸上精液
			;胸ぶっかけ
			RESULTS:エフェクト数 = 精液上
			エフェクト数 += 1
		ENDIF
		IF CFLAG:CHARA:手上精液 && CHECK_NUDE(CHARA) && CFLAG:CHARA:妊娠经过日数 < 40
			;手コキ
			RESULTS:エフェクト数 = 精液手
			エフェクト数 += 1
		ENDIF
		IF (CFLAG:CHARA:膣内射精 || CFLAG:CHARA:肛门射精) && GROUPMATCH(NUDITYCHECK(CHARA), 0, 2)
			;中出し
			RESULTS:エフェクト数 = 精液下
			エフェクト数 += 1
		ENDIF
	ENDIF
	SIF FLAG:时间停止
		RETURN エフェクト数
	IF BASE:CHARA:情绪 >= MAXBASE:CHARA:情绪 * 8 / 10 && CFLAG:CHARA:1805 < 2
		IF !(TCVAR:CHARA:强行 || TCVAR:CHARA:386 || 仕事中チェック(CHARA)) 
			RESULTS:エフェクト数 = ハート
			エフェクト数 += 1
		ENDIF
	ELSEIF MARK:CHARA:反抗刻印 > 0 || CFLAG:CHARA:勃然大怒
		RESULTS:エフェクト数 = 愤怒
		エフェクト数 += 1
	ELSEIF CFLAG:CHARA:睡眠 && TFLAG:100
		RESULTS:エフェクト数 = 睡眠
		エフェクト数 += 1
	ENDIF
ELSE
	;通常画像
	IF FLAG:立绘种类
		;颜绘
	ELSE
		;立绘
	ENDIF
ENDIF

RETURN エフェクト数

