	CALLF MAKE_STR(V_NAME, "浓厚/酸/酸/" + "青蛙/虫肉/蘑菇/怪诞/谜料理/" * 3)
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "薄味/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "紫/美的/艺术的/和风/纤细/" + "音乐/乐器/天女の/" * 3 + "岚の/旋律の/羽衣/爪/拨片/" * 5)
