@CHARAMOVE_DATA_40(ARG, ARG:2)
LOCAL = 40
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;命莲寺メンバーの私室はあんまり入らない
			CASE P113纳兹琳私室, P114村纱私室, P115星私室, P116一轮私室, P117鵺私室, P118白莲私室, P109女苑私室, P136响子私室
				RETURN -5
			;神灵庙メンバーの私室はあんまり入らない
			CASE P125屠自古私室, P127布都私室, P128神子私室, P139邪仙楼
				RETURN -5
			;别馆、猯藏的小屋には入らない
			CASE P119别馆, P137猯藏的小屋
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 樱花道的鸟居, 神社境内, 神社走廊
				RETURN 1
			CASE 地藏小路, 倒垂的柳树下, 命莲寺境内, 墓地, 神灵庙广场
				RETURN 1
			CASE 广场, 商业街, 吞屋小道
				RETURN 1
			CASE 森林的入口, 香霖堂, 古木的大树, 再思之道, 无缘冢
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ40
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ40(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "小伞")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "针织衫")

CASE "便装：饰品"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("饰品", "伞"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "木屐"))
CASE "便装：裙子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裙子", "裙子"))
CASE "便装：上身衣服２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "女式衬衫"))
CASE "固有指令"
	CALLF MAKE_STR(V_NAME, "伞の修理")
CASE "固有指令实行可能"
	CALLF MAKE_INT(V_NAME, (FLAG:伞耐久度 > 5000 || ITEM:坏掉的伞) && !GETBIT(TFLAG:一日一回, 13))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "吓人用的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "目玉柄三角胖次")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "目玉柄胸罩")
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 胜负内衣判定([[小伞]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "米/和食/煮物/浓厚/朴素/新鲜/谜料理/软糯的/美味的水/甜/甜/辣/辣/茄子/茄子/茄子/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "肉料理/简易/酸/酸/青蛙/青蛙/青蛙/虫肉/虫肉/虫肉/")
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "心跳味/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "青/虹/可爱的/怀旧/纤细/" + "水/金属/刃物/" * 3 + "绣球花の/虹の/雨の/雪の/岚の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "洋风/充满力量/" + "日/生体品/护臂/" * 3 + "伞/" * 5 + "忘却の/" * 10)
ENDSELECT

