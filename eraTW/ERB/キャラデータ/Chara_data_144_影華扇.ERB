LOCAL = 144
SELECTCASE ARG
	;连动设定（RETURN=依存するキャラ, RESULT:1～3=对等に连动するキャラ）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 地狱, 彼岸, 中有之道, 三途之川
				RETURN 1
			CASE 灼热地狱遗迹, 旧地狱街道, 旧地狱温泉, 地狱的深道
				RETURN 1
			CASE 神社境内, 神社走廊, 神社本堂
				RETURN 1
			CASE 山麓树海, 仙人的宅邸, 森林深处
				RETURN 1
		ENDSELECT
	;引力设定
	CASE 8
ENDSELECT

