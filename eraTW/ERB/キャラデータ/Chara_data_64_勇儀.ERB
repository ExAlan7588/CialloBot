@CHARAMOVE_DATA_64(ARG, ARG:2)
LOCAL = 64
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;地灵殿には行かない
			CASE P901地灵殿前 TO P930旧血池地狱, P947血枪的栖息处
				RETURN -100
			;酒场と鬼的聚集场所に行きやすい
			CASE P933酒场, P938鬼的聚集场所
				RETURN 5
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			;春と秋だけ
			CASE 吞屋小道
				SIF GROUPMATCH(DAY:2, 1, 3)
					RETURN 1
			CASE 山麓树海, 玄武之泽, 大蛤蟆之池
				SIF GROUPMATCH(DAY:2, 1, 3)
					RETURN 1
			CASE 幻想风穴, 地狱的深道, 旧地狱街道
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
		;夜はよく酒场
		SIF CFLAG:LOCAL:今日的运势 % 4 == 0 && INRANGE(TIME, 1200, 1440)
			TCVAR:LOCAL:引力点 = P933酒场
ENDSELECT

