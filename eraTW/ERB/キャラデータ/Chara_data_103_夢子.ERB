@CHARAMOVE_DATA_103(ARG, ARG:2)
LOCAL = 103
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;あんまり入らない
			CASE P512魔理沙宅・寝室, P521人偶洋馆・爱丽丝的房间, P522人偶洋馆・神绮的房间
				RETURN -5
			;引きこもらない
			CASE P523人偶洋馆・梦子的房间
				RETURN -10
			;客厅, 研究室に行きやすい
			CASE P524人偶洋馆・研究室, P525人偶洋馆・客厅
				RETURN 5
			;他所の私室には入らない
			CASE P511魔理沙宅・起居室, P515魔理沙宅・仓库, P535艾伦宅・寝室, P536艾伦宅・仓库, P537艾伦宅・澡堂
				RETURN -100
			CASE P541朱鹭子的栖息处 TO P544成美的小屋
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 广场, 商业街, 吞屋小道
				RETURN 1
			CASE 森林的入口, 古木的大树, 雾雨魔法店, 人偶的洋馆, 再思之道, 无缘冢
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

