	CALLF MAKE_STR(V_NAME, "辣/辣/怪诞/怪诞/怪诞/谜料理/谜料理/谜料理/")
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "浓郁/得意料理＊家庭的＊/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "绿/帅气的/活泼/夸张/" + "充满力量/音乐/" * 3 + "犬の/山の/経典/" * 5)
