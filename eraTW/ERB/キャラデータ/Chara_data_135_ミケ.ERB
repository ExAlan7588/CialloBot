@キャラデータ135(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "三花")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（连衣裙）套")

CASE "便装：上身衣服２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "短袖女式衬衫"))
CASE "便装：裙子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裙子", "迷你裙"))
CASE "便装：腕部装束"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("腕部装束", "手环"))
CASE "便装：其他１"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("其他１", "项圈"))
CASE "便装：其他２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("其他２", "小判"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "铃の付いた")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "招客胖次")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "三毛柄ブラ")
CASE "固有内衣着用条件"
	SIF !RAND:(3 - (2 * 胜负内衣判定([[三花]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 3)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "鱼料理/鱼料理/鱼料理/肉料理/肉料理/肉料理/油炸食品/甜/甜/咸/咸/浓厚/豪华/野趣/新鲜/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "野菜/野菜/野菜/香料/香料/香料/酸/酸/清淡/谜料理/谜料理/谜料理/")
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "幸运/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "高级/金/宝石/可爱的/时尚/活泼/" + "黄金の/" * 3 + "猫の/幸运の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "奇妙/" + "安物/水/" * 3 + "犬の/狼の/" * 10)
ENDSELECT

