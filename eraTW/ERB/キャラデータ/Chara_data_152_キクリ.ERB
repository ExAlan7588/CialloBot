	CALLF MAKE_STR(V_NAME, "复古未来な/多彩な/塑料の/软乎乎の/蓬蓬鼓鼓の/诅咒の/量子の/" + "近未来风の/冰结の/" * 3 + "现代的/锈迹の/" * 5)
ENDSELECT

