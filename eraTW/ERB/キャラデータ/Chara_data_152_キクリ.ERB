	CALLF MAKE_STR(V_NAME, "怪诞/谜料理/灵障/垃圾/浓郁/玉兔流/逆转/纯化的味道/贫乏饭/洋食/わんぱく/怪しい/" + "科学的/扑鼻/平价食材/" * 3 + "もちもち/" * 5)
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "闪耀/神力/魔界风/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "古の/令人怀念の/神代の/天空の/灵力の/金属风格的/退魔の/" + "怀旧的/和风の/太古の/圣域の/法界の/山吹の/" * 3 + "中世风の/始原の/黄金の/故乡の/" * 5 + "青铜の/菊の/反射の/" * 10)
