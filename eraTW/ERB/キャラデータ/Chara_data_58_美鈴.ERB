@CHARAMOVE_DATA_58(ARG, ARG:2)
LOCAL = 58
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;仓库には入らない、屋敷外には出ない
			CASE P305仓库, P334废洋馆・入口 TO P348雾之湖・湖底
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 雾之湖, 正门, 大厅, 食堂, 大图书馆, 地下室
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ58
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ58(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "美铃")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子）套")
CASE "特殊衣装着用"
	SIF (TALENT:58:恋慕 || TALENT:58:炮友) && CFLAG:58:积攒度 >= 700
		CALLF MAKE_INT(V_NAME, 73)
CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "帽子"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：袜子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("袜子", "袜子"))
CASE "便装：裤子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裤子", "裤子"))
CASE "便装：连衣裙"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("连衣裙", "旗袍"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "不会发出声音的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "高脚T字")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "运动文胸")
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 胜负内衣判定([[美铃]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "肉料理/香料/油炸食品/丰盛/浓厚/艺术的/野趣/新鲜/软糯的/女仆流/中华/中华/" + "辣/" * 3)
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "酸/酸/清淡/清淡/清淡/谜料理/谜料理/谜料理/")
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "得意料理＊中华＊/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "赤/虹/秩序/美的/大陆风/充满力量/" + "七色の/极彩の/龙の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "知的/洋风/" + "刃物/弹/" * 3 + "小刀/" * 10)
ENDSELECT

