@CHARAMOVE_DATA_83(ARG, ARG:2)
LOCAL = 83
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;地灵殿には行かない、勇仪的家には行かない
			CASE P901地灵殿前 TO P930旧血池地狱, P936勇仪的家, P947血枪的栖息处
				RETURN -100
			;自室、后街、酒场に行きやすい
			CASE P942琪斯美的家, P932后街, P933酒场
				RETURN 5
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 幻想风穴, 地狱的深道, 旧地狱街道
				RETURN 1
		ENDSELECT
	;引力设定
	CASE 8
		;夜はたまに酒场
		SIF CFLAG:LOCAL:今日的运势 % 8 == 0 && INRANGE(TIME, 1200, 1440)
			TCVAR:LOCAL:引力点 = P933酒场
ENDSELECT

@EXIST_キャラデータ83
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ83(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "琪斯美")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（襦袢）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "发饰"))
CASE "便装：和服"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("和服", "和服"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "ちっちゃくて可爱的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "桃色兜裆布")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 胜负内衣判定([[琪斯美]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 0)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "肉料理/和食/油炸食品/简易/垃圾/清淡/朴素/野趣/怪诞/粘稠/地底风/甜/甜/酸/酸/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "丰盛/辣/辣/香料/香料/香料/谜料理/谜料理/谜料理/谜料理/谜料理/")
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "地底风/心跳味/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "黑/混沌/可爱的/怀旧/别致/" + "火/水/骨/生体品/" * 3 + "地底の/骨の/骷髅の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "夸张/充满力量/威严/" + "护臂/机械/" * 3)
ENDSELECT

