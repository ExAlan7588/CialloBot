@CHARAMOVE_DATA_109(ARG, ARG:2)
LOCAL = 109
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;纯狐邸には行かない
			CASE P1060纯狐邸・玄关 TO P1072赫卡提亚私室
				RETURN -100
			;绵月亭には行かない
			CASE P1020绵月亭・门 TO P1044会客厅
				RETURN -100
			;他人的家には行かない
			CASE P1008铃瑚宅, P1009清兰宅
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 槐安通路
				RETURN 1
			CASE 神社境内
				RETURN 1
			CASE 广场
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

