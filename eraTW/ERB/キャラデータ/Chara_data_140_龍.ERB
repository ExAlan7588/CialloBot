@CHARAMOVE_DATA_140(ARG, ARG:2)
LOCAL = 140
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;天界には行かない
			CASE P830玄云海 TO P842比那名居邸库房
				RETURN -100
			;私室やお澡堂は入らない
			CASE P817神奈子私室, P818诹访子私室, P820早苗私室
				RETURN -100
			CASE P851久侘歌的小屋, P852驹草的小屋, P853魅须丸的小屋, P824厕所, P825澡堂
				RETURN -100
			;顶上によく居る
			CASE P805顶上
				RETURN 5
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 广场, 商业街, 吞屋小道
				RETURN 1
			CASE 山麓树海, 玄武之泽, 大蛤蟆之池, 间歇泉地下中枢, 森林深处
				RETURN 1
			CASE 九天瀑布, 绝景之丘, 山之湖, 守矢神社境内, 虹龙洞
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ140
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ140(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "龙")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（睡袍+睡帽）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "兜巾"))
CASE "便装：外衣"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("外衣", "斗篷"))
CASE "便装：连衣裙"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("连衣裙", "连衣裙"))
CASE "便装：袜子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("袜子", "袜子"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "木屐"))
CASE "便装：其他１"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("其他１", "三脚"))
	
CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "ラメ入り")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "星空胖次")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "星空ブラ")
CASE "固有内衣着用条件"
	SIF !RAND:(3 - (2 * 胜负内衣判定([[龙]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

CASE "固有指令"
	CALLF MAKE_STR(V_NAME, "龙珠的交易")
CASE "固有指令实行可能"
	CALLF MAKE_INT(V_NAME, 1)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "米/米/米/野味/野味/野味/虫肉/虫肉/虫肉/和食/面类/甜/甜/咸/咸/清淡/豪华/野趣/新鲜/软糯的/天狗流/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "禽肉/禽肉/禽肉/禽肉/禽肉/卵/卵/卵/洋食/酸/酸/")
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "薄味/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "青/美的/怀旧/威严/" + "星/鸟/" * 3 + "鸦の/天狗の/龙の/星空の/星降の/透镜/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "赤/洛丽塔/狂热/" + "日/" * 3 + "河童の/鬼の/" * 10)
ENDSELECT

