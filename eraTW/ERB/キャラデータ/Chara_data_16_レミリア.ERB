@CHARAMOVE_DATA_16(ARG, ARG:2)
LOCAL = 16
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
		;最近のお娘样はサマータイム制などと申して起床・就寝时间をずらしております。
		IF DAY:2 == 2
			CFLAG:LOCAL:生活时间补正 = 60
		ELSEIF DAY:2 == 4
			CFLAG:LOCAL:生活时间补正 = -60
		ELSE
			CFLAG:LOCAL:生活时间补正 = 0
		ENDIF
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;仓库には入らない、屋敷外には出ない
			CASE P305仓库, P334废洋馆・入口 TO P348雾之湖・湖底
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 樱花道的鸟居, 神社境内, 神社走廊
				RETURN 1
			CASE 正门, 大厅, 食堂, 大图书馆, 地下室
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

