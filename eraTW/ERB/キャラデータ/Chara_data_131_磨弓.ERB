	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "埴轮ブラ")
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 胜负内衣判定([[磨弓]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 3)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "面包/乳酪/油炸食品/派/清淡/朴素/机能的/家庭的/松脆/甜/甜/辣/辣/神力/神力/神力/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "咸/咸/妖力/妖力/妖力/灵障/灵障/灵障/畜生流/畜生流/畜生流/畜生流/畜生流/")
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "切れ味/薄味/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "黄/茶/秩序/可爱的/怀旧/" + "土/刃物/弹/" * 3 + "埴轮の/造形术の/护臂/埴轮/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "混沌/活泼/未来/狂热/" + "金属/生体品/" * 3 + "狼の/水獭の/鹫の/" * 10)
ENDSELECT

