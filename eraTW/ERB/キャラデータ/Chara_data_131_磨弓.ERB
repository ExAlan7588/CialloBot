@CHARAMOVE_DATA_131(ARG, ARG:2)
LOCAL = 131
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
		;休日は连动
		SIF YOUBI_MATCH(DAY, "土日")
			RETURN [[袿姫]]
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;是非曲直厅、冥界、八云邸、地狱には行かない（入り口部分は出る时用）
			CASE P612法庭 TO P639八云邸起居室, P605地狱
				RETURN -100
			;他人的家には入らない
			CASE P608润美的家, P609璎花的家, P606日狭美的家, P607残无的家
				RETURN -100
			;组长宅には行かない
			CASE P646八千慧宅的澡堂 TO P655尤魔宅的澡堂
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 广场, 商业街, 吞屋小道, 长屋街
				RETURN 1
			CASE 中有之道, 三途之川, 彼岸, 灵长园
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

