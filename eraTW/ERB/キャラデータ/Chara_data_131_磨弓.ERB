	CALLF MAKE_INT(V_NAME, CLOTHES_ID("腕部装束", "金属护手"))
CASE "便装：其他１"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("其他１", "胸针"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "古墳时代の")
