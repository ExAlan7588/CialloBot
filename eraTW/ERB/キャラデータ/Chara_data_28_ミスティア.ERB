	CALLF MAKE_INT(V_NAME, CLOTHES_ID("袜子", "长筒袜"))
CASE "便装：连衣裙"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("连衣裙", "连衣裙"))
CASE "固有指令"
	CALLF MAKE_STR(V_NAME, "路边摊吃饭")
CASE "固有指令实行可能"
	CALLF MAKE_INT(V_NAME, CFLAG:28:行动 == 5 && BASE:28:工作量 < 3000)

;ソング＝Ｔ字裤
CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "嵌着翅膀")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "音符内裤")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "半圆形胸罩")
CASE "固有内衣着用条件"
	SIF !RAND:(3 - (2 * 胜负内衣判定([[米斯蒂亚]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "鱼料理/煮物/开胃/浓厚/野趣/家庭的/新鲜/松脆/甜/甜/咸/咸/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "油炸食品/辣/辣/卵/卵/卵/" + "禽肉/" * 10)
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "得意料理＊鱼料理＊/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "黑/可爱的/活泼/" + "暗/音乐/食器/" * 3 + "雀の/毒蛾の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "光/弹/护臂/机械/" * 3 + "精灵银の/" * 10)
ENDSELECT

