@キャラデータ160(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "麟")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（襦袢）套")
	
CASE "便装：连衣裙"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("连衣裙", "连衣裙"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：袜子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("袜子", "袜子"))
CASE "便装：裙子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裙子", "裙子"))
CASE "便装：上身衣服２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "女式衬衫"))
CASE "便装：其他１"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("其他１", "蝴蝶结"))

CASE "固有下着形容词"
	CALLF MAKE_STR(V_NAME, "有机")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "绿叶内裤")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "叶状胸罩")
CASE "固有下着着用条件"
	SIF !RAND:(3 - (2 * 胜负内衣判定([[麟]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有下着透ける(前)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有下着透ける(后)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有下着生地厚さ"
	CALLF MAKE_INT(V_NAME, 3)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "叶物/" * 2 + "清淡/" * 2 + "健康/" * 5 + "中华/" * 5 + "药效/" * 5)
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "虫肉/" * 5 + "青蛙/" * 5 + "卵/" * 5 + "禽肉/" * 5 + "野味/" * 5 + "鱼料理/" * 5)
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "药效/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "美的/美丽な/天人の/知惠の/" * 2 + "巫女の/风の/花の/令人怀念の/" * 3 + "东方の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "魔神の/" + "被遗忘的/" * 10)
ENDSELECT

