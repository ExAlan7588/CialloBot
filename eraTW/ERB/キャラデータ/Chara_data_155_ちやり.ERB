@CHARAMOVE_DATA_155(ARG, ARG:2)
LOCAL = 155
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;外に出る道中は行く
			CASE P930旧血池地狱, P929地狱的人工太阳, P928灼热地狱遗迹, P926中庭, P905一层走廊, P901地灵殿前
				RETURN 0
			;残りの地灵殿には行かない
			CASE P901地灵殿前 TO P930旧血池地狱
				RETURN -100
			;家には入らない
			CASE P936勇仪的家, P940帕露西的家, P941山女的家, P942琪斯美的家
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 地藏小路, 倒垂的柳树下, 墓地
				RETURN 1
			CASE 商业街, 吞屋小道
				RETURN 1
			CASE 中有之道, 三途之川, 彼岸, 地狱, 畜生界
				RETURN 1
			CASE 幻想风穴, 地狱的深道, 旧地狱街道, 地灵殿, 灼热地狱遗迹
				RETURN 1
		ENDSELECT
	;引力设定
	CASE 8
		;あまりにも奥に居るので昼间は表に出てくる,1/8でそのまま
		SIF INRANGE(TIME, 660, 840) && CFLAG:LOCAL:今日的运势 % 8
			TCVAR:LOCAL:引力点 = P931大街
ENDSELECT

