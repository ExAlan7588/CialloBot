;IMAGE_I63_特殊エフェクト(CHARA)--------------------------------------------------------------------
;キャラクター特有のエフェクト表示条件
;使用时注意点:
;	RESULTS配列に特殊エフェクトを格纳
;	RETURNで追加するエフェクト数を返还すること
;-------------------------------------------------------------------------------------------
@IMAGE_I63_特殊エフェクト(CHARA)
#DIM CHARA
#DIM DYNAMIC エフェクト数 = 0
VARSET RESULTS

IF CFLAG:CHARA:应用差分替换 == 1
	;差し替え画像
	IF TALENT:CHARA:母乳体质 && NOWEX:CHARA:喷乳 && CHECK_NUDE(CHARA) && FLAG:立绘种类
		RESULTS:エフェクト数 = 母乳
		エフェクト数 += 1
	ENDIF
	IF 充填率(CHARA,4) > 20 && !TALENT:CHARA:妊娠 && !CFLAG:CHARA:诶嘿嘿
		IF FLAG:立绘种类
			;颜绘
			RESULTS:エフェクト数 = 子宫
			エフェクト数 ++
		ELSE
			;立绘
			;RESULTS:エフェクト数 = 子宫_立ち
			;エフェクト数 ++
		ENDIF
	ENDIF
	IF TCVAR:CHARA:102 && CFLAG:CHARA:诶嘿嘿
		RESULTS:エフェクト数 = 中出し
		エフェクト数 ++
	ENDIF
	IF TALENT:CHARA:恋慕 && !MARK:CHARA:反抗刻印 && TALENT:CHARA:心情 >= 0
		IF CHK_DATENOW(CFLAG:CHARA:约会中) && BASE:CHARA:情绪 > 1200 && !CFLAG:CHARA:诶嘿嘿
			RESULTS:エフェクト数 = ハート
			エフェクト数 ++
		;情欲が高いのに欲求不满が低ければ行为后と见なす
		ELSEIF PALAM:CHARA:情欲 >= PALAMLV:10 && CFLAG:CHARA:积攒度 < 200
			RESULTS:エフェクト数 = ハート
			エフェクト数 ++
		ENDIF
	ENDIF
	IF NOWEX:CHARA:TotalEX >= 5 && CFLAG:CHARA:诶嘿嘿
		IF !RAND:2
			CSTR:CHARA:泛用EFFECT = ～～
		ELSE
			CSTR:CHARA:泛用EFFECT = んおお
		ENDIF
	;ELSEIF NOWEX:CHARA:TotalEX >= 3 && CFLAG:CHARA:诶嘿嘿
	;	CSTR:CHARA:泛用EFFECT = はーっ
	;ELSEIF IS_SEXING(CHARA)
	;	CSTR:CHARA:泛用EFFECT = あんあん
	ENDIF
ENDIF

RETURN エフェクト数

