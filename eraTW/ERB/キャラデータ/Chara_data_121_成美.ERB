@CHARAMOVE_DATA_121(ARG, ARG:2)
LOCAL = 121
SELECTCASE ARG
	;连动设定（RETURN=依存する角色, RESULT:1～3=对等に连动する角色）
	CASE 1
	;特殊生活时间设定（CFLAG:LOCAL:生活时间补正を设定する）
	CASE 3
	;移动倾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;魔理沙家,爱丽丝家,艾伦家,妖怪的栖息处
			CASE P510雾雨魔法店 TO P515魔理沙宅・仓库, P521人偶洋馆・爱丽丝的房间 TO P531人偶洋馆・空的房间
				RETURN -100
			CASE P535艾伦宅・寝室 TO P537艾伦宅・澡堂, P541朱鹭子的栖息处, P542莉格露的栖息处, P543露米亚的栖息处, P545慧之子的栖息处
				RETURN -100
		ENDSELECT
	;出现场所
	CASE 7
		SELECTCASE ARG:2
			CASE 森林的入口, 香霖堂, 古木的大树, 雾雨魔法店, 再思之道, 无缘冢
				RETURN 1
			CASE 地藏小路, 倒垂的柳树下, 命莲寺境内
				RETURN 1
		ENDSELECT
	;引力设定（CFLAG:LOCAL:引力点を设定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ121
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ121(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "称呼"
	CALLF MAKE_STR(V_NAME, "成美")
;こっから衣装设定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "笠"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "雪駄"))
CASE "便装：袜子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("袜子", "短布袜"))
CASE "便装：连衣裙"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("连衣裙", "法衣"))

CASE "固有内衣形容词"
	CALLF MAKE_STR(V_NAME, "写着一句令人感激的话")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "朱布兜裆布")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "経文胸罩")
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 胜负内衣判定([[成美]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(后)"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 3)

;料理关联
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "米/卵/和食/面类/简易/清淡/冬物/朴素/上品/谜料理/松脆/神力/冥界风/甜/甜/辣/辣/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "酸/酸/青蛙/青蛙/青蛙/虫肉/虫肉/虫肉/")
CASE "料理：助手效果"
	CALLF MAKE_STR(V_NAME, "薄味/得意料理＊冬物＊/")
;赠り物关联
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "灰/可爱的/别致/" + "土/魔法/护符/法具/" * 3 + "石の/救世の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "混沌/可怕的/" + "刃物/弹/护臂/" * 3 + "孤独の/" * 10)
ENDSELECT

