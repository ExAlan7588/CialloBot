@InputListDataNum(页番号, 最大页数的番号, 列表页番号, 最大列表页番号)
#DIM REF 页番号
#DIM REF 最大页数的番号
#DIM REF 列表页番号
#DIM REF 最大列表页番号
#DIMS 入力文字列
#DIM 入力数值

WHILE 1
	INPUTS
	入力文字列 = %RESULTS%
	PRINTL
	SELECTCASE 入力文字列
		;处理の共通部分を抜き出したいなあ
		CASE 察看前一页 , "1100"
			页番号--
			IF 页番号 < 0
				页番号 = 最大页数的番号
			ENDIF
			RETURN 再描画
		CASE 察看下一页 , "1200"
			页番号++
			IF 页番号 > 最大页数的番号
				页番号 = 0
			ENDIF
			RETURN 再描画
		CASE 前一位角色 , "1001"
			列表页番号--
			IF 列表页番号 < 0
				列表页番号 = 最大列表页番号
			ENDIF
			RETURN 再描画
		CASE 下一位角色 , "1002"
			列表页番号++
			IF 列表页番号 > 最大列表页番号
				列表页番号 = 0
			ENDIF
			RETURN 再描画
		CASE 放弃 , "1000"
			;归れ
			RETURN 返回
		CASEELSE
			入力数值 = TOINT(入力文字列)
			RETURN 入力数值
	ENDSELECT
WEND


