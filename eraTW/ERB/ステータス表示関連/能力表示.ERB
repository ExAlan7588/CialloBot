		CASE 1
			;超随意つき修正の余地あり
			FOR 表示ステータス番号, 0, 13
				IF ABLNAME:表示ステータス番号 != ""
					CALL PRINT_字母表顺序评价(角色登录番号, 4, 表示ステータス番号)
					PRINTFORM {ABL:角色登录番号:表示ステータス番号, 4}|
				ENDIF
			NEXT
		;性技
