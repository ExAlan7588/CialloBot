;穣子口上からパクリ
;### 心形のみ别の色でPRINTするための函数 ##################
;文字列中に含まれる"HPH"をホット粉色カラーのハートとしてPRINTし、それ以外の文字列は通常の色で普通にPRINTする
;ARGS "W"=PRINTSWで表示。"L"=PRINTSLで表示。"W"でも"L"でもなければPRINTSで表示
@HPH_PRINT(对象文字列,ARGS)
#DIMS 对象文字列
#DIM 出力文字数
#DIM HPHインデクス值
#DIM BPBインデクス值
#DIM NEXTインデクス值

DO
	HPHインデクス值 = STRFIND(对象文字列, "HPH")
		BPBインデクス值 = STRFIND(对象文字列, "BPB")
	IF HPHインデクス值 >= 0 & BPBインデクス值 < 0
		NEXTインデクス值 = HPHインデクス值
	ELSEIF HPHインデクス值 < 0 & BPBインデクス值 >= 0
		NEXTインデクス值 = BPBインデクス值
	ELSE
		NEXTインデクス值 = MIN(HPHインデクス值, BPBインデクス值)
	ENDIF

	;对象文字列がHPHで始まらないが后ろにHPHがある场合
		;对象文字列がHPHまたBPBで始まらないが后ろにHPHまたBPBがある场合
	IF NEXTインデクス值 >= 1
		;HPHの直前まで文字表示
		LOCALS = %SUBSTRING(对象文字列, 0, NEXTインデクス值)%
		IF GROUPMATCH(ARGS, "DW", "DL", "dw", "dl")
			PRINTSD @"%LOCALS%"
		ELSE
			PRINTS @"%LOCALS%"
		ENDIF
		出力文字数 = STRLENS(LOCALS)
	;对象文字列がHPHで始まる场合
	ELSEIF HPHインデクス值 == 0
		LOCALS:1 = %GETFONT()%
		SETFONT "Times New Roman"
		LOCAL = GETCOLOR()
		SETCOLOR C_H_PINK
		PRINTFORM %UNICODE(0x2764)%
		SETCOLOR LOCAL
		SETFONT LOCALS:1
		出力文字数 = 3
	;对象文字列がBPBで始まる场合
	ELSEIF BPBインデクス值 == 0
		LOCALS:1 = %GETFONT()%
		SETFONT "Times New Roman"
		LOCAL = GETCOLOR()
		SETCOLOR C_H_PINK
		PRINTFORM ///
		SETCOLOR LOCAL
		SETFONT LOCALS:1
		出力文字数 = 3
	;HPHとBPBがもうない场合
	ELSE
		;ここでARGSによる分岐
		SELECTCASE ARGS
		CASE "DW", "dw"
			PRINTSDW @"%对象文字列%"
		CASE "DL", "dl"
			PRINTSDL @"%对象文字列%"
		;----------
		CASE "W", "w"
			PRINTSW @"%对象文字列%"
		CASE "L", "l"
			PRINTSL @"%对象文字列%"
		CASEELSE
			PRINTS @"%对象文字列%"
		ENDSELECT
		BREAK
	ENDIF

	;表示済みの文字分を削除して对象文字列を更新する
	对象文字列 = %SUBSTRING(对象文字列, 出力文字数, -1)%
	
LOOP 1
