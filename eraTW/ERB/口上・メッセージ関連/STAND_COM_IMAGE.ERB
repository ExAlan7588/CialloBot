; 立绘追加リソースセット关联
@DISPLAY_COM_IMAGE(リソース名, COMNO)
#DIMS リソース名
#DIM COMNO
リソース名 '= ""
IF !FLAG:立绘种类 && CHECK_NUDE(NO:TARGET)
	リソース名 = 立绘_裸_COM_{NO:TARGET}_{COMNO}
ELSEIF SHOW_BOTE(NO:TARGET)
	リソース名 = ボテ_{NO:TARGET}
ENDIF
SIF SPRITECREATED(リソース名)
	CALL PRINT_IMAGE(リソース名)

@SHOW_BOTE(CHARA)
#FUNCTION
#DIM CHARA
SIF CFLAG:CHARA:衣物暂时更换
	RETURNF 0
SIF CFLAG:CHARA:诶嘿嘿
	RETURNF 0
SIF TEQUIP:CHARA:上半身着衣状况 == 0 || TEQUIP:CHARA:下半身着衣状况 == 0
	RETURNF 0
SIF CFLAG:CHARA:妊娠经过日数 < 40 || SELECTCOM != 306
	RETURNF 0
RETURNF 1

@IS_BUNNY(CHARA)
#FUNCTION
#DIM CHARA
SIF CHECK_NUDE(CHARA)
	RETURNF 0
SIF CFLAG:CHARA:衣物暂时更换 == 55
	RETURNF 1
SIF CFLAG:CHARA:基本服装SET == 55 && CFLAG:CHARA:衣物暂时更换==0
	RETURNF 1
RETURNF 0
