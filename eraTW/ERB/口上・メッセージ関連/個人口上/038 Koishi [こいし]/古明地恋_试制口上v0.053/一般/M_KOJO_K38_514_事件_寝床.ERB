;==================================================
;朝起きたとき（おはよう口上）
;==================================================
@M_KOJO_NK_EVENT_K38_2(ARG,ARG:1)
;口上主はTARGET
;--------------------------------------------------
;记入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------

IF LOCAL
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;非同栖かつ相手が先に起きてる
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 1
		;-------------------------------------------------
		;TARGET私室にMASTERが入っている（恋慕时陪睡中就寝时のみ？
		;记入チェック（=0, 非表示、1, 表示）
		LOCAL:1 = 1
		;-------------------------------------------------
		IF LOCAL:1 && !ARG:1
			PRINTFORML 「唔——早上好啊，%CALLNAME:MASTER%」
			PRINTFORMW 「睡得还好吗？」
			RETURN 1
		ENDIF
		;-------------------------------------------------
		;MASTER私室にTARGETが入ってきてる(恋慕无しでも入ってくる可能性有り
		;记入チェック（=0, 非表示、1, 表示）
		LOCAL:1 = 1
		;-------------------------------------------------
		IF LOCAL:1 && ARG:1 == 1
			PRINTFORMW 「居然在%CALLNAME:MASTER%的房间睡着了什么的…」
			RETURN 1
		ENDIF
		PRINTFORML 
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;同栖かつ相手が起きている
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 2
		PRINTFORML 「好啦好啦，快起来啦」
		PRINTFORMW 「再睡太阳就要烤熟%CALLNAME:MASTER%啦」
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;同栖かつ相手が寝ている
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 3
		PRINTFORML 「唔呣…」
		PRINTFORMW 「呼啊…人家还没睡够呢……」
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;MASTERが起きていて、相手が起きてきた
	;添い寝时TARGET起床はこちら（TARGET衰弱or陪睡中TARGET睡魔负け后そのままMASTERが起き续けた上で相手が起床した场合限定
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 4
		;-------------------------------------------------
		;非同栖
		;记入チェック（=0, 非表示、1, 表示）
		LOCAL:1 = 1
		;-------------------------------------------------
		IF LOCAL:1 && !ARG:1
			PRINTFORMW 「嗯？还想睡吗」
			RETURN 1
		ENDIF
		;-------------------------------------------------
		;同栖中
		;记入チェック（=0, 非表示、1, 表示）
		LOCAL:1 = 1
		;-------------------------------------------------
		IF LOCAL:1 && ARG:1 == 1
			PRINTFORML 「不用勉强起来也可以哦」
			RETURN 1
		ENDIF
		;PRINTFORML 
		RETURN 1
	ENDIF
	;その他
	;PRINTFORML  
ENDIF
RETURN 1

;==================================================
;夜寝るとき（おやすみ口上）
;==================================================
@M_KOJO_NK_EVENT_K38_3(ARG,ARG:1)
;口上主はTARGET
;--------------------------------------------------
;记入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------

IF LOCAL
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;自室に归って寝る（～は【现在地】から【キャラの自室】に戻りました）
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 1
		IF ARG:1
			;约会中に眠くて归って寝る（据点キャラのみ）
			PRINTFORML 「哎呀呀，已经到时间了呢」
			PRINTFORMW 「再不回去的话，姐姐会担心的」
		ELSEIF CFLAG:诶嘿嘿
			;诶嘿嘿中に眠くて自室に归って寝る（据点キャラのみ）
			PRINTFORML 「做到这种时候什么的」
			PRINTFORML 「%CALLNAME:MASTER%还真是精力充沛呢」
			PRINTFORML 「只是人家就困到不行啦」
			PRINTFORMW 「哈啊啊…可不要来夜袭哦」
		ELSE
			PRINTFORML 「都这个时候了呢」
			PRINTFORMW 「人家已经累了，就先回去休息啦」
		ENDIF
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;眠そうにしている（～は眠そうにしている）
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 2
		PRINTFORMW 「呼呜…人家想睡了呢……」
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;睡眠中（～は眠っている）
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 3
		PRINTFORML 「呼嘶……」
		PRINTFORMDW   少女发出绵长的呼吸声，睡得正香。
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;恶作剧中
	;记入チェック（=0, 非表示、1, 表示）
	;LOCAL:1 = 1
	;-------------------------------------------------
	;IF LOCAL:1 && ARG == 4
		;PRINTFORML 
		;RETURN 1
	;ENDIF
	;-------------------------------------------------
	;衰弱して寝る（体力500以下,诶嘿嘿时は诶嘿嘿强制结束）
	;（キャラの自室以外：～を【现在地】から【キャラの自室】に运びました）
	;（キャラの自室　　：～は疲れたと言って、横になりました）
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 5
		IF CFLAG:诶嘿嘿
			;诶嘿嘿中にダウン
			PRINTFORML 「啊…啊……」
			PRINTFORML 「已经，不行了……」
			PRINTFORMDW   少女倒在%CALLNAME:MASTER%身上。
		ELSE
			PRINTFORML 「哎呀…消耗太大了呢」
			PRINTFORMW 「稍微睡一下会好些的吧，失陪了」
		ENDIF
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;MASTERがダウン（恋慕のみ,そのまま一日が结束）
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 6
		;お酒でダウン
		IF BASE:MASTER:酒气 >= MAXBASE:MASTER:酒气
			IF ARG:1
				;自室でダウン,（～が【MASTER】をベッド（布团）へと运んでくれた…）
				PRINTFORMW 「唔呣呣呣…不能喝还逞强……」
			ELSE
				;房间まで运ばれる,（～が【MASTER】を私室へと运んでくれた…）
				PRINTFORML 「等醒酒第二天都过了吧」
				PRINTFORMW 「撒，就放这里好了」
			ENDIF
		;体力切れでダウン
		ELSE
			IF ARG:1
				;自室でダウン,（～が【MASTER】をベッド（布团）へと运んでくれた…）
				PRINTFORML 「完全瘫软了吗」
				PRINTFORMW 「哎呀…你呀还是好好休息吧」
			ELSE
				;房间まで运ばれる,（～が【MASTER】を私室へと运んでくれた…）
				PRINTFORML 「还真是重呢…」
				PRINTFORML 「哈啊…就是这里了吧」
				PRINTFORMW 「下次得拉猫车运呢」
			ENDIF
		ENDIF
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;TARGETが寝るために自室まで戻ってきた
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 7
		;-------------------------------------------------
		;そのまま更衣て寝た（【TARGET】が房间に戻ってきた→寝间着へと更衣、寝床に潜った）
		;记入チェック（=0, 非表示、1, 表示）
		LOCAL:1 = 1
		;-------------------------------------------------
		IF LOCAL:1 && ARG:1 == 0
			PRINTFORML 「哈啊——睡衣都准备好了」
			PRINTFORMW 「晚安，%CALLNAME:MASTER%……」
			RETURN 1
		ENDIF
		;-------------------------------------------------
		;房间から追い出して寝た（眠そうな【TARGET】に追い出された…）
		;记入チェック（=0, 非表示、1, 表示）
		LOCAL:1 = 1
		;-------------------------------------------------
		IF LOCAL:1 && ARG:1 == 1
			IF CFLAG:前一次的位置 == CFLAG:当前位置
				;前のターンまで一绪に房间にいた
				PRINTFORML 「好啦，该睡了呢」
				PRINTFORMW 「%CALLNAME:MASTER%的话，也该回去睡了吧？」
			ELSE
				;寝るために房间に归ってきたところ
				PRINTFORML 「嗯？在人家房间做什么呢」
				PRINTFORMW 「人家要睡了哦，所以该做什么%CALLNAME:MASTER%知道的吧？」
			ENDIF
			RETURN 1
		ENDIF
		;-------------------------------------------------
		;他キャラとのＨを止めさせて寝た（【TARGET】が房间に戻ってきた→唇をとがらせる【TARGET】に、【MASTER】は渋々【Ｈの相手】から离れた）
		;记入チェック（=0, 非表示、1, 表示）
		LOCAL:1 = 1
		;-------------------------------------------------
		IF LOCAL:1 && ARG:1 == 2
			PRINTFORML 「真是过分啊，居然把我的床用来做这种事……」
			PRINTFORMW 「闹够了就赶紧出去吧，我都困了呢」
			RETURN 1
		ENDIF
	ENDIF
	;-------------------------------------------------
	;来访キャラが据点で休憩（～は疲れ切っている→ちょっと休んでいきなよ）
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 8
		PRINTFORMW 「呼…稍微…休息一下……」
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;寝室に居る状态でその场で寝る（～は眠气に负け、眠りについた…）
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 9
		IF CFLAG:诶嘿嘿
			;诶嘿嘿中に寝る
			PRINTFORML 「呜——坚持不下去了…」
			PRINTFORMDW   少女累倒了。
		ELSE
			PRINTFORML 「哈啊啊——有些困了呢」
			PRINTFORMW 「那就这样…睡吧……」
		ENDIF
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;据点外で自宅前に居るキャラが自室に归って寝る（眠くなった～は自室に归って行きました）
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 10
		PRINTFORML 「呼呜…该睡了呢」
		PRINTFORMW 「抱歉呢，有什么的话之后再说吧」
		RETURN 1
	ENDIF
ENDIF
RETURN 1

