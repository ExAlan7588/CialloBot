;==================================================
;弹幕胜负
;==================================================
;
@M_KOJO_MESSAGE_COM_K100_DANMAKU(ARGS, 相手残机)
#DIM 相手残机
;全体の流れ
;①【战斗前】→②骰子ロールとプレイヤー选择肢、ハンデをつけた场合は【ハンデ口上】→③对応スキルが发动した场合【スキル口上】→④被弹判定、角色が被弹したなら【被弹口上】→
;どちらかの残机が0になっていなければ②に返回→⑤【战斗后口上】

;--------------------------------------------------
;记入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;战斗前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数值が大きいほど你が不利になる　数值が负なら你が有利に
	;角色の能力に关わらずクッソ强くしたり弱くしたりできる
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "战斗前"
		IF TALENT:妊娠
			PRINTFORML 「真、真的要做\@ TALENT:恋慕 ? 吗 # 么 \@……？」
			PRINTFORMDL %CALLNAME:TARGET%似乎在担心着肚子里的孩子
			PRINTFORMW 「……请手下留情\@ TALENT:恋慕 ? ……呢？ # 拜托你了 \@」
		ELSE
			SELECTCASE RAND:3
			CASE 0
				PRINTFORMW 「我姑且也是个军人…我能做到的、肯定！」
			CASE 1
				PRINTFORML 「虽然我不是很擅长战斗……」
				PRINTFORMDW %CALLNAME:TARGET%的眼神变了……！
			CASE 2
				PRINTFORML 「即使是兔子被欺负了七天后也是会咬人的谚语…\@ TALENT:恋慕 ? 知道的吧 # 你知道吗 \@？」
				PRINTFORMDW 前提是你肯定会被欺负吗……
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので无记入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;战斗中TARGET被弹时口上
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弹" 
		;别に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残机
			;残り残机3が表示されるのは【洽览深识】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				PRINTFORML 「呜呜…好强……」
				PRINTFORMDW %CALLNAME:TARGET%变得胆怯起来了
			CASE 1
				PRINTFORML 「嗯…果然我做不到的啊……」
				PRINTFORMDW %CALLNAME:TARGET%的心受到了沉重的打击
			CASE 0
				PRINTFORML 「好痛呀…咕嘶……」
				PRINTFORMDW %CALLNAME:TARGET%的心受到了沉重的打击
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【残忍酷薄】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【乾坤一掷】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一掷"
		
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【怪力乱神】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;战斗后
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "战斗后" 
		PRINTFORML 
		;残り残机4が表示されうるのは【洽览深识】持ちのみ
		;残机が1以上なら你の负け、0の场合は你の胜利
		SELECTCASE 相手残机
			CASE 4
				PRINTFORML 
			CASE 3
				PRINTFORML 「\@ TALENT:恋慕 ? 抱、抱歉呢…好像有点做过头了 # 你还好吗？ \@」
				PRINTFORMDW %CALLNAME:TARGET%治疗着这边的伤口
			CASE 2
				PRINTFORML 「呼呜…有好好的训练真的是太好了……」
				PRINTFORMDW 没能战胜军人呀……
			CASE 1
				PRINTFORML 「哈啊…太好啦……」
				PRINTFORMDW 是气力耗尽了吗、%CALLNAME:TARGET%一屁股直接坐到了地上
				;你が男
				SIF TALENT:MASTER:性别 == 2
					PRINTFORMDW %CALLNAME:MASTER%倒在了地上、充分地视奸着少女裙中的秘密花园
			CASE 0
				PRINTFORML 「哈啊…输掉了……」
				PRINTFORMDW 这可不是在玩耍啊
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

