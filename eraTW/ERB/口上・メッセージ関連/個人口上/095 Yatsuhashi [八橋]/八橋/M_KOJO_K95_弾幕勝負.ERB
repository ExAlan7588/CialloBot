;==================================================
;弹幕胜负
;==================================================
;
@M_KOJO_MESSAGE_COM_K95_DANMAKU(ARGS, 相手残机)
#DIM 相手残机
;全体の流れ
;①【战斗前】→②骰子ロールとプレイヤー选择肢、ハンデをつけた场合は【ハンデ口上】→③对応スキルが发动した场合【スキル口上】→④被弹判定、角色が被弹したなら【被弹口上】→
;どちらかの残机が0になっていなければ②に返回→⑤【战斗后口上】

;--------------------------------------------------
;记入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;战斗前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数值が大きいほど你が不利になる　数值が负なら你が有利に
	;角色の能力に关わらずクッソ强くしたり弱くしたりできる
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "战斗前"
		;愤怒
		IF CFLAG:318 == 1
			PRINTFORMW 「啊、你来了！我要让你后悔挑起战斗！」
		ELSEIF RAND:4 == 0
			PRINTFORM 「哇哈！一决胜负吧！
			CALL MASTER_CALLNAME_K95
			PRINTFORMW ！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「让你尝尝我的音乐的厉害！」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「镇魂演唱会的开始喽！」
		ELSE
			PRINTFORMW 「不要因为是道具就小看我。！」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので无记入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;战斗中TARGET被弹时口上
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弹" 
		;别に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残机
			;残り残机3が表示されるのは【洽览深识】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「哼！别以为就这样结束了！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「好痛！真是的！不能温柔一点吗！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「这种程度！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「只不过是侥幸罢了！」
				ELSE
					PRINTFORMW 「还差得远呢！现在才要动真格了！」
				ENDIF
			CASE 1
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「唔、再这样下去…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「怎么办…这样下去会输的！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「我也是…该出手时就会出手的！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「胜负从现在开始！」
				ELSE
					PRINTFORMW 「不会放弃的！」
				ENDIF
			CASE 0
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW 是个笨蛋！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「咕…」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「哇ー啊、这是不可能的ー」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「啊、疼疼…」
				ELSE
					PRINTFORMW 「…不行了吗…」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【残忍酷薄】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
	
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【乾坤一掷】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一掷"
		
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【怪力乱神】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;战斗后
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "战斗后" 
		PRINTFORML 
		;残り残机4が表示されうるのは【洽览深识】持ちのみ
		;残机が1以上なら你の负け、0の场合は你の胜利
		SELECTCASE 相手残机
			CASE 4
				PRINTFORML 
			CASE 3
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「怎么样！要好好道歉啊！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「太棒了！赢了！」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW 、身体不舒服吗？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「嘻嘻，怎么回事呢！」
				ELSE
					PRINTFORMW 「希望能坚持的更久一点呢」
				ENDIF
			CASE 2
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「哼！我是不会输的！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「啊、真是的！头发都乱了！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「倒霉…皮肤擦破了…」
				ELSEIF RAND:2 == 0
					PRINTFORM 「、
					CALL MASTER_CALLNAME_K95
					PRINTFORMW 还挺强的！」
				ELSE
					PRINTFORMW 「真是一场精彩的对决啊！」
				ENDIF
			CASE 1
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「啊…真危险啊…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「真危险啊…」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW 、真厉害啊」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「是场激烈的战斗呢…累了…」
				ELSE
					PRINTFORMW 「真是艰难的胜利啊…」
				ENDIF
			CASE 0
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW 多么讨厌啊！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「嗯、糟了糟了、投降吧ー」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW 、真厉害啊！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「真不甘心啊…」
				ELSE
					PRINTFORMW 「我要和姐姐一起搭档复仇！」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

