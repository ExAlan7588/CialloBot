;战斗能力を上げれば战えるはず！
;==================================================
;弹幕胜负
;==================================================
;
@M_KOJO_MESSAGE_COM_K127_DANMAKU(ARGS, 相手残机)
#DIM 相手残机
;全体の流れ
;①【战斗前】→②骰子ロールとプレイヤー选择肢、ハンデをつけた场合は【ハンデ口上】→③对応スキルが发动した场合【スキル口上】→④被弹判定、角色が被弹したなら【被弹口上】→
;どちらかの残机が0になっていなければ②に返回→⑤【战斗后口上】

;--------------------------------------------------
;记入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
	SIF FLAG:口上色
		TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;战斗前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数值が大きいほど你が不利になる　数值が负なら你が有利に
	;角色の能力に关わらずクッソ强くしたり弱くしたりできる
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "战斗前"
		IF ALCOHOL_FACE(127) == "醉酒" || ALCOHOL_FACE(127) == "不省人事"
			PRINTFORMW 「诶～？要玩弹幕游戏吗～？」
		ELSEIF TALENT:127:心情 == -1 || CFLAG:127:勃然大怒 || MARK:127:反抗刻印 >= 3
			PRINTFORMW 「竟然敢小瞧堆石ー！不可饶恕、去死吧！」
		ELSE
			SELECTCASE RAND:3
			CASE 1
				PRINTFORMW 「虽然没有堆石那么擅长…」
			CASE 2
				PRINTFORMW 「给你看看堆石的弹幕吧！」
			CASEELSE
				PRINTFORMW 「被石头打中很痛的哦。要是敢小看的话可是要吃大亏的！」
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので无记入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;战斗中TARGET被弹时口上
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弹" 
		IF 相手残机 == 0
			IF ALCOHOL_FACE(127) == "醉酒" || ALCOHOL_FACE(127) == "不省人事"
				PRINTFORML 「好痛～！」
			ELSEIF TALENT:127:心情 == -1 || CFLAG:127:勃然大怒 || MARK:127:反抗刻印 >= 3
				PRINTFORML 「呜呜呜……」
			ELSE
				SELECTCASE RAND:2
				CASE 1
					PRINTFORML 「好痛痛…眼泪止不住了…」
				CASEELSE
					PRINTFORML 「好…好强…」
				ENDSELECT
			ENDIF
		ELSE
			IF ALCOHOL_FACE(127) == "醉酒" || ALCOHOL_FACE(127) == "不省人事"
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「呜呀！？」
				CASE 2
					PRINTFORML 「啊呜！？」
				CASEELSE
					PRINTFORML 「好痛ー！」
				ENDSELECT
			ELSEIF TALENT:127:心情 == -1 || CFLAG:127:勃然大怒 || MARK:127:反抗刻印 >= 3
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「咕咕咕……」
				CASE 2
					PRINTFORML 「太过分了……」
				CASEELSE
					PRINTFORML 「呜呜……」
				ENDSELECT
			ELSE
				SELECTCASE RAND:7
				CASE 1
					PRINTFORML 「啊！」
				CASE 2
					PRINTFORML 「好疼！」
				CASE 3
					PRINTFORML 「好痛痛！」
				CASE 4
					PRINTFORML 「呜哇！」
				CASE 5
					PRINTFORML 「咿呀！」
				CASE 6
					PRINTFORML 「呀啊！」
				CASEELSE
					PRINTFORML 「哇！」
				ENDSELECT
			ENDIF
		ENDIF
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【残忍酷薄】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【乾坤一掷】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一掷"
		
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【怪力乱神】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;战斗后
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "战斗后" 
		PRINTFORML 
		;残り残机4が表示されうるのは【洽览深识】持ちのみ
		;残机が1以上なら你の负け、0の场合は你の胜利
		;你胜利
		IF 相手残机 == 0
			IF ALCOHOL_FACE(127) == "醉酒" || ALCOHOL_FACE(127) == "不省人事"
				PRINTFORMW 「嗯～？ 难道是我输了～～？」
			ELSEIF TALENT:127:心情 == -1 || CFLAG:127:勃然大怒 || MARK:127:反抗刻印 >= 3
				PRINTFORMW 「你不该先道歉吗？」
			ELSE
				IF TALENT:127:恋慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%比鬼还要强呢！」
					CASE 2
						PRINTFORMW 「咕咕咕…%CALLNAME:MASTER%真的很强啊」
					CASEELSE
						PRINTFORMW 「好！既然战斗结束了、那接下来就是一起堆石的时间了！」
					ENDSELECT
				ELSEIF TALENT:127:思慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「下、下次我不会输的！…大概」
					CASE 2
						PRINTFORMW 「今天不堆石来做做弹幕特训也不错呢」
					CASEELSE
						PRINTFORMW 「如果是积石胜负的话我会赢的！」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「太强了……」
					CASE 2
						PRINTFORMW 「和鬼一样强大啊……」
					CASEELSE
						PRINTFORMW 「咕咕咕…被打败了…」
					ENDSELECT
				ENDIF
			ENDIF
		ELSE
			IF ALCOHOL_FACE(127) == "醉酒" || ALCOHOL_FACE(127) == "不省人事"
				PRINTFORML 「嗯嗯～？ 难道%CALLNAME:MASTER%输了吗～？」
			ELSEIF TALENT:127:心情 == -1 || CFLAG:127:勃然大怒 || MARK:127:反抗刻印 >= 3
				PRINTFORML 「赢啦！ 清爽多了！」
			ELSE
				IF TALENT:127:恋慕
					SELECTCASE RAND:2
					CASE 1
						PRINTFORMW 「啊咧咧？竟然赢了%CALLNAME:MASTER%什么的」
					CASEELSE
						PRINTFORMW 「既然我赢了那我们今天就一起堆石吧！」
					ENDSELECT
				ELSEIF TALENT:127:思慕
					SELECTCASE RAND:2
					CASE 1
						PRINTFORMW 「啊咧咧？%CALLNAME:MASTER%边弱了吗？」
					CASEELSE
						PRINTFORMW 「赢了！下次一起堆石头吧」
					ENDSELECT
				ELSE
					SELECTCASE RAND:2
					CASE 1
						PRINTFORMW 「啊咧咧…？输给只会堆石的水子是个什么情况呀？」
					CASEELSE
						PRINTFORMW 「感受到石头的强大了吗！」
					ENDSELECT
				ENDIF
				TALENT:127:心情 = 1
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

