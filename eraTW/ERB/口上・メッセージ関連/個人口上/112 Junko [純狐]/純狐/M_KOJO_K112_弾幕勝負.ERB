@M_KOJO_POWERED_BY_OVERSEAS_MESSAGE_COM_K112_DANMAKU(ARGS, 相手残机)
#DIM 相手残机
;全体の流れ
;①【战斗前】→②ダイスロールとプレイヤー选择肢、ハンデをつけた场合は【ハンデ口上】→③对応スキルが发动した场合【スキル口上】→④被弹判定、キャラが被弹したなら【被弹口上】→
;どちらかの残机が0になっていなければ②に戻る→⑤【战斗后口上】

;--------------------------------------------------
;记入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_POWERED_BY_OVERSEAS_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;战斗前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数值が大きいほどあなたが不利になる　数值が负ならあなたが有利に
	;キャラの能力に关わらずクッソ强くしたり弱くしたりできる
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "战斗前"
		;愤怒
		IF CFLAG:318 == 1
			PRINTFORMW 「…能不能不要挡在我的面前呢」
		ELSEIF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
			PRINTFORMW 「我知道了，让我见识一下%CALLNAME:MASTER%的力量吧！」
		ELSE
			PRINTFORMW 「…我不会手下留情的」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので无记入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;战斗中TARGET被弹时口上
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弹" 
		;别に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残机
			;残り残机3が表示されるのは【洽览深识】持ちのみ
			CASE 3
				;愤怒
				
			CASE 2
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……」
				ELSEIF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
					PRINTFORMW 「做得不错嘛」
					PRINTFORMW 『杀意的百合』！
				ELSE
					PRINTFORMW 「……」
					PRINTFORMW 『杀意的百合』
				ENDIF
			CASE 1
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……」
				ELSEIF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
					PRINTFORMW 「这可能会有点糟糕哦…？」
					PRINTFORMW 『纯粹的狂气』！
				ELSE
					PRINTFORMW 「……」
					PRINTFORMW 『纯粹的狂气』
				ENDIF
			CASE 0
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……！」
				ELSEIF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
					PRINTFORMW 「这样啊…」
				ELSE
					PRINTFORMW 「……为什么呢」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【残忍酷薄】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		IF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
			PRINTFORMW 「发呆可不行哦？」
		ELSE
			PRINTFORMW 「……你还远远不够呢…」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【乾坤一掷】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一掷"
		
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【怪力乱神】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		IF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
			PRINTFORMW 「只有这种程度，还远远不够呢」
		ELSE
			PRINTFORMW 「……」
		ENDIF
	ENDIF
	
	;-------------------------------------------------
	;战斗后
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "战斗后" 
		PRINTFORML 
		;残り残机4が表示されうるのは【洽览深识】持ちのみ
		;残机が1以上ならあなたの负け、0の场合はあなたの胜利
		SELECTCASE 相手残机
			CASE 4
				
			CASE 3
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「你能快点消失吗？」
				ELSEIF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
					PRINTFORMW 「还不够呢，一起特训吧？」
				ELSE
					PRINTFORMW 「……」
				ENDIF
			CASE 2
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「你能快点消失吗？」
				ELSEIF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
					PRINTFORMW 「比我想象的要强啊」
					PRINTFORMW 「不过，还要再特训一下吗」
				ELSE
					PRINTFORMW 「……」
				ENDIF
			CASE 1
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「…快点离开吧」
				ELSEIF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
					PRINTFORMW 「好危险啊…%CALLNAME:MASTER% 真厉害」
				ELSE
					PRINTFORMW 「……」
				ENDIF
			CASE 0
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……！」
				ELSEIF TALENT:恋人 || TALENT:恋慕 || TALENT:思慕
					PRINTFORMW 「你在开玩笑吧…你真的是人类吗…？」
					PRINTFORMW 「下次进攻月球时，可以叫你吗…？」
				ELSE
					PRINTFORMW 「……难道…真的是这样的吗…」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

