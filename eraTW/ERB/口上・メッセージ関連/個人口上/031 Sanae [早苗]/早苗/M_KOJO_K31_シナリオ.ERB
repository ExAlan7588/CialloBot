	;############################################
	;通常ルート「第2章　守矢さんちの现人神」
	;分岐先
	;信者と神のアヤシイ关系
	;
	;3年B组サナエさん
	;巫女アイドル早苗さんルート
	;############################################
	IF CHAPTER_攻略中_K31(10)
		CALL M_KOJO_EVENT_K31_シナリオ_10(第m选择肢)
	ENDIF
	;############################################
	;通常ルート「第2章　信者获得大作战」
	;分岐先
	;信者と神のアヤシイ关系
	;
	;妖怪浴室ターズ
	;异变解决のためにチームを结成、ただし犯人は你
	;############################################
	IF CHAPTER_攻略中_K31(20)
		CALL M_KOJO_EVENT_K31_シナリオ_20(第m选择肢)
	ENDIF
	;############################################
	;レアルート「第2章　くじで繋がる缘」
	;基本的に劝诱そっちのけでほのぼの日常
	;通常とは展开を变えることでレアルート感を演出…　どうせ谁もここには来ないっ！残念！
	;分岐先の章のタイトルは缘日系で
	;############################################
	IF CHAPTER_攻略中_K31(10010)
		CALL M_KOJO_EVENT_K31_シナリオ_10010(第m选择肢)
	ENDIF
	
	;############################################
	;レアルート「第2章　奇迹のおこしかた」
	;分岐先
	;『自己犠牲是かんよ、自己犠牲は』ルート
	;シリアス寄り　通常のNo.30っぽさ
	;
	;『そんなことわかってますよ』ルート
	;ギャグ　ポンコツ增し增しのほんわかルート
	;############################################
	IF CHAPTER_攻略中_K31(10020)
		CALL M_KOJO_EVENT_K31_シナリオ_10020(第m选择肢)
	ENDIF
;================================================================================================
;第3章
;シナリオNo.100-190(通常),10100-10190(レア)
;================================================================================================
CASE 3
	IF CHAPTER_攻略中_K31(100)
		CALL M_KOJO_EVENT_K31_シナリオ_100(第m选择肢)
	ENDIF
	IF CHAPTER_攻略中_K31(110)
		CALL M_KOJO_EVENT_K31_シナリオ_110(第m选择肢)
	ENDIF
	IF CHAPTER_攻略中_K31(120)
		CALL M_KOJO_EVENT_K31_シナリオ_120(第m选择肢)
	ENDIF
	IF CHAPTER_攻略中_K31(10100)
		CALL M_KOJO_EVENT_K31_シナリオ_10100(第m选择肢)
	ENDIF
	IF CHAPTER_攻略中_K31(10110)
		CALL M_KOJO_EVENT_K31_シナリオ_10110(第m选择肢)
	ENDIF
;================================================================================================
;第4章
;================================================================================================
CASE 4
;================================================================================================
;第5章
;================================================================================================
CASE 5
;================================================================================================
;第6章
;================================================================================================
CASE 6

;================================================================================================
;エラー分岐
;================================================================================================
CASEELSE
	PRINTL エラー(@M_KOJO_EVENT_K31_シナリオイベント(第n章,第m选择肢))
ENDSELECT
