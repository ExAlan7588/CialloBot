;-----------------------------------------------------------------------
;@EVENT_CHECK_K31(ARG)
;イベントNo.(ARG)を踏んでいるかとうか
;返り值
;1:踏んでいますよ
;0:踏んでいませんよ
;イベント一览(体验版Ver0.01时点)
;第1章 はじめまして
;	No.1 粗茶ですが
;	No.2 初接触
;	No.3 守矢の风祝
;	No.4 信じても鰯は鰯
;	No.5 信者ではないけれど
;	No.6 やっぱり鰯
;第1章 出会って3秒即约会！？
;	No.10001 无难な约会
;	No.10002 初约会は强引に
;	No.10003 触らぬ现人神に祟り无
;	No.10004 约会のあとで
;	No.10005 约会的对象は风祝
;	No.10006 嘘から出す真
;-----------------------------------------------------------------------
@EVENT_CHECK_K31(ARG)
#FUNCTION
#DIM 第1选择肢
#DIM 第2选择肢
#DIM 第3选择肢
#DIM 第1章
#DIM 第2章
#DIM 第3章
#DIM 第4章
#DIM 第5章
#DIM 第6章

第1章 = CFLAG:31:3101
第2章 = CFLAG:31:3102
第3章 = CFLAG:31:3103
第4章 = CFLAG:31:3104
第5章 = CFLAG:31:3105
第6章 = CFLAG:31:3106


	;第1章
	IF (ARG < 10 && ARG > 0) || (ARG < 10010 && ARG > 10000)
		;第1章	はじめまして					イベントNo.0
		IF ARG < 10
			SIF 第1章 != 0
				RETURNF 0
		;第1章	出会って3秒即约会！？			イベントNo.10000
		ELSE
			SIF 第1章 != 10000
				RETURNF 0
		ENDIF
		第1选择肢 = (CFLAG:31:3100 / 1) % 10
		第2选择肢 = (CFLAG:31:3100 / 10) % 10
		第3选择肢 = (CFLAG:31:3100 / 100) % 10
		SELECTCASE ARG-第1章
		CASE 1
			;该当部分が正しければ
			SIF 第1选择肢 == 1
				;1を返す
				RETURNF 1
			;それ以外は0
			RETURNF 0
		CASE 2
			;该当部分が正しければ
			SIF 第1选择肢 == 2
				;1を返す
				RETURNF 1
			;それ以外は0
			RETURNF 0
		CASE 3
			;该当部分が正しければ
			SIF 第2选择肢 == 1
				;1を返す
				RETURNF 1
			;それ以外は0
			RETURNF 0
		CASE 4
			;该当部分が正しければ
			SIF 第2选择肢 == 2
				;1を返す
				RETURNF 1
			;それ以外は0
			RETURNF 0
		CASE 5
			;该当部分が正しければ
			SIF 第3选择肢 == 1
				;1を返す
				RETURNF 1
			;それ以外は0
			RETURNF 0
		CASE 6
			;该当部分が正しければ
			SIF 第3选择肢 == 2
				;1を返す
				RETURNF 1
			;それ以外は0
			RETURNF 0
		CASEELSE
			RETURNF 0
		ENDSELECT
	
	;第2章
	ELSEIF (ARG < 30 && ARG > 10) || (ARG < 10030 && ARG > 10010)
		;第2章	守矢さんちの现人神				イベントNo.10
		IF ARG < 20
			SIF 第2章 != 10
				RETURNF 0
		;第2章	守矢さんちの现人神				イベントNo.20
		ELSEIF ARG < 30
			SIF 第2章 != 20
				RETURNF 0
		;第2章	くじで繋がる缘					イベントNo.10010
		ELSEIF ARG < 10020
			SIF 第2章 != 10010
				RETURNF 0
		;第2章	奇迹のおこしかた				イベントNo.10020
		ELSE
			SIF 第1章 != 10020
				RETURNF 0
		ENDIF
		第1选择肢 = (CFLAG:31:3100 / 1000) % 10
		第2选择肢 = (CFLAG:31:3100 / 10000) % 10
		第3选择肢 = (CFLAG:31:3100 / 100000) % 10
		SELECTCASE ARG-第2章
		CASE 1
			;该当部分が正しければ
			SIF 第1选择肢 == 1
				;1を返す
				RETURNF 1
			;それ以外は0
			RETURNF 0
		CASE 2
			;该当部分が正しければ
			SIF 第1选择肢 == 2
				;1を返す
				RETURNF 1
			;それ以外は0
			RETURNF 0
		CASE 3
			;该当部分が正しければ
			SIF 第2选择肢 == 1
				;1を返す
				RETURNF 1
			;それ以外は0
			RETURNF 0
		CASE 4
			;该当部分が正しければ
			SIF 第2选择肢 == 2
				;1を返す
				RETURNF 1
			;それ以外は0
			RETURNF 0
		CASE 5
			;该当部分が正しければ
			SIF 第3选择肢 == 1
				;1を返す
				RETURNF 1
			;それ以外は0
			RETURNF 0
		CASE 6
			;该当部分が正しければ
			SIF 第3选择肢 == 2
				;1を返す
				RETURNF 1
			;それ以外は0
			RETURNF 0
		CASEELSE
			RETURNF 0
		ENDSELECT
	
	
	
	ENDIF
RETURNF 0

