;固有Counter可否
@UNIQUE_COUNTER1_ABLE_K30
	SIF !TALENT:30:恋慕
		RETURN 0
	SIF ABL:30:舌 < 2
		RETURN 0
	SIF TEQUIP:PLAYER:50 >= 0 || TEQUIP:PLAYER:51 >= 0
		RETURN 0
	SIF TEQUIP:30:50 != PLAYER && TEQUIP:30:51 != PLAYER
		RETURN 0
RETURN 1

