FOR LOCAL, 1, MAX_DIARY_PAGE:CHARA:0 + 1
	RESULT = 0
	TRYCALLFORM DIARY_K{CHARA}_{LOCAL}_HAPPEN
	IF RESULT
		IF !DIARY:CHARA:LOCAL || RESULT:2
			DIARY:CHARA:LOCAL = RESULT:1
			SIF RESULT:1 == 3
				CALL CHARA_DIARY_PAGESETTING(CHARA, LOCAL)
		ENDIF
	ENDIF
NEXT

