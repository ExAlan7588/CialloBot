;==========================================================
@DIARY_NK_TEXT_K49(PAGENUM, MODE, PAGECOUNT)
#DIM PAGENUM
#DIMS MODE
#DIM PAGECOUNT
;－－－－－－－－－－－－－－－－－－－－－－－－－－－－－
;グループマッチに日记のIDを入れて、表示させたい颜绘を表示する
;表情・服装・特殊画像をオプション指定で表示（省略可）
;书式は\resources\颜.CSVと下の例を参照
;以下はサンプル
IF MODE == "デイリー"
	IF GROUPMATCH(PAGENUM, 1) 
		CALL PRINT_FACE, 49, "发情", "裸", "_1"
	ELSEIF GROUPMATCH(PAGENUM, 2)
		CALL PRINT_FACE, 49, "笑颜", "服1"
	ELSEIF GROUPMATCH(PAGENUM, 3)
		CALL PRINT_FACE, 49, "愤怒"
	ELSE
		CALL PRINT_FACE, 49
	ENDIF
ENDIF
