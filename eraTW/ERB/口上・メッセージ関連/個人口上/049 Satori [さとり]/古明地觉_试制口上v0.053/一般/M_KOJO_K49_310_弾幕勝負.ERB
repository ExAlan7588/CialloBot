;==================================================
;弹幕胜负
;==================================================
;
@M_KOJO_NK_MESSAGE_COM_K49_DANMAKU(ARGS, 相手残机)
#DIM 相手残机
;全体の流れ
;①【战斗前】→②ダイスロールとプレイヤー选择肢、ハンデをつけた场合は【ハンデ口上】→③对応スキルが发动した场合【スキル口上】→④被弹判定、キャラが被弹したなら【被弹口上】→
;どちらかの残机が0になっていなければ②に戻る→⑤【战斗后口上】

;--------------------------------------------------
;记入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
	SIF FLAG:口上色
		TRYCALLFORM M_KOJO_NK_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;战斗前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数值が大きいほどあなたが不利になる　数值が负ならあなたが有利に
	;キャラの能力に关わらずクッソ强くしたり弱くしたりできる
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "战斗前"
		PRINTFORMW 「好好武装起来，和自己的心象交战吧」
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので无记入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;战斗中TARGET被弹时口上
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弹" 
		;别に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残机
			;残り残机3が表示されるのは【洽览深识】持ちのみ
			;CASE 3
			;	PRINTFORML 
			CASE 2
				PRINTFORMW 「哎呀哎呀，轻敌了呢」
				PRINTFORML 「但接下来可没这么简单了」
				PRINTFORMW 「脑符「Brain Fingerprint」（脑指纹测谎法）！」
			CASE 1
				PRINTFORML 「看来不出些狠招是不行了」
				PRINTFORMW 「回忆「朦胧记忆中的金阁寺」！」
			CASE 0
				PRINTFORMW 「嘛，这样的事情也不少见就是了」
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【残忍酷薄】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【乾坤一掷】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一掷"
		
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【怪力乱神】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;战斗后
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "战斗后" 
		PRINTFORML 
		;残り残机4が表示されうるのは【洽览深识】持ちのみ
		;残机が1以上ならあなたの负け、0の场合はあなたの胜利
		SELECTCASE 相手残机
			;CASE 4
			;	PRINTFORML 
			CASE 3
				PRINTFORML 「完全没做好战斗准备呀」
				PRINTFORMW 「再接再厉吧」
			CASE 2
				PRINTFORML 「有些实力了呢」
				PRINTFORMW 「不过，还不够」
			CASE 1
				PRINTFORML 「差点就胜负逆转了」
				PRINTFORMW 「想必你也不甘心吧」
			CASE 0
				PRINTFORML 「弹幕游戏一直都不是什么强项」
				PRINTFORMW 「可不要因此得意扬扬」
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

