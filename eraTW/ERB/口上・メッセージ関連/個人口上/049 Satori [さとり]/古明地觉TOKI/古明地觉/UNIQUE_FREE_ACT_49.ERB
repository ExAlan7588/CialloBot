@UNIQUE_FA_49(CHARA, ARGS,时间系数)
#DIM CHARA
#DIM CHAIN
#DIM 现在地
#DIM メッセージ表示
#DIM 时间系数
现在地 = CFLAG:CHARA:当前位置
メッセージ表示 = 现在地 == CFLAG:MASTER:当前位置 ? 1 # 0

UNIQUE_FA_NAME:CHARA = 被妄想困扰着

SELECTCASE ARGS
	CASE "发生"
		SIF CHARA != 49 || CFLAG:49:998 != 1
			RETURN 0
		SIF TCVAR:CHARA:350 == 1
			RETURN 0
		IF メッセージ表示
			PRINTFORML 似乎有些不太正常，觉脸颊泛着微妙的红色，呼吸也显得急促
			PRINTFORMW 觉将下唇咬的发白不断忍耐的样子，不由得令人担心……
			CFLAG:49:1536 = 1
			CFLAG:49:1515 ++
			RETURN 60 + RAND:30
		ENDIF
	CASE "行动中"
		;行动中の处理、地の文もここで
		IF メッセージ表示
			SELECTCASE RAND:3
			CASE 0
				PRINTFORMW 觉合拢的腿根不断摩擦，在看不见的地方不断扭曲伸展着脚踝
			CASE 1
				PRINTFORMW 觉神情恍惚的发着呆，双臂不自觉的抱住身体
			CASE 2
				PRINTFORMW 觉努力抑制着喉咙中娇滴滴的呻吟声
			ENDSELECT
		ENDIF
	CASE "完了"
		;行动时间を使い切ったときの处理、地の文もここで
		SIF メッセージ表示
			PRINTFORMW 觉长长舒了口气，瘫倒在椅子上
	CASE "中断"
		PRINTFORMW 感受到从身后传来的幽怨目光
		;中断したときの处理、地の文もここで
	CASE "交手"
		;自由行动に付き合ったとき用メッセージ
		PRINTFORML %CALLNAME:MASTER%将手伸向样子不太对劲的觉
		PRINTFORML 觉痉挛的同时努力抑制的短促呻吟漏了出来
		SELECTCASE RAND:3
		CASE 0
			PRINTFORMW 裙子紧夹在腿间的部分沾到了些许水渍……
		CASE 1
			PRINTFORMW 面对%CALLNAME:MASTER%佯装镇静掩饰着慌乱……
		CASE 2
			PRINTFORMW 从觉的方向飘来了湿暖的香气……
		ENDSELECT
		SELECTCASE RAND:5
		CASE 0
			PALAM:49:快Ｖ += 10000
		CASE 1
			PALAM:49:快Ａ += 10000
		CASE 2
			PALAM:49:快Ｃ += 10000
		CASE 3
			PALAM:49:快Ｂ += 10000
		CASE 4
			PALAM:49:快Ｍ += 10000
		ENDSELECT
		CALL ORGASM_ADD(49)
	CASE "ソース"
		TCVAR:49:350 = 1
ENDSELECT
