@CHECK_CLO(ARGS, ARG = -1)
#FUNCTION

SIF ARG == -1
	ARG = TARGET

SELECTCASE ARGS
    CASE "belly_visible"
    {
        RETURNF !EQUIP:ARG:上身衣服１ && !EQUIP:ARG:上身衣服２ && !EQUIP:ARG:外衣
            && !EQUIP:ARG:着物 && !EQUIP:ARG:连衣裙 && !EQUIP:ARG:紧身内衣 && !EQUIP:ARG:连体内衣
    }
    CASE "bra_visible"
    {
        RETURNF !EQUIP:ARG:上身衣服１ && !EQUIP:ARG:上身衣服２ && !EQUIP:ARG:外衣
            && !EQUIP:ARG:着物 && !EQUIP:ARG:连衣裙 && !EQUIP:ARG:紧身内衣 && !EQUIP:ARG:连体内衣
            && (EQUIP:ARG:上半身内衣１ || EQUIP:ARG:上半身内衣２)
    }
    CASE "bra_overridden"
        LOCAL = CURRENT_CLOTHES_SET(ARG)
        IF LOCAL == 100
            RETURNF CFLAG:ARG:FAVORITE_OVERRIDE_UNDERWEAR
        ELSE
            RETURNF GET_INT(ARG, "衣装セット", LOCAL, "OVERRIDE_UNDERWEAR_TOP")
        ENDIF
    CASE "panties_overridden"
        LOCAL = CURRENT_CLOTHES_SET(ARG)
        IF LOCAL == 100
            RETURNF CFLAG:ARG:9128 ;FAVORITE_OVERRIDE_UNDERWEAR
        ELSE
            RETURNF GET_INT(ARG, "衣装セット", LOCAL, "OVERRIDE_UNDERWEAR_BOTTOM")
        ENDIF
ENDSELECT
