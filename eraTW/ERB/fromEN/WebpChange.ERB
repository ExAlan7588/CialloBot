;Checks if the current character image set has a standing image
@HAS_STANDING(CHARA)
#FUNCTION
#DIM CHARA
SIF CFLAG:CHARA:应用差分替换
	RETURNF SPRITECREATED(@"\@CFLAG:CHARA:应用差分替换 >= 2?别立ち{CFLAG:CHARA:应用差分替换}#别立ち\@_服_通常_{CHARA}")
RETURNF SPRITECREATED(@"立绘_服_通常_{CHARA}")

;Checks if the current character image set has a portrait image
@HAS_FACE(CHARA)
#FUNCTION
#DIM CHARA
IF CFLAG:CHARA:应用差分替换
	RETURNF SPRITECREATED(@"\@CFLAG:CHARA:应用差分替换 >= 2?别颜{CFLAG:CHARA:应用差分替换}#别颜\@_服_通常_{CHARA}")
ENDIF
RETURNF SPRITECREATED(@"颜绘_服_通常_{CHARA}")