;*********************************************************************************************
;Counter指令：胸爱抚
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF58(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_SET(SET_FROM_YUBI,5,ARG)
	TFLAG:MASTERのＢ使用中 ++
	
	;ソース计算および内部处理系统
	;=============================
	IF TEQUIP:PLAYER:1 & 2
		SIF RAND:2
			CALL DATUI_TOP(ARG,0)
	ENDIF
	SIF !(TALENT:PLAYER:2 & 1)
		SOURCE:ARG:施虐 += 100
	SOURCE:ARG:性行动 += 200
	SOURCE:ARG:侮辱 += 300
	SOURCE:ARG:诱惑 += 200
	SOURCE:ARG:挑衅 += 100
	SOURCE:ARG:征服 += 300
	SOURCE:PLAYER:快Ｂ += 300
	EXP:ARG:手淫经验 ++

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=拥抱 2=接吻 3=胸爱抚 4=肛门爱抚 5=阴蒂爱抚 6=指插入れ 7=掀裙子)
	;=============================
	CALL Counter插入され继续中处理(ARG)
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE58(ARG)

	SIF TFLAG:65
		RETURN 0
	SIF ABL:ARG:指 < 1
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER58(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 脱衣爱抚

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + 2 * TALENT:ARG:灵活手指 + ABL:ARG:指

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
