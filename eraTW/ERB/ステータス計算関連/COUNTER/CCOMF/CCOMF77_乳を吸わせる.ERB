;*********************************************************************************************
;Counter指令：乳を吸わせる
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF77(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_SET(SET_FROM_B,4,ARG)
	TFLAG:MASTERの口使用中 ++
	
	;ソース计算および内部处理系统
	;=============================
	SIF TEQUIP:ARG:1 > 1
		CALL DATUI_TOP_T(ARG,0)
	SOURCE:ARG:诱惑 += 500
	SOURCE:ARG:侍奉 += 200
	SOURCE:ARG:强迫 += 100
	SOURCE:ARG:快Ｂ += 200
	SOURCE:ARG:情爱 += 100
	SIF TALENT:ARG:母乳体质
		EXP:ARG:喷乳经验 ++
	TEQUIP:ARG:吸乳头 = 1

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=拥抱 2=接吻 3=胸爱抚 4=肛门爱抚 5=阴蒂爱抚 6=指插入れ 7=掀裙子)
	;=============================
	SIF GROUPMATCH(TEQUIP:MASTER:体位, 1, 3, 4)
		CALL Counter插入され继续中处理(ARG)
	SETBIT TCVAR:ARG:26 ,2
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE77(ARG)

	SIF TFLAG:60
		RETURN 0
	SIF TEQUIP:MASTER:50 == ARG || TEQUIP:MASTER:51 == ARG
		RETURN 0
	SIF GROUPMATCH(TEQUIP:ARG:体位,2,5)
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER77(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 脱衣强迫

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + ABL:ARG:Ｂ感觉

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
