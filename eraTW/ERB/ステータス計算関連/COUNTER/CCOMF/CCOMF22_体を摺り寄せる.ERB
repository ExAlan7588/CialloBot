;*********************************************************************************************
;Counter指令：体を摺り寄せる
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF22(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース计算および内部处理系统
	;=============================
	SOURCE:ARG:诱惑 += 100
	SOURCE:ARG:侍奉 += 80

	;マ斯塔Counter制御
	;=============================
	;无

RETURN 1

