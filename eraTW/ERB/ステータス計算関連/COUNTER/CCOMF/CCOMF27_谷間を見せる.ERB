;*********************************************************************************************
;Counter指令：谷间を见せる
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF27(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース计算および内部处理系统
	;=============================
	SOURCE:ARG:诱惑 += 200
	SOURCE:ARG:挑衅 += 100

	;マ斯塔Counter制御
	;=============================
	;无

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE27(ARG)

	;胸围制限
	SIF TALENT:ARG:胸围 <= -1
		RETURN 0
	SIF TEQUIP:ARG:1 == 1
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER27(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = ソフト

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + CFLAG:ARG:诱惑 + CFLAG:ARG:积极性 - CFLAG:ARG:害羞

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
