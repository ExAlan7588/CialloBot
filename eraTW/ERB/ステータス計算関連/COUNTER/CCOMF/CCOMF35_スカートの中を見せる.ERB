;*********************************************************************************************
;Counter指令：裙子の中を见せる
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF35(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース计算および内部处理系统
	;=============================
	SOURCE:ARG:诱惑 += 500
	SOURCE:ARG:挑衅 += 300

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=拥抱 2=接吻 3=胸爱抚 4=肛门爱抚 5=阴蒂爱抚 6=指插入れ 7=掀裙子)
	;=============================
	;CALL Counter插入され继续中处理(ARG)

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE35(ARG)

	;服装制限(条件が意味不明なので、再设定（裙子を没穿かつ连衣裙をきてないかつ和服をきてないに）
	;SIF !(EQUIP:紧身内衣 || EQUIP:上身衣服２ || EQUIP:连衣裙)
	SIF !EQUIP:裙子 && !EQUIP:连衣裙 && !EQUIP:和服
		RETURN 0
	SIF TEQUIP:0 > 3
		RETURN 0
	;全裸(MASTERの有无は关系ないよね？
	SIF !EQUIP:0
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER35(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 着衣

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + CFLAG:ARG:害羞 + CFLAG:ARG:诱惑

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
