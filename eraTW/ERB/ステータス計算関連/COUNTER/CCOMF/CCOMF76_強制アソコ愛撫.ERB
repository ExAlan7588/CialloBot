;*********************************************************************************************
;Counter指令：强制アソコ爱抚
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF76(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_SET(SET_FROM_C,3,ARG)
	TFLAG:MASTERの手使用中 ++
	
	;ソース计算および内部处理系统
	;=============================
	SOURCE:ARG:快Ｃ += 100
	SIF !TALENT:ARG:处女
		SOURCE:ARG:快Ｖ += 100
	SOURCE:ARG:性行动 += 150
	SOURCE:ARG:诱惑 += 100
	SOURCE:ARG:挑衅 += 150
	SOURCE:ARG:强迫 += 400
	SOURCE:ARG:征服 += 200
	;射精部位（1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
	CALL 射精对象登录(ARG, PLAYER, 3)

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=拥抱 2=接吻 3=胸爱抚 4=肛门爱抚 5=阴蒂爱抚 6=指插入れ 7=掀裙子)
	;=============================
	;CALL Counter插入され继续中处理(ARG)
	SETBIT TCVAR:ARG:26 ,0
	SETBIT TCVAR:ARG:26 ,1
	SETBIT TCVAR:ARG:26 ,3
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE76(ARG)

	SIF !(TALENT:ARG:2 & 1)
		RETURN 0
	;润滑
	SIF PALAM:ARG:润滑 < 1000
		RETURN 0
	SIF TEQUIP:MASTER:50 == ARG || TEQUIP:MASTER:51 == ARG
		RETURN 0
	SIF TEQUIP:ARG:体位
		RETURN 0
	;贞操带、触手胖次、振动棒胖次、二穴振动棒胖次を是てるとダメ
	SIF EQUIP:下半身内衣２ == 27 || EQUIP:下半身内衣２ == 28 || EQUIP:下半身内衣２ == 29 || EQUIP:下半身内衣２ == 30
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER76(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 脱衣强迫

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + (ABL:ARG:Ｃ感觉 +  ABL:ARG:Ｖ感觉) / 2

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
