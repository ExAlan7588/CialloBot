;*********************************************************************************************
;Counter指令：タワシ洗い
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF75(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_SET(SET_FROM_C,3,ARG)
	TFLAG:MASTERの手使用中 ++
	
	;ソース计算および内部处理系统
	;=============================
	SIF TEQUIP:ARG:0
		CALL DATUI_BOTTOM_T(ARG,0)
	SOURCE:ARG:快Ｃ += 100
	SOURCE:ARG:性行动 += 150
	SOURCE:ARG:诱惑 += 100
	SOURCE:ARG:挑衅 += 150
	SOURCE:ARG:征服 += 100
	SOURCE:ARG:强迫 += 200

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=拥抱 2=接吻 3=胸爱抚 4=肛门爱抚 5=阴蒂爱抚 6=指插入れ 7=掀裙子)
	;=============================
	;CALL Counter插入され继续中处理(ARG)
	SETBIT TCVAR:ARG:26 ,0
	SETBIT TCVAR:ARG:26 ,1
	SETBIT TCVAR:ARG:26 ,3
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE75(ARG)

	SIF !(TALENT:ARG:2 & 1)
		RETURN 0
	;润滑
	SIF PALAM:ARG:润滑 < 1500
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0
	;口が空いてれば舐阴させる
	SIF !TFLAG:60
		RETURN 0
	SIF TFLAG:61 > 1
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER75(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 脱衣强迫

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + ABL:ARG:Ｃ感觉

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
