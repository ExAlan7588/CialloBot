	SETBIT TCVAR:ARG:26 ,2
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,5
	SETBIT TCVAR:ARG:26 ,6

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE53(ARG)

		SIF TFLAG:62
			RETURN 0
		SIF ABL:ARG:胸 < 1
			RETURN 0
		SIF !(TALENT:PLAYER:2 & 2)
			RETURN 0
		;[绝壁]だと不可 と思っていたのか
		;SIF TALENT:ARG:胸围 == -2
		;	RETURN 0
		;[爆乳]なら技巧LV1以上、[巨乳]でなければ技巧3以上、[贫乳]だと技巧4以上必要
		SIF TALENT:ARG:胸围 + ABL:ARG:技巧 < 3
			RETURN 0
		SIF TEQUIP:ARG:50 >= 0 || TEQUIP:ARG:51 >= 0
			RETURN 0
		SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
			RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER53(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 脱衣爱抚

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + TALENT:ARG:胸围 + 2 * TALENT:ARG:淫乳 + 5 * ABL:ARG:胸 + BASE:MASTER:勃起 / 500

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
