	CALL TOUCH_SET(SET_FROM_B,1,ARG)
	TFLAG:MASTERのＣ使用中 ++
	
	;ソース计算および内部处理系统
	;=============================
	SIF TEQUIP:PLAYER:0 > 1
		CALL DATUI_BOTTOM(ARG,0)
	SIF TEQUIP:ARG:1 > 1
		CALL DATUI_TOP_T(ARG,0)
	SOURCE:ARG:性行动 += 400
	SOURCE:ARG:快Ｂ = 50
	SOURCE:ARG:诱惑 += 800
	SOURCE:ARG:挑衅 += 400
	SOURCE:ARG:侍奉 += 800
	SOURCE:ARG:强迫 += 200
	SOURCE:ARG:征服 += 500
