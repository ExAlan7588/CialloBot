;*********************************************************************************************
;Counter指令：手淫
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF50(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_SET(SET_FROM_YUBI,1,ARG)
	TFLAG:MASTERのＣ使用中 ++

	;ソース计算および内部处理系统
	;=============================
	IF TEQUIP:PLAYER:0
		IF TEQUIP:PLAYER:0 & 1
			CALL DATUI_BOTTOM(ARG,1)
		ELSEIF TEQUIP:PLAYER:0 & 8
			CALL DATUI_BOTTOM(ARG,2)
		ENDIF
	ENDIF
	SOURCE:ARG:性行动 += 250
	SOURCE:ARG:诱惑 += 500
	SOURCE:ARG:挑衅 += 100
	SOURCE:ARG:施虐 += 100
	SOURCE:ARG:征服 += 200
	SIF !(TALENT:PLAYER:2 & 2)
		SOURCE:PLAYER:快Ｃ += 300
	;射精部位（1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
	CALL 射精对象登录(PLAYER, ARG, 3)
	;强度
	TCVAR:PLAYER:4 += 500
	EXP:ARG:手淫经验 ++
	;侍奉FLAG
	TCVAR:ARG:108 = 1
	TCVAR:ARG:嗜虐フラグ = 1
	CALL EVENT_COUNTER_POSE_69(ARG,2)

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=拥抱 2=接吻 3=胸爱抚 4=肛门爱抚 5=阴蒂爱抚 6=指插入れ 7=掀裙子)
	;=============================
	;CALL Counter插入され继续中处理(ARG)

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE50(ARG)

	SIF TFLAG:62
		RETURN 0
	SIF ABL:ARG:指 < 1
		RETURN 0
	SIF TEQUIP:ARG:50 >= 0 || TEQUIP:ARG:51 >= 0
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 && !HAS_PENIS(MASTER)
		RETURN 0
RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER50(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 脱衣爱抚

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + 2 * TALENT:ARG:灵活手指 + ABL:ARG:指 + BASE:MASTER:勃起 / 500

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
