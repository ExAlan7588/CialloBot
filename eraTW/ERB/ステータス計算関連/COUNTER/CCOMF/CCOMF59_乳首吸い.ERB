;*********************************************************************************************
;Counter指令：吸乳头
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF59(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_SET(SET_FROM_M,5,ARG)
	TFLAG:MASTERのＢ使用中 ++
	
	;ソース计算および内部处理系统
	;=============================
	SIF TEQUIP:PLAYER:1 & 2
		CALL DATUI_TOP(ARG,0)
	SOURCE:ARG:性行动 += 300
	SOURCE:ARG:诱惑 += 150
	SOURCE:ARG:挑衅 += 200
	SOURCE:ARG:征服 += 100
	SOURCE:PLAYER:快Ｂ += 400
	EXP:ARG:口淫经验 ++

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=拥抱 2=接吻 3=胸爱抚 4=肛门爱抚 5=阴蒂爱抚 6=指插入れ 7=掀裙子)
	;=============================
	SIF GROUPMATCH(TEQUIP:MASTER:体位, 1, 3, 4)
		CALL Counter插入され继续中处理(ARG)
	SETBIT TCVAR:ARG:26 ,2
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE59(ARG)

	SIF TFLAG:65
		RETURN 0
	SIF ABL:ARG:舌 < 1
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER59(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 脱衣爱抚

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + 2 * TALENT:ARG:舌头灵活 + ABL:ARG:舌 + 1 * TALENT:ARG:幼稚 - TALENT:MASTER:2

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
