;*********************************************************************************************
;Counter指令：摸屁股
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF25(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース计算および内部处理系统
	;=============================
	SOURCE:ARG:诱惑 += 100
	SOURCE:ARG:挑衅 += 300
	SOURCE:ARG:侮辱 += 200

	;マ斯塔Counter制御
	;=============================
	;无

RETURN 1

