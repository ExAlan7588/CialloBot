;*********************************************************************************************
;Counter指令：前から抱き着く
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF32(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_RESET_T(ARG)
	TCVAR:ARG:位置关系 = 1

	;ソース计算および内部处理系统
	;=============================
	SOURCE:ARG:诱惑 += 300
	SOURCE:ARG:征服 += 150

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=拥抱 2=接吻 3=胸爱抚 4=肛门爱抚 5=阴蒂爱抚 6=指插入れ 7=掀裙子)
	;=============================
	SIF GROUPMATCH(TEQUIP:MASTER:体位, 1, 3, 4)
		CALL Counter插入され继续中处理(ARG)

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE32(ARG)

	SIF FIND_SELECTCCOM(32)
		RETURN 0
	SIF GROUPMATCH(TEQUIP:ARG:体位,2,5)
		RETURN 0
	;接吻
	SIF FIND_SELECTCCOM(31)
		RETURN 0
	SIF GROUPMATCH(TEQUIP:MASTER:体位, 2, 5)
		RETURN 0
	RETURN 1

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER32(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 着衣

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + CFLAG:ARG:诱惑 + CFLAG:ARG:积极性

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
