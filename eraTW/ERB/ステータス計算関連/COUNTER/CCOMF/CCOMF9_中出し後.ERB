;*********************************************************************************************
;Counter指令：中出し后
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF9(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース计算および内部处理系统
	;=============================
	SOURCE:ARG:情欲 += 充填率(ARG,4) * 2
	SOURCE:ARG:屈从 += 充填率(ARG,4) * 2

	;マ斯塔Counter制御
	;=============================
	;无

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE9(ARG)

	SIF 充填率(ARG,4) < 15
			RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER9(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = コミュ

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + CFLAG:ARG:诱惑 + CFLAG:ARG:积极性

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
