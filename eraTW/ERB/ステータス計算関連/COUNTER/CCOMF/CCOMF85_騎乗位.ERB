	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE85(ARG)

	;毒人形だと性器がついてないのでダメ
	SIF TALENT:ARG:196 == 99
		RETURN 0
	;体格差がある场合は経験がないとダメ
	SIF 插入不可(ARG) == 1 && EXP:ARG:Ｖ经验 < 50 && !TALENT:ARG:禁断的知识
		RETURN 0
	;さらに体格差があると禁断的知识が必要
	SIF 插入不可(ARG) == 2 && (EXP:ARG:Ｖ经验 < 50 || !TALENT:ARG:禁断的知识)
		RETURN 0
	SIF 插入不可(ARG) == 3
		RETURN 0
	SIF !(TALENT:ARG:2 & 1)
		RETURN 0
	SIF TALENT:ARG:妊娠 && (CFLAG:TARGET:903 <= 5 || CFLAG:TARGET:903 >= 25)
		RETURN 0
	SIF CFLAG:ARG:育儿人数 >= 1 && CFLAG:ARG:育儿人数 <= 30
		RETURN 0
	SIF !(TALENT:PLAYER:2 & 2)
		RETURN 0
	SIF BASE:MASTER:勃起 < 1000
		RETURN 0
	SIF TFLAG:63
		RETURN 0
	SIF TEQUIP:50 >= 0 || TEQUIP:51 >= 0
		RETURN 0
	SIF TEQUIP:ARG:体位
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0
	SIF PALAM:ARG:润滑 < PALAMLV:3
		RETURN 0
	SIF TEQUIP:ARG:振动棒
		RETURN 0
	;贞操带、触手胖次、振动棒胖次、二穴振动棒胖次を是てるとダメ
	SIF EQUIP:下半身内衣２ == 27 || EQUIP:下半身内衣２ == 28 || EQUIP:下半身内衣２ == 29 || EQUIP:下半身内衣２ == 30
		RETURN 0

RETURN 1

