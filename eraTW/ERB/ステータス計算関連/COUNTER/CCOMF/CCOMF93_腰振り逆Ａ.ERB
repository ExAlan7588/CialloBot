@CCOM_ABLE93(ARG)

	SIF FLAG:肛门开发无效
		RETURN 0
	SIF !(TALENT:ARG:2 & 2)
		RETURN 0
	SIF TEQUIP:PLAYER:51 != ARG
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER93(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 责め

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + ABL:ARG:Ｃ感觉 + MAX(EXP:ARG:射精经验 / 15, 15)
	
	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
