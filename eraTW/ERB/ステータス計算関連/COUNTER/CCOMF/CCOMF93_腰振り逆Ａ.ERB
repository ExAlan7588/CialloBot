;*********************************************************************************************
;Counter指令：腰振り逆Ａ
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF93(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_SET(SET_FROM_P,7,ARG)
	TFLAG:MASTERのＡ使用中 ++
	TEQUIP:MASTER:体位 = 1
	;ソース计算および内部处理系统
	;=============================
	SOURCE:ARG:快Ｃ += 100
	SOURCE:ARG:性行动 += 300
	SOURCE:ARG:征服 += 1000
	SOURCE:PLAYER:液体 += 100
	SOURCE:ARG:施虐 += 600
	SOURCE:ARG:强迫 += 600
	SOURCE:PLAYER:快Ａ += 1000
	CALL PAIN_CHECK_A_MASTER(ARG)
	;射精部位（1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
	CALL 射精对象登录(PLAYER, ARG, 12)
	TCVAR:PLAYER:4 += 250
	;射精部位（1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
	CALL 射精对象登录(ARG, PLAYER, 2)
	;强度
	TCVAR:ARG:4 += 1000
	CALL STAIN_肛门Ｐ插入
	EXP:PLAYER:Ａ性交经验 ++
	EXP:ARG:插入经验 ++
	TEQUIP:PLAYER:51 = ARG
	;侍奉FLAG
	TCVAR:ARG:108 = 1
	TCVAR:ARG:嗜虐フラグ = 1

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=拥抱 2=接吻 3=胸爱抚 4=肛门爱抚 5=阴蒂爱抚 6=指插入れ 7=掀裙子)
	;=============================
	;CALL Counter插入され继续中处理(ARG)
	IF TEQUIP:MASTER:体位 == 2
		SETBIT TCVAR:ARG:26 ,0
		SETBIT TCVAR:ARG:26 ,1
		SETBIT TCVAR:ARG:26 ,2
		SETBIT TCVAR:ARG:26 ,3
	ENDIF
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,5
	SETBIT TCVAR:ARG:26 ,6
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
