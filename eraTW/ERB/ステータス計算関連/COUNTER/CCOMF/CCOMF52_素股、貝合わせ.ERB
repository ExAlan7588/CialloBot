;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE52(ARG)

	SIF TFLAG:62
		RETURN 0
	;腰使いが无くても、十分な情欲があれば自分の快乐目的で实行する
	;无知な子も快Ｃが溜まると本能でこすりつけてくる
	IF ABL:ARG:腰 < 1
		IF PALAM:ARG:情欲 < PALAMLV:3
			RETURN 0
		ELSEIF TALENT:ARG:无知 && PALAM:ARG:快Ｃ < PALAMLV:3
			RETURN 0
		ENDIF
	ENDIF
	;润滑
	SIF PALAM:ARG:润滑 < 2000
		RETURN 0
	SIF TEQUIP:50 >= 0 || TEQUIP:51 >= 0
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER52(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 脱衣爱抚

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + ABL:ARG:腰 + 2 * TALENT:ARG:弄湿难易 + BASE:MASTER:勃起 / 500

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
