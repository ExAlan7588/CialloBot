;*********************************************************************************************
;Counter指令：だいしゅきホールド
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF86(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_SET(SET_FROM_V,1,ARG)
	TFLAG:MASTERのＰ插入中 = 1
	TFLAG:MASTERのＣ使用中 ++
	
	;ソース计算および内部处理系统
	;=============================
	TCVAR:PLAYER:4 += 1800
	SOURCE:ARG:快Ｖ += 200
	SOURCE:ARG:情爱 += 450
	SOURCE:ARG:诱惑 += 1000
	SOURCE:ARG:征服 += 800
	SOURCE:ARG:强迫 += 200
	SOURCE:ARG:性行动 += 250
	SOURCE:ARG:达成 += 250
	TCVAR:116 = PLAYER
	CALL PAIN_CHECK_V(ARG)
	;射精部位（1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
	CALL 射精对象登录(PLAYER, ARG, 1)
	EXP:ARG:Ｖ性交经验 ++
	EXP:PLAYER:插入经验 ++
	EXP:ARG:爱情经验 += TALENT:ARG:恋慕
	TEQUIP:ARG:50 = MASTER

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=拥抱 2=接吻 3=胸爱抚 4=肛门爱抚 5=阴蒂爱抚 6=指插入れ 7=掀裙子)
	;=============================
	;CALL Counter插入され继续中处理(ARG)
	SETBIT TCVAR:ARG:26 ,6
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE86(ARG)

	SIF TCVAR:PLAYER:12 != 1 && CFLAG:ARG:诶嘿嘿 != 2
		RETURN 0
	SIF !TCVAR:PLAYER:要去了 && CFLAG:ARG:诶嘿嘿 == 2
		RETURN 0
	SIF TEQUIP:ARG:50 < 0
		RETURN 0
	SIF CFLAG:ARG:允许无套 != 2
		RETURN 0
	SIF TEQUIP:ARG:体位 == 2 || TEQUIP:ARG:体位 == 5
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER86(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 性交

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + ABL:ARG:亲密 * 3 + EX:ARG:Ｖ寸止 * 10

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
