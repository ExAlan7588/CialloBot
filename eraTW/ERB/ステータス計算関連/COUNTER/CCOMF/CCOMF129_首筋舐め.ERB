;*********************************************************************************************
;Counter指令：舔舐脖子
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF129(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_RESET_T(ARG)
	
	;ソース计算および内部处理系统
	;=============================
	SOURCE:ARG:征服 += 40
	SOURCE:ARG:挑衅 += 80
	SOURCE:ARG:侮辱 += 80

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=拥抱 2=接吻 3=胸爱抚 4=肛门爱抚 5=阴蒂爱抚 6=指插入れ 7=掀裙子)
	;=============================
	SETBIT TCVAR:ARG:26 ,0
	SETBIT TCVAR:ARG:26 ,2
	SETBIT TCVAR:ARG:26 ,3
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,5
	SETBIT TCVAR:ARG:26 ,6
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE129(ARG)

	RETURN BASE:ARG:理性 <= 800

RETURN 0

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER129(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 抱きつき

	;实行判定值算出式
	;=============================
	LOCAL = (基本值*3/10) + CFLAG:ARG:攻 + CFLAG:ARG:害羞 + GETPALAMLV(PALAM:ARG:情欲, 7)
	
	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
