	;=============================
	;CALL Counter插入され继续中处理(ARG)

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE41(ARG)

	;毒人形だと性器がついてないのでダメ
	SIF TALENT:ARG:196 == 99
		RETURN 0
	;体格差がある场合は経験がないとダメ
	SIF 插入不可(ARG) == 1 && EXP:ARG:Ｖ经验 < 50 && !TALENT:MASTER:禁断的知识
		RETURN 0
	;さらに体格差があると禁断的知识が必要
	SIF 插入不可(ARG) == 2 && (EXP:ARG:Ｖ经验 < 50 || !TALENT:MASTER:禁断的知识)
		RETURN 0
	SIF 插入不可(ARG) == 3
		RETURN 0
	SIF !(TALENT:ARG:2 & 1)
		RETURN 0
	SIF TALENT:ARG:妊娠 && (CFLAG:TARGET:903 <= 5 || CFLAG:TARGET:903 >= 25)
		RETURN 0
	SIF CFLAG:ARG:育儿人数 >= 1 && CFLAG:ARG:育儿人数 <= 30
		RETURN 0
	SIF !(TALENT:PLAYER:2 & 2)
		RETURN 0
	SIF BASE:MASTER:勃起 < 1000
		RETURN 0
	SIF TFLAG:MASTERのＶ使用中 || TEQUIP:50 >= 0 || TEQUIP:51 >= 0 || TFLAG:MASTERのＡ使用中
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0
	SIF PALAM:ARG:润滑 < PALAMLV:3
		RETURN 0
	SIF TEQUIP:ARG:振动棒
		RETURN 0
	SIF TEQUIP:ARG:体位
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0
	;IF 妊娠可否(TARGET) && CFLAG:TARGET:允许无套 != 2 && !TALENT:TARGET:无知 && !TCVAR:TARGET:烂醉
	;	SIF !TEQUIP:MASTER:避孕套
	;		RETURN 0
	;ENDIF
	;贞操带、触手胖次、振动棒胖次、二穴振动棒胖次を是てるとダメ
	SIF EQUIP:下半身内衣２ == 27 || EQUIP:下半身内衣２ == 28 || EQUIP:下半身内衣２ == 29 || EQUIP:下半身内衣２ == 30
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER41(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = おねだり

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + ABL:ARG:Ｖ感觉 * 4 + EX:ARG:Ｖ寸止 * 10

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
