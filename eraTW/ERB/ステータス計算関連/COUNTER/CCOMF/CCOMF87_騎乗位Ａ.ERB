	TCVAR:PLAYER:4 = 1000
	STAIN:ARG:7 |= STAIN:PLAYER:2
	STAIN:PLAYER:2 |= STAIN:ARG:7
	EXP:ARG:Ａ性交经验 ++
	EXP:PLAYER:插入经验 ++
	EXP:ARG:爱情经验 += TALENT:ARG:恋慕
	TEQUIP:ARG:51 = MASTER
	;侍奉FLAG
	TCVAR:ARG:108 = 1
	TCVAR:ARG:嗜虐フラグ = 1

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=拥抱 2=接吻 3=胸爱抚 4=肛门爱抚 5=阴蒂爱抚 6=指插入れ 7=掀裙子)
	;=============================
	;CALL Counter插入され继续中处理(ARG)
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE87(ARG)

	;毒人形だと肛门がついてないのでダメ
	SIF TALENT:ARG:196 == 99
		RETURN 0
	;体格差がある场合は経験がないとダメ
	SIF 插入不可(ARG) == 1 && EXP:ARG:Ａ经验 < 50 && !TALENT:MASTER:禁断的知识
		RETURN 0
	;さらに体格差があると禁断的知识が必要
	SIF 插入不可(ARG) == 2 && (EXP:ARG:Ａ经验 < 50 || !TALENT:MASTER:禁断的知识)
		RETURN 0
	SIF 插入不可(ARG) == 3
		RETURN 0
	SIF !(TALENT:ARG:2 & 1)
		RETURN 0
	SIF !(TALENT:PLAYER:2 & 2)
		RETURN 0
	SIF BASE:MASTER:勃起 < 1000
		RETURN 0
	SIF TALENT:ARG:妊娠 && (CFLAG:TARGET:903 <= 5 || CFLAG:TARGET:903 >= 25)
		RETURN 0
	SIF CFLAG:ARG:育儿人数 >= 1 && CFLAG:ARG:育儿人数 <= 30
		RETURN 0
	SIF ABL:2 < 3
		RETURN 0
	SIF TFLAG:63
		RETURN 0
	SIF TEQUIP:50 >= 0 || TEQUIP:51 >= 0
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0
	SIF TEQUIP:ARG:体位
		RETURN 0
	SIF PALAM:ARG:润滑 < PALAMLV:3
		RETURN 0
	SIF TEQUIP:ARG:肛用振动棒
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
