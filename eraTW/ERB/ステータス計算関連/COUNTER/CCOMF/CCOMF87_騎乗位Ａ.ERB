		CALL TOUCH_RESET_T(ARG)
	CALL TOUCH_SET(SET_FROM_A,1,ARG)
	TFLAG:MASTERのＰ插入中 = 1
	TFLAG:MASTERのＣ使用中 ++
	
	;ソース计算および内部处理系统
	;=============================
	SIF TEQUIP:PLAYER:0
		CALL DATUI_BOTTOM(ARG,0)
	CALL DATUI_FOR_INSERT(ARG)
	TCVAR:ARG:Ａ丧失发生 = 1
	TCVAR:PLAYER:童贞丧失 = 1
	SOURCE:ARG:液体 += 100
	DOWNBASE:ARG:体力 += 60
	DOWNBASE:ARG:气力 += 150
	SOURCE:ARG:快Ａ = 500
	SOURCE:ARG:情爱 = 150
	SOURCE:ARG:性行动 = 500
	SOURCE:ARG:达成 = 300
	SOURCE:ARG:苦痛 = 400
	SOURCE:ARG:露出 = 60
	SOURCE:ARG:征服 += 700
	SOURCE:ARG:强迫 += 200
	SOURCE:ARG:施虐 += 300
	TCVAR:116 = PLAYER
	CALL PAIN_CHECK_A(ARG)
	CALL LOST_VIRGIN(ARG)
	;射精部位（1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
	CALL 射精对象登录(PLAYER, ARG, 2)
	TEQUIP:ARG:体位 = 3
