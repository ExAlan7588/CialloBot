;*********************************************************************************************
;Counter指令：尻ズリ
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF78(ARG)

	;体势の变更
	;=============================
	
	;ソース计算および内部处理系统
	;=============================
	SOURCE:ARG:诱惑 += 200
	SOURCE:ARG:强迫 += 400
	SOURCE:ARG:征服 += 700
	SOURCE:ARG:快Ｃ += 100
	LOCALS = {PLAYER}/
	CSTR:ARG:10 += LOCALS
	TCVAR:ARG:2 = 8
	;强度
	TCVAR:ARG:4 += 200

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=拥抱 2=接吻 3=胸爱抚 4=肛门爱抚 5=阴蒂爱抚 6=指插入れ 7=掀裙子)
	;=============================
	;CALL Counter插入され继续中处理(ARG)
	SETBIT TCVAR:ARG:26 ,0
	SETBIT TCVAR:ARG:26 ,1
	SETBIT TCVAR:ARG:26 ,2
	SETBIT TCVAR:ARG:26 ,3
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,5
	SETBIT TCVAR:ARG:26 ,6
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE78(ARG)

	SIF !(GETBIT(TALENT:ARG:2, 1))
		RETURN 0
	SIF TFLAG:64
		RETURN 0
	SIF BASE:ARG:勃起 < 500
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0
	SIF TEQUIP:ARG:体位
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER78(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 脱衣强迫

	;实行判定值算出式
	;=============================
	LOCAL = (基本值*10/8) + ABL:ARG:Ｃ感觉 + MAX(EXP:ARG:射精经验 / 15, 8)

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
