;*********************************************************************************************
;Counter指令：接吻
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF30(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_SET(SET_FROM_M,4,ARG)
	TFLAG:MASTERの口使用中 ++
	
	;ソース计算および内部处理系统
	;=============================
	SOURCE:ARG:诱惑 += 250
	SOURCE:ARG:征服 += 100
	SOURCE:ARG:快Ｍ += 100
	SOURCE:PLAYER:快Ｍ += 100
	SOURCE:ARG:侍奉 += 50
	EXP:ARG:接吻经验 ++
	EXP:MASTER:接吻经验 ++

	;マ斯塔Counter制御
	;=============================
	CALL Counter插入され继续中处理(ARG)

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE30(ARG)

	SIF TFLAG:60
		RETURN 0
	SIF TEQUIP:MASTER:体位 == 2
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER30(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 着衣

	;实行判定值算出式
	;=============================
	LOCAL = (基本值 + CFLAG:ARG:积极性) * !TALENT:ARG:无接吻经验

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
