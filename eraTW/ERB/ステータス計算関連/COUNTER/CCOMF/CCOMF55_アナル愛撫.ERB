		RETURN 0
	SIF TFLAG:64
		RETURN 0
	SIF ABL:ARG:指 < 1
		RETURN 0
	SIF TEQUIP:MASTER:51 >= 0
		RETURN 0
	SIF PALAM:MASTER:润滑 < PALAMLV:2
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER55(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 脱衣爱抚

	;实行判定值算出式
	;=============================
	LOCAL = (基本值 + 2 * TALENT:ARG:灵活手指 + ABL:ARG:指) * SIGN(EXP:ARG:Ａ经验)

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
