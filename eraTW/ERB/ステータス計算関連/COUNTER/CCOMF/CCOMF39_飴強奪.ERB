;*********************************************************************************************
;Counter指令：糖强夺
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF39(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_SET(SET_FROM_M,4,ARG)

	;ソース计算および内部处理系统
	;=============================
	SOURCE:ARG:性行动 += 100
	SOURCE:ARG:诱惑 += 150
	SOURCE:ARG:强迫 += 150
	SOURCE:ARG:征服 += 200
	SOURCE:PLAYER:快Ｍ += 150
	EXP:ARG:接吻经验 ++
	EXP:ARG:口淫经验 ++
	EXP:MASTER:接吻经验 ++
	EXP:MASTER:口淫经验 ++
	TCVAR:MASTER:糖 = 0
	DOWNBASE:气力 -= 50

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=拥抱 2=接吻 3=胸爱抚 4=肛门爱抚 5=阴蒂爱抚 6=指插入れ 7=掀裙子)
	;=============================
	CALL Counter插入され继续中处理(ARG)

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE39(ARG)

	;どういうことなのかわからないので除外しておく
	SIF TFLAG:60
		RETURN 0
	SIF TEQUIP:MASTER:体位 == 2
		RETURN 0
	RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER39(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 着衣

	;实行判定值算出式
	;=============================
	LOCAL = (基本值 + CFLAG:ARG:积极性 + CFLAG:ARG:攻) * !TALENT:ARG:无接吻经验

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
