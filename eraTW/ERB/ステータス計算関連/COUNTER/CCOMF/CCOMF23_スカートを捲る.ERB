;*********************************************************************************************
;Counter指令：体を摺り寄せる
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF23(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース计算および内部处理系统
	;=============================
	CALLF ONCE("裙子めくられ",0,ARG)
	SOURCE:ARG:侮辱 += 300
	SOURCE:ARG:挑衅 += 200

	;マ斯塔Counter制御
	;=============================
	;无

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE23(ARG)

	;服装制限
	SIF !(EQUIP:PLAYER:裙子 || EQUIP:PLAYER:连衣裙 || EQUIP:PLAYER:和服)
	RETURN 0
	SIF TEQUIP:PLAYER:0 > 3
		RETURN 0
	SIF !EQUIP:PLAYER:0
		RETURN 0
	SIF !ONCE("裙子めくられ",1,ARG)
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER23(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = ソフト

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + CFLAG:ARG:积极性 + CFLAG:ARG:攻 - CFLAG:ARG:害羞

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
