;*********************************************************************************************
;Counter指令：耳元に息を吹きかける
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF24(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース计算および内部处理系统
	;=============================
	SOURCE:ARG:诱惑 += 50
	SOURCE:ARG:挑衅 += 100

	;マ斯塔Counter制御
	;=============================
	;无

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE24(ARG)

	;会话中はダメ
	SIF SELECTCOM == 300
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER24(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = ソフト

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + CFLAG:ARG:诱惑 + CFLAG:ARG:积极性

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
