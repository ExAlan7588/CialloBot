	;体势の变更
	;=============================
	CALL TOUCH_SET(SET_FROM_V,1,ARG)
	TFLAG:MASTERのＰ插入中 = 1
	TFLAG:MASTERのＣ使用中 ++
	
	;ソース计算および内部处理系统
	;=============================
	DOWNBASE:MASTER:体力 += 40
	DOWNBASE:MASTER:气力 += 80
	TCVAR:PLAYER:4 += 1000
	SOURCE:ARG:快Ｖ += 300
	SOURCE:ARG:情爱 += 200
	SOURCE:ARG:性行动 += 500
	SOURCE:ARG:达成 += 200
	SOURCE:ARG:征服 += 500
	SOURCE:ARG:施虐 += 100
	TCVAR:116 = PLAYER
	TCVAR:ARG:嗜虐フラグ = 1
	CALL PAIN_CHECK_V(ARG)
	;射精部位（1=膣内 2=肛门 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛门侍奉 10=道具 11=触手 12=Ａ调教 13=Ｖ调教）
	CALL 射精对象登录(PLAYER, ARG, 1)
	EXP:ARG:Ｖ性交经验 ++
	EXP:PLAYER:插入经验 ++
	EXP:ARG:爱情经验 += TALENT:ARG:恋慕
	TEQUIP:ARG:50 = MASTER
	;侍奉FLAG
	TCVAR:ARG:108 = 1

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=拥抱 2=接吻 3=胸爱抚 4=肛门爱抚 5=阴蒂爱抚 6=指插入れ 7=掀裙子)
	;=============================
	;CALL Counter插入され继续中处理(ARG)
	SETBIT TCVAR:ARG:26 ,6
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE88(ARG)

	SIF !(TALENT:ARG:2 & 1)
		RETURN 0
	SIF !(TALENT:PLAYER:2 & 2)
		RETURN 0
	SIF BASE:MASTER:勃起 < 1000
		RETURN 0
	SIF TEQUIP:ARG:50 < 0
		RETURN 0
	SIF !(TEQUIP:50 >= 0 || TEQUIP:51 >= 0)
		RETURN 0
	SIF TCVAR:ARG:100 != PLAYER
		RETURN 0
	SIF ABL:ARG:腰 < 2
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER88(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 性交

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + (ABL:ARG:侍奉精神 + ABL:ARG:Ｖ感觉) * 2
	
	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
