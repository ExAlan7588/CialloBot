;*********************************************************************************************
;Counter指令：ディープキス
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF60(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_SET(SET_FROM_M,4,ARG)
	TFLAG:MASTERの口使用中 ++
	
	;ソース计算および内部处理系统
	;=============================
	SOURCE:ARG:性行动 += 100
	SOURCE:ARG:诱惑 += 150
	SOURCE:ARG:侍奉 += 150
	SOURCE:ARG:征服 += 200
	SOURCE:ARG:快Ｍ += 300
	SOURCE:PLAYER:快Ｍ += 300
	EXP:ARG:接吻经验 ++
	EXP:ARG:口淫经验 ++
	EXP:PLAYER:接吻经验 ++
	EXP:ARG:口淫经验 ++

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=拥抱 2=接吻 3=胸爱抚 4=肛门爱抚 5=阴蒂爱抚 6=指插入れ 7=掀裙子)
	;=============================
	CALL Counter插入され继续中处理(ARG)

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE60(ARG)

	SIF TFLAG:60
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER60(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = 脱衣爱抚

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + (2 * TALENT:ARG:舌头灵活 + ABL:ARG:舌) * !TALENT:ARG:无接吻经验

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
