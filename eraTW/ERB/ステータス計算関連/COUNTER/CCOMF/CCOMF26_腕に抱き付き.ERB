;*********************************************************************************************
;Counter指令：腕に抱き付き
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF26(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース计算および内部处理系统
	;=============================
	SOURCE:ARG:诱惑 += 50
	SOURCE:ARG:挑衅 += 200
	SOURCE:ARG:情爱 += 100

	;マ斯塔Counter制御
	;=============================
	;无

RETURN 1

