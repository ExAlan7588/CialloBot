;*********************************************************************************************
;Counter指令：尻ズリ
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF28(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース计算および内部处理系统
	;=============================
	SOURCE:ARG:诱惑 += 200
	SOURCE:ARG:强迫 += 200
	SOURCE:ARG:征服 += 400
	SOURCE:ARG:快Ｃ += 50
	TCVAR:ARG:嗜虐フラグ = 1

	;マ斯塔Counter制御
	;=============================
	;无

RETURN 1

;*********************************************************************************************
;Counter实行可否出力函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ABLE28(ARG)

	SIF !(TALENT:ARG:2 & 2)
		RETURN 0
	SIF TFLAG:64
		RETURN 0
	SIF BASE:ARG:勃起 < 500
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER28(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = ソフト

	;实行判定值算出式
	;=============================
	LOCAL = (基本值*10/8) + CFLAG:ARG:积极性 + CFLAG:ARG:攻 - CFLAG:ARG:害羞 + MAX(EXP:ARG:射精经验 / 15, 8)

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
