;*********************************************************************************************
;Counter指令：色っぽい仕草
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOMF20(ARG)

	;体势の变更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース计算および内部处理系统
	;=============================
	SOURCE:ARG:诱惑 += 150
	SOURCE:ARG:挑衅 += 50

	;マ斯塔Counter制御
	;=============================
	;无

RETURN 1

