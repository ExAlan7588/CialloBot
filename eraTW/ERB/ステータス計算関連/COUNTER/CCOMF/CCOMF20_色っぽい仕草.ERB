@CCOM_ABLE20(ARG)



RETURN 1

;*********************************************************************************************
;Counter实行判定值算出函数
;ARG = 对象の角色番号
;*********************************************************************************************
@CCOM_ORDER20(指令番号, ARG, 基本值)
#DIM 指令番号
#DIM 基本值
#DIMS Counterタイプ

	;Counterタイプ设定
	;=============================
	Counterタイプ = ソフト

	;实行判定值算出式
	;=============================
	LOCAL = 基本值 + CFLAG:ARG:诱惑 - CFLAG:ARG:害羞

	;Counterタイプ别计算处理 实质实行判定处理を含む
	;=============================
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
