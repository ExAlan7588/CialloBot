;MASTERのVへの苦痛
@PAIN_CHECK_V_MASTER(ARG)
;EXP:Ｖ经验をみる（处女の反感は别途处理済みなので省略）
IF EXP:PLAYER:Ｖ经验 < EXPLV:1
	TIMES SOURCE:ARG:施虐 , 1.50
ELSEIF EXP:PLAYER:Ｖ经验 < EXPLV:2
	TIMES SOURCE:ARG:施虐 , 0.80
ELSEIF EXP:PLAYER:Ｖ经验 < EXPLV:3
	TIMES SOURCE:ARG:施虐 , 0.40
ELSEIF EXP:PLAYER:Ｖ经验 < EXPLV:4
	TIMES SOURCE:ARG:施虐 , 0.10
ELSEIF EXP:PLAYER:Ｖ经验 < EXPLV:5
	TIMES SOURCE:ARG:施虐 , 0.00
ELSEIF EXP:PLAYER:Ｖ经验 >= EXPLV:5
	TIMES SOURCE:ARG:施虐 , 0.00
ENDIF

