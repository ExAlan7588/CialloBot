;Counter下半身脱衣
;参数0	参照する角色番号
;参数1	0=全部脱がす 
;		1=内衣だけ脱がす 裤子を履いていた场合は全部脱がす 内衣を履いていなかった场合も全部脱がす
;		2=外套だけ脱がす 外套を着ていない场合は全部脱がす
@DATUI_BOTTOM(ARG, ARG:1)

ARG:1 = DATUI_BOTTOM_OPTIMIZE(ARG, ARG:1)

SELECTCASE ARG:1
	;全部脱がす
	CASE 0
		TCVAR:ARG:22 = 1
	;内衣だけ脱がす
	CASE 1
		TCVAR:ARG:22 = 2
	;外套だけ脱がす
	CASE 2
		TCVAR:ARG:22 = 3
ENDSELECT

@DATUI_BOTTOM_T(ARG, ARG:1)

ARG:1 = DATUI_BOTTOM_OPTIMIZE(ARG, ARG:1)

IF !TEQUIP:ARG:体位
	SELECTCASE ARG:1
		;全部脱がす
		CASE 0
			TCVAR:ARG:23 = 1
		;内衣だけ脱がす
		CASE 1
			TCVAR:ARG:23 = 2
		;外套だけ脱がす
		CASE 2
			TCVAR:ARG:23 = 3
	ENDSELECT
ENDIF

;すでに脱いでいた场合の修正
;メッセージ内の分岐を减らしたい
@DATUI_BOTTOM_OPTIMIZE(ARG, ARG:1)
#FUNCTION
SELECTCASE ARG:1
	;内衣だけ脱がす
	CASE 1	
		;裤子を履いていた场合は全部脱がす
		IF TEQUIP:ARG:0 & 8
			ARG:1 = 0
		;内衣を履いていない场合は全部脱がす
		ELSEIF (TEQUIP:ARG:0 & 6) == 0
			ARG:1 = 0
		ENDIF
	;外套だけ脱がす
	CASE 2
		;外套を着ていない场合は全部脱がす
		SIF (TEQUIP:ARG:0 & 9) == 0
			ARG:1 = 0
ENDSELECT
RETURNF ARG:1

