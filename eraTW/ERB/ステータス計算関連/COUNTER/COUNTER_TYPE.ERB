@COUNTER_TYPE(ARGS,ARG)
;TFLAG:102 =1で日常、=2で通常诶嘿嘿、=3で相手からの推倒
#FUNCTION
VARSET LOCAL
SELECTCASE ARGS
	CASE "ソフト"
		SIF TFLAG:102 == 1 && TCVAR:ARG:亲热 >= 2
			LOCAL = 100
	CASE "ベリーソフト"
		IF TFLAG:102 == 1
			LOCAL = 100
			SIF !TALENT:ARG:恋慕 && !TALENT:ARG:思慕
				LOCAL -= 50
		ENDIF
	CASE "コミュ"
		SIF TFLAG:102 == 1
			LOCAL = 100
	CASE "着衣"
		IF TFLAG:102 == 3 && !TFLAG:抱住模式
			LOCAL = 100
			;脱衣により着衣性骚扰は制限される
			SIF TEQUIP:PLAYER:0 < 2
				LOCAL -= 10
			SIF TEQUIP:PLAYER:1 < 1
				LOCAL -= 10
		ENDIF
	CASE "脱衣爱抚"
		IF TFLAG:102 == 3 && !TFLAG:抱住模式
			LOCAL = 80
			IF BASE:ARG:情绪 > 900
				LOCAL += 10
			ELSEIF BASE:ARG:情绪 > 500
				LOCAL += 5
			ENDIF
			IF BASE:ARG:理性 <= 0
				LOCAL += 15
			ELSEIF BASE:ARG:理性 <= 500
				LOCAL += 10
			ENDIF
			;素質でガチ性骚扰率が变动
			SIF TALENT:ARG:风骚
				LOCAL += 5
			SIF TALENT:ARG:性的兴趣 > 0
				LOCAL += 3
			SIF TALENT:ARG:贞操 < 0
				LOCAL += 3
			SIF TALENT:ARG:羞耻心 < 0
				LOCAL += 3
			SIF TALENT:ARG:献身的
				LOCAL += 3
			SIF TALENT:ARG:自制心
				LOCAL -= 3
			SIF TALENT:ARG:性的兴趣 < 0
				LOCAL -= 5
			SIF TALENT:ARG:难以越过的底线
				LOCAL -= 5
			SIF TALENT:ARG:贞操 > 0
				LOCAL -= 5
			SIF TALENT:ARG:羞耻心 > 0
				LOCAL -= 3
			LOCAL += 2 * (CFLAG:ARG:攻 + CFLAG:ARG:积极性)
		ENDIF
	CASE "脱衣强迫"
		IF TFLAG:102 == 3 && !TFLAG:抱住模式
			LOCAL = COUNTER_TYPE("脱衣爱抚",ARG)
			IF LOCAL
				SIF TALENT:ARG:风骚
					LOCAL += 5
				SIF TALENT:ARG:施虐狂
					LOCAL += 2
				SIF TALENT:ARG:淫乱
					LOCAL += 5
				SIF TALENT:ARG:自尊心 > 0
					LOCAL += 3
				SIF TALENT:ARG:羞耻心 < 0
					LOCAL += 3
				SIF TALENT:ARG:性的兴趣 > 0
					LOCAL += 3
				SIF TALENT:ARG:献身的
					LOCAL -= 3
				SIF TALENT:ARG:难以越过的底线
					LOCAL -= 5
				SIF TALENT:ARG:自制心
					LOCAL -= 3
				SIF TALENT:ARG:羞耻心 > 0
					LOCAL -= 3
				SIF TALENT:ARG:回应 < 0
					LOCAL -= 3
				SIF TALENT:ARG:胆量 < 0
					LOCAL -= 3
				LOCAL += 2 * (CFLAG:ARG:诱惑 - CFLAG:ARG:积极性)
			ENDIF
			;女同士だと概率低下
			IF (TALENT:MASTER:性别 & 1) && (TALENT:ARG:性别 & 1)
				IF TALENT:ARG:性别 & 2
					LOCAL = LOCAL * 3 / 5
				ELSE
					LOCAL = LOCAL * 2 / 5
				ENDIF
			ENDIF
		ENDIF
	CASE "性交", "责め"
		IF TFLAG:102 == 3 && !TFLAG:抱住模式
			LOCAL = COUNTER_TYPE("脱衣爱抚",ARG)
			IF LOCAL
				SIF TALENT:ARG:风骚
					LOCAL += 5
				SIF TALENT:ARG:炮友
					LOCAL += 5
				SIF TALENT:ARG:献身的 && TALENT:ARG:恋慕
					LOCAL += 3
				IF TALENT:ARG:恋慕
					IF TALENT:ARG:恋人
						LOCAL += 5
					ELSE
						LOCAL += 3
					ENDIF
				ENDIF
				SIF TALENT:ARG:难以越过的底线
					LOCAL -= 5
				SIF TALENT:ARG:自制心
					LOCAL -= 3
				LOCAL += 2 * (CFLAG:ARG:积极性 + CFLAG:ARG:攻)
				SIF TALENT:MASTER:处女
					LOCAL -= 5
				SIF TALENT:ARG:处女 == 1 && !TALENT:ARG:恋慕 && !TALENT:ARG:风骚
					LOCAL = 0
				SIF TALENT:ARG:无知 && !TALENT:ARG:风骚
					LOCAL = 0
			ENDIF
		ENDIF
	CASE "おねだり"
		IF TFLAG:102 == 3 && GETPALAMLV(PALAM:ARG:情欲,10) > 3 && !TFLAG:抱住模式
			LOCAL = GETPALAMLV(PALAM:ARG:情欲,10)
			IF LOCAL
				SIF TALENT:ARG:风骚
					LOCAL:1 += 5
				SIF TALENT:ARG:炮友
					LOCAL:1 += 5
				SIF TALENT:ARG:自尊心 > 0
					LOCAL:1 -= 3
				SIF TALENT:ARG:羞耻心 < 0
					LOCAL:1 += 3
				SIF TALENT:ARG:性的兴趣 > 0
					LOCAL:1 += 3
				SIF TALENT:ARG:难以越过的底线
					LOCAL:1 -= 5
				SIF TALENT:ARG:自制心
					LOCAL:1 -= 3
				SIF TALENT:ARG:羞耻心 > 0
					LOCAL:1 -= 3
				SIF TALENT:ARG:回应 < 0
					LOCAL:1 -= 3
				SIF TALENT:ARG:胆量 < 0
					LOCAL:1 -= 3
				SIF TCVAR:ARG:媚药
					LOCAL:1+= 2
				SIF TCVAR:ARG:发情
					LOCAL:1+= 2
				SIF IsInsenceValid(ARG)
					LOCAL:1+= 2
				IF TALENT:ARG:处女
					LOCAL:1 -= 7
					SIF TALENT:ARG:贞操 > 0
						LOCAL:1 -= 5
				ENDIF
				LOCAL:1 += CFLAG:ARG:诱惑 * 2 - CFLAG:ARG:积极性 - CFLAG:ARG:害羞 + 12
				LOCAL:1 = MAX(LOCAL:1, 1)
				LOCAL = LOCAL * LOCAL:1
				SIF TALENT:ARG:无知 && !TALENT:ARG:风骚 && TALENT:ARG:处女
					LOCAL = 0
			ENDIF
		ENDIF
	;CASE "插入中"
	;	SIF TFLAG:102 == 3 && (TEQUIP:ARG:50 >= 0 || TEQUIP:ARG:51 >= 0) && !TFLAG:抱住模式
	;		LOCAL = 999
	CASE "抱きつき"
		IF TFLAG:102 == 3 && TFLAG:抱住模式
			LOCAL = 100
		ENDIF
ENDSELECT
RETURNF MAX(LOCAL, 0)

@SETTING_PERSONALITY(ARG)
CFLAG:ARG:害羞 = TALENT:ARG:喜欢引人注目 + TALENT:ARG:自己爱 - TALENT:ARG:自制心 - TALENT:ARG:贞操 - 2 * TALENT:ARG:羞耻心
CFLAG:ARG:诱惑 = TALENT:ARG:魅力 + TALENT:ARG:魅惑 + TALENT:ARG:谜之魅力 + TALENT:ARG:胸围 + TALENT:ARG:体型 - TALENT:ARG:贞操 + TALENT:ARG:小恶魔 - TALENT:ARG:幼稚+ 3 * FLAG:甲斐性无
CFLAG:ARG:积极性 = TALENT:ARG:胆量 + TALENT:ARG:开朗／阴郁 - TALENT:ARG:冷漠 - TALENT:ARG:感情缺乏 + TALENT:ARG:性的兴趣 - TALENT:ARG:难以越过的底线 + TALENT:ARG:献身的
CFLAG:ARG:攻 = TALENT:ARG:回应 + TALENT:ARG:自尊心 + TALENT:ARG:献身的 + 2 * (TALENT:ARG:施虐狂 - TALENT:ARG:受虐狂) + 3 * FLAG:甲斐性无
SIF !CFLAG:ARG:性格倾向
	CFLAG:ARG:性格倾向 = 素質计算(ARG)