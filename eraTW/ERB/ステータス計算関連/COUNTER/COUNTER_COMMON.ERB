	SOURCE:PLAYER:液体 += 100
	SOURCE:ARG:施虐 += 400
	SOURCE:ARG:强迫 += 400
	SOURCE:PLAYER:快Ａ += 500
	CALL PAIN_CHECK_A_MASTER(ARG)
	LOCALS = {ARG}/
	CSTR:PLAYER:10 += LOCALS
	TCVAR:PLAYER:2 = 12
	TCVAR:PLAYER:4 += 125
	LOCALS = {PLAYER}/
	CSTR:ARG:10 += LOCALS
	TCVAR:ARG:2 = 2
	TCVAR:ARG:4 += 400
	STAIN:ARG:2 |= STAIN:PLAYER:6
	STAIN:PLAYER:6 |= STAIN:ARG:2
	EXP:PLAYER:Ａ性交经验 ++
	TCVAR:ARG:嗜虐フラグ = 1
ENDIF
