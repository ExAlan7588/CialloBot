@SOURCE_不洁(ARG)
VARSET LOCAL
LOCAL = SOURCE:ARG:不洁

;ABL:顺从をみる
SELECTCASE ABL:ARG:顺从
	CASE 0
		TIMES LOCAL , 1.50
	CASE 1 TO 3
		TIMES LOCAL , 1.30
	CASE 4 TO 6
		TIMES LOCAL , 1.00
	CASE 7 TO 9
		TIMES LOCAL , 0.75
	CASE 10 TO 12
		TIMES LOCAL , 0.50
	CASE 13 TO 15
		TIMES LOCAL , 0.25
	CASEELSE
		TIMES LOCAL , 0.10
ENDSELECT

SIF FLAG:催眠强度 > 0
	LOCAL = LOCAL * (100 - FLAG:催眠强度) / 100
SIF TALENT:反抗抑制
	TIMES LOCAL , 0.50

CUP:ARG:不快 += LOCAL

