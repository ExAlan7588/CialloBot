@射精绝顶表记(ARG)
#DIM Ｃ绝顶回数
#DIM Ｖ绝顶回数
#DIM Ａ绝顶回数
#DIM Ｂ绝顶回数
#DIM Ｍ绝顶回数
#DIM 同时绝顶补正
#DIM 改行判定
#DIM 接续判定
#DIMS 名前表记

IF ARG == MASTER
	名前表记 = 
ELSE
	名前表记 = (%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%)
ENDIF

;●---绝顶の表记---●
IF NOWEX:ARG:五重绝顶
	同时绝顶补正 = 16
ELSEIF NOWEX:ARG:四重绝顶
	同时绝顶补正 = 8
ELSEIF NOWEX:ARG:三重绝顶
	同时绝顶补正 = 4
ELSEIF NOWEX:ARG:二重绝顶
	同时绝顶补正 = 2
ELSE
	同时绝顶补正 = 1
ENDIF

Ｃ绝顶回数 = NOWEX:ARG:Ｃ绝顶 / 同时绝顶补正
Ｖ绝顶回数 = NOWEX:ARG:Ｖ绝顶 / 同时绝顶补正
Ａ绝顶回数 = NOWEX:ARG:Ａ绝顶 / 同时绝顶补正
Ｂ绝顶回数 = NOWEX:ARG:Ｂ绝顶 / 同时绝顶补正
Ｍ绝顶回数 = NOWEX:ARG:Ｍ绝顶 / 同时绝顶补正

SETCOLOR C_PINK
改行判定 = 0
LOCALS:0 = 
LOCALS:1 = 
LOCALS:2 = 
IF Ｃ绝顶回数 > 2
	LOCALS:2 += "Ｃ"
ELSEIF Ｃ绝顶回数 > 1
	LOCALS:1 += "Ｃ"
ELSEIF Ｃ绝顶回数 > 0
	LOCALS:0 += "Ｃ"
ENDIF
IF Ｖ绝顶回数 > 2
	LOCALS:2 += "Ｖ"
ELSEIF Ｖ绝顶回数 > 1
	LOCALS:1 += "Ｖ"
ELSEIF Ｖ绝顶回数 > 0
	LOCALS:0 += "Ｖ"
ENDIF
IF Ａ绝顶回数 > 2
	LOCALS:2 += "Ａ"
ELSEIF Ａ绝顶回数 > 1
	LOCALS:1 += "Ａ"
ELSEIF Ａ绝顶回数 > 0
	LOCALS:0 += "Ａ"
ENDIF
IF Ｂ绝顶回数 > 2
	LOCALS:2 += "Ｂ"
ELSEIF Ｂ绝顶回数 > 1
	LOCALS:1 += "Ｂ"
ELSEIF Ｂ绝顶回数 > 0
	LOCALS:0 += "Ｂ"
ENDIF
IF Ｍ绝顶回数 > 2
	LOCALS:2 += "Ｍ"
ELSEIF Ｍ绝顶回数 > 1
	LOCALS:1 += "Ｍ"
ELSEIF Ｍ绝顶回数 > 0
	LOCALS:0 += "Ｍ"
ENDIF
IF LOCALS:0 != "" || LOCALS:1 != "" || LOCALS:2 != ""
	PRINT 《
	接续判定 = 0
	IF LOCALS:2 != ""
		PRINTFORM %LOCALS:2%超强绝顶
		接续判定 = 1
	ENDIF
	IF LOCALS:1 != ""
		IF 接续判定
			PRINT /
		ENDIF
		PRINTFORM %LOCALS:1%强绝顶
		接续判定 = 1
	ENDIF
	IF LOCALS:0 != ""
		IF 接续判定
			PRINT /
		ENDIF
		PRINTFORM %LOCALS:0%绝顶
	ENDIF
	PRINT 》
	改行判定 = 1
ENDIF
SIF SYNCED_ORGASM(ARG) && !FLAG:70
	CALL COLORMESSAGE(@"＜同时绝顶＞（好感度・ソース入手量增加）",C_YELLOW)

;●---射精の表记---●
SETCOLOR C_CREAM
IF NOWEX:ARG:射精
	PRINT 【
	SELECTCASE TCVAR:ARG:12
		CASE 1
			PRINT 膣内
		CASE 2
			PRINT 肛内
		CASE 4
			PRINT 口内
	CASE 5
			PRINT 乳内
		CASE 12
			PRINT Ａ玩弄
		CASE 13
			PRINT 膣玩弄
	ENDSELECT
	SIF NOWEX:ARG:射精 > 2
		PRINT 超
	SIF NOWEX:ARG:射精 > 1
		PRINT 大量
	SIF TALENT:ARG:浓厚精液
		PRINT 浓厚
	PRINTFORML 射精】{NOWEX:ARG:射精量}ml
	改行判定 = 1
ENDIF

RESETCOLOR

SIF 改行判定
	PRINTFORML %名前表记%

IF ARG == MASTER
	FOR LOCAL,1,CHARANUM
		CALL ADDICTION_SHOW(LOCAL, "膣内射精补正", "膣射中毒")
		CALL ADDICTION_SHOW(LOCAL, "肛内射精补正", "肛射中毒")
		CALL ADDICTION_SHOW(LOCAL, "口内射精补正", "精液中毒")
	NEXT
ENDIF

