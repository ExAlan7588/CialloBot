			TIMES CUP:ARG:习得 , 1.30
		CASE 2
			TIMES CUP:ARG:情欲 , 1.20
			TIMES CUP:ARG:习得 , 1.20
		CASE 1
			TIMES CUP:ARG:情欲 , 1.10
			TIMES CUP:ARG:习得 , 1.10
	ENDSELECT
ELSE
	IF MARK:ARG:快乐刻印 == 3
		TIMES CUP:ARG:情欲 , 1.35
		TIMES CUP:ARG:习得 , 1.35
	ELSEIF MARK:ARG:快乐刻印 == 2
		TIMES CUP:ARG:情欲 , 1.25
		TIMES CUP:ARG:习得 , 1.25
	ELSEIF MARK:ARG:快乐刻印 == 1
		TIMES CUP:ARG:情欲 , 1.15
		TIMES CUP:ARG:习得 , 1.15
	ENDIF
