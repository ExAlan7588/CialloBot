	CUP:ARG:恭顺 /= 2
	CUP:ARG:屈服 /= 2
	CUP:ARG:习得 /= 2
	CUP:ARG:羞耻 /= 2
	CUP:ARG:恐怖 /= 2
	CUP:ARG:苦痛 /= 2
	IF !FLAG:70 && !CFLAG:恶作剧
		DOWNBASE:ARG:体力 *= 2
		SIF ARG == TARGET
			DOWNBASE:ARG:体力 += 80
	ENDIF
ENDIF
;-------------------------------------------------
;对方主导
;-------------------------------------------------
IF ARG != MASTER && CFLAG:ARG:诶嘿嘿 == 2
	BASE:MASTER:体力 -= (DOWNBASE:ARG:体力 / 3) * 2
	BASE:MASTER:气力 -= (DOWNBASE:ARG:气力 / 3) * 2
	DOWNBASE:ARG:体力 = DOWNBASE:ARG:体力 / 3
	DOWNBASE:ARG:气力 = DOWNBASE:ARG:气力 / 3
ENDIF
;-------------------------------------------------
;随便
;-------------------------------------------------
IF TCVAR:ARG:随便
	TIMES CUP:ARG:恭顺 , 0.10
	TIMES CUP:ARG:屈服 , 0.10
	TIMES CUP:ARG:羞耻 , 0.50
	TIMES CUP:ARG:优越 , 1.50
	EXP:ARG:嗜虐快乐经验 ++
	DOWNBASE:MASTER:体力 += ABL:ARG:施虐属性 * 5 + 10
	DOWNBASE:MASTER:气力 += ABL:ARG:施虐属性 * 5 + 20
ENDIF
;-------------------------------------------------
;苦痛からくる体力・气力の减少
;-------------------------------------------------
LOCAL = CUP:ARG:苦痛 / 20
;ABL:受虐属性をみる
SELECTCASE ABL:ARG:受虐属性
	CASE 0
		TIMES LOCAL , 1.00
	CASE 1
		TIMES LOCAL , 0.95
	CASE 2
		TIMES LOCAL , 0.90
	CASE 3
		TIMES LOCAL , 0.80
	CASE 4
		TIMES LOCAL , 0.65
	CASEELSE
		TIMES LOCAL , 0.50
ENDSELECT
;痛觉
LOCAL = LOCAL * (10 + TALENT:ARG:痛觉 * 2) / 10

DOWNBASE:ARG:体力 += LOCAL
DOWNBASE:ARG:气力 += LOCAL

;-------------------------------------------------
;烙印系统
;-------------------------------------------------
IF TATTO_SYSTEM && exist_st:ARG:0
    ; 主纹
    SELECTCASE st_m_id:ARG:0
        CASE 5
            TIMES CUP:ARG:情欲, 1.50
        ; 在这里添加其他分支（如果加入更多主纹类型）
    ENDSELECT
    ; 辅纹
    ; 辅纹ID == 4, 5 对应情欲、屈服
    IF st_a_lv:ARG:4 > 0
        CUP:ARG:情欲 = CUP:ARG:情欲 * (100 + st_a_lv:ARG:4 * 10) / 100
    ENDIF
    IF st_a_lv:ARG:5 > 0
        CUP:ARG:屈服 = CUP:ARG:屈服 * (100 + st_a_lv:ARG:5 * 10) / 100
    ENDIF
ENDIF


;FileName_SOURCE1.ERB ------------------------------ Rev1.00
;体力、气力の减少处理
;CALL		USER
;ARG		角色NO
;RETURN		VOID
;COMMENT	
;-----------------------------------------------------------
@SOURCE_DOWNBASE(ARG)
#DIM 酒气减少
IF ARG != NO:MASTER && TALENT:ARG:恋人 && CFLAG:ARG:诶嘿嘿
	DOWNBASE:ARG:体力 = (DOWNBASE:ARG:体力 / 10) * 7
	DOWNBASE:ARG:气力 = (DOWNBASE:ARG:气力 / 10) * 8
ENDIF


BASE:ARG:体力 = LIMIT(BASE:ARG:体力 - DOWNBASE:ARG:体力,0,MAXBASE:ARG:体力)
BASE:ARG:气力 = LIMIT(BASE:ARG:气力 - DOWNBASE:ARG:气力,0,MAXBASE:ARG:气力)
酒气减少 = 0
