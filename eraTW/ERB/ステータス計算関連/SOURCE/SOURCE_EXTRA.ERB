	CUP:ARG:情欲 *= RELATION:ARG:R
	CUP:ARG:情欲 /= 100
	CUP:ARG:屈服 *= RELATION:ARG:R
	CUP:ARG:屈服 /= 100
	CUP:ARG:羞耻 *= RELATION:ARG:R
	CUP:ARG:羞耻 /= 100
	CUP:ARG:反感 *= 100
	CUP:ARG:反感 /= RELATION:ARG:R
	CUP:ARG:不快 *= 100
	CUP:ARG:不快 /= RELATION:ARG:R
	CUP:ARG:抑郁 *= 100
	CUP:ARG:抑郁 /= RELATION:ARG:R
