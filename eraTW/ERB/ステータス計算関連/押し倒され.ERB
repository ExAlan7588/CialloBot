;复数被逆推の判定
@复数被逆推()
#FUNCTION
#DIM 判定值
#DIM 角色别判定值
#DIM 相性补正
#DIM NUM_TARGET
#DIM C_ID

判定值 = 0
NUM_TARGET = GET_TARGETNUM()
SIF NUM_TARGET <= 1
	RETURNF 0
FOR LOCAL, 1, NUM_TARGET + 1
	C_ID = TARGET:LOCAL
	SIF CFLAG:C_ID:同室 != 1
		CONTINUE
	SIF ENDURE(C_ID) < 450
		RETURNF 0
	;判定を通ったら角色别判定值に入れる
	角色别判定值 = ENDURE(C_ID)
	DEBUGPRINTFORML 补正前：({C_ID}) {ENDURE(C_ID)}
	;ここから角色别判定值を补正していく
	;百合属性での补正(3未满にはペナルティ)
	SIF ABL:(C_ID):百合属性 == 0
		TIMES 角色别判定值, 0
	SIF ABL:(C_ID):百合属性 == 1
		TIMES 角色别判定值, 0.50
	SIF ABL:(C_ID):百合属性 == 2
		TIMES 角色别判定值, 0.80
	;3以上では(1+0.1*(百合属性 - 3))倍
	SIF ABL:(C_ID):百合属性 >= 3
		角色别判定值 = 角色别判定值 * (100 + 10 * (ABL:(C_ID):百合属性 - 3)) / 100
	DEBUGPRINTFORML 百合属性补正后：({C_ID}) {角色别判定值}
	;百合中毒での补正 (1+0.1*百合中毒)倍
	角色别判定值 = 角色别判定值 * (100 + 10 * ABL:(C_ID):百合中毒) / 100
	DEBUGPRINTFORML 百合中毒补正后：({C_ID}) {角色别判定值}
	
	;相性での补正
	;仲のいい角色がいると一绪にMASTERを推倒やすく(完全に趣味)
	相性补正 = 0
	;同室の角色を探り各角色に对して相性值を见ていく
	FOR LOCAL:1, 1, NUM_TARGET + 1
		SIF CFLAG:(TARGET:(LOCAL:1)):同室 != 1
			CONTINUE
		SIF LOCAL == LOCAL:1
			CONTINUE
		;相性补正 += RELATION:LOCAL:(LOCAL:2)
		;ほんとは上の一文だけで済ませたいんだけど......
		;_Replace.csvのRELATIONの初期值が働かない(泣)
		;なので苦肉の策として0は100とみなす(暴论)
		相性补正 += RELATION:(C_ID):(TARGET:(LOCAL:1))
		SIF RELATION:(C_ID):(TARGET:(LOCAL:1)) == 0
			相性补正 += 100
	NEXT
	;平均值をとる(小数点以下切舍て) 当人を除いた(GET_TARGETNUM() - 1)人で割る
	;0除算注意(无いと思うけど)
	相性补正 /= NUM_TARGET - 1
	角色别判定值 = 角色别判定值 * 相性补正 / 100
	DEBUGPRINTFORML 相性补正后：({(C_ID)}) {角色别判定值}
	;补正后一位角色别判定值を全体の判定值に入れる
	判定值 += 角色别判定值
NEXT
;平均值をとる(小数点以下切舍て)
;0除算がこわいぃ
判定值 /= NUM_TARGET
DEBUGPRINTFORML 判定值：{判定值}
;判定值が最大だとして、概率は「(400+200*同室の人数)分の150」に设定(人数增えると难易度上升)
SIF RAND:(400 + 200 * NUM_TARGET) + 450 <= 判定值
	RETURNF 1
RETURNF 0


