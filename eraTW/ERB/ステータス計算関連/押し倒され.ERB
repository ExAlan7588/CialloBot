		被逆推判定 += 1
	ELSEIF CFLAG:TARGET:害羞 < 0
		被逆推判定 -= 1
	ENDIF
	IF CFLAG:TARGET:诱惑 > 0
		被逆推判定 += 1
	ELSEIF CFLAG:TARGET:诱惑 < 0
		被逆推判定 -= 1
	ENDIF
	IF CFLAG:TARGET:积极性 > 0
		被逆推判定 += 1
	ELSEIF CFLAG:TARGET:积极性 < 0
		被逆推判定 -= 1
	ENDIF
	IF CFLAG:TARGET:攻 > 0
		被逆推判定 += 1
	ELSEIF CFLAG:TARGET:攻 < 0
		被逆推判定 -= 1
	ENDIF
