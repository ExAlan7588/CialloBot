@ENDURE(ARG)
#FUNCTION
;素質により判定变化
LOCAL = CFLAG:ARG:合意判定
LOCAL += (EX:ARG:Ｃ寸止 + EX:ARG:Ｖ寸止 + EX:ARG:Ａ寸止 + EX:ARG:Ｂ寸止 + EX:ARG:Ｍ寸止) * 20
;抱き着くと被逆推率上升
IF SELECTCOM == 311
	LOCAL += 30
	;小心者の勇气には応えてくれやすい
	SIF FLAG:甲斐性无
		LOCAL += 100
ENDIF
LOCAL += TALENT:ARG:性的兴趣 * 20
SIF TALENT:ARG:处女
	LOCAL -= 50
SIF TALENT:ARG:恋慕
	LOCAL = LOCAL + 50
SIF TALENT:ARG:自尊心 > 0
	LOCAL -= 20
SIF CFLAG:ARG:允许无套 == 2
	LOCAL = LOCAL + 50
SIF CFLAG:ARG:强行内射
	LOCAL -= 100
SIF TALENT:ARG:胆量 < 0 || TALENT:ARG:回应 < 0 || TALENT:ARG:冷漠
	LOCAL = LOCAL - 30
SIF TALENT:ARG:羞耻心 > 0
	LOCAL -= 30
SIF TALENT:ARG:羞耻心 < 0
	LOCAL = LOCAL + 20
SIF TALENT:ARG:自制心 
	LOCAL = LOCAL - 20
SIF TALENT:ARG:贞操 < 0 || TALENT:ARG:小恶魔
	LOCAL = LOCAL + 20
SIF TALENT:ARG:贞操 > 0 || TALENT:ARG:难以越过的底线
	LOCAL -= 20
IF !GETBIT(CFLAG:ARG:既成事实, 1) && TALENT:ARG:贞操 > 0
	LOCAL -= 30
	SIF !TALENT:ARG:恋慕 && !TALENT:ARG:炮友
		LOCAL -= 50
ENDIF
SIF OTOKOGIRAI(ARG) && !(IsHeat(ARG) || IsInsenceValid(ARG))
	LOCAL = LOCAL / 2
SIF TALENT:ARG:难以越过的底线 && TALENT:ARG:恋慕
	LOCAL = LOCAL * 12 / 5
SIF MARK:ARG:反抗刻印 == 3
	LOCAL = 0
SIF TFLAG:120 && TFLAG:120 != ARG
	LOCAL = 0
SIF !SHIRAHU(ARG)
	LOCAL = 0
SIF CFLAG:ARG:行动 == 5
	LOCAL = 0
SIF CFLAG:ARG:延迟
	LOCAL = 0
SIF CFLAG:ARG:陪睡中
	LOCAL = 0
SELECTCASE CFLAG:ARG:积攒度
	CASE IS >= 1000
		LOCAL *= 3
	CASE IS >= 800
		LOCAL = LOCAL * 3 / 2
	CASE IS >= 600
		LOCAL = LOCAL * 5 / 4
	CASE IS >= 500
	CASE IS >= 300
		LOCAL /= 2
	CASE IS >= 200
		LOCAL /= 4
	CASE IS >= 100
		LOCAL /= 10
	CASEELSE
		LOCAL = 0
ENDSELECT

;体力に依存して推倒率减少

SELECTCASE BASE:ARG:体力
	CASE IS < 750
		LOCAL = 0
	CASE IS < 1000
		LOCAL /= 2
	CASE IS < 1500
		LOCAL = LOCAL * 3 / 4
	CASEELSE
ENDSELECT

SELECTCASE BASE:ARG:气力
	CASE 0
		LOCAL = 0
	CASE IS < 500
		LOCAL /= 2
	CASEELSE
ENDSELECT

;理性に依存して推倒率减少
IF BASE:ARG:理性 > 800
	LOCAL = LOCAL / 5
ELSEIF BASE:ARG:理性 > 600
	LOCAL = LOCAL / 2
ELSE
	;Do Notting
ENDIF
SELECTCASE BASE:ARG:情绪
	CASE IS < 200
		LOCAL = 0
	CASE 201 TO 400
		LOCAL /= 4
	CASE 401 TO 600
		LOCAL /= 2
	CASE 601 TO 800
	CASEELSE
		LOCAL = LOCAL * 6 / 5
ENDSELECT
SIF FLAG:甲斐性无
	LOCAL = LOCAL * 2
SIF CFLAG:ARG:勃然大怒
	LOCAL = 0
SIF CFLAG:ARG:推倒禁止
	LOCAL = 0
SIF TFLAG:パール期限
	LOCAL = 0
RETURNF LOCAL

