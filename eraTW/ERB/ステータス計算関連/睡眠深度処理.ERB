@睡眠深度减少(ARG)
SIF CFLAG:MASTER:恶作剧 != 2
	RETURN

LOCAL:1 += CUP:ARG:不快 * 10 + CUP:ARG:苦痛 * 10 + CUP:ARG:恐怖 + CUP:ARG:反感 + CUP:ARG:抑郁 / 2
SELECTCASE CUP:ARG:情欲
	CASE 50 TO 100
		LOCAL:1 += 50
	CASE 101 TO 500
		LOCAL:1 += 250
	CASE 501 TO 1000
		LOCAL:1 += 500
	CASE IS > 1000
		LOCAL:1 += 1000
	CASEELSE
ENDSELECT
;		PRINTFORM 睡眠深度基礎值{LOCAL:1}
SELECTCASE EXP:MASTER:睡眠奸经验
	CASE 0 TO 200
		LOCAL:1 -= 1
	CASE 201 TO 400
		LOCAL:1 -= 250
	CASE 401 TO 600
		LOCAL:1 -= 500
	CASE 601 TO 800
		LOCAL:1 -= 750
	CASE IS > 1000
		LOCAL:1 -= 1000
	CASEELSE
ENDSELECT
SELECTCASE EXP:TARGET:睡眠奸经验
	CASE 0 TO 250
		LOCAL:1 -= 250
	CASE 251 TO 500
		LOCAL:1 -= 500
	CASE IS > 500
		LOCAL:1 -= 1000
	CASEELSE
ENDSELECT
LOCAL:1 = MAX(LOCAL:1, 0)
SIF TCVAR:TARGET:睡眠药强度 == 1
		LOCAL:1 = LOCAL:1 / 2
SIF TCVAR:TARGET:睡眠药强度 == 2
		LOCAL:1 = LOCAL:1 / 4
SIF TCVAR:TARGET:睡眠药强度 == 3
		LOCAL:1 = 0
;PRINTFORM 睡眠深度が{LOCAL:1}减った
TCVAR:ARG:睡眠深度 -= LOCAL:1


