;@SLOT_DISPLAY(绘柄,行数,暗转)…指定した"绘柄"の"行数"を文字列としてprintする
;绘柄一览
;1 RD7 赤7(BOUNS图柄)
;2 BL7 青7(BOUNS图柄)
;3 BEL ベル
;4 CHE チェリー
;5 MEL 西瓜
;6 BAR BAR(BOUNS图柄)
;7 REP 回放
;8 NUL 未选择
;行数
;1～9行
;暗转(1:YES 0:NO)
;暗转を指定した场合该当绘柄を色_NULLで表示

@SLOT_DISPLAY(绘柄,行数,暗转)
#DIM REF 绘柄
#DIM REF 行数
#DIM REF 暗转
#DIM 色_RED7
#DIM 色_BLUE7
#DIM 色_BELL
#DIM 色_CHERRY茎
#DIM 色_CHERRY果实
#DIM 色_MELON果实
#DIM 色_MELON皮
#DIM 色_BAR
#DIM 色_REPLAY
#DIM 色_NULL

IF 暗转
	 色_RED7 = 0x404040
	 色_BLUE7 = 0x404040
	 色_BELL = 0x404040
	 色_CHERRY茎 = 0x404040
	 色_CHERRY果实 = 0x404040
	 色_MELON果实 = 0x404040
	 色_MELON皮 = 0x404040
	 色_BAR = 0x404040
	 色_REPLAY = 0x404040
	 色_NULL = 0x000000
ELSE
	 色_RED7 = 0xFF0000
	 色_BLUE7 = 0x66FFFF
	 色_BELL = 0xFFFF00
	 色_CHERRY茎 = 0x00FF00
	 色_CHERRY果实 = 0xFF0000
	 色_MELON果实 = 0xFF0000
	 色_MELON皮 = 0x00FF00
