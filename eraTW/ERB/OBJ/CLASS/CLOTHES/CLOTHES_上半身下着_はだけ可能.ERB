#LOCALSIZE 1
#LOCALSSIZE 1

@上半身内衣_はだけ可能1(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "名前"
	CALLF MAKE_STR(V_NAME, "比基尼文胸")
CASE "装备部位"
	CALLF MAKE_STR(V_NAME, "「上半身内衣２」")
;旧装备处理との照会用、上半身内衣２の1
ENDSELECT



