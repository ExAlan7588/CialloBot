;----------------------------
;MASTER含む全ての角色に适用
;时间经过による自然变动、会话累积度、澡堂の处理
;----------------------------
@MOVEMENT共通处理(ARG)
;BASEの自然变动
CALL BASE自然变动(ARG)

;会话累积值（100以上会话すると时间经过100分经过まで会话不能）
SIF TCVAR:ARG:301 > 100
	TCVAR:ARG:302 = 1
TCVAR:ARG:301 = MAX(TCVAR:ARG:301 - TIME_PROGRESS(TIME:1) , 0)
;时刻经过で累积值が0になったら会话可能
SIF TCVAR:ARG:301 == 0
	TCVAR:ARG:302 = 0

;身体の清洁度
LOCAL = CFLAG:ARG:澡堂

;DEBUGPRINTFORML 【MOVEMENT】BATH_NO:{ARG} , {LOCAL} , \@ CFLAG:ARG:当前位置 == BATHROOM() ? in_BATH # {CFLAG:ARG:当前位置} \@


;IF BATHCHECK(CFLAG:ARG:当前位置) && GET_MAPID(CFLAG:ARG:当前位置) == MAIN_MAP
IF BATHROOM(CFLAG:ARG:当前位置) && GET_MAPID(CFLAG:ARG:当前位置) == MAIN_MAP
	;污臭耐性が低いほど长澡堂（澡堂フラグが下がりにくい）,一日分的污垢は大体30分で洗浄
	CFLAG:ARG:澡堂 = MAX(CFLAG:ARG:澡堂 - TIME_PROGRESS(TIME:1) * (50 + TALENT:ARG:污臭耐性 * 15), 0)
ELSE
	;二日分弱まで蓄积
	CFLAG:ARG:澡堂 = MIN(CFLAG:ARG:澡堂 + TIME_PROGRESS(TIME:1), 2500)
ENDIF

;抱きつき禁止时间の减少
IF TCVAR:ARG:抱きつき禁止时间 > 0
	TCVAR:ARG:抱きつき禁止时间 = MAX(TCVAR:ARG:抱きつき禁止时间 - TIME_PROGRESS(TIME:1), 0)
ENDIF


;----------------------------
;不适当な位置にいる角色を别の场所へ移动させる
;----------------------------
@强制移动(ARG)
;时间停止中は处理しない
IF !FLAG:70
	;虫カゴに入らない角色を虫カゴから追い出す
	IF CFLAG:ARG:当前位置 == 54 && TALENT:ARG:体型 > -5
		IF ARG == [[针妙丸]]
			TALENT:ARG:体型 = -5
		ELSE
			CFLAG:ARG:当前位置 = 9
		ENDIF
	ENDIF

	;据点の外に衰弱中の角色がいる场合隙间に送る
	IF CFLAG:ARG:衰弱
		SIF GET_MAPID(CFLAG:ARG:当前位置) != MAIN_MAP
			CFLAG:ARG:当前位置 = SUKIMA()
	ENDIF
ENDIF

