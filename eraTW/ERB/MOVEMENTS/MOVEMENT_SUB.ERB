;------------------------------------------
;时间に合わせて角色を起こす／寝かす
;------------------------------------------
@起床就寝处理(ARG)
SIF FLAG:时间停止 || CFLAG:ARG:衰弱 || TCVAR:ARG:烂醉
	RETURN
SIF CFLAG:ARG:诶嘿嘿 && CFLAG:ARG:积攒度 > 0
	RETURN
;睡眠时间带の场合
IF 睡眠时间(ARG)
	;起きてたら寝かせる
	IF !CFLAG:ARG:睡眠
		;约会中なら午睡は无视する
		IF !(CHK_DATENOW(CFLAG:ARG:约会中) && !睡眠时间(ARG))
			;CHARA_SLEEP改良に伴い一旦冻结
;			;住宿人物的家にお泊まりした时は归らないように97 + MAIN_MAP * 100に避难
;			IF CFLAG:ARG:当前位置 != 97 + MAIN_MAP * 100
;				;约会中に就寝时间になったら强制的に中止して回家
;				CALL 睡眠时约会中断(ARG)
;			ENDIF
			IF !CFLAG:ARG:招待 && !(CFLAG:ARG:神社在住 && CFLAG:ARG:当前位置 == CFLAG:ARG:初始位置)
				IF CFLAG:MASTER:当前位置 == CFLAG:ARG:当前位置 && !CFLAG:MASTER:睡眠
					IF CFLAG:ARG:诶嘿嘿 || CHK_DATENOW(CFLAG:ARG:约会中)
						PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%再也无法抵抗困意、于是回到\@ CFLAG:ARG:神社在住 ? 自室 # 自宅 \@去了
					ELSEIF IN_HOME(CFLAG:ARG:当前位置)
						PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%道别过后、就睡眼蒙眬地离开了
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
	;主人公が起床中ならメッセージ表示
	CALL CHARA_SLEEP, ARG, !CFLAG:MASTER:睡眠
;睡眠时间带から外れている场合
ELSE
	;寝てたら起こす
	IF CFLAG:ARG:睡眠
		CALL CHARA_AWAKE, ARG
		;住宿人物が自分的家で起きた场合、参道的另一边に移动させる
		SIF CFLAG:ARG:神社在住 && CFLAG:ARG:当前位置 == 97 + MAIN_MAP * 100
			CFLAG:ARG:当前位置 = MAXROOM
	ENDIF
ENDIF

;------------------------------------------
;访问フラグが立っている角色を你の据点物件に移动させる
;角色を自分的家に返す／在宅中の处理を行う
;------------------------------------------
@访问回家处理(ARG)
SIF FLAG:时间停止 || CFLAG:ARG:衰弱 || TCVAR:ARG:烂醉 || CFLAG:ARG:招待 || CFLAG:ARG:诶嘿嘿
	RETURN

;住宿人物・宴会に参加する角色は来访・回家の处理を行わない
IF !CFLAG:ARG:神社在住 && !CFLAG:ARG:宴会参加
	;活动时间内
	IF VISIT(ARG)
		IF CFLAG:ARG:据点来访
			;来访フラグがあるなら主人公の据点に出现させる(仕事中は无理)
			IF !AT_HOME(ARG) && !仕事中チェック(ARG)
				CALL 主人公物件へ向かう(ARG)
			ENDIF
		ENDIF
	;活动时间外
	ELSE
		;回家・在宅处理
		CALL KITAKU(ARG)
	ENDIF
ENDIF

;------------------------------------------
;仕事がない角色を外出させる
;------------------------------------------
@休日移动处理(ARG)
SIF CFLAG:ARG:宴会参加 > 0
	RETURN	
SIF FLAG:时间停止 || CFLAG:ARG:衰弱 || TCVAR:ARG:烂醉 || CFLAG:ARG:睡眠 || CFLAG:ARG:招待 || CFLAG:ARG:诶嘿嘿
	RETURN

;神社に行く予定の角色、当日仕事のある角色、神社に住んでいる角色は无视
SIF CFLAG:ARG:据点来访 || CFLAG:ARG:行动 == 5 || CFLAG:ARG:神社在住
	RETURN

;访问时间でまだ移动していない场合
IF VISIT(ARG) && CFLAG:ARG:当前位置 != CFLAG:ARG:遭遇位置
	LOCAL = 0
	IF CFLAG:ARG:当前位置 == CFLAG:MASTER:当前位置
		;お泊まりすると起きる现象（连动角色を考虑すると面倒なことに）
		LOCAL = 1
	ENDIF
	;全员共通の处理
	CFLAG:ARG:当前位置 = CFLAG:ARG:遭遇位置 ? CFLAG:ARG:遭遇位置 # SUKIMA()
	CFLAG:ARG:同行 = 0
	IF CFLAG:ARG:当前位置 != CFLAG:MASTER:当前位置 && LOCAL
		IF TALENT:ARG:恋慕 && !GROUPMATCH(NAME_FROM_PLACE(CFLAG:ARG:遭遇位置), "", "不明", "隙间空间")
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%说要去%NAME_FROM_PLACE(CFLAG:ARG:遭遇位置)%后离开了
		ELSE
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%不知道到哪去了
		ENDIF
	ENDIF
ENDIF


