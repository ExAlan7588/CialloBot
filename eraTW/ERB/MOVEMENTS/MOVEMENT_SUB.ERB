			IF TARGET == 93 && !GETBIT (FLAG:泳池, 0)
				TIME += 30
				BASE:MASTER:体力 = MAX(BASE:MASTER:体力 - 500,500)
			ENDIF
		ELSE
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%出门去%GET_MAPNAME(MAIN_MAP)%了
