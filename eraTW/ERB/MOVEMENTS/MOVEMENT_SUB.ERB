;------------------------------------------
;仕事や宴会の开始／经过／结束やメッセージの表示を行う
;------------------------------------------
@仕事宴会处理(ARG)
SIF FLAG:时间停止 || CFLAG:ARG:衰弱 || CFLAG:ARG:招待 || CFLAG:ARG:睡眠
	RETURN

IF TCVAR:ARG:烂醉
	;宴会で醉いつぶれた场合はメッセージのみ表示して返回
	IF CFLAG:ARG:职业种类 == 51 && CFLAG:ARG:当前位置 == TFLAG:宴会场 && CFLAG:MASTER:当前位置 == CFLAG:ARG:当前位置
		CALL 宴会描写(ARG)
	ENDIF
	RETURN
ENDIF

IF !CFLAG:ARG:诶嘿嘿 || WORKING(ARG) || (CFLAG:ARG:诶嘿嘿 == 2 && CFLAG:ARG:宴会参加 == 2)
	;宴会时间带呼び出し
	IF CFLAG:ARG:宴会参加 == 1 || CFLAG:ARG:宴会参加 == 2
		CALL ENKAI_WORK(ARG)

	;宴会会场に立ち寄ったり近づいた角色は一定概率で宴会に加わる
	ELSEIF FLAG:参加人数 >= 2 && (CFLAG:ARG:当前位置 == TFLAG:宴会场 || CAN_MOVE(CFLAG:ARG:当前位置, TFLAG:宴会场) >= 2) && !CFLAG:ARG:诶嘿嘿
		IF CFLAG:ARG:宴会参加 == 0 && RAND:5 < 4 && 宴会举办中判定() && TIME_PROGRESS(TIME:1) && 仕事中チェック(ARG) == 0
			IF CFLAG:MASTER:当前位置 == TFLAG:宴会场
				IF FLAG:参加人数 >= 8
					PRINTFORMW 因为看上去很有趣、%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%加入了宴会！
				ELSE
					PRINTFORMW 看到会场的%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%、就这样参加了宴会！
				ENDIF
			ENDIF
			CFLAG:ARG:宴会参加 = 1
			CALL ENKAI_START(ARG)
		ENDIF
	ENDIF

	;约会的对象が宴会やその准备に加わった场合、约会は强制的に中止
	IF GROUPMATCH(CFLAG:ARG:职业种类, 48, 49, 50, 51) && CHK_DATENOW(CFLAG:ARG:约会中)
		PRINTFORMW 和%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%的约会暂且终止了
		CFLAG:ARG:约会中 = MAIN_MAP
		FLAG:约会的对象 = 0
		TFLAG:约会前好感度 = 0
		CFLAG:ARG:同行 = 0
	ENDIF

	;宴会の片付け予定が入っている角色は手が空き次第片付け开始
	IF CFLAG:ARG:整理工作量
		IF CFLAG:ARG:行动 == 0 && FLAG:参加人数 == 0
			CALL ENKAI_KATAZUKE(ARG)
			CFLAG:ARG:整理工作量 = 0
			CFLAG:ARG:清扫的场所 = 0
		ENDIF
	ENDIF

	;仕事时间中、宴会参加中、宴会准备中ならばCHARA_JOBSTR(ARG)
	IF WORKING(ARG) || (GROUPMATCH(CFLAG:ARG:职业种类, 48, 49, 50) && BASE:ARG:工作量 > 0) || GROUPMATCH(CFLAG:ARG:职业种类, 51)
		CALL CHARA_JOBSTR(ARG)
	;工作结束していれば结束处理
	ELSEIF CFLAG:ARG:行动 == 5
		CALL CHARA_JOBEND(ARG)
	ENDIF
ENDIF


