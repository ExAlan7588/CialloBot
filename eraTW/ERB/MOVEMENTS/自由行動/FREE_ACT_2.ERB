;吃饭
@EXIST_FreeAct2
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeAct2(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 经过时间
经过时间 = Activity_Duration:TARGET
SELECTCASE O_DATA
CASE "名称"
	CALLF MAKE_STR(V_NAME, "一起吃饭")
CASE "CHAIN"
;他角色に连锁する场合コメントアウト外すこと
	CALLF MAKE_INT(V_NAME, 1)
CASE "经过时间"
;陪同行动指令での经过时间
;未入力だと最大30分
	CALLF MAKE_INT(V_NAME, 经过时间)
ENDSELECT

@自由行动内容_2(CHARA, ARGS, 时间系数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 现在地
#DIM メッセージ表示
#DIM 时间系数
#DIM 经过时间
现在地 = CFLAG:CHARA:当前位置
メッセージ表示 = 现在地 == CFLAG:MASTER:当前位置 ? 1 # 0
SELECTCASE ARGS
	CASE "发生"
		SIF !憩いスペース(现在地) && 现在地 != CFLAG:CHARA:神社在住
			RETURN 0
		SIF TIME_PROGRESS(TCVAR:CHARA:空腹时刻) <= 0
			RETURN 0
		SIF メッセージ表示
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%\@ CHAIN ? 和%NAME_OUTPUT_TRANSLATION("CALLNAME", CHAIN)%一起开始了用餐。# 准备吃饭了。\@
		;行动が始まった段阶で空腹は满たされる,以降も行动が终わるまで一定の满腹を得る,この时点では满腹だけ
		TCVAR:CHARA:空腹时刻 = 1440 * DAY + TIME + 120
		RETURN 60 + RAND:30
	CASE "行动中"
		CALL 自由行动吃饭(CHARA)
		IF メッセージ表示
			IF 充填率(TARGET,1) >= 10 || 充填率(TARGET,2) >= 10
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%满脸通红的在吃饭。
			ELSE
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正在吃饭。
			ENDIF	
		ENDIF
	CASE "完了"
		CALL 自由行动吃饭(CHARA)
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%吐着甜美的喘息把饭吃完了。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%似乎吃完饭了。
		ENDIF		
	CASE "中断"
		CALL 自由行动吃饭(CHARA)
	CASE "交手"
		PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%陪%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%一起吃饭了
		IF TFLAG:193 < 0
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着嘴忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息…并没有在吃东西…
				PRINTFORML 捂着小腹忍耐的动作看起来❤很可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 吃东西断断续续的、拼命找着身体不适的理由、脸涨得通红…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 红着脸随意吃了两口…看来也没那么饿…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 说着身体不适并没没吃多少就停下了…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 只随意吃了两口就停下了…
			ELSE 
				PRINTFORML 其实也没那么饿…
			ENDIF	
		ELSE
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着嘴忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息摇着头、
				PRINTFORML 看来暂时没有余力好好吃饭呢❤真可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 夹杂着甜美的娇喘的食物格外美味…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 断断续续的就餐、时不时夹杂着甜美的娇喘…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 红着脸慢慢的吃完了…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 红着脸度过了温馨舒闲的一段时间…
			ELSE
				PRINTFORML 两人度过了温馨舒闲的一段时间…
			ENDIF
		ENDIF
	CASE "ソース"
		CALL FreeActMeal(TARGET, 时间系数)
ENDSELECT

@FreeActMeal(ARG, 时间系数)
#DIM 时间系数
#DIM 经过时间
经过时间 = Activity_Duration:ARG
IF TIME_PROGRESS(TCVAR:MASTER:空腹时刻) <= 0
	;空腹でなかったら效果减少
	TFLAG:193 = -1
	SOURCE:ARG:欢乐 = (50 + ((ABL:ARG:亲密 + 好感度系数(ARG)) * 25)) * 时间系数
	SOURCE:ARG:被动 = (30 + ((ABL:ARG:顺从 + 好感度系数(ARG)) * 15)) * 时间系数
	SOURCE:ARG:征服 = (30 + (ABL:ARG:施虐属性 * 10)) * 时间系数
	TCVAR:MASTER:空腹时刻 = MAX(1440 * DAY + TIME + 120, TCVAR:MASTER:空腹时刻)
	CALL RECOVER(MASTER, 1 * 经过时间, "体力", "因为饮食而产生的恢复")
	CALL RECOVER(MASTER, 1 * 经过时间, "气力", "因为饮食而产生的恢复")
	TFLAG:98 = 1
ELSE
	SOURCE:ARG:欢乐 = (100 + ((ABL:ARG:亲密 + 好感度系数(ARG)) * 50)) * 时间系数
	SOURCE:ARG:被动 = (60 + ((ABL:ARG:顺从 + 好感度系数(ARG)) * 30)) * 时间系数
	SOURCE:ARG:征服 = (60 + (ABL:ARG:施虐属性 * 10)) * 时间系数
	;TARGETは自由行动处理で吃饭する
	TCVAR:MASTER:空腹时刻 = 1440 * DAY + TIME + 120
	CALL RECOVER(MASTER, 3 * 经过时间, "体力", "因为饮食而产生的恢复")
	CALL RECOVER(MASTER, 3 * 经过时间, "气力", "因为饮食而产生的恢复")
	TFLAG:98 = 2
ENDIF