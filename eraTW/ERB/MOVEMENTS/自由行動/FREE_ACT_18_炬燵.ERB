@EXIST_FreeAct18
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeAct18(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 经过时间
经过时间 = Activity_Duration:TARGET
SELECTCASE O_DATA
;陪同行动指令の名称
CASE "名称"
	CALLF MAKE_STR(V_NAME, "在被炉里放松")
CASE "CHAIN"
;他角色に连锁しない场合コメントアウトすること
	CALLF MAKE_INT(V_NAME, 1)
CASE "经过时间"
;陪同行动指令での经过时间
;0だと30分か残り时间全部の小さい方
	CALLF MAKE_INT(V_NAME, 0)
ENDSELECT

@自由行动内容_18(CHARA, ARGS, 时间系数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 现在地
#DIM メッセージ表示
#DIM 时间系数
#DIM 经过时间
现在地 = CFLAG:CHARA:当前位置
メッセージ表示 = 现在地 == CFLAG:MASTER:当前位置 ? 1 # 0
SELECTCASE ARGS
	CASE "发生"
		;冬の炬燵がある场所で发生
		SIF !炬燵发生可(CHARA, 现在地)
			RETURN 0
		SIF メッセージ表示
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%\@ CHAIN ? 被%NAME_OUTPUT_TRANSLATION("CALLNAME", CHAIN)%拉入了被炉。# 钻进被炉开始了休息。\@
		;猫耳
		IF TALENT:CHARA:动物耳 == 4
			RETURN 120 + RAND:60
		;それ以外の动物耳
		ELSEIF TALENT:CHARA:动物耳
			RETURN 90 + RAND:45
		ELSE
			RETURN 60 + RAND:30
		ENDIF
	CASE "行动中"
		IF メッセージ表示
			IF 充填率(TARGET,1) >= 10 || 充填率(TARGET,2) >= 10
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%满脸通红的躺在被炉里%TEXTR("取暖/缩成一团/暖呼呼的/打哈欠/放松着")%。
			ELSE
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%躺在被炉里%TEXTR("取暖/缩成一团/暖呼呼的/打哈欠/放松着")%。
			ENDIF	
		ENDIF
	CASE "完了"
		IF メッセージ表示
			IF 充填率(TARGET,1) >= 10 || 充填率(TARGET,2) >= 10
				PRINTFORMW 满脸通红的%NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%%TEXTR("下定决心爬出了被炉/将十分温暖的身体从被炉里拖出/因为太热而从被炉里出来了/匆匆忙地从被炉里爬出来了")%。
			ELSE
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%%TEXTR("下定决心爬出了被炉/将十分温暖的身体从被炉里拖出/因为太热而从被炉里出来了/匆匆忙地从被炉里爬出来了")%。
			ENDIF	
		ENDIF
	CASE "中断"
	CASE "交手"
		;自由行动に付き合ったとき用メッセージ
		IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着嘴忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%脸涨得通红并且夹杂着甜美喘息%TEXTR("在暖和的被炉里/蜷缩在被炉里/一边用被炉取暖一边")%%TEXTR("捂着小腹/揉着小腹/忍耐着/揉着下体")%
				PRINTFORML 似乎有水声…❤真可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 夹杂着甜美娇喘的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%%TEXTR("在暖和的被炉里/蜷缩在被炉里/一边用被炉取暖一边")%%TEXTR("捂着小腹/揉着小腹/忍耐着/揉着下体")%…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 时不时夹杂着甜美娇喘的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%%TEXTR("在暖和的被炉里/蜷缩在被炉里/一边用被炉取暖一边")%%TEXTR("捂着小腹/揉着小腹/忍耐着/喘息着")%……
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%%TEXTR("在暖和的被炉里/蜷缩在被炉里/一边用被炉取暖一边")%%TEXTR("捂着小腹/揉着小腹/忍耐着/喘息着")%…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%和红着脸的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%一起%TEXTR("在暖和的被炉里/蜷缩在被炉里/一边用被炉取暖一边")%%TEXTR("发着呆/无所事事/悠然自得的样子/放松着")%…
			ELSE
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%和%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%一起%TEXTR("在暖和的被炉里/蜷缩在被炉里/一边用被炉取暖一边")%%TEXTR("发着呆/无所事事/悠然自得的样子/放松着")%…
			ENDIF
	CASE "ソース"
		;交手指令选择时の入手ソース、时间系数は付き合った时间の1/10
		;のんびりすると同じ
		CALL RECOVER_PERMIL(MASTER, 30, "体力", 1)
		CALL RECOVER_PERMIL(MASTER, 80, "气力", 1)
		CALL RECOVER_PERMIL(TARGET, 50, "体力", 1)
		CALL RECOVER_PERMIL(TARGET, 100, "气力", 1)
		SOURCE:欢乐 = (100 + ((ABL:亲密 + 好感度系数(TARGET)) * 10)) * 时间系数
		SOURCE:被动 = (50 + ((ABL:顺从 + 好感度系数(TARGET)) * 5)) * 时间系数
ENDSELECT

;炬燵发生条件
;ARG  当前位置
@炬燵发生可(CHARA, ARG)
#FUNCTION
#DIM CHARA
;冬のみ
SIF GET_MONTH() != "冬之月"
	RETURNF 0
;炬燵のある场所のみ
SIF !炬燵のある场所(ARG)
	RETURNF 0
;水栖と冰精はダメ
SIF TALENT:CHARA:水栖 || TALENT:CHARA:冰精
	RETURNF 0
RETURNF 1
