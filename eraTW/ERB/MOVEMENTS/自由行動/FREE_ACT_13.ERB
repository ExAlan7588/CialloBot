@EXIST_FreeAct13
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeAct13(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 经过时间
经过时间 = Activity_Duration:TARGET
SELECTCASE O_DATA
;陪同行动指令の名称
CASE "名称"
	CALLF MAKE_STR(V_NAME, "陪同喝酒")
CASE "CHAIN"
;他角色に连锁しない场合コメントアウトすること
	CALLF MAKE_INT(V_NAME, 1)
CASE "经过时间"
;陪同行动指令での经过时间
;0だと30分か残り时间全部の小さい方
	CALLF MAKE_INT(V_NAME, 0)
ENDSELECT

@自由行动内容_13(CHARA, ARGS, 时间系数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 现在地
#DIM メッセージ表示
#DIM 时间系数
#DIM 经过时间
现在地 = CFLAG:CHARA:当前位置
メッセージ表示 = 现在地 == CFLAG:MASTER:当前位置 ? 1 # 0
SELECTCASE ARGS
	CASE "发生"
		;酒饮める角色が夜间に憩いスペースにいる时
		SIF TALENT:CHARA:酒耐性 < 0
			RETURN 0
		SIF !INRANGE(TIME, 1200, 1440) && !INRANGE(TIME, 0, 120)
			RETURN 0
		SIF !憩いスペース(现在地)
			RETURN 0
		SIF メッセージ表示
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%\@ CHAIN ? 决定陪%NAME_OUTPUT_TRANSLATION("CALLNAME", CHAIN)%一起喝酒了。# 拿出了烧酒开始了一个人的酒会。\@
		RETURN 60 + RAND:30
	CASE "行动中"
		;稍微ずつ醉う,醉いすぎるとSHIRAHUではなくなり中断されるので注意
		BASE:CHARA:酒气 += TIME_PROGRESS(TIME:1) * (RAND:3 + 1) * (4 - TALENT:CHARA:酒耐性)
		IF メッセージ表示
			IF 充填率(TARGET,1) >= 10 || 充填率(TARGET,2) >= 10
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%满脸通红的%TEXTR("一边喝酒一边笑了起来/慢慢品尝着酒的味道/沉浸在醉醺醺的气氛中/喝着酒")%。
			ELSE
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%%TEXTR("一边喝酒一边笑了起来/慢慢品尝着酒的味道/沉浸在醉醺醺的气氛中/在闲情逸致地喝着酒")%。
			ENDIF	
		ENDIF
	CASE "完了"
		BASE:CHARA:酒气 += TIME_PROGRESS(TIME:1) * (RAND:3 + 1) * (4 - TALENT:CHARA:酒耐性)
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%结束饮酒后吐出甜美的喘息。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%似乎结束了饮酒。
		ENDIF		
		
	CASE "中断"
		BASE:CHARA:酒气 += TIME_PROGRESS(TIME:1) * (RAND:3 + 1) * (4 - TALENT:CHARA:酒耐性)
	CASE "交手"
		;自由行动に付き合ったとき用メッセージ
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着嘴忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息喝着酒、
				PRINTFORML 看来需要用酒精麻醉自己呢❤真可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 夹杂着甜美的娇喘的酒格外美味…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 断断续续的喝酒、时不时夹杂着甜美的娇喘…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 红着脸慢慢的喝着酒…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 闭着眼慢慢喝着酒…
			ELSE
			ENDIF		
		PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%陪%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%喝着烧酒、互相碰了碰杯子
		SELECTCASE TALENT:TARGET:酒耐性
		CASE 0, 1
			PRINTFORML 在温热美味的烧酒之下、两人愉快地谈笑风生…
		CASE 2
			PRINTFORML 实在是很让人心醉的好酒啊…
		CASEELSE
			PRINTFORML 是过于强烈的酒了…
		ENDSELECT
	CASE "ソース"
		;交手指令选择时の入手ソース、时间系数は付き合った时间の1/10
		;相手の酒耐性によって饮む酒が变わる,ソースも相手の酒耐性依存,な酒耐性减少は晩酌しない
		DOWNBASE:MASTER:体力 += 20 * 时间系数
		DOWNBASE:MASTER:气力 += 10 * 时间系数
		CALL DRUNKEN(MASTER, MAX(50 + TALENT:TARGET:酒耐性, 51))
		SOURCE:欢乐 = (150 + ((ABL:亲密 + TALENT:TARGET:酒耐性) * 50)) * 时间系数
		SOURCE:被动 = (100 + ((ABL:顺从 + TALENT:TARGET:酒耐性) * 50)) * 时间系数
		SOURCE:征服 = (100 + ((ABL:施虐属性 + TALENT:TARGET:酒耐性) * 50)) * 时间系数
		TFLAG:98 = 1
ENDSELECT