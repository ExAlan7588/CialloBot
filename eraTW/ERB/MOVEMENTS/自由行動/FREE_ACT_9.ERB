@EXIST_FreeAct9
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeAct9(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 经过时间
经过时间 = Activity_Duration:TARGET
SELECTCASE O_DATA
;陪同行动指令の名称
CASE "名称"
	CALLF MAKE_STR(V_NAME, "帮忙采集")
CASE "CHAIN"
;他角色に连锁しない场合コメントアウトすること
	CALLF MAKE_INT(V_NAME, 1)
CASE "经过时间"
;陪同行动指令での经过时间
;0だと30分か残り时间全部の小さい方
	CALLF MAKE_INT(V_NAME, 0)
ENDSELECT

@自由行动内容_9(CHARA, ARGS, 时间系数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 现在地
#DIM メッセージ表示
#DIM 时间系数
#DIM 经过时间
现在地 = CFLAG:CHARA:当前位置
メッセージ表示 = 现在地 == CFLAG:MASTER:当前位置 ? 1 # 0
SELECTCASE ARGS
	CASE "发生"
		;采集Lv1以上の角色が采集できる场所にいる时
		SIF TALENT:CHARA:采集Lv < 1
			RETURN 0
		SIF !GATHERING_SPOT(现在地)
			RETURN 0
		SIF BASE:CHARA:气力 <= 500
			RETURN 0
		SIF メッセージ表示
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%\@ CHAIN ? 开始给%NAME_OUTPUT_TRANSLATION("CALLNAME", CHAIN)%帮忙采集了。# 看了看周围、开始了采集的工作了。\@
		RETURN 60 + RAND:120
	CASE "行动中"
			IF 充填率(TARGET,1) >= 10 || 充填率(TARGET,2) >= 10
				SIF メッセージ表示
					PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%红着脸%TEXTR("在周围探寻着/似乎发现了什么/积极地采集着/在寻找着可用的素材")%。
			ELSE
				SIF メッセージ表示
					PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%%TEXTR("在周围探寻着/似乎发现了什么/积极地采集着/在寻找着可用的素材")%。
			ENDIF
	CASE "完了"
		EXP:CHARA:采集经验 += 1
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%结束了采集后吐着甜美的喘息。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%似乎结束了采集。
		ENDIF	
		
	CASE "中断"
		EXP:CHARA:采集经验 += 1
	CASE "交手"
		;自由行动に付き合ったとき用メッセージ
		PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%给%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%的采集工作帮忙了
		IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着嘴忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息…并没有在采集…
				PRINTFORML 捂着小腹忍耐着❤腰都弯不下去…
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 夹杂着甜美气息的脸涨得通红…眼神飘忽不定…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 喘息中似乎夹杂着甜美的气息…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 脸红红的…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
			ELSE 
			ENDIF	
		PRINTFORML %TEXTR(@"%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%似乎在寻找珍稀的物品…/似乎找不到目标的素材…/将随意捡到的东西递给了%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%… ")%
	CASE "ソース"
		;交手指令选择时の入手ソース、时间系数は付き合った时间の1/10
		DOWNBASE:MASTER:体力 += 20 * 时间系数
		DOWNBASE:MASTER:气力 += 40 * 时间系数
		DOWNBASE:TARGET:体力 += 10 * 时间系数
		DOWNBASE:TARGET:气力 += 20 * 时间系数
		SOURCE:欢乐 = (150 + ((ABL:亲密 + TALENT:MASTER:采集Lv) * 50)) * 时间系数
		SOURCE:被动 = (100 + ((ABL:顺从 + TALENT:MASTER:采集Lv) * 50)) * 时间系数
		TFLAG:98 = 1
		EXP:MASTER:采集经验 ++
ENDSELECT
