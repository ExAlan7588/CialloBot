;つまみ食い
@EXIST_FreeAct3
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeAct3(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 经过时间
经过时间 = Activity_Duration:TARGET
SELECTCASE O_DATA
CASE "名称"
	CALLF MAKE_STR(V_NAME, "一起吃小零食")
CASE "CHAIN"
;他角色に连锁する场合コメントアウト外すこと
	CALLF MAKE_INT(V_NAME, 1)
CASE "经过时间"
;陪同行动指令での经过时间
;未入力だと最大30分
	CALLF MAKE_INT(V_NAME, 经过时间)
ENDSELECT

@自由行动内容_3(CHARA, ARGS, 时间系数, CHAIN)
#DIM CHARA
#DIM CHAIN	;连锁主
#DIM 现在地
#DIM メッセージ表示
#DIM 时间系数
#DIM 经过时间
现在地 = CFLAG:CHARA:当前位置
メッセージ表示 = 现在地 == CFLAG:MASTER:当前位置 ? 1 # 0
SELECTCASE ARGS
	CASE "发生"
		;妖精および特定の角色が空腹状态でつまみ食いスポットにいる时
		SIF !TALENT:CHARA:妖精 && !GROUPMATCH(CHARA, [[露米亚]], [[恋]], [[幽幽子]], [[紫苑]], [[美铃]])
			RETURN 0
		SIF !つまみ食いスポット(现在地)
			RETURN 0
		SIF TIME_PROGRESS(TCVAR:CHARA:空腹时刻) <= 0
			RETURN 0
		SIF メッセージ表示
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%\@ CHAIN ? 和%NAME_OUTPUT_TRANSLATION("CALLNAME", CHAIN)%一起吃小零食。# 开始偷吃小零食。\@
		TCVAR:CHARA:空腹时刻 = 1440 * DAY + TIME + 120
		RETURN 30 + RAND:30
	CASE "行动中"
		IF メッセージ表示
			IF 充填率(TARGET,1) >= 10 || 充填率(TARGET,2) >= 10
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%满脸通红的在吃小零食。
			ELSE
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%在吃小零食。
			ENDIF	
		ENDIF			
		CALL 自由行动吃饭(CHARA)
	CASE "完了"
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%吃完零食并伴随着吐着甜美的喘息。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%吃完零食似乎很满足的样子。
		ENDIF	
		CALL 自由行动吃饭(CHARA)
	CASE "中断"
		CALL 自由行动吃饭(CHARA)
	CASE "交手"
		PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%和%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%一起偷吃小零食了
		IF TFLAG:193 < 0
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着嘴忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息…并没有在吃东西…
				PRINTFORML 捂着小腹忍耐的动作看起来❤很可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 吃东西断断续续的、拼命找着身体不适的理由、脸涨得通红…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 红着脸随意吃了两口…看来也没那么饿…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 说着身体不适并没没吃多少就停下了…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 只随意吃了两口就停下了…
			ELSE
				PRINTFORML 其实也没那么饿…
			ENDIF	
		ELSE
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着嘴忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息摇着头、
				PRINTFORML 看来暂时没有余力好好吃零食呢❤真可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 夹杂着甜美的娇喘的零食格外美味…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 断断续续的吃零食、时不时夹杂着甜美的娇喘…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 红着脸慢慢的吃完了零食…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 红着脸度过了温馨舒闲的一段时间…
			ELSE
				PRINTFORML 多少填了些肚子、还有些许紧张感、两人过得十分愉快…
			ENDIF		
		ENDIF
	CASE "ソース"
		CALL FreeActMeal(TARGET, 时间系数)
ENDSELECT