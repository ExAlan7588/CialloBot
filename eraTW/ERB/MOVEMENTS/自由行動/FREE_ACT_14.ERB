@EXIST_FreeAct14
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeAct14(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 经过时间
经过时间 = Activity_Duration:TARGET
SELECTCASE O_DATA
;陪同行动指令の名称
CASE "名称"
	CALLF MAKE_STR(V_NAME, "帮忙买东西")
CASE "CHAIN"
;他角色に连锁しない场合コメントアウトすること
	CALLF MAKE_INT(V_NAME, 1)
CASE "经过时间"
;陪同行动指令での经过时间
;0だと30分か残り时间全部の小さい方
	CALLF MAKE_INT(V_NAME, 0)
ENDSELECT

@自由行动内容_14(CHARA, ARGS, 时间系数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 现在地
#DIM メッセージ表示
#DIM 时间系数
#DIM 经过时间
现在地 = CFLAG:CHARA:当前位置
メッセージ表示 = 现在地 == CFLAG:MASTER:当前位置 ? 1 # 0
SELECTCASE ARGS
	CASE "发生"
		;お店にいる时
		SIF !KAIDASHI_SHOP(现在地) && !FLOWER_SHOP(现在地) && !SAKE_SHOP(现在地) && !YASAI_SHOP(现在地)
			RETURN 0
		SIF BASE:CHARA:气力 <= 500
			RETURN 0
		SIF !INRANGE(TIME, 540, 1140)
			RETURN 0
		SIF メッセージ表示
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%\@ CHAIN ? 决定跟着%NAME_OUTPUT_TRANSLATION("CALLNAME", CHAIN)%一起购物了。# 拿出了购物袋来了。\@
		RETURN 60 + RAND:30
	CASE "行动中"
		IF メッセージ表示
			IF 充填率(TARGET,1) >= 10 || 充填率(TARGET,2) >= 10
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%满脸通红的%TEXTR("寻找着便宜的商品/拿起物品开始估值/在烦恼着该买哪个/在随意地逛街购物中")%。
			ELSE
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%%TEXTR("寻找着便宜的商品/拿起物品开始估值/在烦恼着该买哪个/在随意地逛街购物中")%。
			ENDIF	
		ENDIF
	CASE "完了"
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%吐着甜美的喘息买完东西了。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%似乎买完东西了。
		ENDIF	
	CASE "中断"
	CASE "交手"
		;自由行动に付き合ったとき用メッセージ
		PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%陪%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%一起逛街购物了
		IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着小腹忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息看着商品、
				PRINTFORML 停留过的地方留下了迷之水痕…
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%观察着%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%的状态、夹杂着甜美的娇喘的购物格外有趣…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%断断续续的选购、说话时不时夹杂着甜美的娇喘…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML %TEXTR(@"满脸通红的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%询问要买的商品的位置…/满脸通红的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%告知要寻找类似的商品…/提满脸通红的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%的购物袋到处移动中…")%
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML %TEXTR(@"红着脸的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%询问要买的商品的位置…/被红着脸的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%告知要寻找类似的商品…/提着红着脸的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%的购物袋到处移动中…")%
			ELSE
				PRINTFORML %TEXTR(@"%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%询问要买的商品的位置…/被%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%告知要寻找类似的商品…/提着%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%的购物袋到处移动中…")%
			ENDIF		
	CASE "ソース"
		;交手指令选择时の入手ソース、时间系数は付き合った时间の1/10
		DOWNBASE:MASTER:体力 += 20 * 时间系数
		DOWNBASE:MASTER:气力 += 20 * 时间系数
		DOWNBASE:TARGET:体力 += 10 * 时间系数
		DOWNBASE:TARGET:气力 += 10 * 时间系数
		SOURCE:欢乐 = (200 + ((ABL:顺从 + 好感度系数(TARGET))  * 50)) * 时间系数
		TFLAG:98 = 1
ENDSELECT