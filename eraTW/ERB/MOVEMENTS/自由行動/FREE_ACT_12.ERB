@EXIST_FreeAct12
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeAct12(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 经过时间
经过时间 = Activity_Duration:TARGET
SELECTCASE O_DATA
;陪同行动指令の名称
CASE "名称"
	CALLF MAKE_STR(V_NAME, "一起放松")
CASE "CHAIN"
;他角色に连锁しない场合コメントアウトすること
	CALLF MAKE_INT(V_NAME, 1)
CASE "经过时间"
;陪同行动指令での经过时间
;0だと30分か残り时间全部の小さい方
	CALLF MAKE_INT(V_NAME, 0)
ENDSELECT

@自由行动内容_12(CHARA, ARGS, 时间系数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 现在地
#DIM メッセージ表示
#DIM 时间系数
#DIM 经过时间
现在地 = CFLAG:CHARA:当前位置
メッセージ表示 = 现在地 == CFLAG:MASTER:当前位置 ? 1 # 0
SELECTCASE ARGS
	CASE "发生"
		;昼间に休憩できる场所または憩いスペースにいる时
		SIF !INRANGE(TIME, 600, 960)
			RETURN 0
		SIF !休憩可(现在地) && !憩いスペース(现在地)
			RETURN 0
		;炬燵が发生するならそっちを优先する
		SIF 炬燵发生可(CHARA, 现在地)
			RETURN 0
		SIF メッセージ表示
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%\@ CHAIN ? 被%NAME_OUTPUT_TRANSLATION("CALLNAME", CHAIN)%吸引也跟着一起放松了。# 缓了口气在一边休息起来。\@
		RETURN 60 + RAND:30
	CASE "行动中"
		IF メッセージ表示
			IF 充填率(TARGET,1) >= 10 || 充填率(TARGET,2) >= 10
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%脸红红的%TEXTR("正在打哈欠/正在放松/正在发呆/正在悠闲自在地放着轻松")%。
			ELSE
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%%TEXTR("正在打哈欠/正在放松/正在发呆/正在悠闲自在地放着轻松")%。
			ENDIF	
		ENDIF
	CASE "完了"
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%休息完后吐出甜美的喘息。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%似乎休息完了。
		ENDIF	
		
	CASE "中断"
	CASE "交手"
		;自由行动に付き合ったとき用メッセージ
		IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着嘴忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息坐在一旁、
				PRINTFORML 看来确实需要好好休息呢❤真可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 身边是夹杂着甜美娇喘的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%…兴奋起来了…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%陪着%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%、时不时传来甜美的气息…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%和脸通红的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%一起%TEXTR("发着呆、/懒懒散散地/悠闲自在地")%度过了一段时间…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%和红着脸的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%一起%TEXTR("发着呆、/懒懒散散地/悠闲自在地")%度过了一段时间…
			ELSE
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%和%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%一起%TEXTR("发着呆、/懒懒散散地/悠闲自在地")%度过了一段时间…
			ENDIF		
	CASE "ソース"
		;交手指令选择时の入手ソース、时间系数は付き合った时间の1/10
		CALL RECOVER_PERMIL(MASTER, 30, "体力", 1)
		CALL RECOVER_PERMIL(MASTER, 80, "气力", 1)
		CALL RECOVER_PERMIL(TARGET, 50, "体力", 1)
		CALL RECOVER_PERMIL(TARGET, 100, "气力", 1)
		SOURCE:欢乐 = (100 + ((ABL:亲密 + 好感度系数(TARGET)) * 10)) * 时间系数
		SOURCE:被动 = (50 + ((ABL:顺从 + 好感度系数(TARGET)) * 5)) * 时间系数
ENDSELECT