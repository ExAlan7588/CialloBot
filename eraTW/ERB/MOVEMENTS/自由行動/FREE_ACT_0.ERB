;考え事
@EXIST_FreeAct0
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeAct0(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "名称"
	CALLF MAKE_STR(V_NAME, "在思考什么")
CASE "CHAIN"
;他角色に连锁する场合コメントアウト外すこと
;	CALLF MAKE_INT(V_NAME, 1)
CASE "经过时间"
;陪同行动指令での经过时间
	CALLF MAKE_INT(V_NAME, Activity_Duration:TARGET)
ENDSELECT

@自由行动内容_0(CHARA, ARGS,时间系数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 现在地
#DIM メッセージ表示
#DIM 时间系数
现在地 = CFLAG:CHARA:当前位置
メッセージ表示 = 现在地 == CFLAG:MASTER:当前位置 ? 1 # 0
TRYCCALLFORM UNIQUE_FA_{CHARA}(CHARA, ARGS, 时间系数)
RETURN RESULT
CATCH
SELECTCASE ARGS
	CASE "发生"
		;在住角色が自室にいる时
		SIF !CFLAG:CHARA:神社在住
			RETURN 0
		SIF 现在地 != CFLAG:CHARA:神社在住
			RETURN 0
		SIF BASE:CHARA:气力 <= 500
			RETURN 0
		SIF メッセージ表示
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%似乎开始思考着什么。
		;返し值は行动时间
		RETURN 20 + RAND:20
	CASE "行动中"
		IF メッセージ表示
			IF 充填率(TARGET,1) >= 10 || 充填率(TARGET,2) >= 10
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%脸红彤彤的%TEXTR("沉默地思考着/将手放在下巴上思考着/盯着上空思考着/沉浸在思考之中")%。
			ELSE
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%%TEXTR("沉默地思考着/将手放在下巴上思考着/盯着上空思考着/沉浸在思考之中")%。
			ENDIF
		ENDIF
	CASE "完了"
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%吐着甜美的喘息结束了思考。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%似乎结束了思考。
		ENDIF	
	CASE "中断"
		;中断メッセージは诶嘿嘿突入时等でも表示されてしまうので表示しない
	CASE "交手"
		PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%询问了%NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正再思考的事情
		IF TFLAG:193 < 0
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着嘴忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息的回话前言不搭后语、
				PRINTFORML 看来是不想被%NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%发现异常❤真可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 被%NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%突然的问话打断、拼命找理由敷衍的脸涨得通红…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 被%NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%突然的问话打断、红着脸努力找着理由敷衍…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 被%NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%突然的问话吓的绷紧了身子、找理由敷衍了过去…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 被%NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%突然的问话吓了一跳、随意敷衍了过去…
			ELSE
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%突然绷紧了身子、随意敷衍了过去…
			ENDIF
		ELSE
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着嘴忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息摇着头、
				PRINTFORML 看来暂时没有余力跟%NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%交流呢❤真可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 脸涨得通红随后轻声询问%NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%对小孩子的看法…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 断断续续的回答着%NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%的询问、却夹杂着甜美的娇喘…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 红着脸回答今天身体有些不适…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 红着脸随意敷衍了过去…
			ELSE
				PRINTFORML 似乎在思考一些无所谓的事情…
			ENDIF		
		ENDIF
	CASE "ソース"
		;信赖度が低いと失败
		IF CFLAG:TARGET:信赖度 < 275 -(ABL:TARGET:亲密 * 25)
			TFLAG:193 = -1
			DOWNBASE:MASTER:气力 += 40 * 时间系数
			DOWNBASE:TARGET:气力 += 40 * 时间系数
			SOURCE:欢乐 = (50 + ((ABL:亲密 + ABL:MASTER:话术技能) * 25)) * 时间系数
			SOURCE:被动 = (30 + ((ABL:顺从 + ABL:MASTER:话术技能) * 15)) * 时间系数
			EXP:MASTER:会话经验 ++
		ELSE
			DOWNBASE:MASTER:气力 += 20 * 时间系数
			DOWNBASE:TARGET:气力 += 20 * 时间系数
			SOURCE:欢乐 = (100 + ((ABL:亲密 + ABL:MASTER:话术技能) * 50)) * 时间系数
			SOURCE:被动 = (60 + ((ABL:顺从 + ABL:MASTER:话术技能) * 30)) * 时间系数
			TFLAG:98 = 1
			EXP:MASTER:会话经验 ++
		ENDIF
ENDSELECT
ENDCATCH