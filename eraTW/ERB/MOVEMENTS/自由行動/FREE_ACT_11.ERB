@EXIST_FreeAct11
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeAct11(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 经过时间
经过时间 = Activity_Duration:TARGET
SELECTCASE O_DATA
;陪同行动指令の名称
CASE "名称"
	CALLF MAKE_STR(V_NAME, "帮忙做实验")
CASE "CHAIN"
;他角色に连锁しない场合コメントアウトすること
	CALLF MAKE_INT(V_NAME, 1)
CASE "经过时间"
;陪同行动指令での经过时间
;0だと30分か残り时间全部の小さい方
	CALLF MAKE_INT(V_NAME, 0)
ENDSELECT

@自由行动内容_11(CHARA, ARGS, 时间系数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 现在地
#DIM メッセージ表示
#DIM 时间系数
#DIM 经过时间
现在地 = CFLAG:CHARA:当前位置
メッセージ表示 = 现在地 == CFLAG:MASTER:当前位置 ? 1 # 0
SELECTCASE ARGS
	CASE "发生"
		;调合Lv1以上の角色が调合できる场所（主人公私室以外）または自室にいる时
		SIF TALENT:CHARA:调合Lv < 1
			RETURN 0
		SIF BASE:CHARA:气力 <= 500
			RETURN 0
		;连锁时はスキップ
		IF !CHAIN
			SIF PHARMACY_SPOT(现在地) != 2 && 现在地 != CFLAG:CHARA:神社在住
				RETURN 0
		ENDIF
		SIF メッセージ表示
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%\@ CHAIN ? 开始给%NAME_OUTPUT_TRANSLATION("CALLNAME", CHAIN)%的实验帮忙了。# 开始准备做实验了。\@
		RETURN 60 + RAND:30
	CASE "行动中"
	IF メッセージ表示
			IF 充填率(TARGET,1) >= 10 || 充填率(TARGET,2) >= 10
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%满脸通红的%TEXTR("调节着实验器具/布置着实验道具/记录着实验过程/做着可疑的实验")%。
			ELSE
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%%TEXTR("调节着实验器具/布置着实验道具/记录着实验过程/做着可疑的实验")%。
			ENDIF	
	ENDIF
	CASE "完了"
		EXP:CHARA:调合经验 += 1
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%做完实验吐出甜美的喘息。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%似乎做完实验了。
		ENDIF	
		
	CASE "中断"
		EXP:CHARA:调合经验 += 1
	CASE "交手"
		;自由行动に付き合ったとき用メッセージ
		PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%给%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%的实验帮忙了
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着嘴忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息摇着头、
				PRINTFORML 看来暂时没有余力好好做实验呢❤真可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 夹杂着甜美的娇喘的实验格外勾人…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 断断续续的实验、时不时夹杂着甜美的娇喘…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 红着脸慢慢的做着实验…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 实验时腰部一扭一扭的…
			ELSE
			ENDIF		
		SELECTCASE RAND:3
		CASE 1
			PRINTFORML 完全无法理解%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%在做什么…
		CASE 2
			PRINTFORML 因为要处理危险物品、实在很是精疲力尽…
		CASEELSE
			PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%露出了满意的表情…
		ENDSELECT
	CASE "ソース"
		;交手指令选择时の入手ソース、时间系数は付き合った时间の1/10
		DOWNBASE:MASTER:体力 += 20 * 时间系数
		DOWNBASE:MASTER:气力 += 40 * 时间系数
		DOWNBASE:TARGET:体力 += 10 * 时间系数
		DOWNBASE:TARGET:气力 += 20 * 时间系数
		SOURCE:欢乐 = (150 + ((ABL:亲密 + TALENT:MASTER:调合Lv) * 50)) * 时间系数
		SOURCE:被动 = (100 + ((ABL:顺从 + TALENT:MASTER:调合Lv) * 50)) * 时间系数
		TFLAG:98 = 1
		EXP:MASTER:调合经验 ++
ENDSELECT