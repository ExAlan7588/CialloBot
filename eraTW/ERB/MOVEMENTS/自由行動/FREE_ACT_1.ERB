;玩游戏
@EXIST_FreeAct1
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeAct1(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 经过时间

SELECTCASE O_DATA
CASE "名称"
	CALLF MAKE_STR(V_NAME, "一起玩")
CASE "CHAIN"
;他角色に连锁する场合コメントアウト外すこと
	CALLF MAKE_INT(V_NAME, 1)
CASE "经过时间"
;陪同行动指令での经过时间
;未入力だと最大30分
;	CALLF MAKE_INT(V_NAME, 经过时间)
ENDSELECT

@自由行动内容_1(CHARA, ARGS, 时间系数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 现在地
#DIM メッセージ表示
#DIM 时间系数
#DIM 经过时间
现在地 = CFLAG:CHARA:当前位置
メッセージ表示 = 现在地 == CFLAG:MASTER:当前位置 ? 1 # 0
SELECTCASE ARGS
	CASE "发生"
		;［幼稚］持ちが屋外にいる时
		SIF !TALENT:CHARA:幼稚
			RETURN 0
		SIF !OUTROOF(现在地) && !战斗训练可(现在地)
			RETURN 0
		SIF BASE:CHARA:气力 <= 500
			RETURN 0
		SIF メッセージ表示
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%开始\@ CHAIN ? 和%NAME_OUTPUT_TRANSLATION("CALLNAME", CHAIN)%一起游玩起来了。 # 在%NAME_FROM_PLACE(现在地)%游玩起来了。\@
		RETURN 60 + RAND:60
	CASE "行动中"
		IF メッセージ表示
			IF 充填率(TARGET,1) >= 10 || 充填率(TARGET,2) >= 10
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%脸红红的%TEXTR(@"跑来跑去/在嬉戏/玩耍中/准备捉弄一下%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%")%。
			ELSE
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%%TEXTR(@"跑来跑去的/在嬉戏/在神采奕奕地玩耍中/似乎想要捉弄一下%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%")%。
			ENDIF	
		ENDIF
	CASE "完了"
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%玩累了吐着甜美的喘息。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%似乎玩累了。
		ENDIF		
	CASE "中断"
		;中断メッセージは诶嘿嘿突入时等でも表示されてしまうので表示しない
	CASE "交手"
		PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%加入了%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%的游戏
		IF TFLAG:193 > 0
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着嘴忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息参加着游戏、
				PRINTFORML 捂着小腹的动作❤真可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 游玩时总不自觉看向%NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%、今天游玩的气氛格外热烈…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 游玩时夹杂着甜美的娇喘…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 动作似乎有些迟钝、红着脸说今天身体有些不适…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 游玩时情绪格外热烈…
			ELSE
				PRINTFORML 游玩的气氛变得热烈了起来…
			ENDIF		
		ELSEIF TFLAG:193 < 0
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着嘴忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息…游戏进行不下去了…
				PRINTFORML 虽然捂着小腹的动作看起来❤很可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 导致游戏只能断断续续的、拼命找理由的脸涨得通红…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 红着脸努力参与着游戏…但还是冷场了…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 游戏时绷紧了身子、找理由敷衍着导致有点冷场了…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 随意敷衍着游戏…似乎有点冷场了…
			ELSE
				PRINTFORML 似乎有点冷场了…
			ENDIF
		ENDIF
	CASE "ソース"
		DOWNBASE:MASTER:体力 += 40 * 时间系数
		DOWNBASE:MASTER:气力 += 40 * 时间系数
		DOWNBASE:TARGET:体力 += 20 * 时间系数
		DOWNBASE:TARGET:气力 += 20 * 时间系数
		SELECTCASE RAND:10
		CASE 1
			;10%で大成功
			TFLAG:193 = 1
			SOURCE:欢乐 = (200 + ((ABL:亲密 + 好感度系数(TARGET)) * 80)) * 时间系数
			SOURCE:被动 = (120 + ((ABL:顺从 + 好感度系数(TARGET)) * 80)) * 时间系数
			SOURCE:征服 = (120 + (ABL:施虐属性 * 120)) * 时间系数
			TFLAG:98 = 2
		CASE 2
			;10%で失败
			TFLAG:193 = -1
			SOURCE:欢乐 = (100 + ((ABL:亲密 + 好感度系数(TARGET)) * 30)) * 时间系数
			SOURCE:被动 = (50 + ((ABL:顺从 + 好感度系数(TARGET)) * 20)) * 时间系数
			SOURCE:征服 = (50 + (ABL:施虐属性 * 50)) * 时间系数
		CASEELSE
			SOURCE:欢乐 = (150 + ((ABL:亲密 + 好感度系数(TARGET)) * 50)) * 时间系数
			SOURCE:被动 = (100 + ((ABL:顺从 + 好感度系数(TARGET)) * 50)) * 时间系数
			SOURCE:征服 = (100 + (ABL:施虐属性 * 100)) * 时间系数
			TFLAG:98 = 1
		ENDSELECT
ENDSELECT