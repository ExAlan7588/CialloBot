;一起做运动
@EXIST_FreeAct5
#LOCALSIZE 1
#LOCALSSIZE 1
;オブジェクト本体
@FreeAct5(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 经过时间
经过时间 = Activity_Duration:TARGET
SELECTCASE O_DATA
CASE "名称"
	CALLF MAKE_STR(V_NAME, "一起做运动")
CASE "CHAIN"
;他角色に连锁する场合コメントアウト外すこと
	CALLF MAKE_INT(V_NAME, 1)
CASE "经过时间"
;陪同行动指令での经过时间
;未入力だと最大30分
	;CALLF MAKE_INT(V_NAME, 经过时间)
ENDSELECT

@自由行动内容_5(CHARA, ARGS, 时间系数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 现在地
#DIM メッセージ表示
#DIM 时间系数
#DIM 经过时间
现在地 = CFLAG:CHARA:当前位置
メッセージ表示 = 现在地 == CFLAG:MASTER:当前位置 ? 1 # 0
SELECTCASE ARGS
	CASE "发生"
		;战斗能力1以上の角色が训练できる场所にいる时,ただし演奏优先
		SIF ABL:CHARA:战斗能力 < 1
			RETURN 0
		SIF BASE:CHARA:气力 <= MAXBASE:CHARA:气力 / 2
			RETURN 0
		SIF TALENT:CHARA:音乐知识
			RETURN 0
		SIF !战斗训练可(现在地)
			RETURN 0
		SIF メッセージ表示
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%\@ CHAIN ? 决定跟%NAME_OUTPUT_TRANSLATION("CALLNAME", CHAIN)%一起运动了。# 做了个深呼吸后就开始运动了。\@
		RETURN 60 + RAND:60
	CASE "行动中"
		IF メッセージ表示
			IF 充填率(TARGET,1) >= 10 || 充填率(TARGET,2) >= 10
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%满脸通红%TEXTR("正在做弹幕模拟的练习/并且呼吸有些不稳了/正在调整着呼吸/充满干劲地在做着运动")%。
			ELSE
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%%TEXTR("正在做弹幕模拟的练习/呼吸有些不稳了/正在调整着呼吸/充满干劲地在做着运动")%。
			ENDIF	
		ENDIF
	CASE "完了"
		EXP:CHARA:战斗经验 += 1
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%结束运动后吐着甜美的喘息。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%结束运动后缓了缓气。
		ENDIF	
		
	CASE "中断"
		EXP:CHARA:战斗经验 += 1
	CASE "交手"
		IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着嘴忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美的喘息%TEXTR("肌肉训练/训练/做准备运动")%中
				PRINTFORML 停留过的地方地上留下了奇怪的水迹……
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 欣赏着一边娇喘一边%TEXTR("肌肉训练/训练/做准备运动")%的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 不时夹杂着甜美娇喘的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%和%NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%%TEXTR("一起做起了肌肉训练/一起做起了对抗训练/互相帮忙做起了准备运动")%
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%和红着脸的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%%TEXTR("一起做起了肌肉训练/一起做起了对抗训练/互相帮忙做起了准备运动")%
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%和%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%%TEXTR("一起做起了肌肉训练/一起做起了对抗训练/互相帮忙做起了准备运动")%
			ELSE
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%和%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%%TEXTR("一起做起了肌肉训练/一起做起了对抗训练/互相帮忙做起了准备运动")%
			ENDIF	
		
	CASE "ソース"
		DOWNBASE:MASTER:体力 += 40 * 时间系数
		DOWNBASE:MASTER:气力 += 40 * 时间系数
		DOWNBASE:TARGET:体力 += 20 * 时间系数
		DOWNBASE:TARGET:气力 += 20 * 时间系数
		SOURCE:欢乐 = (150 + ((ABL:亲密 + ABL:MASTER:战斗能力) * 50)) * 时间系数
		SOURCE:被动 = (100 + ((ABL:顺从 + ABL:MASTER:战斗能力) * 50)) * 时间系数
		SOURCE:征服 = (100 + ((ABL:施虐属性 + ABL:战斗能力) * 100)) * 时间系数
		TFLAG:98 = 2
		EXP:MASTER:战斗经验 ++
ENDSELECT