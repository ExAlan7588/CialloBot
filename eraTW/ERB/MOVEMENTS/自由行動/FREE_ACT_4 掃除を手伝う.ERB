;帮忙扫除
@EXIST_FreeAct4
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeAct4(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 经过时间
经过时间 = Activity_Duration:TARGET
SELECTCASE O_DATA
CASE "名称"
	CALLF MAKE_STR(V_NAME, "帮忙扫除")
CASE "CHAIN"
;他角色に连锁する场合コメントアウト外すこと
	CALLF MAKE_INT(V_NAME, 1)
CASE "经过时间"
;陪同行动指令での经过时间
;未入力だと最大30分
	;CALLF MAKE_INT(V_NAME, 经过时间)
ENDSELECT

@自由行动内容_4(CHARA, ARGS, 时间系数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 现在地
#DIM メッセージ表示
#DIM 时间系数
#DIM 经过时间
现在地 = CFLAG:CHARA:当前位置
メッセージ表示 = 现在地 == CFLAG:MASTER:当前位置 ? 1 # 0
SELECTCASE ARGS
	CASE "发生"
		;个室にいる时
		SIF !BEDROOM(现在地)
			RETURN 0
		SIF BASE:CHARA:气力 <= 500
			RETURN 0
		;污臭耐性（扫除系）によって积极性が变わる
		IF TALENT:CHARA:污臭耐性 < 0 || TALENT:CHARA:扫除系
			SIF YOGORE:(现在地) < 2000
				RETURN 0
		ELSEIF TALENT:CHARA:污臭耐性 == 0
			SIF YOGORE:(现在地) < 3500
				RETURN 0
		ELSEIF TALENT:CHARA:污臭耐性 > 0
			SIF YOGORE:(现在地) < 5000
				RETURN 0
		ENDIF
		SIF メッセージ表示
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%\@ CHAIN ? 决定帮%NAME_OUTPUT_TRANSLATION("CALLNAME", CHAIN)%一起打扫除了。# 似乎在意房间脏污、决定打扫除了。\@
		RETURN 30 + RAND:20
	CASE "行动中"
		;实际に扫除
		YOGORE:(现在地) = MAX(YOGORE:(现在地) - 250 * TIME_PROGRESS(TIME:1) / 5, 0)
		IF メッセージ表示
			IF 充填率(TARGET,1) >= 10 || 充填率(TARGET,2) >= 10
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%满脸通红的%TEXTR("清扫着垃圾/整理和服品/打扫着灰尘/收拾着房间")%。
			ELSE
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%%TEXTR("清扫着垃圾/整理和服品/打扫着灰尘/在手脚利落地收拾着房间")%。
			ENDIF	
		ENDIF
	CASE "完了"
		;清扫经验が入る
		EXP:CHARA:清扫经验 += 3
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%吐着甜美的喘息扫除完毕了。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%似乎扫除完毕了。
		ENDIF		
			
	CASE "中断"
		;中断されても清扫经验は入る
		EXP:CHARA:清扫经验 += 1
	CASE "交手"
		IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着嘴忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美的喘息%TEXTR("整理垃圾/擦灰尘/打扫")%中
				PRINTFORML 经过的地方地上有奇怪的水迹……
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 欣赏着一边娇喘一边%TEXTR("整理垃圾/擦灰尘/打扫")%的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 断断续续打扫并时不时夹杂着甜美娇喘的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%%TEXTR("整理垃圾的动作慢了下来/用抹布擦灰尘的动作慢了下来/打扫的动作慢了下来")%…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 红着脸的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%%TEXTR("整理垃圾的动作慢了下来/用抹布擦灰尘的动作慢了下来/打扫的动作慢了下来")%
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%帮助红着脸的%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%%TEXTR("将整理好的垃圾一起拿出去扔掉了/将占满灰尘的地方一起用抹布擦干净了/一起把一个人伸手够不到的地方打扫干净了")%
			ELSE
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%帮助%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%%TEXTR("将整理好的垃圾一起拿出去扔掉了/将占满灰尘的地方一起用抹布擦干净了/一起把一个人伸手够不到的地方打扫干净了")%
			ENDIF		
	CASE "ソース"
		LOCAL = YOGORE:(CFLAG:MASTER:当前位置)
		YOGORE:(CFLAG:MASTER:当前位置) = MAX(YOGORE:(CFLAG:MASTER:当前位置) -100 * 经过时间 / 5, 0)
		EX:MASTER:今日的扫除回数 += LOCAL - YOGORE:(CFLAG:MASTER:当前位置)
		DOWNBASE:MASTER:体力 += 20 * 时间系数
		DOWNBASE:MASTER:气力 += 40 * 时间系数
		DOWNBASE:TARGET:体力 += 10 * 时间系数
		DOWNBASE:TARGET:气力 += 20 * 时间系数
		SOURCE:欢乐 = (100 + ((ABL:顺从 + ABL:MASTER:清扫技能) * 50)) * 时间系数
		TFLAG:98 = 2
		EXP:MASTER:清扫经验 ++
		EXP:TARGET:清扫经验 ++
ENDSELECT