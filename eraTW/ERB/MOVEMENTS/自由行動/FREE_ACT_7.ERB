@EXIST_FreeAct7
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeAct7(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 经过时间
经过时间 = Activity_Duration:TARGET
SELECTCASE O_DATA
;陪同行动指令の名称
CASE "名称"
	IF Activity_Duration:ARG > 30
		CALLF MAKE_STR(V_NAME, "帮忙做饭")
	ELSE
		CALLF MAKE_STR(V_NAME, "求分点饭菜")
	ENDIF
CASE "CHAIN"
;他角色に连锁しない场合コメントアウトすること
	CALLF MAKE_INT(V_NAME, 1)
CASE "经过时间"
;陪同行动指令での经过时间
;0だと30分か残り时间全部の小さい方
	IF Activity_Duration:TARGET > 30
		经过时间 = Activity_Duration:TARGET - 30
	ELSE
		经过时间 = 0
	ENDIF
	CALLF MAKE_INT(V_NAME, 经过时间)
ENDSELECT

@自由行动内容_7(CHARA, ARGS, 时间系数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 现在地
#DIM メッセージ表示
#DIM 时间系数
#DIM 经过时间
现在地 = CFLAG:CHARA:当前位置
メッセージ表示 = 现在地 == CFLAG:MASTER:当前位置 ? 1 # 0
SELECTCASE ARGS
	CASE "发生"	
		;料理技能1以上の角色が空腹状态で厨房にいる时
		SIF ABL:CHARA:料理技能 < 1
			RETURN 0
		SIF !KITCHEN(现在地)
			RETURN 0
		SIF TIME_PROGRESS(TCVAR:CHARA:空腹时刻) <= 0
			RETURN 0
		IF メッセージ表示
			IF CHAIN
				IF Activity_Duration:CHARA > 30
					PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%决定给%NAME_OUTPUT_TRANSLATION("CALLNAME", CHAIN)%帮忙了。
				ELSE
					PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%让%NAME_OUTPUT_TRANSLATION("CALLNAME", CHAIN)%给自己分了点吃的。
				ENDIF
			ELSE
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%觉得肚子饿了、开始做饭了。
			ENDIF
		ENDIF
		RETURN 60 + RAND:30
	CASE "行动中"
		;吃饭とセット
		
		IF Activity_Duration:CHARA > 30
			IF 充填率(TARGET,1) >= 10 || 充填率(TARGET,2) >= 10
				SIF メッセージ表示
					PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%满脸通红地做着饭。
			ELSE
				SIF メッセージ表示
					PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%在轻快地做着饭。
			ENDIF	
		ELSE
			IF 充填率(TARGET,1) >= 10 || 充填率(TARGET,2) >= 10
				SIF メッセージ表示
					PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%满脸通红地吃着自己做好的饭菜。
			ELSE
				SIF メッセージ表示
					PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%在吃自己做好的饭菜。
			ENDIF
			CALL 自由行动吃饭(CHARA)
		ENDIF
	CASE "完了"
		;完了までしたら料理经验+2
		EXP:CHARA:料理经验 += 2
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%吐着甜美的喘息吃完饭了。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%似乎吃完饭了。
		ENDIF	
		CALL 自由行动吃饭(CHARA)
	CASE "中断"
		EXP:CHARA:料理经验 += 1
		SIF Activity_Duration:CHARA <= 30
			CALL 自由行动吃饭(CHARA)
	CASE "交手"
		;自由行动に付き合ったとき用メッセージ
		IF TFLAG:193 == 2
			PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%帮%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%一起做饭
			SELECTCASE ABL:TARGET:料理技能
			CASE IS <= 1
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%的料理实在是无法置评…
			CASE 2, 3
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%正再慢慢地一步步地做着饭菜…
			CASEELSE
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%在手脚利落地做着饭菜…
			ENDSELECT
			PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", PLAYER)%让%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%给自己分了些做好的饭菜
		ELSEIF TFLAG:193 < 0
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着嘴忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息…并没有在吃东西…
				PRINTFORML 捂着小腹忍耐的动作看起来❤很可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 吃东西断断续续的、拼命找着身体不适的理由、脸涨得通红…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 红着脸随意吃了两口…看来也没那么饿…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 说着身体不适并没没吃多少就停下了…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 只随意吃了两口就停下了…
			ELSE 
				PRINTFORML 其实也没那么饿…
			ENDIF	
		ELSE
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%捂着嘴忍耐着体内\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息摇着头、
				PRINTFORML 看来暂时没有余力好好吃饭呢❤真可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正享受着体内满满\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 夹杂着甜美的娇喘的食物格外美味…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正感受着体内大量\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 断断续续的就餐、时不时夹杂着甜美的娇喘…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内许多\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 红着脸慢慢的吃完了…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%正被体内残存\@ TALENT:MASTER:浓厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 红着脸度过了温馨舒闲的一段时间…
			ELSE
				PRINTFORML 肚子多少填满了…
			ENDIF		
		ENDIF

	CASE "ソース"
		IF Activity_Duration:TARGET > 30
			;交手指令选择时の入手ソース、时间系数は付き合った时间の1/10
			DOWNBASE:MASTER:体力 += 20 * 时间系数
			DOWNBASE:MASTER:气力 += 20 * 时间系数
			DOWNBASE:TARGET:体力 += 10 * 时间系数
			DOWNBASE:TARGET:气力 += 10 * 时间系数
			SOURCE:欢乐 = (100 + ((ABL:顺从 + ABL:MASTER:料理技能) * 50)) * 时间系数
			TFLAG:98 = 1
			EXP:MASTER:料理经验 ++
			TFLAG:193 = 2
		ELSE
			CALL FreeActMeal(TARGET, 时间系数)
		ENDIF
ENDSELECT