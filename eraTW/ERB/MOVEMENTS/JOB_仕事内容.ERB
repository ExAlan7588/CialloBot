				CFLAG:ARG:职业种类 = JOB_料理
			ENDIF
		ENDIF
	CASE [[艾伦]]
		IF TIME:0 == TCVAR:ARG:357
		;前回の处理から时间が经过してなければスルー
		ELSEIF GROUPMATCH(DAY:3, 15, 30)
		;出张
			;客数の增减、计上、基本は－３～＋５
			LOCAL:1 = RAND:8 - 3
			
			;天候
			SELECTCASE TIME:5
			;雾雨、雾は－１
			CASE 6, 7
				LOCAL:1 -= 1
			;雨、雪は－２
			CASE 4, 8
				LOCAL:1 -= 2
			;大雨、吹雪、雨雪交加、冰雹は－３
			CASE 5, 9, 12, 13
				LOCAL:1 -= 3
			ENDSELECT
			;虹、ダイヤモンドダストは＋２
			SIF TIME:7 >= 1
				LOCAL:1 += 2
			
			;客数が少ないならより增やす
			SIF TCVAR:ARG:354 < 5
				LOCAL:1 += 1
			;客数が多いならより减らす
			SIF TCVAR:ARG:354 > 25
				LOCAL:1 -= 3
			
			;负数防止
			TCVAR:ARG:354 = MAX(0, TCVAR:ARG:354 + LOCAL:1)
			SIF LOCAL:1 > 0
				TCVAR:ARG:355 += LOCAL:1
			;现在的客数が一定以上だと艾伦のサポに回る
			IF TCVAR:ARG:354 > 25
				CFLAG:ARG:职业种类 = JOB_采集
			;そうでなければ呼び込みに
			ELSE
				CFLAG:ARG:职业种类 = JOB_经营
			ENDIF
		;采集　艾伦の采集量を计上
		ELSE
			;采集量がおかしくならないように
			SIF !INRANGE(TCVAR:[[艾伦]]:357, 420, 720)
				TCVAR:[[艾伦]]:357 = 420
			;计算式は(现在的TIME-前回计算したTIME)*1～20の乱数
			TCVAR:[[艾伦]]:354 += (TIME:0 - TCVAR:[[艾伦]]:357) * (RAND:20 + 1)
			;采集量が最大工作量を上回ったら结束
			SIF TCVAR:[[艾伦]]:354 > MAXBASE:[[艾伦]]:工作量
				BASE:[[艾伦]]:工作量 = 1
		ENDIF
	CASE [[慧音]]
		;授业が终われば善后工作を手传える
		IF TIME >= CLOCK_TO_TIME(14, 0)
			CFLAG:ARG:职业种类 = JOB_清扫
