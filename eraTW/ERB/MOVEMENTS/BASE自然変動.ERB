@天候造成的影响(ARG, ARG:1)
#FUNCTION
VARSET LOCAL
;屋外、伞装备无、共用雨伞してない
IF OUTROOF(ARG:1) && EQUIP:ARG:饰品 != 6 && !TEQUIP:ARG:共用雨伞
	;你は伞を持っていれば除外
	SIF ARG == MASTER && ITEM:折叠伞
		RETURNF 0
	SELECTCASE TIME:5
		;夏の晴天
		CASE 0
			SIF DAY:2 == 2 && (TALENT:ARG:水栖 || TALENT:ARG:冰精 == 2)
				LOCAL = -2
		;夏の晴天
		CASE 1
			SIF DAY:2 == 2 && (TALENT:ARG:水栖 || TALENT:ARG:冰精 == 2)
				LOCAL = -3
		;雨・雾雨
		CASE 4, 6
			IF TALENT:ARG:水栖
				LOCAL = 3
			ELSE
				LOCAL = -2
			ENDIF
		;雪・细雪・雾雪・雨雪交加
		CASE 8, 10, 11, 12
			IF TALENT:ARG:冰精
				LOCAL = 3
			ELSE
				LOCAL = -2
			ENDIF
		;大雨
		CASE 5
			IF TALENT:ARG:水栖
				LOCAL = 3
			ELSE
				LOCAL = -3
			ENDIF
		;吹雪(天候パッチ)冰雹
		CASE 9, 13
			IF TALENT:ARG:冰精
				LOCAL = 3
			ELSE
				LOCAL = -3
			ENDIF
		;(天候パッチ)豪雨・ひょうを追加
		;豪雨
		CASE 14
			IF TALENT:ARG:水栖
				LOCAL = 3
			ELSE
				LOCAL = -6
			ENDIF
		;ひょう
		CASE 15
			LOCAL = -10
	ENDSELECT
	;(天候パッチ)风速の影响
	IF WIND_VELOCITY == 1
		LOCAL -= 1
	ELSEIF WIND_VELOCITY == 2
		LOCAL -= 3
	ELSEIF WIND_VELOCITY >= 3
		LOCAL -= 6
	ENDIF
ENDIF

