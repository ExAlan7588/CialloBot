@BASE自然变动(ARG)
#DIM 体力恢复量
#DIM 气力恢复量
#DIM 欲求不满
#DIM 伞ダメージ
#DIM Lapse
#DIM 地底
#DIMS 低气圧位置
低气圧位置 = %GET_LOCATION_LOW()%
Lapse = TIME_PROGRESS(TIME:1)

;MASTERと同じ场所にいないとき
IF CFLAG:ARG:当前位置 != CFLAG:MASTER:当前位置
	BASE:ARG:情绪 = BASE:ARG:情绪 - Lapse * 4 * (BASE:ARG:情绪 + 500) / 500
	BASE:ARG:情绪 = MAX(0,BASE:ARG:情绪)
	BASE:ARG:理性 = BASE:ARG:理性 + Lapse * (MAXBASE:ARG:理性 + 500) / (BASE:ARG:理性 + 500)
ELSE
	;仙香玉兔による补正　情绪↑理性↓愤怒↓
	IF IsInsenceValid(ARG)
		BASE:ARG:情绪 += Lapse * (SQRT(TFLAG:仙香玉兔) / 2)
		BASE:ARG:情绪 = MIN(BASE:ARG:情绪 , MAXBASE:ARG:情绪)
		BASE:ARG:理性 -= Lapse * (SQRT(TFLAG:仙香玉兔) / 2)
		BASE:ARG:愤怒 -= Lapse * SQRT(TFLAG:仙香玉兔) / (CFLAG:ARG:勃然大怒 + 1)
	ENDIF
	;剧毒身躯の媚毒付与による补正　理性↓ 发情付与・无差别だがそれなり注ぐ必要あり
	;计算式が复杂すぎる
	IF TCVAR:ARG:ポイズンゲージ
		BASE:ARG:理性 -= Lapse * (MAX(SQRT(TCVAR:ARG:ポイズンゲージ) / 2, 1))
		IF BASE:ARG:理性 <= 0 && PALAM:ARG:情欲 >= PALAMLV:7 && TCVAR:ARG:发情 == 0 && !TALENT:ARG:妊娠 && !TALENT:ARG:初潮 && TALENT:ARG:幼稚
			;1000ほどゲージを稼ぐと3割程度で发情付与　欲求不满度が上がるほど概率向上
			IF RAND:(TCVAR:ARG:ポイズンゲージ + SQRT(TCVAR:ARG:ポイズンゲージ * CFLAG:ARG:积攒度 / 2)) > SQRT(TCVAR:ARG:ポイズンゲージ) * 20
				TCVAR:ARG:发情 = 1
				IF Lapse && !CFLAG:ARG:睡眠
					SETCOLOR C_RED
					PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%的理性随着\@ TCVAR:ARG:ポイズンゲージ > 1000? 完全# \@ 渗透全身的媚毒，被药性完全溶解……
					PRINTFORML 被媚毒完全浸润的子宫先于幼小的身体做好了准备…%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%迎来了初潮……
					PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%安抚着看到下体一片鲜红而有些害怕的%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%…%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%的身体变得可以怀孕了…
					RESETCOLOR
					TALENT:ARG:初潮 = 1
				ENDIF
			ENDIF
		ELSEIF BASE:ARG:理性 <= 0 && PALAM:ARG:情欲 >= PALAMLV:7 && TCVAR:ARG:发情 == 0 && !TALENT:ARG:妊娠
			;1000ほどゲージを稼ぐと3割程度で发情付与　欲求不满度が上がるほど概率向上
			IF RAND:(TCVAR:ARG:ポイズンゲージ + SQRT(TCVAR:ARG:ポイズンゲージ * CFLAG:ARG:积攒度 / 2)) > SQRT(TCVAR:ARG:ポイズンゲージ) * 20
				TCVAR:ARG:发情 = 1
				IF Lapse && !CFLAG:ARG:睡眠
					SETCOLOR C_PINK
					PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%的理性随着\@ TCVAR:ARG:ポイズンゲージ > 1000? 完全# \@ 渗透全身的媚毒，被药性完全溶解……
					PRINTFORML 浸润媚毒的卵巢开心的排出一枚娇嫩的卵子❤%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%感受着小腹深处莫名的颤抖…一阵幸福感油然而生……
					PRINTFORMW 在%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%享受奇妙感觉的时候，身体已然悄悄做好了受孕的准备……
					RESETCOLOR
					TCVAR:强制排卵 = 180
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF
;毒气花园　理性↓积攒度↑ 发情付与 药毒耐性・非生物には效かない
IF IsGardenValid(ARG)
	BASE:ARG:理性 -= Lapse * MAX(RAND:(ABL:ARG:欲望 + 1), 4)
	欲求不满 = 欲求不满素質补正(ARG, (2 * Lapse))
	;自宅Mapでないと上升量が半减
	SIF !IN_HOME(TFLAG:GG设置位置)
		欲求不满 /= 2
	CFLAG:ARG:积攒度 = LIMIT(CFLAG:ARG:积攒度 + 欲求不满, 0, 1000)
	SIF BASE:ARG:理性 <= 0 && CFLAG:ARG:积攒度 >= 1000 && PALAM:ARG:情欲 >= PALAMLV:5 && !TALENT:ARG:妊娠
		TCVAR:ARG:发情 = 1
ENDIF
BASE:ARG:理性 = LIMIT(BASE:ARG:理性, 0, MAXBASE:ARG:理性)

;仕事中の场合、工作量が减少する
IF CFLAG:ARG:行动 == 5
	BASE:ARG:工作量 = MAX(BASE:ARG:工作量 - Lapse * 10, 0)
	;宴会で吞んでる场合酒气が上升
	SIF CFLAG:ARG:职业种类 == 49 && !(TALENT:ARG:酒耐性 == -2 || CFLAG:ARG:妊娠自觉状态 == 1)
		BASE:ARG:酒气 += Lapse * (RAND:3 * (4 - TALENT:ARG:酒耐性))
ENDIF
;愤怒は常に减少する
BASE:ARG:愤怒 = BASE:ARG:愤怒 - Lapse * 5 / (CFLAG:ARG:勃然大怒 + 1)
;合意误认
SIF TALENT:ARG:合意误认
	BASE:ARG:愤怒 -= Lapse * 10 / (CFLAG:ARG:勃然大怒 + 1)
;宴会の席ならさらに减少する
SIF CFLAG:ARG:职业种类 == 49 && CFLAG:ARG:勃然大怒 > 0
	BASE:ARG:愤怒 -= Lapse * 5 / (CFLAG:ARG:勃然大怒 + 1)
SIF BASE:ARG:愤怒 <= 0
	CFLAG:ARG:勃然大怒 = 0
BASE:ARG:愤怒 = MAX(0,BASE:ARG:愤怒)
;酒气は常に减少する
BASE:ARG:酒气 = BASE:ARG:酒气 - Lapse
;烂醉时は减少量が增える
SIF TCVAR:ARG:烂醉
	BASE:ARG:酒气 -= Lapse * (RAND:4) 
BASE:ARG:酒气 = MAX(0,BASE:ARG:酒气)
;睡眠深度の变动
IF CFLAG:ARG:睡眠
	;寝てる场合
	TCVAR:ARG:睡眠深度 += Lapse * 10 * MAX(TCVAR:ARG:睡眠药强度, 1)
	TCVAR:ARG:睡眠深度 += (BASE:ARG:酒气 / 5 + TCVAR:ARG:疲劳度 / 3)
	TCVAR:ARG:疲劳度    = TCVAR:ARG:疲劳度 * 2 / 3
	SIF TCVAR:ARG:疲劳度 < 100
		TCVAR:ARG:疲劳度 = 0
ELSE
	;寝てない
	IF TCVAR:ARG:睡眠深度 > 0
		TCVAR:ARG:睡眠深度 -= Lapse * 10
	ELSE
		TCVAR:ARG:睡眠深度 = 0
	ENDIF
ENDIF


;心情不快
SIF CFLAG:ARG:心情不快
	BASE:ARG:愤怒 = MAXBASE:ARG:愤怒
SIF FLAG:不会生气
	BASE:ARG:愤怒 = 0

;勃起度の自然增减
IF CFLAG:ARG:诶嘿嘿
	IF BASE:ARG:勃起 <= 900 && (BASE:ARG:精力 >= 500 || TCVAR:ARG:国士无双（药）)
		BASE:ARG:勃起 += Lapse * 2
		SIF BASE:ARG:精力 >= 1000 || TCVAR:ARG:国士无双（药）
			BASE:ARG:勃起 += Lapse * 5
	ENDIF
ELSE
	SIF CFLAG:ARG:勃起度２ <= CFLAG:ARG:勃起度 && !TCVAR:ARG:要去了
		BASE:ARG:勃起 = MAX(0,BASE:ARG:勃起 - Lapse * 20)
ENDIF
IF ARG == MASTER
	IF BASE:ARG:勃起 <= 900 && (BASE:ARG:精力 >= 500 || TCVAR:ARG:国士无双（药）)
		FOR LOCAL, 1, GET_TARGETNUM() + 1
			SIF !CFLAG:(TARGET:LOCAL):诶嘿嘿
				CONTINUE
			;リアリティはともかくとしてとりあえず
			BASE:MASTER:勃起 += GET_TARGETNUM() * 5
			BREAK
		NEXT
		SIF TARGET
			BASE:MASTER:勃起 += MIN(10, 1 + ABL:TARGET:欲望 / 5) * Lapse
	ENDIF
	;仕样が正しいのかわからないが睡眠奸BOUNS
	SIF CFLAG:MASTER:恶作剧 == 2 || FLAG:70
		BASE:MASTER:勃起 += 5
ENDIF
BASE:ARG:勃起 = MIN(BASE:ARG:勃起, MAXBASE:ARG:勃起)

;媚药フラグ
TCVAR:ARG:媚药 = MAX(TCVAR:ARG:媚药 - Lapse,0)
;利尿剂
TCVAR:ARG:利尿剂 = MAX(TCVAR:ARG:利尿剂 - Lapse,0)
;催情药フラグ
TCVAR:ARG:催情药 = MAX(TCVAR:ARG:催情药 - Lapse,0)
;新鲜精液
TCVAR:ARG:新鲜精液 = MAX(TCVAR:ARG:新鲜精液 - Lapse,0)
;排卵诱发剂
TCVAR:ARG:强制排卵 = MAX(TCVAR:ARG:强制排卵 - Lapse,0)
;仙香玉兔,剧毒身躯
IF ARG == MASTER
	TFLAG:仙香玉兔 = MAX(TFLAG:仙香玉兔 - Lapse,0)
	TFLAG:剧毒身躯 = MAX(TFLAG:剧毒身躯 - Lapse, 0)
ENDIF
;ポイズンゲージ
TCVAR:ARG:ポイズンゲージ = MAX(TCVAR:ARG:ポイズンゲージ - (Lapse * MAX(TCVAR:ARG:ポイズンゲージ / 100, 1)), 0)

欲求不满 = 0
IF (TCVAR:ARG:媚药 || TCVAR:ARG:发情 || IsInsenceValid(ARG)) && ARG != MASTER
	欲求不满 = 欲求不满素質补正(ARG,Lapse)
	CFLAG:ARG:积攒度 = LIMIT(CFLAG:ARG:积攒度 + 欲求不满, 0, 1000)
ENDIF
;延迟减算处理
CFLAG:ARG:延迟 = MAX(CFLAG:ARG:延迟 - Lapse,0)
;污れを付ける
TCVAR:ARG:肮脏度 = 0
IF AT_HOME(ARG) || CFLAG:ARG:当前位置 == OMANEKIBEYA()
	TCVAR:ARG:肮脏度 = CFLAG:ARG:睡眠 ? 0 # 3 - ABL:ARG:清扫技能 / (1 + TALENT:ARG:懒散)
	SIF TALENT:ARG:幼稚
		TCVAR:ARG:肮脏度 += 2
	SIF CFLAG:ARG:初始位置 == CFLAG:ARG:当前位置 && TALENT:ARG:懒散
		TCVAR:ARG:肮脏度 += 3
	SIF CFLAG:ARG:大扫除 > 0
		TCVAR:ARG:肮脏度 = CFLAG:ARG:睡眠 ? 0 # 1 + TALENT:ARG:幼稚 - 3 * (ABL:ARG:清扫技能 + 1)
	;扫除をしてる场合、污れが减少
	IF CFLAG:ARG:职业种类 == 40 && CFLAG:ARG:行动 == 5
		TCVAR:ARG:肮脏度 = -2 * (ABL:ARG:清扫技能 * 20 + 100)
	;扫除系は12～18时の间扫除,你の技能が高いと扫除させてもらえない
	ELSEIF TALENT:ARG:扫除系 && CFLAG:ARG:神社在住 && BETWEENTIME(720,1080)
		TCVAR:ARG:肮脏度 = -1 * MAX(ABL:ARG:清扫技能 + 2 - ABL:MASTER:清扫技能, 1)
	ENDIF
	YOGORE:(CFLAG:ARG:当前位置) += TCVAR:ARG:肮脏度 * Lapse / 5
	YOGORE:(CFLAG:ARG:当前位置) = LIMIT(YOGORE:(CFLAG:ARG:当前位置), 0, 6000)
ENDIF
IF !CFLAG:ARG:诶嘿嘿 && CFLAG:ARG:行动 != 5 && Lapse >= 10 && ARG
	体力恢复量 = (10 + TALENT:ARG:恢复速度) * Lapse / 20
	气力恢复量 = (10 + TALENT:ARG:恢复速度) * Lapse / 20
	;恢复量が100未满の场合は非表示
	CALL RECOVER(ARG,体力恢复量,"体力", 体力恢复量 < 100 ? "" # "时间经过による自然恢复" )
	CALL RECOVER(ARG,气力恢复量,"气力", 气力恢复量 < 100 ? "" # "时间经过による自然恢复" )
ENDIF
;衰弱の处理
IF CFLAG:ARG:衰弱
	体力恢复量 = (3 + TALENT:ARG:恢复速度) * MAXBASE:ARG:体力/2000
	气力恢复量 = (3 + TALENT:ARG:恢复速度) * MAXBASE:ARG:气力/2000
	;添い寝状态だと相手の恢复量が上升
	IF CFLAG:ARG:陪睡中
		体力恢复量 *= 2
		气力恢复量 *= 2
	ENDIF
	CALL RECOVER(ARG,Lapse * 体力恢复量,"体力")
	CALL RECOVER(ARG,Lapse * 气力恢复量,"气力")
	CFLAG:ARG:衰弱 = MAX(CFLAG:ARG:衰弱 - Lapse,0)
	IF BASE:ARG:体力 > MAXBASE:ARG:体力 / 2
		CFLAG:ARG:衰弱 = 0
		TCVAR:ARG:休憩中 = 0
	ENDIF
ENDIF
;雨、雪が降っている场合、屋根がないなら体力が稍微ずつ减る
;神社外にいる角色は减らないが你と约会中の相手は减る
;雨で衰弱状态にはならない
IF OUTROOF(CFLAG:ARG:当前位置) && (AT_HOME(ARG) || ARG == MASTER || FLAG:约会的对象 == ARG)
	;你が折りたたみ伞を持っていない场合
	IF WEATHERDLC
		CALL WEATHERCHECK(TARGET, ARG, Lapse)
	ENDIF
	IF ARG == MASTER && !ITEM:折叠伞
		SELECTCASE TIME:5
			;雨・雾雨
			CASE 4, 6
				;余计なタイミングでメッセージが出ないように
				SIF Lapse && !TFLAG:195 && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠
					PRINTW 被雨淋的皮肤发寒
			;大雨
			CASE 5
				SIF Lapse && !TFLAG:195 && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠
					PRINTW 冰冷的雨刺激着皮肤
			;雪・细雪・雾雪・雨雪交加
			CASE 8, 10, 12
				SIF Lapse && !TFLAG:195 && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠
					PRINTW 被雪弄得皮肤发寒
			;大雪
			CASE 9
				SIF Lapse && !TFLAG:195 && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠
					;PRINTW 大雪で身体が冻てつくようだ
					PRINTW 大雪冻得身体发冷
			;(天候パッチ)豪雨・ひょうを追加、冰雹を变更
			;冰雹
			CASE 13
				IF GET_HEAT_THUNDERSTORM() == 1
					SIF Lapse && !TFLAG:195 && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠
						;PRINTW 冰雹が势いよく当たって痛い
						PRINTW 被冰雹砸得生疼
				ELSE
					SIF Lapse && !TFLAG:195 && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠
						PRINTW 被雪弄得皮肤发寒
				ENDIF
			;豪雨
			CASE 14
				SIF Lapse && !TFLAG:195 && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠
					;PRINTW 滝のような雨が身体を打ち付ける
					PRINTW 瀑布般的雨打在身上
			;ひょう
			CASE 15
				SIF Lapse && !TFLAG:195 && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠
					;PRINTW 大粒のひょうが身体を痛めつける
					PRINTW 大颗的冰雹摧残着身体
		ENDSELECT
	;你が折りたたみ伞を持っていると体力の代わりに伞耐久度が减る
	ELSEIF ARG == MASTER
		SELECTCASE TIME:5
			;雾雨、雾雪
			CASE 6, 12
				伞ダメージ = 1
				;(天候パッチ)风速の影响
				IF WIND_VELOCITY == 1
					伞ダメージ += 20
				ELSEIF WIND_VELOCITY == 2
					伞ダメージ += 50
				ELSEIF WIND_VELOCITY >= 3
					伞ダメージ += 100
				ENDIF
			;雨雪交加
			CASE 13
				伞ダメージ = 5
				;(天候パッチ)风速の影响
				IF WIND_VELOCITY == 1
					伞ダメージ += 50
				ELSEIF WIND_VELOCITY == 2
					伞ダメージ += 200
				ELSEIF WIND_VELOCITY >= 3
					伞ダメージ += 400
				ENDIF
			;雨・雪・细雪
			CASE 4, 6, 8, 10, 12
				伞ダメージ = 2
				;(天候パッチ)风速の影响
				IF WIND_VELOCITY == 1
					伞ダメージ += 30
				ELSEIF WIND_VELOCITY == 2
					伞ダメージ += 100
				ELSEIF WIND_VELOCITY >= 3
					伞ダメージ += 200
				ENDIF
			;大雨・大雪
			CASE 5, 9
				伞ダメージ = 20
				;(天候パッチ)风速の影响
				IF WIND_VELOCITY == 1
					伞ダメージ += 50
				ELSEIF WIND_VELOCITY == 2
					伞ダメージ += 200
				ELSEIF WIND_VELOCITY >= 3
					伞ダメージ += 400
				ENDIF
			;(天候パッチ)豪雨・ひょうを追加
			;豪雨
			CASE 14
				伞ダメージ = 50
				;(天候パッチ)风速の影响
				IF WIND_VELOCITY == 1
					伞ダメージ += 50
				ELSEIF WIND_VELOCITY == 2
					伞ダメージ += 150
				ELSEIF WIND_VELOCITY >= 3
					伞ダメージ += 300
				ENDIF
			;ひょう
			CASE 15
				伞ダメージ = 100
				;(天候パッチ)风速の影响
				IF WIND_VELOCITY == 1
					伞ダメージ += 50
				ELSEIF WIND_VELOCITY == 2
					伞ダメージ += 200
				ELSEIF WIND_VELOCITY >= 3
					伞ダメージ += 400
				ENDIF
			CASEELSE
				伞ダメージ = 0
		ENDSELECT
		FLAG:伞耐久度 += 伞ダメージ * Lapse
		IF FLAG:伞耐久度 > 10000
			IF MONEY >= 1200 && Automatic_umbrella_repair == 1;1==花钱自动维修
				FLAG:伞耐久度 = 0
				MONEY -= 1200
				CALL COLORMESSAGE(@"伞坏了！%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%花费1200¥从间隙商店重新购买一把新的。",C_YELLOW,2)
			ELSEIF BASE:MASTER:TSP >= 600 &&Automatic_umbrella_repair == 2;2==花TSP自动维修
				FLAG:伞耐久度 = 0
				BASE:MASTER:TSP -= 600
				CALL COLORMESSAGE(@"伞坏了！%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%暂停时间将其修好。（TSP -600）",C_YELLOW,2)
			ELSEIF Automatic_umbrella_repair == 3;3==作弊自动维修
				FLAG:伞耐久度 = 0
				CALL COLORMESSAGE(@"伞坏了！%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%瞬间将其重新修好。",C_YELLOW,2)
			ELSE
				ITEM:折叠伞 = 0
				ITEMSALES:36 ++
				FLAG:伞耐久度 = 0
				ITEM:坏掉的伞 = 1
				SIF EQUIP:TARGET:饰品 != 6
					TEQUIP:TARGET:共用雨伞 = 0
				CALL COLORMESSAGE(@"伞坏了！",C_YELLOW,2)
			ENDIF
		ELSEIF FLAG:伞耐久度 > 8000 && 伞ダメージ
			SIF Lapse && !TFLAG:195 && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠
				CALL COLORMESSAGE(@"伞快要坏了…",C_YELLOW,1)
		ENDIF
	ENDIF
	SIF (CFLAG:ARG:诶嘿嘿 == 2 && BASE:ARG:体力 > 500) || CFLAG:ARG:诶嘿嘿 != 2
		BASE:ARG:体力 = MAX(BASE:ARG:体力 + 天候造成的影响(ARG, CFLAG:ARG:当前位置) * Lapse, 500)
ENDIF

;(天候パッチ)雷・竜卷遭遇判定
地底 = 0
IF CFLAG:MASTER:约会中 == 9
	地底 = 1
ELSEIF CFLAG:MASTER:当前位置 == OMANEKIBEYA() && GROUPMATCH(CFLAG:MASTER:招待, 36, 37, 38, 49, 60, 64, 83, 84)
	地底 = 1
ENDIF
IF OUTROOF(CFLAG:ARG:当前位置) && ARG == MASTER && Lapse && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠 && CFLAG:MASTER:当前位置 != 天界 && !地底
	IF GET_FRONTAL_THUNDERSTORM() == 1 && GET_HEAT_THUNDERSTORM() == 1 && GET_WEATHER_THUNDERSTORM() == 1
		;CALL COLORMESSAGE(@"雷が激烈地轰いている",C_YELLOW,2)
		CALL COLORMESSAGE(@"雷声轰轰烈烈",C_YELLOW,2)
	ELSEIF (GET_FRONTAL_THUNDERSTORM() == 1 || GET_HEAT_THUNDERSTORM() == 1) && GET_WEATHER_THUNDERSTORM() == 1
		;CALL COLORMESSAGE(@"雷鸣が闻こえてくる",C_YELLOW,2)
		CALL COLORMESSAGE(@"听到了雷鸣",C_YELLOW,2)
