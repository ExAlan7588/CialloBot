@待客室处理(ARG)
SIF FLAG:时间停止 || !CFLAG:ARG:招待
	RETURN

;待客室から出たら日常に返回
;泊まる前か后かは连住禁止フラグを参照してます
IF CFLAG:MASTER:当前位置 != OMANEKIBEYA()
	CALL 待客室から出る(ARG)

;翌日仕事に行く场合
ELSEIF 仕事中チェック(ARG) && TCVAR:ARG:连住禁止 && CFLAG:ARG:诶嘿嘿 != 1
	CFLAG:MASTER:当前位置 = CFLAG:ARG:自宅位置
	IF CFLAG:ARG:诶嘿嘿
		PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%好像要开始工作了…
		CALL ENDUFUFU(LOCAL)
		PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%虽然依依不舍但还是离开了
	ELSE
		PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%因为工作而离开了
	ENDIF
	CALL 待客室から出る(ARG)

;约会中
ELSEIF CHK_DATENOW(CFLAG:ARG:约会中)
	IF CFLAG:ARG:神社在住
		;住宿人物は睡眠时间になったら约会结束
		IF 睡眠时间(ARG)
			CFLAG:ARG:约会中 = MAIN_MAP
			FLAG:约会的对象 = 0
		ENDIF
	ELSE
		;约会中に返回时间が来たらメッセージ＆约会だけ消す
		IF !VISIT(ARG)
			CALL KITAKU(ARG)
		ENDIF
	ENDIF
ENDIF


@待客室から出る(ARG)
;遭遇フラグを自宅位置に设定（连动してると他の角色が駆けつけてくるのは仕样）
CFLAG:ARG:遭遇位置 = CFLAG:ARG:自宅位置
;初始位置を元に戻す（参道的另一边や0もいるが99でもおｋ）
IF CFLAG:ARG:神社在住
	CFLAG:ARG:初始位置 = CFLAG:ARG:神社在住
ELSE
	CFLAG:ARG:初始位置 = SUKIMA()
ENDIF
;活动时间ならそのまま约会。住宿人物は起きていれば约会
;の予定だったが蔷薇ンスブレイカーな气がする＆朝归りは一人の方が雰囲气でるので住宿人物だけ
;活动前も配置するようになったので起床时间なら外出ように
IF CFLAG:ARG:神社在住
	CFLAG:ARG:当前位置 = 97 + MAIN_MAP * 100
	CFLAG:ARG:约会中 = MAIN_MAP
	FLAG:约会的对象 = 0
	TFLAG:约会前好感度 = 0
ELSE
	IF !睡眠时间(ARG) && !CFLAG:ARG:睡眠
		;自宅位置に移动
		CFLAG:ARG:当前位置 = CFLAG:ARG:遭遇位置
		;泊まる前or住宿人物なら约会继续,ワープ移动してたらダメ
		IF !TCVAR:ARG:连住禁止 && CHK_DATENOW(CFLAG:ARG:约会中) && !AT_HOME(MASTER)
			CFLAG:ARG:约会中 = (CFLAG:ARG:自宅位置) / 100
			CFLAG:ARG:同行 = 60
		ENDIF
	;寝ている场合は见えないところに移动
	;住宿人物は识别するために当前位置97を使ってるので要注意（MOVEMENT2のSLEEPへ续く）
	ELSE
		CFLAG:ARG:当前位置 = SUKIMA()
		CFLAG:ARG:约会中 = MAIN_MAP
		FLAG:约会的对象 = 0
		TFLAG:约会前好感度 = 0
	ENDIF
ENDIF

;招待フラグを消して日常に戻す
CFLAG:ARG:招待 = 0
CFLAG:MASTER:招待 = 0
LOCK:(OMANEKIBEYA()) = 0


@OneNightStay(ARG)
#DIM YANUSHI
#DIM REQUIRED_DESIRE
YANUSHI = PRIVATEROOM:(CFLAG:MASTER:初始位置 % 100)
SIF CFLAG:ARG:积攒度 < 800
	RETURN
SIF CFLAG:ARG:当前位置 != CFLAG:MASTER:当前位置
	RETURN
SIF FLAG:一时滞在
	RETURN
SIF CFLAG:ARG:神社在住
	RETURN
SIF !AT_HOME(MASTER)
	RETURN
REQUIRED_DESIRE = 10
SIF TALENT:ARG:恋慕 || TALENT:ARG:炮友
	REQUIRED_DESIRE -= 5
SIF TALENT:ARG:思慕
	REQUIRED_DESIRE -= 2
IF !CFLAG:ARG:既成事实 & 合意_诶嘿嘿
	REQUIRED_DESIRE += TALENT:ARG:难以越过的底线 * 2
	REQUIRED_DESIRE += TALENT:ARG:贞操 * 2
ENDIF
SIF TALENT:ARG:风骚
	REQUIRED_DESIRE = 0
SIF ABL:ARG:欲望 < REQUIRED_DESIRE
	RETURN

PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%说今天晚上不想回去…
;回家口上,7,今夜は归りたくない
CALL KOJO_MESSAGE_SEND("EVENT", 20, ARG, 7)
CALL ASK_YN("同意留宿","不同意留宿")
IF !RESULT
	IF YANUSHI
		PRINTFORMW 虽然非常想让对方留下了、但是有点害怕%NAME_OUTPUT_TRANSLATION("CALLNAME", YANUSHI)%…
		GOTO REFUSAL
	ENDIF
	FLAG:一时滞在 = ARG
	CFLAG:ARG:本来の初始位置 = CFLAG:ARG:初始位置
	CFLAG:ARG:初始位置 = CFLAG:MASTER:初始位置
	CFLAG:ARG:神社在住 = CFLAG:ARG:初始位置
	PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%在%NAME_FROM_PLACE(CFLAG:MASTER:初始位置)%留宿了
	;回家口上,8,泊まっていくことになる
	CALL KOJO_MESSAGE_SEND("EVENT", 20, ARG, 8)
ELSE
	$REFUSAL
	PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%郑重地拒绝了
	;回家口上,9,断った
	CALL KOJO_MESSAGE_SEND("EVENT", 20, ARG, 9)
ENDIF

