;FileName_MOVEMENT.ERB ----------------------------- Rev1.01
;角色回家处理
;CALL		USER
;ARG		0:角色NO
;RETURN		VOID
;COMMENT	
;-----------------------------------------------------------
@KITAKU(ARG)
#DIMS 回家理由
;午前3时～午前7时
IF INRANGE(TIME, 180, 420)
	回家理由 = 天亮了、
;午前7时～午后3时
ELSEIF INRANGE(TIME, 421, 899)
	回家理由 = 差不多到时间了、
;午后3时～午后7时
ELSEIF INRANGE(TIME, 900, 1140)
	回家理由 = 太阳下山了、
;午后7时～午前3时
ELSE
	回家理由 = 已经是深夜了、
ENDIF

IF CFLAG:ARG:当前位置 == CFLAG:MASTER:当前位置 && !CFLAG:MASTER:睡眠 && CFLAG:ARG:当前位置 != CFLAG:ARG:初始位置
	CALL OneNightStay(ARG)
	SIF CFLAG:ARG:神社在住
		RETURN
	IF 睡眠时间(ARG)
		PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%去睡眠了。
	;约会中
	ELSEIF CHK_DATENOW(CFLAG:(ARG):约会中)
		;诶嘿嘿中は非表示
		SIF !CFLAG:ARG:诶嘿嘿
			PRINTFORMW %回家理由%%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%和你的约会到此为止。
		;自宅にいる时,待客室にいる时は诶嘿嘿していない时
		IF CFLAG:ARG:当前位置 == CFLAG:ARG:自宅位置 || (CFLAG:ARG:当前位置 == OMANEKIBEYA() && !CFLAG:ARG:诶嘿嘿)
			;回家口上,3,玄关先で见送り
			CALL KOJO_MESSAGE_SEND("EVENT", 20, ARG, 3)
		;通常の约会中
		ELSE
			;お诱い
			IF (TALENT:ARG:恋慕 || TALENT:ARG:炮友 == 2) && CFLAG:ARG:积攒度 >= (700 + TALENT:ARG:羞耻心 * 150) && !CFLAG:ARG:神社在住 && !TCVAR:ARG:连住禁止 && CFLAG:(ARG):当前位置 != OMANEKIBEYA()
				PRINTFORML 被%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%邀请去房间
				;回家口上,4,房间に来ないかと诱う
				CALL KOJO_MESSAGE_SEND("EVENT", 20, ARG, 4)
				CALL ASK_YN("去","不去")
				IF !RESULT
					IF CFLAG:ARG:自宅位置
						PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%的邀请下、%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%走向了%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%的房间……
						PRINTFORMW +{TIME_REQUIRED(CFLAG:ARG:当前位置 / 100, CFLAG:ARG:自宅位置 / 100)}分
						TIME += TIME_REQUIRED(CFLAG:ARG:当前位置 / 100, CFLAG:ARG:自宅位置 / 100)
					ELSE
						PRINTFORML 应%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%的邀请、%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%走向了不知具体位置的%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%的房间……
						PRINTFORMW +30分
						TIME += 30
					ENDIF
					;回家口上,5,诱われるまま行く
					CALL KOJO_MESSAGE_SEND("EVENT", 20, ARG, 5, 0)
					CALL OMANEKI_ENTER(ARG)
					CALL TARGETSET_CHACK
				ELSE
					PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%好象很寂寞似的……
					;回家口上,6,诱いを拒绝
					CALL KOJO_MESSAGE_SEND("EVENT", 20, ARG, 6)
					SIF (CFLAG:MASTER:当前位置 % 100) % 10 && CHK_DATENOW(CFLAG:MASTER:约会中) && FLAG:约会的对象 == ARG && CFLAG:MASTER:当前位置 != OMANEKIBEYA()
						CFLAG:MASTER:当前位置 = CFLAG:MASTER:约会中 * 100
				ENDIF
			ELSE
				;回家口上,2,约会中回家
				CALL KOJO_MESSAGE_SEND("EVENT", 20, ARG, 2)
				SIF (CFLAG:MASTER:当前位置 % 100) % 10 && CHK_DATENOW(CFLAG:MASTER:约会中) && FLAG:约会的对象 == ARG && CFLAG:MASTER:当前位置 != OMANEKIBEYA()
					CFLAG:MASTER:当前位置 = CFLAG:MASTER:约会中 * 100
			ENDIF
		ENDIF
		;多人约会 - 目标1回家 继续和目标2约会,同时记录好感度,下面删除了一段判定
		IF 同行人数() > 1
		;#;PRINTFORMW 多人约会判定  1 - 开始
			FOR LOCAL,1,CHARANUM
				SIF LOCAL == ARG
					CONTINUE
				IF CHK_DATENOW(CFLAG:(LOCAL):约会中)
					FLAG:约会的对象 = LOCAL
					TFLAG:约会前好感度 = CFLAG:LOCAL:好感度
					CFLAG:MASTER:约会中 = CFLAG:LOCAL:约会中
					CFLAG:MASTER:当前位置 = CFLAG:LOCAL:当前位置
				ENDIF
			NEXT
		;#;PRINTFORMW 多人约会判定  1 - 结束
		ENDIF
	;神社内にいるか自宅でも待客室でもない场所
	ELSEIF AT_HOME(ARG) || (CFLAG:(ARG):当前位置 != CFLAG:(ARG):自宅位置 && CFLAG:(ARG):当前位置 != OMANEKIBEYA()) && CFLAG:ARG:行动 != 5
		;回家口上,1,通常回家
		CALL KOJO_MESSAGE_SEND("EVENT", 20, ARG, 1)
		PRINTFORMW %回家理由%%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%回去了。
		CALL SET_TOGETHER(0,ARG,1)
		SIF (CFLAG:MASTER:当前位置 % 100) % 10 && CHK_DATENOW(CFLAG:MASTER:约会中) && FLAG:约会的对象 == ARG && CFLAG:MASTER:当前位置 != OMANEKIBEYA()
			CFLAG:MASTER:当前位置 = CFLAG:MASTER:约会中 * 100
	ENDIF
	IF CFLAG:(ARG):诶嘿嘿 > 0 || CHK_DATENOW(CFLAG:(ARG):约会中)
		;修改了大量判定
		CFLAG:ARG:约会中 = MAIN_MAP
			SIF CFLAG:MASTER:招待 != ARG && CFLAG:ARG:诶嘿嘿
				CALL ENDUFUFU(ARG)
			FLAG:约会的对象 = 0
			TFLAG:约会前好感度 = 0
		;招待诶嘿嘿中は继续
		SIF !CFLAG:MASTER:招待
			CFLAG:MASTER:诶嘿嘿 = 0
		CFLAG:MASTER:同行 = 0
		;多人约会 - 单一目标困了回家bug
		;#;PRINTFORMW 多人约会判定  2 - 开始
		FOR LOCAL,1,CHARANUM
			SIF LOCAL == ARG
				CONTINUE
			IF CHK_DATENOW(CFLAG:(LOCAL):约会中)
				FLAG:约会的对象 = LOCAL
				TFLAG:约会前好感度 = CFLAG:LOCAL:好感度
				CFLAG:MASTER:约会中 = CFLAG:LOCAL:约会中
				CFLAG:MASTER:当前位置 = CFLAG:LOCAL:当前位置
				PRINTFORML 目送%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%远去,%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%决定继续和%NAME_OUTPUT_TRANSLATION("CALLNAME", LOCAL)%约会...
				CFLAG:MASTER:同行 = 180
				CFLAG:LOCAL:同行 = 180
			ENDIF
		NEXT
		;#;PRINTFORMW 多人约会判定  2 - 结束
	ENDIF
ENDIF
CFLAG:ARG:同行 = 0

IF !TCVAR:ARG:休憩中 && !CFLAG:ARG:招待
	;据点から返回なら今日はもう来访しない
	SIF IN_HOME(CFLAG:ARG:当前位置) && !CFLAG:MASTER:睡眠
		CFLAG:ARG:据点来访 = 0
	;活动时间外は自宅が那个ば寝るまで自宅にいる
	IF CFLAG:ARG:自宅位置 && !IN_HOME(CFLAG:ARG:自宅位置) && !睡眠时间(ARG)
		CFLAG:ARG:当前位置 = CFLAG:ARG:自宅位置
	;自宅がないか寝ると消える
	ELSE
		CFLAG:ARG:当前位置 = SUKIMA()
	ENDIF
ENDIF


