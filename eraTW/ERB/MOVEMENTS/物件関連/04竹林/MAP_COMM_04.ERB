;--------------------------------------------------
;移动制限设定
;ARG    场所ID
;CHARA  移动する角色ID
;RETURNF 1=移动できる,0=移动できない
;TFLAG:移动不能信息   ↓の@MAP_CANNOT_WORD用の设定
;--------------------------------------------------
@MAP_CAN_MOVE_4(ARG, CHARA)
#FUNCTION
#DIM CHARA
SELECTCASE ARG
	;奥ノ院判定
	CASE P407走廊 TO P430地下室
		;除外
		SIF GROUPMATCH(CHARA, [[铃仙]], [[帝]], [[辉夜]], [[永琳]])
			RETURNF 1
		;月の民も良いよね
		SIF GROUPMATCH(CHARA, [[依姫]], [[丰姫]], [[铃仙二号]], [[探女]])
			RETURNF 1
		;中からは动ける
		SIF INRANGE(CFLAG:CHARA:当前位置,P407走廊, P430地下室)
			RETURNF 1
		;你
		IF CHARA == MASTER
			IF 永远亭侵入许可() || INRANGE(CFLAG:MASTER:初始位置, P401永远亭入口, P430地下室) || FLAG:时间停止
				RETURNF 1
			ELSE
				TFLAG:移动不能信息 = 1
				RETURNF 0
			ENDIF
		;それ以外は入れない
		ELSE
			RETURNF 0
		ENDIF
	;谁かが住んでないと入れない
	CASE P412空的房间, P428二层空的房间, P460空的房间, P442空的小屋
		IF !PRIVATEROOM:(ARG % 100) && CFLAG:MASTER:初始位置 != ARG
			TFLAG:移动不能信息 = 999
			RETURNF 0
		ENDIF
ENDSELECT
RETURNF 1

;--------------------------------------------------
;你が奥ノ院に入れる判定
;--------------------------------------------------
@永远亭侵入许可()
#FUNCTION
;催眠强度50以上
SIF FLAG:催眠强度 > 50
	RETURNF 1
SIF CFLAG:[[辉夜]]:认识
	RETURNF 1
SIF TALENT:[[铃仙]]:恋慕 || TALENT:[[帝]]:恋慕 || TALENT:[[辉夜]]:恋慕 || TALENT:[[永琳]]:恋慕
	RETURNF 1
SIF GROUPMATCH(FLAG:约会的对象, [[铃仙]], [[帝]], [[辉夜]], [[永琳]])
	RETURNF 1
SIF GROUPMATCH(FLAG:扮演, [[铃仙]], [[帝]], [[辉夜]], [[永琳]])
	RETURNF 1
SIF CFLAG:[[铃仙]]:同行 || CFLAG:[[帝]]:同行 || CFLAG:[[辉夜]]:同行 || CFLAG:[[永琳]]:同行
	RETURNF 1
SIF FLAG:宴会举办FLAG == 3 && TIME >= FLAG:开始时间
	RETURNF 1
RETURNF 0

