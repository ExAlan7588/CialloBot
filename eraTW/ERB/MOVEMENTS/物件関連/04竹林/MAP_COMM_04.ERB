;--------------------------------------------------
;地点名变更函数
;--------------------------------------------------
@MAP_PLACENAME_4(ARG)
#FUNCTIONS
IF GET_MAPID(ARG) == MAIN_MAP
	SELECTCASE ARG
		CASE P412空的房间, P428二层空的房间, P460空的房间
			IF CFLAG:MASTER:初始位置 == ARG
				RETURNF CALLNAME:MASTER + "私室"
			ELSE
				RETURNF "空的房间"
			ENDIF
		CASE P442空的小屋
			IF CFLAG:MASTER:初始位置 == ARG
				RETURNF CALLNAME:MASTER + "的小屋"
			ELSE
				RETURNF "空的小屋"
			ENDIF
		CASE SUMIKOMI_ROOM
			IF FLAG:住宿人物
				RETURNF CALLNAME:(FLAG:住宿人物) + "的小屋"
			ELSE
				RETURNF "废屋"
			ENDIF
		CASE MINROOM() TO (MAXROOM - 1)
			RETURNF STR:(ARG + 8000)
		CASE OMANEKIBEYA()
			RETURNF OMANEKI_PLACE()
		CASE SUKIMA()
			RETURNF "隙间空间"
		CASE MAXROOM
			RETURNF "竹林之外"
		CASEELSE
			RETURNF "不明"
	ENDSELECT
ELSE
	RETURNF "竹林之外"
ENDIF

