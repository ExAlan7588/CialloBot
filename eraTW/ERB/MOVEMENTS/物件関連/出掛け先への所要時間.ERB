;-----------------------------------------------------------
;地域间の所要时间
;　　博　寺　里　湖　竹　森　川　山　守　地　月
;　　　　　　　　　　　　　　　　　　　　　　　
;博　－　30　20　50　40　50　70　40　60　20 120
;寺　30　－　10　40　20　40　60　70　90　50 110
;里　20　10　－　30　20　30　50　60　80　40 100
;湖　50　40　30　－　50　30　50　30　50　50　70
;竹　40　20　20　50　－　50　70　80 100　60 120
;森　50　40　30　30　50　－　20　60　80　70 100
;川　70　60　50　50　70　20　－　30　50　50　70
;山　80　70　60　30　80　60　30　－　20　20　40
;守 100　90　80　50 100　80　50　20　－　40　20
;地　20　50　40　50　60　70　50　20　40　－　60
;月 120 110 100　70 120 100　70　40　20　60　－
;山～森は川経由（手动）で行くと10分早い
;月は基本的に守+20
;-----------------------------------------------------------
@TIME_REQUIRED(出发地域, 行先)
#FUNCTION
#DIM 出发地域
#DIM 行先

SELECTCASE 出发地域
	CASE 0
		LOCAL = TIME_REQUIRED0(行先)
	CASE 1
		LOCAL = TIME_REQUIRED1(行先)
	CASE 2
		LOCAL = TIME_REQUIRED2(行先)
	CASE 3
		LOCAL = TIME_REQUIRED3(行先)
	CASE 4
		LOCAL = TIME_REQUIRED4(行先)
	CASE 5
		LOCAL = TIME_REQUIRED5(行先)
	CASE 6
		LOCAL = TIME_REQUIRED6(行先)
	CASE 7
		LOCAL = TIME_REQUIRED7(行先)
	CASE 8
		LOCAL = TIME_REQUIRED8(行先)
	CASE 9
		LOCAL = TIME_REQUIRED9(行先)
	CASE 10
		LOCAL = TIME_REQUIRED10(行先)
	CASEELSE
		LOCAL = 0
ENDSELECT

;小町の能力
SIF CFLAG:[[小町]]:同行
	LOCAL = LOCAL * 2 / 3
;若鹭姫の负担
SIF CFLAG:[[若鹭姫]]:同行 && !GETBIT (FLAG:泳池, 0)
	LOCAL = LOCAL * 3 / 2
;神子の能力
IF CFLAG:[[神子]]:同行 && INRANGE(CFLAG:[[神子]]:当前位置, 100, 199)
	IF 行先 == MAP月
		LOCAL = 30
	ELSE
		LOCAL = 10
	ENDIF
ENDIF

;(天候パッチ)恶劣天气时には所要时间增加
SELECTCASE TIME:5
	CASE 4, 6, 10, 12
		TIMES LOCAL, 1.2
	CASE 7, 8, 11, 13
		TIMES LOCAL, 1.5
	CASE 5, 15
		TIMES LOCAL, 2
	CASE 9
		TIMES LOCAL, 3
	CASE 14
		TIMES LOCAL, 4
ENDSELECT
;(天候パッチ)强风时には所要时间增加
SELECTCASE WIND_VELOCITY
	CASE 1
		TIMES LOCAL, 2
	CASE 2
		TIMES LOCAL, 4
	CASE IS >= 3
		TIMES LOCAL, 6
ENDSELECT

;其他のショートカット效果
SIF SHORTCUT(出发地域, 行先)
	LOCAL = LOCAL * 1 / 2
;月之羽衣の效果
SIF (行先 == MAP月 || 出发地域 == MAP月) && ITEM:月之羽衣
	LOCAL = MIN(LOCAL, 40)

RETURNF LOCAL

