;＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝
;地点の属性设定
;场所_ワンルーム   家主が不在のとき键がかかる,被窝・屋内・厨房・勉强・休憩・饮食・プライベートが自动で付与
;场所_被窝         休憩が自动で付与
;场所_洋室         屋内だけど靴を履いたまま,屋内が自动で付与
;场所_屋内         
;场所_屋根         屋外だけど屋根がある场所,屋内でも屋根でも无い场合は野外判定（旧露天）
;场所_广阔         
;场所_赏月         屋内や屋根があっても月が见える场所
;场所_休憩         
;场所_澡堂         
;场所_厕所       
;场所_厨房         つまみ食いが自动で付与
;场所_训练         
;场所_学习         
;场所_天之声       
;场所_菜园         
;场所_打水       
;场所_身体测定     
;场所_物干し       风景描写用
;场所_饮食         自由行动用
;场所_つまみ食い   自由行动用
;场所_留まらない   あまり角色が留まらない（移动しやすい）
;场所_过疎         あまり角色が立ち入らない（移动されにくい）
;场所_プライベート 节度のある角色は入ってこない,主に私室と澡堂・厕所
;场所_炬燵         自由行动用
;场所_公共の场     推倒てこない
;＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝
@ROOMSETTING_8
#DIM ROOM
VARSET ROOMDATA
MAXROOM = 857
ENTRANCE = P801山顶入口
避难处 = P824厕所

SIF GET_MAPID(据点_酒虫) != MAIN_MAP
	据点_酒虫 = P822厨房
MAP_PAGES = 4
MAPNAME:1 = 妖怪之山・山顶
MAPNAME:2 = 守矢神社
MAPNAME:3 = 天界
MAPNAME:4 = 比那名居邸

;月の住民は湖畔から来る
FOR LOCAL, 1, CHARANUM
	SIF GROUPMATCH(GET_MAPID(CFLAG:LOCAL:自宅位置), 10)
		CFLAG:LOCAL:(450 + MAIN_MAP) = P814湖畔
NEXT

FOR LOCAL, MINROOM(), MAXROOM
	ROOM = LOCAL % 100
	SELECTCASE LOCAL
	;被窝・屋内・厨房・勉强・休憩・饮食・プライベートが自动で付与
	CASE P807椛宅, P808文宅, P809果宅, P851久侘歌的小屋, P852驹草的小屋, P853魅须丸的小屋
		ROOMDATA:ROOM |= 场所_ワンルーム
	;龙宅は赏月できる
	CASE P854龙宅
		ROOMDATA:ROOM |= 场所_ワンルーム
		ROOMDATA:ROOM |= 场所_赏月
	CASE P856百百世的住所
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_被窝
		ROOMDATA:ROOM |= 场所_饮食
		ROOMDATA:ROOM |= 场所_プライベート
	;自室になると被窝,勉强,プライベートが付与
	CASE P810山小屋
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_厨房
		ROOMDATA:ROOM |= 场所_休憩
		ROOMDATA:ROOM |= 场所_饮食

	CASE P801山顶入口
		ROOMDATA:ROOM |= 场所_留まらない
	CASE P802桥
		ROOMDATA:ROOM |= 场所_留まらない
	CASE P803索道站
		ROOMDATA:ROOM |= 场所_屋根
		ROOMDATA:ROOM |= 场所_休憩
		ROOMDATA:ROOM |= 场所_饮食
		ROOMDATA:ROOM |= 场所_公共の场
	CASE P805顶上
		ROOMDATA:ROOM |= 场所_广阔
		ROOMDATA:ROOM |= 场所_训练
	CASE P806瀑布背面
		ROOMDATA:ROOM |= 场所_屋根
		ROOMDATA:ROOM |= 场所_赏月
		ROOMDATA:ROOM |= 场所_打水
		ROOMDATA:ROOM |= 场所_过疎
	CASE P855虹龙洞
		ROOMDATA:ROOM |= 场所_屋根
		ROOMDATA:ROOM |= 场所_过疎

	CASE P804守矢神社鸟居
	CASE P811境内
		ROOMDATA:ROOM |= 场所_广阔
		ROOMDATA:ROOM |= 场所_训练
		ROOMDATA:ROOM |= 场所_公共の场
	CASE P812本殿
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_公共の场
		ROOMDATA:ROOM |= 场所_天之声
	CASE P813社务所
		ROOMDATA:ROOM |= 场所_屋根
		ROOMDATA:ROOM |= 场所_赏月
		ROOMDATA:ROOM |= 场所_公共の场
	CASE P814湖畔
		ROOMDATA:ROOM |= 场所_广阔
		ROOMDATA:ROOM |= 场所_训练
		ROOMDATA:ROOM |= 场所_打水
	CASE P815庭
		ROOMDATA:ROOM |= 场所_广阔
		ROOMDATA:ROOM |= 场所_训练
		ROOMDATA:ROOM |= 场所_菜园
	CASE P816走廊
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_休憩
		ROOMDATA:ROOM |= 场所_饮食
		ROOMDATA:ROOM |= 场所_赏月
		ROOMDATA:ROOM |= 场所_物干し
	CASE P826走廊
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_留まらない
	CASE P819起居室
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_休憩
		ROOMDATA:ROOM |= 场所_学习
		ROOMDATA:ROOM |= 场所_饮食
		ROOMDATA:ROOM |= 场所_炬燵
	CASE P817神奈子私室, P818诹访子私室, P820早苗私室
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_被窝
		ROOMDATA:ROOM |= 场所_学习
		ROOMDATA:ROOM |= 场所_プライベート
		
	;自室になると勉强,プライベートが付与
	CASE P823空室
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_被窝
	CASE P821土间
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_留まらない
	CASE P822厨房
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_厨房
	CASE P824厕所
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_厕所
		ROOMDATA:ROOM |= 场所_プライベート
	CASE P825澡堂
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_澡堂
		ROOMDATA:ROOM |= 场所_身体测定
		ROOMDATA:ROOM |= 场所_プライベート

	CASE P830玄云海
		ROOMDATA:ROOM |= 场所_广阔
		ROOMDATA:ROOM |= 场所_留まらない
		ROOMDATA:ROOM |= 场所_训练
	CASE P831比那名居邸前
		ROOMDATA:ROOM |= 场所_留まらない
	CASE P832有顶天街
		ROOMDATA:ROOM |= 场所_公共の场
	CASE P833桃园
		ROOMDATA:ROOM |= 场所_つまみ食い
	CASE P834比那名居邸土间
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_留まらない
	CASE P835比那名居邸会客厅
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_休憩
		ROOMDATA:ROOM |= 场所_饮食
	CASE P836比那名居邸厨房
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_厨房
	CASE P837比那名居邸澡堂
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_澡堂
		ROOMDATA:ROOM |= 场所_身体测定
		ROOMDATA:ROOM |= 场所_プライベート
	CASE P838比那名居邸起居室
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_休憩
		ROOMDATA:ROOM |= 场所_学习
		ROOMDATA:ROOM |= 场所_饮食
		ROOMDATA:ROOM |= 场所_炬燵
	CASE P839比那名居邸和室
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_被窝
		ROOMDATA:ROOM |= 场所_学习
	CASE P840天子私室, P841衣玖私室
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_被窝
		ROOMDATA:ROOM |= 场所_学习
		ROOMDATA:ROOM |= 场所_プライベート
	;自室になると被窝,勉强,プライベートが付与
	CASE P842比那名居邸库房
		ROOMDATA:ROOM |= 场所_屋内
		ROOMDATA:ROOM |= 场所_过疎
	ENDSELECT
NEXT

