#FUNCTION
RETURNF 97 + ARG * 100

;-----------------------------------------------------------
;室内判定
;RETURNF 1=室内（和室）,2=室内（洋室）,0=室外
;严密な使い分けはされていないが、屋外だけど屋根のある场所はINROOMにもOUTROOFにも引っかからない
;现状、靴を脱掉かどうかのためだけに洋室判定がある
;-----------------------------------------------------------
@INROOM(ARG)
#FUNCTION
IF IN_HOME(ARG)
	IF ROOMDATA:(ARG % 100) & 场所_洋室
		RETURNF 2
	ELSEIF ROOMDATA:(ARG % 100) & 场所_屋内
		RETURNF 1
	ENDIF
ELSEIF ARG == OMANEKIBEYA()
	RETURNF 1
ELSE
	IF ODEKAKEMAP_SETTING(ARG, "洋室")
		RETURNF 2
	ELSEIF ODEKAKEMAP_SETTING(ARG, "屋内")
		RETURNF 1
	ENDIF
ENDIF
RETURNF 0

;-----------------------------------------------------------
;屋外判定
;RETURNF 1=屋外（屋根がない）,0=屋根がある
;-----------------------------------------------------------
@OUTROOF(ARG)
#FUNCTION
IF IN_HOME(ARG)
	SIF ROOMDATA:(ARG % 100) & 场所_屋内
		RETURNF 0
	SIF ROOMDATA:(ARG % 100) & 场所_屋根
		RETURNF 0
	RETURNF 1
ELSEIF ARG == OMANEKIBEYA()
	RETURNF 0
ELSEIF ARG == ROAD_TO(GET_MAPID(ARG))
	;地底はダメ
	SIF GET_MAPID(ARG) == 9
		RETURNF 0
	RETURNF 1
ELSE
	SIF ODEKAKEMAP_SETTING(ARG, "屋内")
		RETURNF 0
	SIF ODEKAKEMAP_SETTING(ARG, "屋根")
		RETURNF 0
	RETURNF 1
ENDIF
RETURNF 0

;-----------------------------------------------------------
;开阔处の良い场所
;RETURNF	1=广阔室内,2=广阔野外,0=广くない
;-----------------------------------------------------------
@OPENPLACE(ARG)
#FUNCTION
IF IN_HOME(ARG)
	IF ROOMDATA:(ARG % 100) & 场所_广阔
		IF INROOM(ARG)
			RETURNF 1
		ELSE
			RETURNF 2
		ENDIF
	ENDIF
ELSEIF ARG == OMANEKIBEYA()
	RETURNF 0
ELSEIF ARG == ROAD_TO(GET_MAPID(ARG))
	RETURNF 1
ELSE
	IF ODEKAKEMAP_SETTING(ARG, "广阔")
		IF INROOM(ARG)
			RETURNF 1
		ELSE
			RETURNF 2
		ENDIF
	ENDIF
ENDIF
RETURNF 0

;-----------------------------------------------------------
;赏月ポイント
;RETURNF	1=月が见える,0=月が见えない
;实质空が见えるかどうかの判定
;-----------------------------------------------------------
@MOON_WATCH_POINT(ARG)
#FUNCTION
IF IN_HOME(ARG)
	SIF ROOMDATA:(ARG % 100) & 场所_赏月
		RETURNF 1
	SIF OUTROOF(ARG)
		RETURNF 1
ELSEIF ARG == OMANEKIBEYA() || ARG == ROAD_TO(GET_MAPID(ARG))
	;地底と月はダメ
	SIF GROUPMATCH(GET_MAPID(ARG), 9, 10)
		RETURNF 0
	RETURNF 1
ELSE
	SIF ODEKAKEMAP_SETTING(ARG, "赏月")
		RETURNF 1
	SIF OUTROOF(ARG)
		RETURNF 1
ENDIF
RETURNF 0

