;-----------------------------------------------------------
;澡堂から追い出された时の逐出先
;-----------------------------------------------------------
@KICKOUT(ARG)
#FUNCTION
SIF !ARG
	ARG = CFLAG:MASTER:当前位置
FOR LOCAL, MINROOM(), MAXROOM
	SIF CAN_MOVE(ARG, LOCAL) & 1
		RETURNF LOCAL
NEXT
RETURNF CFLAG:MASTER:前一次的位置

;-----------------------------------------------------------
;角色ARGの当前位置の名称を返す函数
;ARG  角色ID
;-----------------------------------------------------------
@PLACE_NAME(ARG)
#FUNCTIONS
IF !IN_HOME(CFLAG:ARG:当前位置) && CFLAG:ARG:当前位置 != OMANEKIBEYA()
	LOCALS = %DATENAME_SPOT()%
ELSEIF CHK_DATENOW(CFLAG:MASTER:约会中) && CFLAG:MASTER:当前位置 != OMANEKIBEYA()
	LOCALS = %DATENAME_PLACE()%の%DATENAME_SPOT()%
ELSE
	LOCALS = %NAME_FROM_PLACE(CFLAG:ARG:当前位置)%
ENDIF
RETURNF LOCALS

;-----------------------------------------------------------
;据点の住人かをチェックする函数
;ARG    MAPID
;CHARA  判定する角色
;-----------------------------------------------------------
@MAP_住人(ARG, CHARA)
#FUNCTION
#DIM CHARA
;CSVの初始位置を取得
LOCAL = CSVCFLAG(CHARA, GETNUM(CFLAG, "初始位置"))
SIF LOCAL == 99 || !LOCAL
	RETURNF 0
SIF LOCAL / 100 == ARG
	RETURNF 1

;-----------------------------------------------------------
;角色ARGが你から见える位置にいるか
;ARG  角色ID
;-----------------------------------------------------------
@CAN_SEE(ARG)
#FUNCTION
SIF CFLAG:MASTER:当前位置 == CFLAG:ARG:当前位置
	RETURNF 1
SIF GETBIT(CAN_MOVE(CFLAG:MASTER:当前位置, CFLAG:ARG:当前位置), 1)
	RETURNF 1
RETURNF 0
