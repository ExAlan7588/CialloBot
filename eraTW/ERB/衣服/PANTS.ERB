RETURNF GET_STR(CHARA, CLOTHES_PARTS_TO_CATEGORY("下半身内衣２"), ARG, "名前")

@PANTS_DESCRIPTION(ARG, CHARA)
#FUNCTIONS
#DIM CHARA
RETURNF GET_STR(CHARA, CLOTHES_PARTS_TO_CATEGORY("下半身内衣２"), ARG, "描写")

@PANTS_GET(ARG,ARGS)
#DIM 种类
种类 = EQUIP:ARG:下半身内衣２
CALL PANTS_GETTING(ARG, 种类)

CFLAG:ARG:没穿内裤 = 1
EQUIP:ARG:下半身内衣２ = 0
CALL CLOTHES_SETTING_TRAIN(ARG)

SIF CFLAG:ARG:睡衣 == 1
	CFLAG:ARG:睡衣胖次 = 0

SIF ARGS == "もらう"
	CFLAG:ARG:没穿内裤 = 2

@PANTS_GETTING(ARG, 种类)
#DIM 种类
#DIM 隙间送り成否
隙间送り成否 = 0
PANTS_TEMP:ARG:种类 += 1
IF ITEM:收藏隙间
	IF FLAG:C隙间自动配置
		CALL PANTS_SUKIMA(ARG, 种类)
		隙间送り成否 = RESULT
	ELSEIF FLAG:胖次输送 == 0
		IF CFLAG:MASTER:当前位置 != CFLAG:MASTER:初始位置
			PRINTFORM 要使用收藏隙间么？（剩余：{ITEM:收藏隙间}）
		ENDIF
		SIF CFLAG:ARG:(种类 + 胖次管理) == 0
			SETCOLOR C_PINK
		PRINTFORM %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%的%PANTSNAME(种类, ARG)%
		RESETCOLOR
		PRINTFORML 添加到收藏中吗?
		CALL ASK_YN
		IF !RESULT
			CALL PANTS_SUKIMA(ARG, 种类)
			隙间送り成否 = RESULT
		ENDIF
	ENDIF
ENDIF
SIF !隙间送り成否
	FLAG:胖次输送 = 1
RETURN 隙间送り成否

@PANTS_SUKIMA(ARG, 种类)
#DIM 种类
#DIM 隙间送り成否
隙间送り成否 = 0
IF PANTS_TEMP:ARG:种类
	SIF CFLAG:ARG:(种类 + 胖次管理) == 0
		FLAG:700 ++
	CFLAG:ARG:(种类 + 胖次管理) += PANTS_TEMP:ARG:种类 
	PANTS_TEMP:ARG:种类 = 0
	IF CFLAG:MASTER:当前位置 != CFLAG:MASTER:初始位置
		ITEM:收藏隙间 -= 1
	PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%打开了收藏隙间、把%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%的%PANTSNAME(种类,ARG)%放了进去
	ELSE
		PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%的%PANTSNAME(种类, ARG)%将其添加到收藏中
	ENDIF
	隙间送り成否 = 1
ENDIF
RETURN 隙间送り成否

