;----------------------------------
;睡眠中フラグセット CFLAG:313SET
;呼び出し时の整合性を判定し参数として渡された值をフラグにセットする
;ARG=SET值 ARG:1=セット对象 ARG:2=MASTER连动ON
;----------------------------------
@SET_SLEEP(ARG,ARG:1,ARG:2)
SELECTCASE ARG
	;FLAG_OFF
	CASE 0
		;整合性チェック
		CFLAG:(ARG:1):睡眠 = 0
		;睡眠フラグでMASTER连动は不使用だろうけど… とか言ってたら添い寝で使用ことに…
		IF ARG:2 == 1
			CFLAG:MASTER:睡眠 = 0
		ELSEIF ARG:2 == 2
			SIF CFLAG:(ARG:1):当前位置 == CFLAG:MASTER:当前位置
				CFLAG:MASTER:睡眠 = 0
		ENDIF
		SETBIT CFLAG:(ARG:1):更衣实行, 0
		CLEARBIT CFLAG:(ARG:1):更衣实行, 1
		;疲劳と睡眠深度をリセット
		TCVAR:ARG:疲劳度   = 0
		TCVAR:ARG:睡眠深度 = 0
	;FLAG_ON
	CASE 1
		;整合性チェック
		;延迟中はセット出来ない
		IF !CFLAG:(ARG:1):延迟 || ARG:1 == MASTER
			CFLAG:(ARG:1):睡眠 = 1
			CFLAG:(ARG:1):约会中 = MAIN_MAP
			;MASTER连动は使わなn（ry
			SIF ARG:2 == 1
				CFLAG:MASTER:睡眠 = 1
		;衰弱时は延迟中も寝る
		ELSEIF CFLAG:(ARG:1):衰弱
			CFLAG:(ARG:1):睡眠 = 1
			CFLAG:(ARG:1):约会中 = MAIN_MAP
			;MASTER连动は使わなn（ry
			SIF ARG:2 == 1
				CFLAG:MASTER:睡眠 = 1
		ENDIF
		IF CFLAG:(ARG:1):睡眠 == 1 && GETBIT(CFLAG:(ARG:1):更衣实行, 0)
			TCVAR:(ARG:1):睡眠深度 = 1200 * (TCVAR:(ARG:1):睡眠药强度 + 1)
			TCVAR:(ARG:1):睡眠深度 += TCVAR:(ARG:1):疲劳度 / 3
		ENDIF
		SETBIT CFLAG:(ARG:1):更衣实行, 1
		CLEARBIT CFLAG:(ARG:1):更衣实行, 0
		IF CFLAG:(ARG:1):延迟 || !睡眠时间(ARG:1) || (CFLAG:(ARG:1):衰弱 && CFLAG:(ARG:1):当前位置 != CFLAG:(ARG:1):初始位置)
			SETBIT CFLAG:(ARG:1):更衣实行, 0
			CLEARBIT CFLAG:(ARG:1):更衣实行, 1
		ENDIF
		SIF ARG:1 == MASTER
			CALL BUFF_RESET
ENDSELECT

