;----------------------------------
;隐密中フラグセット CFLAG:330SET
;呼び出し时の整合性を判定し参数として渡された值をフラグにセットする
;ARG=SET值 ARG:1=セット对象 ARG:2=MASTER连动
;----------------------------------
@SET_SNEAK(ARG,ARG:1,ARG:2)
SELECTCASE ARG
	;FLAG_OFF
	CASE 0
		;整合性チェック
		CFLAG:(ARG:1):隐密中 = 0
		IF ARG:2 == 1
			CFLAG:MASTER:隐密中 = 0
		ELSEIF ARG:2 == 2
			SIF CFLAG:(ARG:1):当前位置 == CFLAG:MASTER:当前位置
				CFLAG:MASTER:隐密中 = 0
		ENDIF
	;FLAG_ON
	CASE 1
		;整合性チェック
		;TARGETとMASTERが同室かつ睡眠中でないとセットは出来ない
		IF CFLAG:(ARG:1):当前位置 == CFLAG:MASTER:当前位置 && CFLAG:(ARG:1):睡眠
			CFLAG:(ARG:1):隐密中 = 1
			SIF ARG:2 == 1
				CFLAG:MASTER:隐密中 = 1
		ELSE
		ENDIF
ENDSELECT

;----------------------------------
;恶作剧フラグセット CFLAG:331SET
;呼び出し时の整合性を判定し参数として渡された值をフラグにセットする
;ARG=SET值 ARG:1=セット对象 ARG:2=MASTER连动ON
;----------------------------------
@SET_PRANK(ARG,ARG:1,ARG:2)
SELECTCASE ARG
	;FLAG_OFF
	CASE 0
		;整合性チェック
		CFLAG:(ARG:1):恶作剧 = 0
		IF ARG:2 == 1
			CFLAG:MASTER:恶作剧 = 0
		ELSEIF ARG:2 == 2
			SIF CFLAG:(ARG:1):当前位置 == CFLAG:MASTER:当前位置
				CFLAG:MASTER:恶作剧 = 0
		ENDIF
	;FLAG_ON
	CASE 1
		;整合性チェック
		;TARGETとMASTERが同室・隐密中・睡眠中でないとセットは出来ない
		IF CFLAG:(ARG:1):当前位置 == CFLAG:MASTER:当前位置 && CFLAG:(ARG:1):隐密中 == CFLAG:MASTER:隐密中 && CFLAG:(ARG:1):睡眠
			CFLAG:(ARG:1):恶作剧 = 1
			SIF ARG:2 == 1
				CFLAG:MASTER:恶作剧 = 1
		ELSE

		ENDIF
	;过激な恶作剧FLAG_ON
	CASE 2
		;整合性チェック
		;TARGETとMASTERが同室・隐密中・睡眠中・既に恶作剧FLAG_ONでないとセットは出来ない
		IF CFLAG:(ARG:1):当前位置 == CFLAG:MASTER:当前位置 && CFLAG:(ARG:1):隐密中 == CFLAG:MASTER:隐密中 && CFLAG:(ARG:1):恶作剧 > 0 && CFLAG:(ARG:1):睡眠
			CFLAG:(ARG:1):恶作剧 = 2
			SIF ARG:2 == 1
				CFLAG:MASTER:恶作剧 = 2
		ELSE

		ENDIF
ENDSELECT

