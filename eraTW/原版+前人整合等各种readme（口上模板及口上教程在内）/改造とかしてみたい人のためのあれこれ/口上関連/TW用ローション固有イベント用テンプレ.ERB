
;-------------------------------------------------
;TW用润滑液固有イベント用テンプレ
;-------------------------------------------------
;180,润滑液
;-------------------------------------------------
@M_KOJO_MESSAGE_COM_KX_180
CALL TRAIN_MESSAGE
CALL M_KOJO_MESSAGE_COM_KX_180_1
RETURN RESULT

@M_KOJO_MESSAGE_COM_KX_180_1
;-------------------------------------------------
;记入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------------------------------------------
IF LOCAL

	;CFLAG:1500 == 十進数
	;0.イベントがオフだよ　选择肢が出るよ　　初期值の事情だよ
	;1.イベントがオンだよ　选择肢が出るよ
	;2.イベントがオフだよ　选择肢を出さないよ
	;3.イベントがオンだよ　选择肢を出さないよ
	;4.イベントがオフだよ　选择肢が出るよ　　bit2が真だよ
	
	;1=オン（bit0）　2=选择肢を出さないよ（bit1）
	;4=简単に条件を付け足せるよ（bit2）
	
	;GETBIT (CFLAG:1500,1)　ここの1は二進数の二桁目の事　间違いやすいよ
	;(CFLAG:1500,1)の数值真(0以外主に1)偽(0)を見るよ
	
	;SETBIT STAIN:1,7　二進数の八桁目を真(主に1)にするよ
	;十進数で言えば　+128されていない场合+128するよ
	
	;CLEARBIT STAIN:1,7　二進数の八桁目を偽(0)にするよ
	;十進数で言えば　既に+128されている场合に限り-128するよ
	
	;INVATEBIT STAIN:1,7　二進数の八桁目を反转させるよ
	;十進数で言えば　+128されていない场合+128　既に+128されている场合-128するよ


	;时间停止フラグがかつ参照する事のbit1(选择肢を出さないよ)が偽なら选择肢が出る
	SIF !FLAG:70 && !GETBIT(CFLAG:1500,1)
		CALL M_KOJO_MESSAGE_COM_KX_180_选择肢

	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;初めて
	;记入チェック
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && FIRSTTIME(SELECTCOM)
		IF FLAG:时间停止
			;时间稼働中に始动している场合の矛盾解消
			IF GETBIT(STAIN:1,7)
				PRINTFORML 时间稼働中に始动している场合の矛盾解消　初
				RETURN 0
			;それ以外　时间停止润滑液
			;时间停止塗り塗り分岐は无い　きっとそれが正義
			ELSE
				PRINTFORML 时间停止润滑液　初
				RETURN 0
			ENDIF

		;以降!FLAG:时间停止　「发言」は概ねここから

		;分岐条件　チョコ塗れの手ペロペロ分岐
		;足の污れは无いので手を手足として代用
		;别の形でチョコを塗った时もここに来るので一応イベントフラグも条件に追加
		ELSEIF GETBIT(STAIN:1,7) && GETBIT(CFLAG:1500,0)
			;恋慕
			IF TALENT:恋慕
				PRINTFORML 恋慕ペロペロ　初
				;お手々のチョコ舐め取ったよ
				;CLEARBIT STAIN:1,7
				RETURN 0
			;それ以外　ゲームバランス次第で恋慕无し恋人有りなんてケースも有り得る
			ELSE
				PRINTFORML ペロペロ　初
				RETURN 0
			ENDIF
		;分岐条件　CFLAG:1500のbit0の值これ真ならイベント发生　塗り塗り分岐
		ELSEIF GETBIT(CFLAG:1500,0)
			;恋慕
			IF TALENT:恋慕
				PRINTFORML 恋慕塗り塗り　初
				;お手々べとべと
				SETBIT STAIN:1,7
				RETURN 0
			;それ以外　ゲームバランス次第で恋慕无し恋人有りなんてケースも有り得る
			ELSE
				PRINTFORML 塗り塗り　初
				;お手々べとべと
				SETBIT STAIN:1,7
				RETURN 0
			ENDIF
		;それ以外　润滑液分岐
		ELSE
			;恋慕
			IF TALENT:恋慕
				PRINTFORML 恋慕润滑液分岐　初
				RETURN 0
			;それ以外　ゲームバランス次第で恋慕无し恋人有りなんてケースも有り得る
			ELSE
				PRINTFORML それ以外润滑液分岐　初
				RETURN 0
			ENDIF
		ENDIF

	;以降!FIRSTTIME　时间停止中に初回を迎えた场合との兼ね合いに注意
	ELSE
		IF FLAG:时间停止
			;时间稼働中に始动している场合の矛盾解消
			IF GETBIT(STAIN:1,7)
				PRINTFORML 时间稼働中に始动している场合の矛盾解消
				RETURN 0
			;それ以外　时间停止润滑液
			ELSE
				PRINTFORML 时间停止润滑液
				RETURN 0
			ENDIF

		;以降!FLAG:时间停止　「发言」は概ねここから

		;分岐条件　チョコ塗れの手ペロペロ分岐
		;足の污れは无いので手を手足として代用
		;别の形でチョコを塗った时もここに来るので一応イベントフラグも条件に追加
		ELSEIF GETBIT(STAIN:1,7) && GETBIT(CFLAG:1500,0)
			;恋慕
			IF TALENT:恋慕
				PRINTFORML 恋慕ペロペロ
				;お手々のチョコ舐め取ったよ
				;CLEARBIT STAIN:1,7
				RETURN 0
			;それ以外　ゲームバランス次第で恋慕无し恋人有りなんてケースも有り得る
			ELSE
				PRINTFORML ペロペロ
				RETURN 0
			ENDIF
		;分岐条件　CFLAG:1500のbit0の值これ真ならイベント发生　塗り塗り分岐
		ELSEIF GETBIT(CFLAG:1500,0)
			;恋慕
			IF TALENT:恋慕
				PRINTFORML 恋慕塗り塗り
				;お手々べとべと
				SETBIT STAIN:1,7
				RETURN 0
			;それ以外　ゲームバランス次第で恋慕无し恋人有りなんてケースも有り得る
			ELSE
				PRINTFORML 塗り塗り
				;お手々べとべと
				SETBIT STAIN:1,7
				RETURN 0
			ENDIF
		;それ以外　润滑液分岐
		ELSE
			;ここに恋慕有无を問わない描写も书けるよ
			;PRINTFORML 
			;恋慕
			IF TALENT:恋慕
				PRINTFORML 恋慕润滑液分岐
				RETURN 0
			;それ以外　ゲームバランス次第で恋慕无し恋人有りなんてケースも有り得る
			ELSE
				PRINTFORML 润滑液分岐
				RETURN 0
			ENDIF
			;ここに恋慕有无を問わない描写を书いても二行上六行上のRETURN 0で引き返しているから表示されないよ
			;PRINTFORML 
		ENDIF
	ENDIF
ENDIF
;リターンしないとそのまま次まで突っ切って行っちゃうよ
;1は7行目のCALL M_KOJO_MESSAGE_COM_KX_180_1に送られ8行目のRETURN RESULTに引き渡されるよ
RETURN 1
;-------------------------------------------------
;选择肢構文
;-------------------------------------------------
@M_KOJO_MESSAGE_COM_KX_180_选择肢

PRINTL 問

PRINT [0] はい    
PRINT [1] いいえ  
;PRINT [2] 保留    
PRINT [9] その他
;改行で整える為の物
PRINTL 

$INPUT_LOOP＿KX_180_选择肢
INPUT

SELECTCASE RESULT
	CASE 0
		PRINTL はいを选择しました
			CFLAG:1500 = 3
	CASE 1
		PRINTL いいえを选择しました
			CFLAG:1500 = 2
	CASE 2
		PRINTL ボタンをコメントアウトしても反応するよ！保留するよ！
			CFLAG:1500 = 0
	CASE 9
		PRINTL その他
		PRINTL 选びなおし
		GOTO INPUT_LOOP＿KX_180_选择肢
	CASEELSE
		PRINTFORMW 选びなおし
		GOTO INPUT_LOOP＿KX_180_选择肢
	ENDSELECT
PRINTFORMW 案内文

RETURN 1
